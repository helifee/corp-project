package com.sitech.sql.parse;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;

public class SqlFun {
	private static SqlFun _instance;
	private String fileContent;
	//把定义的函数放入扫描器
	public void setScanner(Scaner scanner) {
		String[] temp=fileContent.split(",");
		for(int i=0;i<temp.length;i+=1){
			scanner.upDateFunctionDec(temp[i],"");
		}
	}
	public static SqlFun getInstance(){
		if(_instance==null){
			_instance=new SqlFun();
		}
		return _instance;
	}
	private SqlFun(){
		readFun();
	}
	// 读取函数定义文件
	private void readFun(){
		InputStream fis=null;
		BufferedReader br=null;
		StringBuffer sb=new StringBuffer();
		try{
			fis=SqlFun.class.getClassLoader().getResourceAsStream("SqlFunction.txt");
			br=new BufferedReader(new InputStreamReader(fis));
			String line=null;
			while((line=br.readLine())!=null){
				sb.append(line);
			}
			fileContent=sb.toString();

		}catch(IOException e){
			e.printStackTrace();
		}finally{
			try{br.close();}catch(Exception ee){}
			try{fis.close();}catch(Exception ee){}
		}
	}
	
	
}
