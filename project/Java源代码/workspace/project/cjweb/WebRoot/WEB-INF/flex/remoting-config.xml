<?xml version="1.0" encoding="UTF-8"?>
<service id="remoting-service"
    class="flex.messaging.services.RemotingService">
    <adapters>
        <adapter-definition id="java-object" class="flex.messaging.services.remoting.adapters.JavaAdapter" default="true"/>			
    </adapters>			
    <default-channels>			
        <channel ref="my-amf"/>
    </default-channels>
    
    <!-- 数据展示service -->		
    <destination id="dataShowService">
		<properties>	
		 	<factory>flexFactoryImplID</factory>
			<source>dataShowService</source><!--对应spring配置文件的bean的id  -->
			<scope>application</scope>
		</properties>	
	</destination>
	
	<!-- 用能曲线service -->
	<destination id="b1UsageRatioControler">
		<properties>	
		 	<factory>flexFactoryImplID</factory>
			<source>b1UsageRatioControler</source><!--对应spring配置文件的bean的id  -->
			<scope>application</scope>
		</properties>	
	</destination>
</service>	
