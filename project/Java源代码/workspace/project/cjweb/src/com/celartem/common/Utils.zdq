package com.celartem.common;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Calendar;
import java.util.Date;
import java.util.List;

import com.celartem.datashow.bean.EnergyCurveInfo;
import com.celartem.datashow.bean.PoDot;

/**
 * 工具类
 * 
 * @author zhangdaoqiang
 *
 */
public class Utils {

	/**
	 * 取得当前年
	 * 
	 * @return
	 */
	public static String getCurYear() {
		Calendar cal = Calendar.getInstance();
		return String.valueOf(cal.get(Calendar.YEAR));
		
	}
	
	/**
	 * 取得当前日期字符串
	 * 
	 * @return
	 */
	public static String getDate() {
		
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		
		return sdf.format(new Date());
		
	}
	
	/**
	 * 将Date的日期转成字符串类型的日期
	 * 
	 * @param date ：  Date的日期
	 * @return
	 */
	public static String convert(Date date) {
		
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		
		return sdf.format(date);
	}
	
	/**
	 * 将字符串类型的日期转成Date的日期
	 * 
	 * @param date ： 字符串类型的日期
	 * @return
	 * @throws ParseException 
	 */
	public static Date convert(String date) throws ParseException {
		
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		
		return sdf.parse(date);
	}
	
	/**
	 * 查找List中的匹配的数据
	 * 
	 * @param list
	 * @param key
	 * @return
	 */
	public static double getValue(List<EnergyCurveInfo> list, String key) {
		
		if(list == null) {
			return 0;
		}
		
		double value;
		
		EnergyCurveInfo info = new EnergyCurveInfo(key);
		int index = list.indexOf(info);
		if(index == -1) {
			value = 0; 
		} else {
			value = list.get(index).getValue();
		}
		
		return value;
	}
	
	/**
	 * 查找List中的匹配的数据
	 * 
	 * @param list
	 * @param key
	 * @return
	 */
	public static double getValue2(List<PoDot> list, String key) {
		
		if(list == null) {
			return 0;
		}
		
		double value;
		
		PoDot info = new PoDot(key);
		int index = list.indexOf(info);
		if(index == -1) {
			value = 0; 
		} else {
			value = list.get(index).getY();
		}
		
		return value;
	}
}
