package com.celartem.datashow;

import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.celartem.common.Department;

/**
 * 数据展示Action
 * 
 * @author zhangdaoqiang
 * 
 */
@Controller
public class DataShowController {

	@Autowired
	DataShowService dataShowService;

	@RequestMapping("/datashow/datashow.do")
	public ModelAndView getDepartmentInfo(HttpServletRequest request,
			HttpServletResponse response) throws Exception {

		response.setCharacterEncoding("text/html;charset=utf-8");
		
		List<Department> dptList = this.dataShowService.getDepartmentInfo();
		
		ModelAndView model = new ModelAndView("datashow/index");
		
		model.addObject("dptList", dptList);

		return model;
	}

}
