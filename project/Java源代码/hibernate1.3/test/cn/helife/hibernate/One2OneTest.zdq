package cn.helife.hibernate;

import org.hibernate.Session;

import cn.helife.hibernate.utils.HibernateUtils;
import cn.helife.hibernate.vo.IdCard;
import cn.helife.hibernate.vo.Person;

import junit.framework.TestCase;

public class One2OneTest extends TestCase {

	public void testOne2One() {
		Session session = null;
		try {
			session = HibernateUtils.getSession();
			session.beginTransaction();
			
			IdCard card = new IdCard();
			card.setCardNo("46466461231");
			
			Person person = new Person();
			person.setName("张三");
			person.setIdCard(card);
			
			session.save(person);
			
			session.getTransaction().commit();
		} catch(Exception e) {
			e.printStackTrace();
			session.getTransaction().rollback();
		} finally {
			HibernateUtils.closeSession(session);
		}
	}
	
	public void testOne2OneSave() {
		Session session = null;
		try {
			session = HibernateUtils.getSession();
			session.beginTransaction();
			
			IdCard card = new IdCard();
			card.setCardNo("111222333");
			
			Person person = new Person();
			person.setName("张三");
			card.setPerson(person);
			
			//session.save(person);
			session.save(card);
			
			session.getTransaction().commit();
		} catch(Exception e) {
			e.printStackTrace();
			session.getTransaction().rollback();
		} finally {
			HibernateUtils.closeSession(session);
		}
	}
	
	/**
	 * 从Person加载
	 */
	public void testLoadOne2One() {
		Session session = null;
		try {
			session = HibernateUtils.getSession();
			session.beginTransaction();
			
			Person person = (Person) session.load(Person.class, 1);
			System.out.println(person.getName());
			System.out.println(person.getIdCard().getCardNo());
			
			session.getTransaction().commit();
			
		} catch(Exception e) {
			e.printStackTrace();
			session.getTransaction().rollback();
			
		} finally {
			HibernateUtils.closeSession(session);
		}	
	}
	
	public void testLoadOne2OneFromIdCard() {
		Session session = null;
		try {
			session = HibernateUtils.getSession();
			session.beginTransaction();
			
			IdCard card = (IdCard) session.load(IdCard.class, 1);
			System.out.println(card.getPerson().getName());
			System.out.println(card.getCardNo());
			
			session.getTransaction().commit();
			
		} catch(Exception e) {
			e.printStackTrace();
			session.getTransaction().rollback();
			
		} finally {
			HibernateUtils.closeSession(session);
		}	
	}
}
