package com.creditease.b2bsettle.basedata.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

import com.creditease.b2bsettle.basedata.model.AuthorizationAudit;

/**
 * 授权审核相关操作
 * @author daoqiangzhang
 *
 */
@Repository
public interface AuthorizationAuditRepository extends JpaRepository<AuthorizationAudit, Long> {

	/**
	 * 删除一条授权审核记录(审核通过后删除)
	 * @param cid : 审核编号
	 * @return
	 */
	@Modifying
	@Transactional
	@Query("update AuthorizationAudit aa set aa.deleted = 1 where aa.cid = :cid")
	public boolean delAuthorizationAudit(@Param("cid")long cid);
	
	/**
	 * 查询所有待审核与审核拒绝的授权
	 * @param deleted
	 * @return
	 */
	public List<AuthorizationAudit> findByDeleted(boolean deleted);
}
