package com.creditease.b2bsettle.basedata.external.controller;


import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import net.sf.json.JSONObject;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.creditease.b2bsettle.basedata.external.model.ProductRes;
import com.creditease.b2bsettle.basedata.external.model.ProductResDetail;
import com.creditease.b2bsettle.basedata.model.Product;
import com.creditease.b2bsettle.basedata.service.ProductService;

/**
 * 产品类型对外接口
 * @author shihl
 *
 */
@Controller		 
@RequestMapping("/external/product")
public class ExternalProductController {
	
	private static final Logger logger = LoggerFactory.getLogger(ExternalProductController.class);
	@Autowired
	private ProductService ProductService;
	
  
	/**
	 * 查询所有
	 * @param reqParam
	 * @return
	 */
	@RequestMapping(value = "/queryall" ,method = RequestMethod.POST)
	@ResponseBody
	public JSONObject queryByRelateCode(@RequestBody JSONObject reqParam) {
		List<Product> list =  ProductService.findAll();
		
		ProductRes res = new ProductRes();
		List<ProductResDetail> sendList = new ArrayList<ProductResDetail>();
		for(int i=0; i<list.size(); i++){
			ProductResDetail ProductResDetail = new ProductResDetail();
			ProductResDetail.setProductId(list.get(i).getId());
			ProductResDetail.setProductName(list.get(i).getProductName());
			ProductResDetail.setProductStatus(list.get(i).getProductStatus());
			sendList.add(ProductResDetail);
			
		}
		res.setRetCode("1");
		res.setRetMessage("成功");
//		res.setResponseTime(responseTime);
//		res.setSendTime(sendTime);
		res.setDetailList(sendList);
		JSONObject json = JSONObject.fromObject(res);
		return json;
	}
}
