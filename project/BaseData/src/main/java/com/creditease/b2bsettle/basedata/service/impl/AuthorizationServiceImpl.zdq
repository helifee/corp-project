package com.creditease.b2bsettle.basedata.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.creditease.b2bsettle.basedata.model.Authorization;
import com.creditease.b2bsettle.basedata.model.AuthorizationAudit;
import com.creditease.b2bsettle.basedata.model.EsEnterpriseInfo;
import com.creditease.b2bsettle.basedata.model.MenuCorpBean;
import com.creditease.b2bsettle.basedata.repository.AuthorizationAuditRepository;
import com.creditease.b2bsettle.basedata.repository.AuthorizationRepository;
import com.creditease.b2bsettle.basedata.service.AuthorizationService;

@Service
public class AuthorizationServiceImpl implements AuthorizationService {
	
	@Autowired
	private AuthorizationRepository authorizationRepo;
	
	@Autowired
	private AuthorizationAuditRepository authorizationAuditRepository;

	@Override
	public boolean save(List<Authorization> authList) {
		authorizationRepo.save(authList);
		return true;
	}

	@Override
	public boolean delAllNotInAuditNo(long userId, long auditNo) {
		int count = authorizationRepo.delAllNotInAuditNo(userId, auditNo);
		return count > 0;
	}

	@Override
	public boolean delByAuditNo(long auditNo) {
		int count = authorizationRepo.delByAuditNo(auditNo);
		return count > 0;
	}

	@Override
	public List<EsEnterpriseInfo> findAllCorpBy(String userName) {
		List<EsEnterpriseInfo> corpList = authorizationRepo.findCorpBy(userName);
		return corpList;
	}

	@Override
	public List<MenuCorpBean> findAllMenu(String userName, String sysId) {
		return authorizationRepo.findMenuBy(userName, sysId);
	}

	@Override
	public boolean pass(AuthorizationAudit authorizationAudit) {
		// TODO Auto-generated method stub
		return false;
	}

	@Override
	public boolean noPass(AuthorizationAudit authorizationAudit) {
		// TODO Auto-generated method stub
		return false;
	}

}
