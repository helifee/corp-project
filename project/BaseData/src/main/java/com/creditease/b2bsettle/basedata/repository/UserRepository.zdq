package com.creditease.b2bsettle.basedata.repository;

import java.util.Date;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

import com.creditease.b2bsettle.basedata.constant.UserStatus;
import com.creditease.b2bsettle.basedata.model.User;

/**
 * 用户持久层
 * 
 * @author daoqiangzhang
 *
 */
@Repository
public interface UserRepository extends JpaRepository<User, Long> {

	/**
	 * 查询指定用户
	 * @param name
	 * @return
	 */
	public User findByNameAndDeleted(String name, boolean deleted);
	
	public User findByNameAndPasswordAndDeleted(String name, 
			String password, boolean deleted);
	
	public User findByNameAndDnAndDeleted(String name, String dn, boolean deleted);
	
	public List<User> findByDeleted(boolean deleted);
	
	@Transactional
	@Modifying
	@Query("update User user set user.deleted = 1,user.modifyTime  = :modifyTime where user.id = :userId")
	public void delUserById(@Param("userId") long userId, @Param("modifyTime")Date modifyTime);

	@Transactional
	@Modifying
	@Query("update User user set user.status = :status where user.id = :userId")
	public int setUserStatus(@Param("userId")long userId, @Param("status")UserStatus status);
	
	@Query("select user.status from User user where user.id = :userId")
	public String queryUserStatus(@Param("userId")long userId);

	@Transactional
	@Modifying
	@Query("update User user set user.dn = :dn where user.name = :name")
	public int updateDN(@Param("name")String name, @Param("dn")String dn);

	@Transactional
	@Modifying
	@Query("update User user set user.password = :newPwd where user.name = :name")
	public void changPwd(@Param("name")String name, @Param("newPwd")String newPwd);

	@Transactional
	@Modifying
	@Query("update User user set user.lastLoginTime = :date where user.name = :name")
	public int setLoginTime(@Param("name")String userName, @Param("date")Date date);


	
}
