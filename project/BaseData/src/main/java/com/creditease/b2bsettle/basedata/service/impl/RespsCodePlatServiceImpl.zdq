package com.creditease.b2bsettle.basedata.service.impl;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.creditease.b2bsettle.basedata.model.ResponseCodePlatform;
import com.creditease.b2bsettle.basedata.repository.RespsCodePlatRepository;
import com.creditease.b2bsettle.basedata.service.RespsCodePlatService;

@Service
public class RespsCodePlatServiceImpl implements RespsCodePlatService {
	
	@Autowired
	private RespsCodePlatRepository respsCodePlatRepository;

	@Override
	public ResponseCodePlatform findByCode(String code) {
		return respsCodePlatRepository.findByCodeAndDeleted(code, false);
	}

}
