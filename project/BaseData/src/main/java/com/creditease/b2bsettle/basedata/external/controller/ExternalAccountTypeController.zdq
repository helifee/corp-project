import com.creditease.b2bsettle.basedata.external.model.AccountTypeRes;
import com.creditease.b2bsettle.basedata.external.model.AccountTypeResDetail;
import com.creditease.b2bsettle.basedata.model.AccountType;
import com.creditease.b2bsettle.basedata.service.AccountTypeService;

/**
 * 联行号外接口
 * @author shihl
 *
 */
@Controller		 
@RequestMapping("/external/accounttype")
public class ExternalAccountTypeController {
	
	private static final Logger logger = LoggerFactory.getLogger(ExternalAccountTypeController.class);
	@Autowired
	private AccountTypeService accountTypeService;
	
  
	/**
	 * 查询所有
	 * @param reqParam
	 * @return
	 */
	@RequestMapping(value = "/queryall" ,method = RequestMethod.POST)
	@ResponseBody
	public JSONObject queryByRelateCode(@RequestBody JSONObject reqParam) {
		List<AccountType> list =  accountTypeService.findAll();
		
		AccountTypeRes res = new AccountTypeRes();
		List<AccountTypeResDetail> sendList = new ArrayList<AccountTypeResDetail>();
		for(int i=0; i<list.size(); i++){
			AccountTypeResDetail accountTypeResDetail = new AccountTypeResDetail();
			accountTypeResDetail.setDataCode(list.get(i).getId());
			accountTypeResDetail.setDataValue(list.get(i).getAccoutType());
			sendList.add(accountTypeResDetail);
			
		}
		res.setRetCode("1");
		res.setRetMessage("成功");
//		res.setResponseTime(responseTime);
//		res.setSendTime(sendTime);
		res.setDataList(sendList);
		JSONObject json = JSONObject.fromObject(res);
		return json;
	}
}
