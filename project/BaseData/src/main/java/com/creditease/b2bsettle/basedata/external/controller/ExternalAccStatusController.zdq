package com.creditease.b2bsettle.basedata.external.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.creditease.b2bsettle.basedata.base.ResultInfo;
import com.creditease.b2bsettle.basedata.constant.ResultStatus;
import com.creditease.b2bsettle.basedata.external.model.AccStatusParam;
import com.creditease.b2bsettle.basedata.external.model.DictData;
import com.creditease.b2bsettle.basedata.model.AccountStatus;
import com.creditease.b2bsettle.basedata.service.AccountStatusService;

@Controller
@RequestMapping(value = "/external/AccStatus")
public class ExternalAccStatusController {
	
	@Autowired
	private AccountStatusService accountStatusService;

	@RequestMapping(value = "/query", method = RequestMethod.POST)
	@ResponseBody
	public ResultInfo findAllAccountStatus(@RequestBody AccStatusParam param) {

		List<AccountStatus> allAccountStatus = accountStatusService
				.findByAccType(param.getAccType());

		List<DictData> dictDataList = null;
		if (allAccountStatus != null) {
			dictDataList = new ArrayList<DictData>();
			for (AccountStatus status : allAccountStatus) {
				dictDataList.add(new DictData(status.getStatusCode(), status
						.getStatusName()));
			}
		}

		ResultInfo retVo = new ResultInfo();
		retVo.setRetCode(ResultStatus.SUCCESS.value());
		retVo.setData(dictDataList);
		return retVo;
	}
}
