package com.creditease.b2bsettle.basedata.repository;

import java.util.Date;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

import com.creditease.b2bsettle.basedata.model.FinancialInstitution;
import com.creditease.b2bsettle.basedata.model.User;

/**
 * 金融机构持久层
 * 
 * @author shihl
 *
 */
@Repository
public interface FinancialInstitutionRepository extends JpaRepository<FinancialInstitution, Long> {

	@Transactional
	@Modifying
	@Query(" update FinancialInstitution fin set " 
			+ "fin.bankName = :bankName, "
			+ "fin.bankCode = :bankCode, "
			+ "fin.bankNameSimple = :bankNameSimple, "
			+ "fin.modifier = :modifier, " 
			+ "fin.modifyTime  = :modifyTime  "
			+ "where fin.id = :id")
	public void modifyFinancialInstitution(
			@Param("id") long id,
			@Param("bankName") String bankName,
			@Param("bankCode") String bankCode,
			@Param("bankNameSimple") String bankNameSimple,
			@Param("modifier") String modifier,
			@Param("modifyTime") Date modifyTime);

	@Transactional
	@Modifying
	@Query(" update FinancialInstitution fin set  "
			+ "fin.deleted = :deleted, "
			+ "fin.modifier = :modifier, "
			+ "fin.modifyTime  = :modifyTime  "
			+ "where fin.id = :id")
	public void deleteFinancialInstitution(@Param("id") long id,
			@Param("deleted") boolean deleted,
			@Param("modifier") String modifier,
			@Param("modifyTime") Date modifyTime);
	
	
	
	
	
	
	
	
	
	
	
	

	/**
	 * 
	 * 查询所有
	 * */
	public List<FinancialInstitution> findByCanOperateAndDeleted( boolean canOperate,boolean deleted);
	/**
	 * 根据金融机构名称查询
	 * @param name
	 * @return
	 */
	public FinancialInstitution findByBankNameAndCanOperateAndDeleted(String bankName, boolean canOperate,boolean deleted);
	

}
