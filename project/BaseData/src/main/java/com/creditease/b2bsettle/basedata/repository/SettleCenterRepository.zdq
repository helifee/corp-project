package com.creditease.b2bsettle.basedata.repository;

import java.util.List;

import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

import com.creditease.b2bsettle.basedata.model.EsEnterpriseInfo;
import com.creditease.b2bsettle.basedata.model.SettleCenter;

@Repository
public interface SettleCenterRepository extends JpaRepository<SettleCenter, Long> {

	@Modifying
	@Transactional
	@Query("update SettleCenter sc set sc.deleted = 1 where sc.id = :id")
	void deleteById(@Param("id")long settleId);

	@Query("select corp from SettleCorp sc, esEnterpriseInfo corp"
			+ " where sc.settleId = :settleId and sc.corpNo = corp.eId group by corp.eId")
	List<EsEnterpriseInfo> findCorpOfSettle(@Param("settleId")long settleId);

	List<SettleCenter> findByDeletedOrderByParentIdAsc(boolean deleted);

	@Query("select corp from SettleCorp sc, esEnterpriseInfo corp"
			+ " where sc.settleId = :settleId and sc.deleted = 0 and sc.corpNo = corp.eId")
	Page<EsEnterpriseInfo> findBySettleId(@Param("settleId")long settleId, Pageable pageable);

	SettleCenter findByNameAndCenterCorpNo(String centerName, String corpNo);

	@Modifying
	@Transactional
	@Query("update SettleCenter sc set sc.status = :status where sc.id = :id")
	int setStatus(@Param("id")long settleId, @Param("status")int status);

}
