package com.creditease.b2bsettle.basedata.external.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;

import com.creditease.b2bsettle.basedata.constant.ResultStatus;
import com.creditease.b2bsettle.basedata.external.model.RespCodeParam;
import com.creditease.b2bsettle.basedata.external.model.ResultInfo;
import com.creditease.b2bsettle.basedata.model.ResponseCodePlatform;
import com.creditease.b2bsettle.basedata.service.ResponseCodeChannelService;

@Controller
@RequestMapping(value = "/external/respcode/")
public class ExternalRespsCodeController {

	@Autowired
	private ResponseCodeChannelService respCodeChannelService;
	
	/**
	 * 根据平台响应码查询平台响应信息
	 * @param param
	 * @return
	 */
	@RequestMapping(value = "/find", method = RequestMethod.POST)
	@ResponseBody
	public ResultInfo findRespCodePlatBy(@RequestBody RespCodeParam param) {
		String bankCode = param.getBankCode();
		String codeChannel = param.getCode();
		ResponseCodePlatform codePlatform = respCodeChannelService.findPlatCodeBy(bankCode, codeChannel);
		ResultInfo retVo = new ResultInfo();
		if(codePlatform == null) {
			retVo.setRetCode(ResultStatus.FAIL.value());
			retVo.setRetMessage("没有对应的响应信息或响应码错误！");
		} else {
			retVo.setRetCode(ResultStatus.SUCCESS.value());
			retVo.setData(codePlatform.getInfo());
		}
		return retVo;
	}
}
