package com.creditease.b2bsettle.basedata.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;

import com.creditease.b2bsettle.basedata.model.MenuAudit;

/**
 * 菜单持久层
 * 
 * @author daoqiangzhang
 *
 */
@Repository
public interface MenuAuditRepository extends JpaRepository<MenuAudit, Long> {

	/**
	 * 删除一条菜单审核记录(审核通过后删除)
	 * @param cid : 审核编号
	 * @return
	 */
	@Modifying
	@Transactional
	@Query("update MenuAudit ma set ma.deleted = 1 where ma.cid = :cid")
	public boolean delMenuAudit(@Param("cid")long cid);
	
	/**
	 * 查询所有待审核与审核拒绝的菜单
	 * @param deleted
	 * @return
	 */
	public List<MenuAudit> findByDeleted(boolean deleted);
}
