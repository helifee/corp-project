<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE databases PUBLIC 
  "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
  "http://castor.exolab.org/mapping.dtd"> 
  <mapping>
      <description>Basic mapping example</description> 
      <class name="mytest.Homepagecontent" >
      <!-- the name of the xml file's root element  -->
       <map-to xml="home"/>
       <field name="id">
          <bind-xml name="pagecontentId" node="element" location="abc"/>
       </field>
       <field name="nameList" type="mytest.EntityBean" collection="arraylist" >
          <bind-xml name="nameList1" node="element" location="abc"/>
       </field>
       <field name="name">
          <bind-xml name="pageContentName" node="element"/>
       </field>
       <field name="navlink">
         <bind-xml name="pagecontentNavlink" node="element"/>
       </field>
       <field name="icon">
         <bind-xml name="pagecontentIcon" node="element"/>
       </field>
      </class> 
    <class name="mytest.EntityBean">
	    <field name="name" type="java.lang.String">
	      <bind-xml name="name" node="element" />
	    </field>
	
	    <field name="pass" type="java.lang.String">
	      <bind-xml name="pass" node="element"  />
	    </field>
	    <field name="entityList" type="java.lang.String" collection="arraylist">
	      <bind-xml name="emtity" node="element"  />
	    </field>
  </class>

  </mapping>

