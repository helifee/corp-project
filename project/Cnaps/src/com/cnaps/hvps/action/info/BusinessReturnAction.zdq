	/**
	 * 发送申请方法
	 * @param mapping 路径映射
	 * @param form 界面信息
	 * @param request 请求
	 * @param response 回应
	 * @return ActionForward
	 */
	public ActionForward sendMsg(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		try{
			BusinessReturnForm voform = (BusinessReturnForm) form;
			//检测止付标示 整包止付不封装明细
			if("RP01".equals(voform.getPo().getRtrnTp())){
			//封装明细信息
			String [] oriTrnsctnIds=request.getParameterValues("polist.oriTrnsctnId");
//			String [] orgnlDrctInstgPtys=request.getParameterValues("polist.orgnlDrctInstgPty");
//			String [] orgnlIndrctInstgPtys=request.getParameterValues("polist.orgnlIndrctInstgPty");
//			String [] orgnlDrctInstdPtys=request.getParameterValues("polist.orgnlDrctInstdPty");
//			String [] orgnlIndrctInstdPtys=request.getParameterValues("polist.orgnlIndrctInstdPty");
			for(int i=0;i<oriTrnsctnIds.length;i++){
				if("".equals(oriTrnsctnIds[i])){
					continue;
				} 
//				BusinessReturnDetails bds=new BusinessReturnDetails();
//				bds.setOriTrnsctnId(oriTrnsctnIds[i]);
//				bds.setOrgnlDrctInstgPty(orgnlDrctInstgPtys[i]);
//				bds.setOrgnlIndrctInstgPty(orgnlIndrctInstgPtys[i]);
//				bds.setOrgnlDrctInstdPty(orgnlDrctInstdPtys[i]);
//				bds.setOrgnlIndrctInstdPty(orgnlIndrctInstdPtys[i]);
				voform.getPo().getList().add(oriTrnsctnIds[i]);
			}
			}
			//报文设置
			String transactionid = TransCodeEntity.BusinessReturnAction_sendMsg;//功能代码
			commSetToXML(voform,request,transactionid);
			//报文体组装发送
			TransServices transServices = (TransServices)this.getBean("transServices");
			CommonXMLEntity  commonXMLEntity = transServices.transProcess(voform, voform.getTransactionId(),"systemcontrols","");
			if(!commonXMLEntity.getProcessCode().equals("000000")){
				throw new PicpMessageException("错误码：["+commonXMLEntity.getProcessCode()+"] 错误信息：["+commonXMLEntity.getProcessDes()+"]");
			}
			return toSuccessPage(mapping,request,"业务退回申请发送成功,报文标识号为："+commonXMLEntity.getMessageId());

		} catch (Exception e) {
			e.printStackTrace(); 
			return toFailedPage(mapping, request,e.getMessage());
		}
	}
	
