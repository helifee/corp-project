package com.cnaps.hvps.action.duizhang;


import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.apache.struts.action.ActionForm;
import org.apache.struts.action.ActionForward;
import org.apache.struts.action.ActionMapping;

import com.bancstone.action.BaseAction;
import com.bancstone.common.exception.PicpMessageException;
import com.cnaps.coreservices.CommonXMLEntity;
import com.cnaps.coreservices.TransCodeEntity;
import com.cnaps.coreservices.TransServices;
import com.cnaps.hvps.form.duizhang.HvpsBusinessDetailDownloadForm;
import com.cnaps.hvps.persistence.duizhang.HvpsBusinessDetailDownloadDetail;

/**
 * 大额业务明细下载申请
 * @author zhangxj
 *
 */
public class HvpsBusinessDetailDownloadAction extends BaseAction<Object> {
	
	
	public ActionForward gotoPage(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		return mapping.findForward("input");
	}
	
	/**
	 * 发送明细下载申请报文
	 * @param mapping
	 * @param form
	 * @param request
	 * @param response
	 * @return
	 */
	public ActionForward sendMsg(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		try{
			HvpsBusinessDetailDownloadForm voform = (HvpsBusinessDetailDownloadForm) form;
			//报文设置
			String transactionid = TransCodeEntity.HvpsBusinessDetailDownloadAction_sendMsg;//功能代码
			commSetToXML(voform,request,transactionid);
			//封装明细信息
			String [] sndRcvTps=request.getParameterValues("SndRcvTp");
			String [] ornglMsgIds=request.getParameterValues("OrnglMsgId");
			String [] orgnlInstgPtys=request.getParameterValues("OrgnlInstgPty");
			String [] orgnlMsgTpCds=request.getParameterValues("OrgnlMsgTpCd");
			for(int i=0;i<sndRcvTps.length;i++){
				HvpsBusinessDetailDownloadDetail detail=new HvpsBusinessDetailDownloadDetail();
				detail.setSndRcvTp(sndRcvTps[i]);
				detail.setOrgnlInstgPty(orgnlInstgPtys[i]);
				detail.setOrnglMsgId(ornglMsgIds[i]);
				detail.setOrgnlMsgTpCd(orgnlMsgTpCds[i]);
				voform.getPo().getTxsDtls().add(detail);
			}
			//报文体组装发送
			TransServices transServices = (TransServices)this.getBean("transServices");
			CommonXMLEntity  commonXMLEntity = transServices.transProcess(voform, voform.getTransactionId(),"transaction","");
			if(!commonXMLEntity.getProcessCode().equals("000000")){
				throw new PicpMessageException("错误码：["+commonXMLEntity.getProcessCode()+"] 错误信息：["+commonXMLEntity.getProcessDes()+"]");
			}
			return toSuccessPage(mapping,request,"大额业务明细下载申请报文发送成功!,报文标识号为："+commonXMLEntity.getMessageId());

		} catch (Exception e) {
			e.printStackTrace(); 
			return toFailedPage(mapping, request,e.getMessage());
		}
	}
	
	
	/**
	 * 发送查询报文
	 * @param mapping
	 * @param form
	 * @param request
	 * @param response
	 * @return
	 */
	public ActionForward querySendxml(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		return null;
	}
	/**
	 * 发送查询报文-明细
	 * @param mapping
	 * @param form
	 * @param request
	 * @param response
	 * @return
	 */
	public ActionForward queryDetails(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		return null;
	}
	
}
