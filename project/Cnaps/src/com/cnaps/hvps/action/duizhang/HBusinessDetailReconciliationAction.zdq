/**
 * 大额业务明细审核申请报文
 * @author zhangxj
 *
 */
public class HBusinessDetailReconciliationAction extends BaseAction<Object> {
	
	/**
	 * 发送对账申请报文
	 * @param mapping
	 * @param form
	 * @param request
	 * @param response
	 * @return
	 */
	public ActionForward sendMsg(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		try{
			HBusinessDetailReconciliationForm voform = (HBusinessDetailReconciliationForm) form;
			//报文设置
			String transactionid = TransCodeEntity.HBusinessDetailReconciliationAction_sendMsg;//功能代码
			commSetToXML(voform,request,transactionid);
			//明细组装
			String [] pmtTps=request.getParameterValues("PmtTp");
			String [] sndRcvTps=request.getParameterValues("SndRcvTp");
			String [] prcSts=request.getParameterValues("PrcSts");
			for(int i=0;i<pmtTps.length;i++){
				HBDetail hbd=new HBDetail();
				hbd.setPmtTp(pmtTps[i]);
				hbd.setSndRcvTp(sndRcvTps[i]);
				hbd.setPrcSts(prcSts[i]);
				voform.getPo().getDetails().add(hbd);
			}
			//报文体组装发送
			TransServices transServices = (TransServices)this.getBean("transServices");
			CommonXMLEntity  commonXMLEntity = transServices.transProcess(voform, voform.getTransactionId(),"transaction","");
			if(!commonXMLEntity.getProcessCode().equals("000000")){
				throw new PicpMessageException("错误码：["+commonXMLEntity.getProcessCode()+"] 错误信息：["+commonXMLEntity.getProcessDes()+"]");
			}
			return toSuccessPage(mapping,request,"大额业务明细审核报文发送成功!,报文标识号为："+commonXMLEntity.getMessageId());

		} catch (Exception e) {
			e.printStackTrace(); 
			return toFailedPage(mapping, request,e.getMessage());
		}
	}
	
	
	/**
	 * 发送查询报文
	 * @param mapping
	 * @param form
	 * @param request
	 * @param response
	 * @return
	 */
	public ActionForward querySendxml(ActionMapping mapping, ActionForm form,
			HttpServletRequest request, HttpServletResponse response) {
		return null;
	}
	/**
	 * 发送查询报文-明细
	 * @param mapping
