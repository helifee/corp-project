package com.bancstone.exportexcel;

import java.util.StringTokenizer;


public class Tosplit {
	
	public static   String[] Splited(String str){
		
	  StringTokenizer st=new StringTokenizer(str,",");//�Զ��ŷָ�
	  
	  String[] buf=new String[st.countTokens()];
	  
	  int i=0;
	  while(st.hasMoreTokens()){
	    
	    buf[i++]=st.nextToken();
	  
	  }
	
	
	   return buf;
	}
	
	
	public static   String[] TwoSplited(String str){
		
		  StringTokenizer st=new StringTokenizer(str,"-");
	  
		  String[] buf=new String[st.countTokens()];
	  
		  int i=0;
		  while(st.hasMoreTokens()){
	    
			buf[i++]=st.nextToken();
	  
		  }
	
	
		   return buf;
		}
	

}
