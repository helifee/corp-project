public class StringUtil {
	
	/**
	 * 如果字符串不够指定的长度，则根据制定规则补助长度，具体规则有type定义
	 * @param value  源字符串
	 * @param length 要求返回字符串的长度
	 * @param type  补位规则：0：后补空格，1：前补零
	 * @return
	 */

	public static String length_Control(String value,int length,int type){
		if(type==0){
			while(value.getBytes().length<length){
				value+=" ";
			}
		}else if(type==1){
			while(value.getBytes().length<length){
				value=" "+value;
			}
		}else if(type==2){
			while(value.getBytes().length<length){
				value="0"+value;
			}
		}
		if(value.getBytes().length>length){
			System.out.println("原始字符串："+value+" 超过指定的长度："+length);
			return new String(value.getBytes(),0,length);
		}
		return value;
	}
	 /**
	  * 如果源字符串的长度不足length，则后补空格
	  * @param value   源字符串
	  * @param length  要求返回字符串的长度
	  * @return  目标字符串
	  */
	public static String string_After(String value,int length){
		if(value==null||value.trim().equals("")){
			value="";
		}
		if(value.getBytes().length>length){
			return new String(value.getBytes(),0,length);
		}
		return length_Control(value,length,0);
	}
	
	/**
	  * 如果源字符串的长度不足length，则前补空格
	  * @param value   源字符串
	  * @param length  要求返回字符串的长度
	  * @return  目标字符串
	  */
    public static String string_Before(String value,int length){
    	if(value==null||value.trim().equals("")){
    		value="";
		}
		return length_Control(value,length,1);
	}
    
    
    /**
	  * 如果源字符串的长度不足length，则前补零
	  * @param value   源字符串
	  * @param length  要求返回字符串的长度
	  * @return  目标字符串
	  */
   public static String string_Before_Zero(String value,int length){
   	    if(value==null||value.trim().equals("")){
   		  value="";
		}
		return length_Control(value,length,2);
	}
   
   
    /**
     * 格式化字符串，过滤 null 以及去掉字符串前后的空格
     * @param value
     * @return
     */
    public static String getNotNullString(String value){
    	if(value==null||value.trim().equals("")){
    		return "";
    	}else{
    		return value.trim();
    	}
    }
    
    /**
     * 根据制定的开始位置 start ，指定截取长度  length ，截取指定字符数据 dsp，并以字符串的形式返回
     * @param dsp
     * @param length
     * @return
     */
    
    public static String getSplitString(byte[] dsp,int start,int length){
    	return  getNotNullString(new String(dsp,start,length));
    }
    
