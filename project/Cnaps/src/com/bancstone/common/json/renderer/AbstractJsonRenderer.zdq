package com.bancstone.common.json.renderer;

import com.bancstone.common.json.JsonContext;

/**
 * 
 * <ul>
 * <li>1、开发日期：Jul 18, 2010</li>
 * <li>2、开发时间：5:58:22 PM</li>
 * <li>3、类型名称：AbstractJsonRenderer</li>
 * <li>4、类型意图：抽象JSON转化时的渲染器类</li>
 * </ul>
 * 
 * @author 王亮
 * 
 * @param <T>
 */
public abstract class AbstractJsonRenderer<T> implements Renderer<T> {
	public void render(T viewObject, JsonContext jsonContext) throws Exception {
		if (jsonContext.getResponse().isCommitted() == true) {
			return;
		}
		renderView(viewObject, jsonContext);
	}

	protected abstract void renderView(T viewObject, JsonContext jsonContext)
			throws Exception;
}
