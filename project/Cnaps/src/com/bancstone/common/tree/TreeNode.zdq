package com.bancstone.common.tree;

/**
 * <ul>
 * <li>1、开发日期：Aug 18, 2010</li>
 * <li>2、开发时间：9:57:05 AM</li>
 * <li>3、类型名称：TreeNode</li>
 * <li>4、类型意图：存储ExtjsTree的节点信息</li>
 * </ul>
 * 节点信息包括: id:存储节点的id值.
 * parentId:存储节点的父id值.注:当节点的parentId是-1时表示该节点为根节点.当节点的id是0是表示为根节点 text:节点的名称.
 * checked:权限树的节点权限.
 * 
 * @author 王亮
 * 
 */
public class TreeNode {

	/**
	 * 树节点的id
	 */
	private int id;

	/**
	 * 树节点的父id=
	 */
	private int parentId;
	/**
	 * 树节点的名称
	 */
	private String text = "";
	/**
	 * 节点是否选中属性
	 */
	private Boolean checked = null;
	/**
	 * 节点是否展开true展开false不展开
	 */
	private boolean expanded = true;
	/**
	 * 连接地址
	 */
	private String url = "";

	public TreeNode() {
	}

	public TreeNode(int id, String text) {
		this.id = id;
		this.text = text;
	}

	/**
	 * 构造extjs标准树和菜单树的节点.
	 * 
	 * @param id
	 * @param parentId
	 * @param text
	 */
	public TreeNode(int id, int parentId, String text) {
		this.id = id;
		this.parentId = parentId;
		this.text = text;
	}

	/**
	 * 构造extjs带有checkbox属性的树的节点.
	 * 
	 * @param id
	 * @param parentId
	 * @param text
	 * @param checked
	 */
	public TreeNode(int id, int parentId, String text, boolean checked) {
		this.id = id;
		this.parentId = parentId;
		this.text = text;
		this.checked = checked;
	}

	public TreeNode(int id, int parentId, String text, Boolean expanded) {
		this.id = id;
		this.parentId = parentId;
		this.text = text;
		this.expanded = expanded;
	}

	/**
	 * <p>
	 * 构造函数
	 * </p>
	 * <ul>
	 * <li>1、开发日期：Aug 18, 2010</li>
	 * <li>2、开发时间：11:48:47 AM</li>
	 * <li>3、编写作者：王亮</li>
	 * </ul>
	 * 
	 * @param id
	 * @param parentId
	 * @param text
	 * @param url
	 */
	public TreeNode(int id, int parentId, String text, String url,
			boolean expanded) {
		this.id = id;
		this.parentId = parentId;
		this.text = text;
		this.url = url;
		this.expanded = expanded;
	}

	public Boolean getChecked() {
		return checked;
	}

	public void setChecked(Boolean checked) {
		this.checked = checked;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public int getParentId() {
		return parentId;
	}

	public void setParentId(int parentId) {
		this.parentId = parentId;
	}

	public String getText() {
		return text;
	}

	public void setText(String text) {
		this.text = text;
	}

	public String getUrl() {
		return this.url;
	}

	public void setUrl(String url) {
		this.url = url;
	}

	public Boolean getExpanded() {
		return this.expanded;
	}

	public void setExpanded(Boolean expanded) {
		this.expanded = expanded;
	}

}
