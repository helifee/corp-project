<?xml version="1.0"?>  
  
 <mapping>  
 
       <class name="test.SurvForm">    
                 <map-to xml="item_info"/>  
 
                 <field name="items" type="test.Material"  
                           collection="vector" node= "element">  
                        <bind-xml name="material"/>  
                 </field>  
        </class>  
            
         <class name="test.Material">  
                <field name="name" type="java.lang.String"  
                       direct="true">  
                         <bind-xml name="name" node="element"/>  
                 </field>  
                 <field name="type" type="java.lang.String"  
                        direct="true">  
                         <bind-xml name="type" node="element"/>  
                 </field>  
                 <field name="copys" type="integer"  
                        direct="true">  
                         <bind-xml name="copys" node="element"/>  
                 </field>  
         </class>  
 </mapping>  
