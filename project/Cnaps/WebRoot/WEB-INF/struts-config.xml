<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
	<data-sources />
	<form-beans>
		
		<!-- 登陆Form start -->
		<form-bean name="loginSystemForm"
			type="com.bancstone.form.systemManage.LoginSystemForm" />
		<!-- 登陆Form end -->
		<!-- 系统用户组 start-->
		<form-bean name="systemgroupsmanageForm"
			type="com.bancstone.form.systemManage.SystemgroupsmanageFormBean" />
		<!-- 系统用户组 end -->
		<!-- 系统机构 start-->
		<form-bean name="systemorganizationsmanageForm"
			type="com.bancstone.form.systemManage.SystemorganizationsmanageForm" />
		<!-- 系统机构 end -->
		<!-- 系统角色 start-->
		<form-bean name="systemrolesmanageForm"
			type="com.bancstone.form.systemManage.SystemrolesmanageForm" />
		<!-- 系统角色 end -->
		<!-- 系统菜单 start-->
		<form-bean name="systemmenusmanageForm"
			type="com.bancstone.form.systemManage.SystemmenusmanageForm" />
		<!-- 系统菜单 end -->
		<!-- 权限分配（添加、删除权限） start-->
		<form-bean name="authordistributionmanagerForm"
			type="com.bancstone.form.systemManage.AuthordistributionmanagerForm" />
		<!-- 权限分配 （添加、删除权限）end -->
		<!-- 用户管理 start -->
		<form-bean name="systemusersmanageForm"
			type="com.bancstone.form.systemManage.SystemusersmanageForm" />
		<!-- 用户管理 end  -->
	</form-beans>
	<global-exceptions />
	<global-forwards>
		<forward name="success"
			path="/page/common/successMessage.jsp">
		</forward>
		<forward name="AthorizationSuccess"
			path="/page/common/successAthorization.jsp">
		</forward>
		<forward name="failed"
			path="/page/common/failMessage.jsp">
		</forward>
		<forward name="receipt" path="/page/common/receipt.jsp"></forward>
	</global-forwards>
	<action-mappings>
		<!-- 登陆Action start -->
		<action path="/login" name="loginSystemForm"
			parameter="method"
			type="com.bancstone.action.systemManage.LoginSystemAction">
			<forward name="systemIndex" path="/page/home/winMain.jsp"></forward>
			<forward name="systemLogin" path="/login.jsp"></forward>
			<forward name="gotoWelcome" path="/page/home/welcome.jsp"></forward>
		</action>
		<!-- 登陆Action start -->
		<!-- 系统首页菜单 Start -->
		<action path="/getNodesByIndentifier" scope="request"
			name="authordistributionmanagerForm"
			type="com.bancstone.action.systemManage.SystemMenuTreeAction"
			parameter="method">
		</action>
		<!-- 系统首页菜单 End-->
		
		<!-- 系统用户组 start 
		<action path="/systemManage/systemGroupManageAction"
			scope="request" name="systemgroupsmanageForm"
			type="com.bancstone.action.systemManage.SystemgroupsmanageAction"
			parameter="method">
			
			<forward name="querySystemGroupByIndentifier"
				path="/page/systemManager/systemGroupManage/modifyGroup.jsp">
			</forward>
			
			<forward name="deleteSystemGroup"
				path="/page/systemManager/systemGroupManage/queryGroupList.jsp">
			</forward>
			<forward name="addSystemGroupView"
				path="/page/systemManager/systemGroupManage/addGroup.jsp">
			</forward>
			
			<forward name="querySystemGroup"
				path="/page/systemManager/systemGroupManage/queryGroupList.jsp">
			</forward>
			<forward name="systemGroupDetail"
				path="/page/systemManager/systemGroupManage/groupDetail.jsp">
			</forward>
			
			<forward name="success"
				path="/page/common/successMessage.jsp">
			</forward>
		
			<forward name="failed"
				path="/page/common/failMessage.jsp">
			</forward>
		</action>
		-->
		<!-- 系统用户组 end -->

		<!-- 系统机构 start -->
		<action path="/systemManage/systemOrganizationManageAction"
			scope="request" name="systemorganizationsmanageForm"
			type="com.bancstone.action.systemManage.SystemorganizationsmanageAction"
			parameter="method">
			<!-- 点击修改按钮时跳转到修改系统机构页面 -->
			<forward name="querySystemOrganizationByIndentifier"
				path="/page/systemManager/systemOrganizationManage/modifyOrganization.jsp">
			</forward>
			<!-- 点击删除按钮时删除成功时跳转到查询数据页面 -->
			<forward name="deleteSystemOrganization"
				path="/page/systemManager/systemOrganizationManage/queryOrganizationList.jsp">
			</forward>
			<forward name="addSystemOrganizationView"
				path="/page/systemManager/systemOrganizationManage/addOrganization.jsp">
			</forward>
			<!-- 查询系统机构页面 -->
			<forward name="querySystemOrganization"
				path="/page/systemManager/systemOrganizationManage/queryOrganizationList.jsp">
			</forward>
			<forward name="systemOrganizationDetail"
				path="/page/systemManager/systemOrganizationManage/organizationDetail.jsp">
			</forward>
			<!-- 添加系统机构成功时跳转到成功信息提示页面 -->
			<forward name="success"
				path="/page/common/successMessage.jsp">
			</forward>
			<!-- 添加失败、修改、删除、查询失败时的提示消息页面 -->
			<forward name="failed"
				path="/page/common/failMessage.jsp">
			</forward>
		</action>
		<!-- 系统机构 end -->

		<!-- 系统角色 start -->
		<action path="/systemManage/systemRoleManageAction"
			scope="request" name="systemrolesmanageForm"
			type="com.bancstone.action.systemManage.SystemrolesmanageAction"
			parameter="method">
			<!-- 点击修改按钮时跳转到修改系统角色页面 -->
			<forward name="querySystemRoleByIndentifier"
				path="/page/systemManager/systemRoleManage/modifyRole.jsp">
			</forward>
			<!-- 点击删除按钮时删除成功时跳转到查询数据页面 -->
			<forward name="deleteSystemRole"
				path="/page/systemManager/systemRoleManage/queryRoleList.jsp">
			</forward>
			<forward name="addSystemRoleView"
				path="/page/systemManager/systemRoleManage/addRole.jsp">
			</forward>
			<!-- 查询系统角色页面 -->
			<forward name="querySystemRole"
				path="/page/systemManager/systemRoleManage/queryRoleList.jsp">
			</forward>
			<forward name="systemRoleDetail"
				path="/page/systemManager/systemRoleManage/roleDetail.jsp">
			</forward>
			<!-- 跳到角色权限分配页面 Start-->
			<forward name="distributionSystemAuthor"
				path="/page/systemManager/systemRoleManage/roleCompetenceAssign.jsp">
			</forward>
			<!-- 跳到角色权限分配页面 End-->
			<!-- 添加系统角色成功时跳转到成功信息提示页面 -->
			<forward name="success"
				path="/page/common/successMessage.jsp">
			</forward>
			<!-- 添加失败、修改、删除、查询失败时的提示消息页面 -->
			<forward name="failed"
				path="/page/common/failMessage.jsp">
			</forward>
		</action>
		<!-- 系统角色 end -->
		<!-- 角色分配(添加角色、删除角色)Start -->
		<action path="/systemManage/authordistributionmanagerAction"
			scope="request" name="authordistributionmanagerForm"
			type="com.bancstone.action.systemManage.AuthordistributionmanagerAction"
			parameter="method">
		</action>
		<!-- 角色分配(添加角色、删除角色)End -->

		<!-- 系统菜单管理 start -->
		<action attribute="systemmenusmanageForm"
			name="systemmenusmanageForm" parameter="method"
			path="/systemManage/systemMenusManage/SystemmenusmanageAction"
			scope="request"
			type="com.bancstone.action.systemManage.SystemmenusmanageAction">
			<forward name="getAllOneLevelNodesByIndentifier"
				path="/page/systemManager/systemMenusManage/console-json.jsp" />
			<forward name="editNodes"
				path="/page/systemManager/systemMenusManage/console-edit.jsp" />
			<forward name="success"
				path="/page/common/successMessage.jsp">
			</forward>
			<forward name="failed"
				path="/page/common/failMessage.jsp">
			</forward>
			<forward name="gotoSystemmenusmanage"
				path="/page/systemManager/systemMenusManage/index.jsp">
			</forward>
			
		</action>
		<!-- 系统菜单管理 end  -->
		<!-- 用户管理 start -->
		<action
			path="/systemManage/systemUserManage/systemUserManageAction"
			name="systemusersmanageForm" scope="request"
			type="com.bancstone.action.systemManage.SystemUserManageAction"
			parameter="method">
			<!-- 添加用户 -->
			<forward name="addUserPrepare"
				path="/page/systemManager/systemusersmanage/AddUser.jsp">
			</forward>
			<forward name="modifyUserPasswordView"
				path="/page/systemManager/systemusersmanage/modifyUserPassword.jsp">
			</forward>
			<forward name="queryUserList"
				path="/page/systemManager/systemusersmanage/queryUserList.jsp">
			</forward>
			<forward name="success"
				path="/page/common/successMessage.jsp">
			</forward>
			<forward name="failed"
				path="/page/common/failMessage.jsp">
			</forward>
		</action>
		<!-- 用户管理 end  -->
	</action-mappings>
</struts-config>


