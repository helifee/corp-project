package yd;

public class XingTwo {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int i, j, k;
		int n = 7;
		
		for(i=1; i<=n/2+1; i++) {
			k = 1;
			
			for(j=n-i+1; j>=1; j--) {
				if(k < i) {
					System.out.print(" ");
				}
				else {
					System.out.print("*");
				}
				k++;
			}
			
			System.out.println();
		}
		
		for(i=1; i<=n/2; i++) {
			k = 1;
			
			for(j=1; j<=n/2+2+(i-1); j++) {
				if(k < n / 2 - (i - 1)) {
					System.out.print(" ");
				}
				else {
					System.out.print("*");
				}
				k++;
			}
			System.out.println();
		}
	}
}
