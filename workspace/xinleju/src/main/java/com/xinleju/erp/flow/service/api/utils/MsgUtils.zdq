package com.xinleju.erp.flow.service.api.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.flowutils.bean.MsgDTO;
import com.xinleju.erp.frame.models.Msg;
import com.xinleju.erp.frame.service.extend.dto.MsgDto;

public class MsgUtils {
	
	/**
	 * 构建部门列表
	 * @param depts
	 * @return
	 */
	public static List<MsgDTO> buildMsgDTOList(List<Msg> msgs) {
		List<MsgDTO> msgDTOs = new ArrayList<MsgDTO>();
        if(msgs != null && !msgs.isEmpty()){
            MsgDTO dto = null;
            for(Msg msg : msgs){
                dto =  buildMsgDTO(msg);
                if(dto != null) {
                    msgDTOs.add(dto);
                }
            }
        }
        return msgDTOs;
	}

	
	/**
	 * 构建部门
	 * @param comp
	 * @return
	 */
	public static MsgDTO buildMsgDTO(Msg msg) {
	    MsgDTO dto = null;
		if(msg != null) {
			dto = new MsgDTO();
			dto.setDealDate(msg.getDealDate());
			dto.setExData(msg.getExData());
			dto.setId(msg.getId());
			dto.setLoginName(msg.getLoginName());
			dto.setModuleCode(msg.getModuleCode());
			dto.setMsgId(msg.getMsgId());
			dto.setMsgType(msg.getMsgType());
			dto.setOpType(msg.getOpType());
			dto.setTitle(msg.getTitle());
			dto.setTypedDate(msg.getTypedDate());
			dto.setUrl(msg.getUrl());
		}
		return dto;
	}
	
	public static MsgDto fixMsgDTOtoMsgDto(MsgDTO msgDTO){
	    MsgDto msgDto = new MsgDto();
	    if (null != msgDTO){
	        msgDto.setLoginName(msgDTO.getLoginName());
	        msgDto.setModuleCode(msgDTO.getModuleCode());
	        msgDto.setMsgType(msgDTO.getMsgType());
	        msgDto.setOpType(msgDTO.getOpType());
	        msgDto.setTitle(msgDTO.getTitle());
	    }
	    return msgDto;
	}
}
