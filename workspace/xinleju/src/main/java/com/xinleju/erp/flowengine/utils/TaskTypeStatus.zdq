package com.xinleju.erp.flowengine.utils;


public class TaskTypeStatus {
	
	
	
    /**
     * 创建状态
     */
    public static final int STATUS_CREATED = 0;

    /**
     * 运行状态
     */
    public static final int STATUS_RUNNING = 1;

    /**
     * 结束状态
     */
    public static final int STATUS_COMPLETE = 2;

    /**
     * 过期状态
     */
    public static final int STATUS_OVERDUE = 7;
    
    
    /**
     * 普通
     */
    public static final String BUSINESS_TYPE_GENERAL="1";
    /**
     * 代理
     */
    public static final String BUSINESS_TYPE_PROXY="2";
    /**
     * 监控
     */
    public static final String BUSINESS_TYPE_MONITOR="3";
    
    /**
     * 未读
     */
    public static final int STATUS_UNREAD = 1;

    /**
     * 已读
     */
    public static final int STATUS_READ = 2;
    
    
    
    public static enum TaskType {

        /**
         * 
         * 1,影响流程
         * 0,不影响流程
         * 枚举所有的工作类型
         */
        ZC("正常", "ZC", 1),ZB("转办", "ZB", 0),XB("协办", "XB", 0),GT("沟通", "GT", 0),HF("回复", "HF", 0),CS("抄送", "CS", 0),SPLDYQGZ("预期审批通知", "SPLDYQGZ", 0),SPYQGZ("预期领导通知", "SPYQGZ", 0), LG("日志", "LG", 0), CY("传阅", "CY", 0), CB("催办", "CB", 0), ZF("作废", "ZF", 0),TX("流程变化提醒", "TX", 0);

        private TaskType(String name, String code, int isEffectFlow) {
            this.name = name;
            this.code = code;
            this.isEffectFlow = isEffectFlow;
        }

        /**
         * 
         * <p>
         * 返回指定编码的工作类型
         * </p>
         * <p>
         * </p>
         * 
         * @author 孙朝辉
         * @param code
         *            编码
         * @return WiType 工作类型
         */
        public static TaskType get(String code) {
            for (TaskType t : TaskType.values()) {
                if (t.getCode().equals(code)) {
                    return t;
                }
            }
            return null;
        }

        /**
         * 是否影响流程流转
         */
        private int isEffectFlow;

        /**
         * 名称
         */
        private String name;

        /**
         * 编码
         */
        private String code;

        public String getName() {
            return name;
        }

        public void setName(String name) {
            this.name = name;
        }

        public String getCode() {
            return code;
        }

        public void setCode(String code) {
            this.code = code;
        }

        public int getIsEffectFlow() {
            return isEffectFlow;
        }

        public void setIsEffectFlow(int isEffectFlow) {
            this.isEffectFlow = isEffectFlow;
        }
    }

}
