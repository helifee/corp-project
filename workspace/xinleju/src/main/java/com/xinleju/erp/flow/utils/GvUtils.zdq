package com.xinleju.erp.flow.utils;

import java.math.BigDecimal;
import java.util.Date;

import com.xinleju.erp.base.utils.DateUtils;

/**
 * 
 * 
 * <p>
 * </p>
 * <p>
 * </p>
 * 
 * @author 孙朝辉
 * @version $Id: GvUtils.java 583 2014-06-13 09:38:22Z sunchaohui $
 * @since
 * 
 */
public class GvUtils {

    /**
     * 
     * <p>
     * 获得带类型的全局变量值
     * </p>
     * <p>
     * </p>
     * 
     * @author 孙朝辉
     * @param type
     *            类型
     * @param value
     *            值
     * @return 带类型全局变量值
     */
    public static Object getVal(String type, String value) {
        if (String.class.getName().equals(type)) {
            return value;
        } else if (Integer.class.getName().equals(type)) {
            return Integer.parseInt(value);
        } else if (BigDecimal.class.getName().equals(type)) {
            return new BigDecimal(value);
        } else if (Date.class.getName().equals(type)) {
            return DateUtils.str2Date(value, "yyyy-MM-dd HH:mm:ss");
        } else if (Double.class.getName().equals(type)) {
            return Double.parseDouble(value);
        } else if (Float.class.getName().equals(type)) {
            return Float.parseFloat(value);
        }
        return value;
    }

    /**
     * 
     * <p>
     * 返回值类型
     * </p>
     * <p>
     * </p>
     * 
     * @author 孙朝辉
     * @param o
     *            值
     * @return java类型
     */
    public static String getType(Object o) {
        if (o instanceof String) {
            return String.class.getName();
        } else if (o instanceof Integer) {
            return Integer.class.getName();
        } else if (o instanceof Double) {
            return Double.class.getName();
        } else if (o instanceof BigDecimal) {
            return BigDecimal.class.getName();
        } else if (o instanceof Float) {
            return Float.class.getName();
        } else {
            return o.getClass().getName();
        }
    }
}
