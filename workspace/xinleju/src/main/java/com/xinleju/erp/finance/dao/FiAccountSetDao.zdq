package com.xinleju.erp.finance.dao;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.xinleju.erp.finance.models.FiAccountSet;
import com.xinleju.erp.flow.dao.impl.BaseDAO;

/**
 * 账套的数据访问类
 * 
 * @author walden
 * 
 */
@Repository
public class FiAccountSetDao extends BaseDAO {
	/**
	 * 根据公司Id和状态获得公司账套
	 * 
	 * @param companyId
	 * @param status
	 * @return
	 */
	public List<FiAccountSet> getFiAccountSetList(long companyId, String status) {
		List<FiAccountSet> result = getDao().findByHQL(FiAccountSet.class, "from FiAccountSet where companyId=? order by sort asc", companyId);
		return result;
	}
	
	/**
	 * 根据财务系统公司ID获取账套
	 * 
	 * @param companyId
	 * @param status
	 * @return
	 */
	public List<FiAccountSet> getFiAccountSetsByFiSysId(long fiSysId , String status) {
		List<FiAccountSet> result = getDao().findByHQL(FiAccountSet.class, "from FiAccountSet where fiSysId=? order by sort asc", fiSysId);
		return result;
	}
	
	
	/**
	 * 保存帐套
	 */
	public void saveFiAccountSet(FiAccountSet fi){
		if(null!=fi)
		this.getDao().saveOrUpdate(fi);
		
	}
	
	/**
	 * 删除账套Byid
	 */
	public void deleteFiAccountSet(Long id){
		if(null!=id){
			this.getDao().delete(FiAccountSet.class, id);;
		}
	}
	
	/**
	 * 查找账套ById
	 */
	public FiAccountSet findFiAccountSetById(Long id){
		FiAccountSet fiAccountSet = this.getDao().getById(FiAccountSet.class, id);
		return fiAccountSet;
	}
}
