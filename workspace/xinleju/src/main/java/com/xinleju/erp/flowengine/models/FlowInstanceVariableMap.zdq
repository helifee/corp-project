package com.xinleju.erp.flowengine.models;

import java.util.Collection;
import java.util.HashMap;
import java.util.Map;

public class FlowInstanceVariableMap {
	
	private Map<String,FlowInstanceVariable> flowInstanceVariableMap;

	public FlowInstanceVariableMap() {
		this.flowInstanceVariableMap = new HashMap<String, FlowInstanceVariable>();
	}

	public Map<String, FlowInstanceVariable> getFlowInstanceVariableMap() {
		return flowInstanceVariableMap;
	}

	public void setFlowInstanceVariableMap(
			Map<String, FlowInstanceVariable> flowInstanceVariableMap) {
		this.flowInstanceVariableMap = flowInstanceVariableMap;
	}
	
	public static FlowInstanceVariableMap create() {
	        return new FlowInstanceVariableMap();
	}
	public FlowInstanceVariableMap add(FlowInstanceVariable flowInstanceVariable ) {
        this.flowInstanceVariableMap.put(flowInstanceVariable.getKey(), flowInstanceVariable);
        return this;
    }
	
	private boolean contains(FlowInstanceVariable flowInstanceVariable ) {
	        return this.flowInstanceVariableMap.containsKey(flowInstanceVariable);
	}
	
	 public Map<String, Object> getValueMap() {
	        Map<String, Object> dataMap = new HashMap<String, Object>();
	        for (FlowInstanceVariable kv : flowInstanceVariableMap.values()) {
	            dataMap.put(kv.getKey(), kv.getVal());
	        }
	        return dataMap;
	  }
	public Collection<FlowInstanceVariable> asList() {
	        return this.flowInstanceVariableMap.values();
	}
	
    public Object get(String key) {
        return flowInstanceVariableMap == null || flowInstanceVariableMap.get(key) == null ? null : flowInstanceVariableMap.get(key).getVal();
    }

}
