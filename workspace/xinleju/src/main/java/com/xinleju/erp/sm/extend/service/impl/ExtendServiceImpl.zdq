package com.xinleju.erp.sm.extend.service.impl;

import java.lang.reflect.InvocationTargetException;
import java.util.ArrayList;
import java.util.List;

import org.apache.commons.beanutils.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.xinleju.erp.sm.extend.dto.ShortcutDTO;
import com.xinleju.erp.sm.extend.service.ExtendService;
import com.xinleju.erp.sm.extend.shortcut.models.Shortcut;
import com.xinleju.erp.sm.extend.shortcut.service.ShortcutService;

@Service("ExtendServiceImpl")
public class ExtendServiceImpl implements ExtendService {
	
	@Autowired
	ShortcutService shortcutService;

	@Override
	public List<ShortcutDTO> getShortcutDTOListBySysCode(String sysCode) {
		List<ShortcutDTO> result = new ArrayList<ShortcutDTO>();
		List<Shortcut> list = shortcutService.getShortcutListBySysCode(sysCode);
		try {
			BeanUtils.copyProperties(result, list);
		} catch (IllegalAccessException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (InvocationTargetException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return result;
	}

	@Override
	public ShortcutDTO getShortcutDTOByCode(String code) {
		ShortcutDTO dto = new ShortcutDTO();
		
		Shortcut s = shortcutService.getShortcutByCode(code);
		
		try {
			BeanUtils.copyProperties(dto, s);
		} catch (IllegalAccessException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (InvocationTargetException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return dto;
	}

}
