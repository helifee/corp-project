package com.xinleju.erp.flow.config;

import java.util.HashMap;
import java.util.Map;

import com.xinleju.erp.flow.utils.FlowConstant;

@SuppressWarnings("serial")
public class FilePathMap extends java.util.HashMap<Object, String>{
	public static final String MAP_UPLOADMAP = "uploadMap";
	
	public static final String KEY_UPLOADLIMIT = "uploadLimit";
	public static final String KEY_FILESIZELIMIT = "fileSizeLimit";
	public static final String KEY_SUCCESSTIMEOUT = "successTimeout";
	public static final String KEY_FADEOUT = "fadeOut";
	public static final String KEY_FILEUPLOADTIMEOUT = "fileUploadTimeout";
	
	private Map baseMap;
	
	HashMap<String, Object> uploadConfigMap;
	
	public String get(Object key){
//		String fileRoot = FlowConstant.SKEY_FILE_ROOT;
//		return  fileRoot + baseMap.get(key);
		return (String) baseMap.get(key);
	}

	public Map getBaseMap() {
		return baseMap;
	}

	public void setBaseMap(Map baseMap) {
		this.baseMap = baseMap;
	}

	public HashMap<String, Object> getUploadConfigMap() {
		return uploadConfigMap;
	}

	public void setUploadConfigMap(HashMap<String, Object> uploadConfigMap) {
		this.uploadConfigMap = uploadConfigMap;
	}

	public String getConfig(String key) {
		String config = (String) uploadConfigMap.get(key);
		return config;
	}
	
	public Integer getIntConfig(String key) {
		String config =  getConfig(key);
		return config == null || config.length() == 0 ? 5 : Integer.parseInt(config);
	}
}
