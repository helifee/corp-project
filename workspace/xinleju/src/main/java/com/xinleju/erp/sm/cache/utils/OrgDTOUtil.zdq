package com.xinleju.erp.sm.cache.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.OrgnDTO;
import com.xinleju.erp.flow.service.api.extend.dto.PartyEntityDTO;

public class OrgDTOUtil {
	
	/**
     * 构建OrgnDtoList
     * @author hongbin
     * @param pss
     * @return
     */
    public static List<OrgnDTO> buildOrgDtoList(List<PartyEntityDTO> pss) {
        List<OrgnDTO> orgnDtos = new ArrayList<OrgnDTO>();
        if(pss != null && !pss.isEmpty()){
            OrgnDTO dto = null;
            for(PartyEntityDTO ps : pss){
                dto =  buildOrgDto(ps);
                if(dto != null) {
                    orgnDtos.add(dto);
                }
            }
        }
        return orgnDtos;
    }
    
    /**
     * 构建 OrgnDto
     * @author hongbin
     * @param ps
     * @return
     */
    public static OrgnDTO buildOrgDto(PartyEntityDTO ps) {
        OrgnDTO orgnDto = null;
        if(ps != null ){
            orgnDto = new OrgnDTO();
            orgnDto.setId(ps.getId());
            orgnDto.setRefId(ps.getRefId());
            orgnDto.setName(ps.getName());
            //orgnDto.setType(ps.getPartyTypeId());
            //orgnDto.setSubCount(ps.getSubCount());
        }
        return orgnDto;
    }

}
