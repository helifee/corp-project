package com.xinleju.erp.flow.bean;
 
import java.util.List;
import java.util.Map;

import com.xinleju.erp.frame.models.App;
import com.xinleju.erp.flow.service.api.extend.dto.FuncDTO;
import com.xinleju.erp.flow.service.api.extend.dto.RoleDTO;
import com.xinleju.erp.flow.service.api.extend.dto.UserDTO;

public class LoginInfo{

	/**
	 * 构建的用户对象
	 */
	private UserDTO userDTO; 
    
    
    private List<RoleDTO> roleDtoList;
    
    /**
     * 菜单权限
     */
    private Map<App, List<FuncDTO>> funcDTOListMap;

    public UserDTO getUserDTO() {
        return userDTO;
    }

    public void setUserDTO(UserDTO userDTO) {
        this.userDTO = userDTO;
    }

    public List<RoleDTO> getRoleDtoList() {
        return roleDtoList;
    }

    public void setRoleDtoList(List<RoleDTO> roleDtoList) {
        this.roleDtoList = roleDtoList;
    }

    public Map<App, List<FuncDTO>> getFuncDTOListMap() {
        return funcDTOListMap;
    }

    public void setFuncDTOListMap(Map<App, List<FuncDTO>> map) {
        this.funcDTOListMap = map;
    }

}
