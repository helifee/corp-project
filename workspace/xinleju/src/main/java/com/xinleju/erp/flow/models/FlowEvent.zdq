package com.xinleju.erp.flow.models;

import java.util.Date;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.Index;
import javax.persistence.Lob;
import javax.persistence.Table;

import org.hibernate.annotations.DynamicInsert;
import org.hibernate.annotations.DynamicUpdate;

import com.xinleju.erp.base.app.models.IdEntity;
import com.xinleju.erp.base.app.utils.HibernateUtils;

/**
 * 
 * <简述> <详细描述>
 * 
 * @author 孙朝辉
 * @version $Id: FlowEvent.java 2315 2015-01-19 05:25:13Z zhongjun $
 * @since
 * 
 */
@Entity
@Table(name = "tf_flow_event",indexes={@Index( columnList="CODE, SRC_ID",unique=false)})
@DynamicUpdate(true)
@DynamicInsert(true)
public class FlowEvent extends IdEntity {

    /**
     * 序列化
     */
    private static final long serialVersionUID = 8653191189571350447L;

    /**
     * 工作开始
     */
    public static final String EVENT_CODE_WS = "WS";

    /**
     * 工作结束
     */
    public static final String EVENT_CODE_WE = "WE";

    /**
     * 工作过期
     */
    public static final String EVENT_CODE_WO = "WO";

    /**
     * 工作重置
     */
    public static final String EVENT_CODE_WR = "WR";

    public static final String EVENT_CODE_FS = "FS";
    
    /**
     * 流程结束
     */
    public static final String EVENT_CODE_FE = "FE";
    
    /**
     * 流程作废
     */
    public static final String EVENT_CODE_FO = "FO";

    /**
     * 环节结束
     */
    public static final String EVENT_CODE_AS = "AS";

    /**
     * 环节结束
     */
    public static final String EVENT_CODE_AE = "AE";

    /**
     * 环节过期
     */
    public static final String EVENT_CODE_AO = "AO";
    
    
    /**
     * 流程名
     */
    @Column(length = HibernateUtils.COLOUMN_LENGTH_500)
    private String fiName;
    
    /**
     * 事件描述
     */
    @Column(length = HibernateUtils.COLOUMN_LENGTH_500)
    private String descn;
    
    /**
     * 事件编码
     */
    private String code;

    /**
     * 事件目标对象ID,譬如wiId,FiId
     */
    private Long srcId;
    
    /**
     * 流程实例ID
     */
    private Long fiId;
    
    /**
     * 是否已经扫描(0表示未扫描，1表示已扫描)
     */
    @Column(name = "is_scan", columnDefinition = "int(10) default 0")
    private Integer isScan;

    /**
     * 创建时间
     */
    @Column(name = "create_time", columnDefinition = "timestamp default current_timestamp()")
    private Date createTime;

    /**
     * N/A
     */
    @Column(length = HibernateUtils.COLOUMN_LENGTH_500)
    private String taskClass;

    
    /**
     * 所属系统
     */
    private String appCode;
    
    /**
     * JSON对象
     */
    @Lob
    private String json;

    public String getCode() {
        return code;
    }

    public void setCode(String code) {
        this.code = code;
    }

    public Long getSrcId() {
        return srcId;
    }

    public void setSrcId(Long srcId) {
        this.srcId = srcId;
    }

    public String getTaskClass() {
        return taskClass;
    }

    public void setTaskClass(String taskClass) {
        this.taskClass = taskClass;
    }

    /**
     * @return Returns the isScan.
     */
    public Integer getIsScan() {
        return isScan;
    }

    /**
     * @param isScan
     *            The isScan to set.
     */
    public void setIsScan(Integer isScan) {
        this.isScan = isScan;
    }

    /**
     * @return Returns the createTime.
     */
    public Date getCreateTime() {
        return createTime;
    }

    /**
     * @param createTime
     *            The createTime to set.
     */
    public void setCreateTime(Date createTime) {
        this.createTime = createTime;
    }

    public String getJson() {
        return json;
    }

    public void setJson(String json) {
        this.json = json;
    }

    public String getFiName() {
        return fiName;
    }

    public void setFiName(String fiName) {
        this.fiName = fiName;
    }

    public String getDescn() {
        return descn;
    }

    public void setDescn(String descn) {
        this.descn = descn;
    }

    public Long getFiId() {
        return fiId;
    }

    public void setFiId(Long fiId) {
        this.fiId = fiId;
    }

    public String getAppCode() {
        return appCode;
    }

    public void setAppCode(String appCode) {
        this.appCode = appCode;
    }

   

   

}
