package com.xinleju.erp.sm.cache.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.OrgnDTO;
import com.xinleju.erp.flow.service.api.extend.dto.PartyEntityDTO;
import com.xinleju.erp.flow.service.api.extend.dto.UserDTO;

public class UserDTOUtil {
	
	/**
     * 构建OrgnDtoList
     * @author hongbin
     * @param pss
     * @return
     */
    public static List<UserDTO> buildUserDtoList(List<PartyEntityDTO> pss) {
        List<UserDTO> orgnDtos = new ArrayList<UserDTO>();
        if(pss != null && !pss.isEmpty()){
        	UserDTO dto = null;
            for(PartyEntityDTO ps : pss){
                dto =  buildUserDto(ps);
                if(dto != null) {
                    orgnDtos.add(dto);
                }
            }
        }
        return orgnDtos;
    }
    
    /**
     * 构建 OrgnDto
     * @author hongbin
     * @param ps
     * @return
     */
    public static UserDTO buildUserDto(PartyEntityDTO ps) {
    	UserDTO orgnDto = null;
        if(ps != null ){
            orgnDto = new UserDTO();
            orgnDto.setId(ps.getId());
            //orgnDto.setRefId(ps.getRefId());
            orgnDto.setRealName(ps.getName());
            
            //orgnDto.setType(ps.getPartyTypeId());
            //orgnDto.setSubCount(ps.getSubCount());
        }
        return orgnDto;
    }

}
