public class ServiceObjectDefineAction extends BaseAction {

    /**
     * 得到业务对象信息
     * @author jun
     */
    public void getServiceObjectDefineInfo(){
        Map<String, Object> result = new HashMap<String, Object>();
        if (null != id) {
            String serviceObjectDefineId = "";
            String serviceObjectDefineName = "";
            String serviceObjectDefineAppName = "";
            String serviceObjectDefineUrlPc = "";
            String serviceObjectDefineUrlPh = "";
            String serviceObjectDefineUrlPd = "";
            ServiceObjectDefine serviceObjectDefine = getCommonService().getById(ServiceObjectDefine.class, id);
            if (null != serviceObjectDefine){
                serviceObjectDefineId = id + "";
                serviceObjectDefineAppName = StringUtils.isNotBlank(serviceObjectDefine.getAppName()) ? serviceObjectDefine.getAppName() : "";
                serviceObjectDefineName = StringUtils.isNotBlank(serviceObjectDefine.getName()) ? serviceObjectDefine.getName() : "";
                serviceObjectDefineUrlPc = StringUtils.isNotBlank(serviceObjectDefine.getUrlSp()) ? serviceObjectDefine.getUrlSp() : "";
                serviceObjectDefineUrlPh = StringUtils.isNotBlank(serviceObjectDefine.getUrlSpPhone()) ? serviceObjectDefine.getUrlSpPhone() : "";
                serviceObjectDefineUrlPd = StringUtils.isNotBlank(serviceObjectDefine.getUrlSpPad()) ? serviceObjectDefine.getUrlSpPad() : "";
            }
            result.put("serviceObjectDefineId", serviceObjectDefineId);
            result.put("serviceObjectDefineAppName", serviceObjectDefineAppName);
            result.put("serviceObjectDefineName", serviceObjectDefineName);
            result.put("serviceObjectDefineUrlPc", serviceObjectDefineUrlPc);
            result.put("serviceObjectDefineUrlPh", serviceObjectDefineUrlPh);
            result.put("serviceObjectDefineUrlPd", serviceObjectDefineUrlPd);
        }
        renderJson(result);
    }

}
