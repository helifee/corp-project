package com.xinleju.erp.flow.service.api.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.CtrlDTO;
import com.xinleju.erp.frame.models.BizDataCtrl;

public class CtrlUtils {
	/**
     * 构建CtrlDto
     * @author hongbin
     * @param ctrls
     * @return
     */
    public static List<CtrlDTO> buildCtrlDtoList(List<BizDataCtrl> ctrls) {
        List<CtrlDTO> ctrlDtos = new ArrayList<CtrlDTO>();
        if(ctrls != null && !ctrls.isEmpty()){
        	CtrlDTO dto = null;
            for(BizDataCtrl ctrl : ctrls){
                dto =  buildCtrlDto(ctrl);
                if(dto != null) {
                    ctrlDtos.add(dto);
                }
            }
        }
        return ctrlDtos;
    }
    
    /**
     * 构建 CtrlDTO
     * @author hongbin
     * @param ctrl
     * @return
     */
    public static CtrlDTO buildCtrlDto(BizDataCtrl ctrl) {
    	CtrlDTO ctrlDto = null;
        if(ctrl != null ){
            ctrlDto = new CtrlDTO();
            ctrlDto.setId(ctrl.getId());
            ctrlDto.setName(ctrl.getName());
            ctrlDto.setCode(ctrl.getCode());
        }
        return ctrlDto;
    }
}
