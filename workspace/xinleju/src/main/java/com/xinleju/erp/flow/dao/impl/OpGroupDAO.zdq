@Repository
public class OpGroupDAO extends BaseDAO {

    /**
     * 得到操作组
     * 
     * @author jun
     * @param opGroupsId
     * @return 操作组
     */
    public List<OpGroup> getOpGroupsList() {
        return getDao().findAll(OpGroup.class, "(isDisabled = 0 or isDisabled is null) ");
    }
    
    public OpGroup getOpGroupsByCode(String opGroupCode){
    	return getDao().findFirst(OpGroup.class, "code = ?", new Object[]{opGroupCode});
    }
}
