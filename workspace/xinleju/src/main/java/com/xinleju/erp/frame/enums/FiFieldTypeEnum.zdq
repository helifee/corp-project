package com.xinleju.erp.frame.enums;

import java.util.HashMap;
import java.util.Map;

public enum FiFieldTypeEnum {
	TYPE_DATE("日期型", "date"), TYPE_NUMBER("数值型", "number"), TYPE_TEXT("文本型", "text"), TYPE_BOOLEAN("布尔型", "boolean"), TYPE_ENUM("枚举型", "enum");
	private String name;
	private String key;
	private static Map<Object, Object> map;

	private FiFieldTypeEnum(String name, String key) {
		this.name = name;
		this.key = key;
	}

	public String getKey() {
		return key;
	}

	public void setKey(String key) {
		this.key = key;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	@Override
	public String toString() {
		return key;
	}

	public synchronized static Map<Object, Object> getMap() {
		if (map == null || map.isEmpty()) {
			map = new HashMap<Object, Object>();
			for (FiFieldTypeEnum fbtEnum : FiFieldTypeEnum.values())
				map.put(fbtEnum.getKey(), fbtEnum.getName());
		}
		return map;
	}

	public static Object getElement(Object key) {
		return getMap().get(key);
	}

}
