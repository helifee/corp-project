package com.xinleju.erp.frame.utils;

import java.util.List;

import com.alibaba.fastjson.JSON;
import com.xinleju.erp.base.app.bean.Page;

/**
 * easyui datagrid控件所需要的json数据格式的对应bean
 * @author songjunjie
 */
public class DataGridJson {
	private int total;
	private List rows;

	public DataGridJson(Page page) {
		this.rows = page.getItems();
		this.total = page.getTotal();
	}	
	
	public String toJsonString(){
		return JSON.toJSONString(this);
	}

	public int getTotal() {
		return total;
	}

	public void setTotal(int total) {
		this.total = total;
	}

	public List getRows() {
		return rows;
	}

	public void setRows(List rows) {
		this.rows = rows;
	}
	
}
