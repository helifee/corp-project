package com.xinleju.erp.flow.service.api.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.ScopeDTO;
import com.xinleju.erp.frame.models.BizDataRole;
import com.xinleju.erp.frame.models.BizDataScope;

public class ScopeUtils {

    
    /**
     * 构建ScopeDTO
     * @author hongbin
     * @param dataRoles
     * @return
     */
    public static List<ScopeDTO> buildScopeDtoList(List<BizDataRole> dataRoles) {
        List<ScopeDTO> scopeDtos = new ArrayList<ScopeDTO>();
        if(dataRoles != null && !dataRoles.isEmpty()){
        	ScopeDTO dto = null;
            for(BizDataRole dataRole : dataRoles){
                dto =  buildScopeDto(dataRole);
                if(dto != null) {
                	scopeDtos.add(dto);
                }
            }
        }
        return scopeDtos;
    }
    
    /**
     * 构建ScopeDTO
     * @author hongbin
     * @param dataRoles
     * @return
     */
    public static List<ScopeDTO> buildToScopeDtoList(List<BizDataScope> dataRoles) {
        List<ScopeDTO> scopeDtos = new ArrayList<ScopeDTO>();
        if(dataRoles != null && !dataRoles.isEmpty()){
            for(BizDataScope dataRole : dataRoles){
                ScopeDTO scopeDto = null;
                if(dataRole != null ){
                    scopeDto = new ScopeDTO();
                    scopeDto.setId(dataRole.getId());
                    scopeDto.setName(dataRole.getName());
                    scopeDto.setCode(dataRole.getCode());
                }
                if(scopeDto != null) {
                	scopeDtos.add(scopeDto);
                }
            }
        }
        return scopeDtos;
    }
    
    /**
     * 构建 ScopeDTO
     * @author hongbin
     * @param dataRole
     * @return
     */
    public static ScopeDTO buildScopeDto(BizDataRole dataRole) {
    	ScopeDTO scopeDto = null;
        if(dataRole != null ){
            scopeDto = new ScopeDTO();
            scopeDto.setId(dataRole.getBizDataScope().getId());
            scopeDto.setName(dataRole.getBizDataScope().getName());
            scopeDto.setCode(dataRole.getBizDataScope().getCode());
            scopeDto.setValue(dataRole.getOtherOptions());
        }
        return scopeDto;
    }
    
   
}
