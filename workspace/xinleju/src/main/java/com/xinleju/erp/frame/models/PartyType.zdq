package com.xinleju.erp.frame.models;

import java.util.ArrayList;
import java.util.List;

import javax.persistence.Entity;
import javax.persistence.Table;

import org.hibernate.annotations.Cache;
import org.hibernate.annotations.CacheConcurrencyStrategy;

@Entity
@Table(name = "SM_PARTY_TYPE")
@Cache(usage=CacheConcurrencyStrategy.READ_WRITE)
public class PartyType extends BaseEntity{
    private static final long serialVersionUID = 0L;
    
    public static final String TYPE_ZB="zb";
    public static final String TYPE_COMPANY="company";
    public static final String TYPE_DEPARTMENT="department";
    public static final String TYPE_GROUP="group";
    public static final String TYPE_ROLE="role";
    public static final String TYPE_USER="user";
    public static final String TYPE_SYSTEM="system";
    
    public static final String ZB="总部";
    public static final String COMPANY="公司";
    public static final String DEPARTMENT="部门";
    public static final String SYSTEM="系统";
    public static final String GROUP="项目";
    public static final String ROLE="角色";
    public static final String USER="用户";
    
    public static final String IFCANADD_NO="no";
    public static final String IFCANADD_YES="yes";
    
    public static final String IFONLYENTITY_NO="no";
    public static final String IFONLYENTITY_YES="yes";
    
    
    public static List<LabelValueBean> typeList = new ArrayList(){{
        add(new LabelValueBean(PartyType.SYSTEM,PartyType.TYPE_SYSTEM));
        add(new LabelValueBean(PartyType.ZB,PartyType.TYPE_ZB));
        add(new LabelValueBean(PartyType.COMPANY,PartyType.TYPE_COMPANY));
        add(new LabelValueBean(PartyType.DEPARTMENT,PartyType.TYPE_DEPARTMENT));
        add(new LabelValueBean(PartyType.GROUP,PartyType.TYPE_GROUP));
        add(new LabelValueBean(PartyType.ROLE,PartyType.TYPE_ROLE));
        add(new LabelValueBean(PartyType.USER,PartyType.TYPE_USER));
    }};
    
    private String name;
    private String type;
 
    //  是否可手动新增entity  正常是同步过来
    private String ifCanAdd;
    //  是否只新增组织架构节点
    private String ifOnlyEntity;
    
    public String getName() {
        return name;
    }
    public void setName(String name) {
        this.name = name;
    }
 
    public void setType(String type) {
        this.type = type;
    }
 
    public String getType() {
        return type;
    }
 
    public String getIfCanAdd() {
        return ifCanAdd;
    }
    public void setIfCanAdd(String ifCanAdd) {
        this.ifCanAdd = ifCanAdd;
    }
    public static String getIfonlyentityNo() {
        return IFONLYENTITY_NO;
    }
    public static String getIfonlyentityYes() {
        return IFONLYENTITY_YES;
    }
    public String getIfOnlyEntity() {
        return ifOnlyEntity;
    }
    public void setIfOnlyEntity(String ifOnlyEntity) {
        this.ifOnlyEntity = ifOnlyEntity;
    }
 
    
}
