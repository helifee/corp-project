package com.xinleju.erp.quartz.listener;

import org.apache.log4j.Logger;
import org.quartz.JobDetail;
import org.quartz.JobKey;
import org.quartz.SchedulerException;
import org.quartz.SchedulerListener;
import org.quartz.Trigger;
import org.quartz.TriggerKey;

public class MySchedulerListener implements SchedulerListener {

	private static Logger log = Logger.getLogger(MySchedulerListener.class);
	@Override
	public void jobScheduled(Trigger trigger) {
		// TODO Auto-generated method stub
		log.info(trigger.getKey().getName()+"jobdetail被添加时执行");
	}

	@Override
	public void jobUnscheduled(TriggerKey triggerKey) {
		// TODO Auto-generated method stub
		log.info(triggerKey.getName()+"jobdetail被移除时执行");
	}

	@Override
	public void triggerFinalized(Trigger trigger) {
		// TODO Auto-generated method stub
		log.info(trigger.getKey().getName()+"triggerFinalized");
	}

	@Override
	public void triggerPaused(TriggerKey triggerKey) {
		// TODO Auto-generated method stub
		log.info(triggerKey.getName()+"triggerPaused");
	}

	@Override
	public void triggersPaused(String triggerGroup) {
		// TODO Auto-generated method stub
		log.info(triggerGroup+"triggersPaused");
	}

	@Override
	public void triggerResumed(TriggerKey triggerKey) {
		// TODO Auto-generated method stub
		log.info(triggerKey.getName()+"triggerResumed");
	}

	@Override
	public void triggersResumed(String triggerGroup) {
		// TODO Auto-generated method stub
		log.info(triggerGroup+"triggersResumed");
	}

	@Override
	public void jobAdded(JobDetail jobDetail) {
		// TODO Auto-generated method stub
		log.info(jobDetail.getKey().getName()+"jobAdded");
	}

	@Override
	public void jobDeleted(JobKey jobKey) {
		// TODO Auto-generated method stub
		log.info(jobKey.getName()+"jobDeleted");
	}

	@Override
	public void jobPaused(JobKey jobKey) {
		// TODO Auto-generated method stub
		log.info(jobKey.getName()+"jobPaused");
	}

	@Override
	public void jobsPaused(String jobGroup) {
		// TODO Auto-generated method stub
		log.info(jobGroup+"jobPaused");
	}

	@Override
	public void jobResumed(JobKey jobKey) {
		// TODO Auto-generated method stub
		log.info(jobKey.getName()+"jobResumed");
	}

	@Override
	public void jobsResumed(String jobGroup) {
		// TODO Auto-generated method stub
		log.info(jobGroup+"jobsResumed");
	}

	@Override
	public void schedulerError(String msg, SchedulerException cause) {
		// TODO Auto-generated method stub
		log.info(msg);
		log.info(cause);
	}

	@Override
	public void schedulerInStandbyMode() {
		// TODO Auto-generated method stub
		log.info("schedulerInStandbyMode");
	}

	@Override
	public void schedulerStarted() {
		// TODO Auto-generated method stub
		log.info("schedulerStarted");
	}

	@Override
	public void schedulerShutdown() {
		// TODO Auto-generated method stub
		log.info("schedulerShutdown");
	}

	@Override
	public void schedulerShuttingdown() {
		// TODO Auto-generated method stub
		log.info("schedulerShuttingdown");
	}

	@Override
	public void schedulingDataCleared() {
		// TODO Auto-generated method stub
		log.info("schedulingDataCleared");
	}

}
