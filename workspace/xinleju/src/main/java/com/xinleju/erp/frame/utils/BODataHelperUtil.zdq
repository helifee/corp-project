package com.xinleju.erp.frame.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.frame.dto.FiBillDTO;
import com.xinleju.erp.frame.models.BOFieldInfo;
import com.xinleju.erp.frame.models.helper.BODataHelper;
import com.xinleju.erp.frame.service.extend.dto.FiAggDTO;

public class BODataHelperUtil {
	public static List<BODataHelper> trans(FiBillDTO[] dtos,Long bmid, List<BOFieldInfo> fieldInfos){
		List<BODataHelper> helperList =new ArrayList<BODataHelper>();
		if(dtos == null)
			return helperList;
		for(FiBillDTO dto :dtos){
			helperList.add(new BODataHelper(dto,bmid,fieldInfos));
		}
		return helperList;
	}
	
	public static List<BODataHelper> trans(FiAggDTO[] dtos, List<BOFieldInfo> fieldInfos){
		List<BODataHelper> helperList =new ArrayList<BODataHelper>();
		if(dtos == null)
			return helperList;
		for(FiAggDTO dto :dtos){
			helperList.add(new BODataHelper(dto,fieldInfos));
		}
		return helperList;
	}
}
