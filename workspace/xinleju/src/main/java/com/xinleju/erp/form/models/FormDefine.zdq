package com.xinleju.erp.form.models;
import java.util.HashMap;
import java.util.Map;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.JoinColumn;
import javax.persistence.Lob;
import javax.persistence.ManyToOne;
import javax.persistence.Table;

import com.xinleju.erp.frame.models.BaseEntity;


/**
 * 表单定义
 * @author chenhongbin
 *
 */
@Entity
@Table(name = "EF_FORM_DEFINE")
public class FormDefine extends BaseEntity {
	
	/**
	 * 编辑状态
	 */
	 public static final Integer STATUS_EDIT	=	0;
	 
	 /**
	  * 发布状态
	  */
	 public static final Integer STATUS_PUBLISH	=	1;
	
	/**
	 * 序列化
	 */
	private static final long serialVersionUID = -4258355854208545636L;

	/**
	 * 表单名称
	 */
	private String name;
	
	/**
	 * 表单编码
	 */
	private String code;
	
	
	/**
	 * 表单分类ID
	 */
	@Column(name = "form_ct_id")
	private Long formCtId;
	
	/**
	 * 表单分类
	 */
	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name = "form_ct_id",updatable = false, insertable = false)
	private FormCt formCt;
	
	/**
	 * 表单版本
	 */
	private String formVersion;
	
	/**
     * 是否当前版本（1：为当前版本 0：等待启用）
     */
	@Column(name = "is_current", columnDefinition = "int default 0")
    private Integer isCurrent;
	
	
	/**
	 * 格式化后的HTML
	 */
	@Lob
	private String parseHtml;
	
	
	/**
	 * 原始html
	 */
	private String originalHtml;
	
	
	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public String getCode() {
		return code;
	}


	public void setCode(String code) {
		this.code = code;
	}


	public Long getFormCtId() {
		return formCtId;
	}


	public void setFormCtId(Long formCtId) {
		this.formCtId = formCtId;
	}


	public FormCt getFormCt() {
		return formCt;
	}


	public void setFormCt(FormCt formCt) {
		this.formCt = formCt;
	}


	public String getFormVersion() {
		return formVersion;
	}


	public void setFormVersion(String formVersion) {
		this.formVersion = formVersion;
	}




	public String getParseHtml() {
		return parseHtml;
	}


	public void setParseHtml(String parseHtml) {
		this.parseHtml = parseHtml;
	}
	

	public String getOriginalHtml() {
		return originalHtml;
	}


	public void setOriginalHtml(String originalHtml) {
		this.originalHtml = originalHtml;
	}


	public Integer getIsCurrent() {
		return isCurrent;
	}


	public void setIsCurrent(Integer isCurrent) {
		this.isCurrent = isCurrent;
	}
	
	public static Map<Integer,String> getStatusMap(){
		Map<Integer,String> statusMap = new HashMap<Integer,String>();
		statusMap.put(STATUS_EDIT, "编辑");
		statusMap.put(STATUS_PUBLISH, "发布");
		return statusMap;
	}
}
