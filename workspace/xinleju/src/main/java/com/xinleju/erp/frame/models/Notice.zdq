package com.xinleju.erp.frame.models;

import java.util.Date;
import java.util.HashMap;
import java.util.Map;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.JoinColumn;
import javax.persistence.Lob;
import javax.persistence.ManyToOne;
import javax.persistence.Table;

import com.xinleju.erp.base.app.models.IdEntity;

/**
 * 通知公告
 * @author chenhongbin
 *
 */
@Table(name = "SM_NOTICE")
@Entity
public class Notice extends IdEntity {
	
	/**
	 * 草稿
	 */
	public static final int STATUS_CREATE = 0;
	
	/**
	 * 审批中
	 */
	public static final int STATUS_RUNNING = 1;
	
	
	/**
	 * 已审批
	 */
	public static final int STATUS_COMPLETE = 2;
	
	/**
	 * 序列化
	 */
	private static final long serialVersionUID = 6178810893470055641L;

	/**
	 * 标题
	 */
	
	private String title;
	
	/**
	 * 发布时间
	 */
	private Date publishTime;
	
	/**
	 * 创建时间
	 */
	private Date createTime;
	
	
	/**
	 * 点击次数
	 */
	@Column(columnDefinition = "int default 0")
	private Long clickCount;
	
	
	/**
	 * 公告内容
	 */
	@Lob
	private String content;
	
	
	/**
	 * 状态
	 */
	@Column(name = "status",columnDefinition = "int default 0")
	private Integer status;
	
	/**
	 * 创建人
	 */
	private Long createUserId;
	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name = "create_user_id", updatable = false, insertable = false)
	private User createUser;

	/**
	 * 公告模板
	 */
	private Long noticeTemplateId;
	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name="notice_template_id", updatable = false, insertable = false)
	private NoticeTemplate noticeTemplate;

	public String getTitle() {
		return title;
	}


	public void setTitle(String title) {
		this.title = title;
	}


	public Date getPublishTime() {
		return publishTime;
	}


	public void setPublishTime(Date publishTime) {
		this.publishTime = publishTime;
	}


	public Date getCreateTime() {
		return createTime;
	}


	public void setCreateTime(Date createTime) {
		this.createTime = createTime;
	}


	public Long getClickCount() {
		return clickCount;
	}


	public void setClickCount(Long clickCount) {
		this.clickCount = clickCount;
	}


	public String getContent() {
		return content;
	}


	public void setContent(String content) {
		this.content = content;
	}

	public Integer getStatus() {
		return status;
	}


	public void setStatus(Integer status) {
		this.status = status;
	}


	public User getCreateUser() {
		return createUser;
	}

	public void setCreateUser(User createUser) {
		this.createUser = createUser;
	}
	

	public Long getCreateUserId() {
		return createUserId;
	}


	public void setCreateUserId(Long createUserId) {
		this.createUserId = createUserId;
	}
	

	public Long getNoticeTemplateId() {
		return noticeTemplateId;
	}


	public void setNoticeTemplateId(Long noticeTemplateId) {
		this.noticeTemplateId = noticeTemplateId;
	}


	public NoticeTemplate getNoticeTemplate() {
		return noticeTemplate;
	}


	public void setNoticeTemplate(NoticeTemplate noticeTemplate) {
		this.noticeTemplate = noticeTemplate;
	}


	public static Map<Integer,String> getStatusMap() {
		Map<Integer,String> statusMap = new HashMap<Integer,String>();
		statusMap.put(STATUS_CREATE, "草稿");
		statusMap.put(STATUS_RUNNING, "审批中");
		statusMap.put(STATUS_COMPLETE, "发布");
		return statusMap;
	}
	
}
