package com.xinleju.erp.annotation;

import static java.lang.annotation.ElementType.FIELD;
import static java.lang.annotation.RetentionPolicy.RUNTIME;

import java.lang.annotation.Retention;
import java.lang.annotation.Target;

import com.xinleju.erp.frame.enums.FiFieldTypeEnum;

@Target({FIELD})
@Retention(RUNTIME)
public @interface Voucher {
	/**
	 * 字段显示名
	 */
	String name();
	/**
	 * 是否视为键值
	 */
	boolean iskey( ) default false;
	/**
	 * 是否视为显示值
	 */
	boolean isname() default false;
	/**
	 * 是否编码字段
	 * @return
	 */
	boolean iscode() default false;
	/**
	 * 字段类型
	 * @see com.xinleju.erp.frame.enums.FiFieldTypeEnum
	 */
	FiFieldTypeEnum fieldtype() default FiFieldTypeEnum.TYPE_TEXT;
}
