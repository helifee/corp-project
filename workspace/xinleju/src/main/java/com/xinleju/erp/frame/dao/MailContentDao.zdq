package com.xinleju.erp.frame.dao;

import org.springframework.stereotype.Repository;

import com.xinleju.erp.flow.dao.impl.BaseDAO;
import com.xinleju.erp.frame.models.MailContent;

@Repository
public class MailContentDao extends BaseDAO{
	
	public MailContent findOne(Long id){
		return getDao().findFirstByHQL(MailContent.class,"from MailContent m where m.id=?", id);
	}
	
	public void save(MailContent mc){
		getDao().saveOrUpdate(mc);
	}

}
