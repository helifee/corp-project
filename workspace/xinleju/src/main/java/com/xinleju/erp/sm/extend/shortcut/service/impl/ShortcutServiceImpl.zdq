package com.xinleju.erp.sm.extend.shortcut.service.impl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Service;

import com.xinleju.erp.base.app.service.impl.BaseService;
import com.xinleju.erp.sm.extend.shortcut.models.Shortcut;
import com.xinleju.erp.sm.extend.shortcut.service.ShortcutService;

@Service
public class ShortcutServiceImpl  extends BaseService implements ShortcutService{
	
	public List<Shortcut> getShortcutListBySysCode(String sysCode){
		return getDao().findByHQL(Shortcut.class, "from Shortcut s where s.sysCode = ? and s.isDelete = 0 and s.status = 1", new Object[]{sysCode});
		
	}
	
	public Shortcut getShortcutByCode(String code){
		
		return getDao().findFirstByHQL(Shortcut.class, "from Shortcut s where s.code = ? and s.isDelete = 0 and s.status = 1", new Object[]{code});
		
		
	}

}
