package com.xinleju.erp.finance.service;

import java.util.List;

import org.springframework.stereotype.Service;

import com.xinleju.erp.base.app.service.impl.BaseService;
import com.xinleju.erp.finance.models.FiSysinfo;

@Service
public class FiSysInfoService extends BaseService{
	
	public List<FiSysinfo> getAllFiSysinfo(){
		return this.getDao().findAll(FiSysinfo.class);
	}
	
	public FiSysinfo getFiSysinfoById(Long id){
		FiSysinfo sysinfo =	this.getDao().getById(FiSysinfo.class, id);
		return sysinfo;
	}
	
	public void saveOrUpdate(FiSysinfo sysinfo){
		this.getDao().saveOrUpdate(sysinfo);
	}
	
	public void delete(Long[] ids){
		String hql = "delete FiSysinfo s where s.id = ?";
		for(Long id : ids){
			this.getDao().execute(hql, id);
		}
	}
}
