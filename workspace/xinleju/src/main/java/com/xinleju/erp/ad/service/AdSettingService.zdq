package com.xinleju.erp.ad.service;

import java.util.List;

import javax.transaction.Transactional;

import org.springframework.stereotype.Service;

import com.xinleju.erp.ad.config.AdSetting;
import com.xinleju.erp.base.app.config.App;
import com.xinleju.erp.base.app.service.ICommonService;

@Service
@Transactional
public class AdSettingService {
	public List<AdSetting> getAdSettingByextend(){
		ICommonService iCommonService=App.getBean(ICommonService.class,
				"commonService");
		List<AdSetting>  adSettings=iCommonService.findByHQL(AdSetting.class, "from AdSetting " );
		return adSettings;
	}
	
	public AdSetting getAdSettingById(Long id){
		ICommonService iCommonService=App.getBean(ICommonService.class,
				"commonService");
		AdSetting  adSetting=iCommonService.getById(AdSetting.class, id, new String[]{});
		return adSetting;
	}

}
