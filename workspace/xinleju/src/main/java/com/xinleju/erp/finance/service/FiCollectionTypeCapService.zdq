	/**
	 * 修改预算科目父id
	 * chc add 2016.6.29
	 */
	public void setParent(String oldAccountSetId,String accountSetId,String oldSysId,String sysId,String oldcompanyId,Long companyId){
		String hql="from FiCollectionTypeCap where accountSetId='"+oldAccountSetId+"' and sysId = "+oldSysId+" and companyId="+oldcompanyId;
		String hql2="from FiCollectionTypeCap where accountSetId='"+accountSetId+"' and sysId = "+sysId+" and companyId="+companyId;
		List<FiCollectionTypeCap> list = getDao().findByHQL(FiCollectionTypeCap.class, hql);
		List<FiCollectionTypeCap> list2 = getDao().findByHQL(FiCollectionTypeCap.class, hql2);
		for(FiCollectionTypeCap fc:list){
			Long pid = fc.getParentId();
			String code = fc.getAccountCapCode();
			for(FiCollectionTypeCap fc2:list2){
				String code2 = fc2.getAccountCapCode();
				if(StringUtils.isNotBlank(code) && code.equals(code2)){
					if(pid != null){
						FiCollectionTypeCap c = this.getFiCollectionTypeCapById(pid);
						if(c != null){
							String pcode = c.getAccountCapCode();
							String hql_="from FiCollectionTypeCap where accountSetId='"+accountSetId+"' and accountCapCode ='"+pcode+"' and sysId="+sysId+" and companyId="+companyId + " order by createDate desc";
							FiCollectionTypeCap fbc = getDao().findFirstByHQL(FiCollectionTypeCap.class, hql_);
							if(fbc != null){
								Long pid_ = fbc.getId();
								fc2.setParentId(pid_);
								getDao().update(fc2);
							}
						}
					}
				}
			}
		}
	}
