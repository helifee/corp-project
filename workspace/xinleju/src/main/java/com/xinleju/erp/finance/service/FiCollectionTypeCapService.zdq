	/**
	 * 根据预算编码获取一条记录
	 * @param code
	 * @param status
	 * @return
	 */
	public FiCollectionTypeCap getFiCollectionTypeCapByCode(String code,String status,Long companyId,Long accountSetId){
		String hql="from FiCollectionTypeCap where accountCapCode='"+code+"' and status='"+status+"' ";
		if(companyId != null){
			hql += "and companyId="+companyId;
		}
		if(accountSetId!=null){
			hql += "and accountSetId="+accountSetId;
		}
		FiCollectionTypeCap fbc = getDao().findFirstByHQL(FiCollectionTypeCap.class, hql);
		return fbc;
	}
	
