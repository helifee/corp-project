package com.xinleju.erp.flow.service.api.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.FieldDTO;
import com.xinleju.erp.frame.models.BizDataField;

public class FieldUtils {
	/**
     * 构建FieldDTO
     * @author hongbin
     * @param fields
     * @return
     */
    public static List<FieldDTO> buildFieldDtoList(List<BizDataField> fields) {
        List<FieldDTO> fieldDtos = new ArrayList<FieldDTO>();
        if(fields != null && !fields.isEmpty()){
        	FieldDTO dto = null;
            for(BizDataField field : fields){
                dto =  buildFieldDto(field);
                if(dto != null) {
                    fieldDtos.add(dto);
                }
            }
        }
        return fieldDtos;
    }
    
    /**
     * 构建 FieldDTO
     * @author hongbin
     * @param field
     * @return
     */
    public static FieldDTO buildFieldDto(BizDataField field) {
    	FieldDTO fieldDto = null;
        if(field != null ){
            fieldDto = new FieldDTO();
            fieldDto.setId(field.getId());
            fieldDto.setName(field.getName());
            fieldDto.setCode(field.getCode());
        }
        return fieldDto;
    }
}
