package com.xinleju.erp.lvduapi.dao;

import java.util.Date;

import org.springframework.stereotype.Repository;

import com.xinleju.erp.base.app.bean.Page;
import com.xinleju.erp.flow.dao.impl.BaseDAO;
import com.xinleju.erp.lvduapi.model.UserSyncDTO;

/**
 * @author liugang
 *
 */
@Repository
public class UserSyncDao extends BaseDAO{
	/**
	 * 根据日期获取所有 UserSync
	 * @param date
	 * @param start
	 * @param limit
	 * @return
	 */
	public Page getByDate(Date date,Integer start, Integer limit){
		String hql = "select us from UserSync us where us.date == ?";
		return getDao().findPageByHQL(UserSyncDTO.class, hql, new Object[]{date}, start, limit);
	}
	public void save(UserSyncDTO userSyncDTO){
		getDao().save(userSyncDTO);
	}
}
