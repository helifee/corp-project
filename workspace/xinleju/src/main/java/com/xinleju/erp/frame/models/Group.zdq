package com.xinleju.erp.frame.models;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.FetchType;
import javax.persistence.JoinColumn;
import javax.persistence.Lob;
import javax.persistence.ManyToOne;
import javax.persistence.Table;

@SuppressWarnings("serial")
@Entity
@Table(name="SM_group")
public class Group extends BaseEntity{
    
    private String shortName;
    private String name;
    private String code;
    // 领导岗位
    @Column(name = "group_role_id")
    private Long groupRoleId;
    
    @ManyToOne(fetch = FetchType.LAZY)
    @JoinColumn(name="group_role_id",updatable=false,insertable=false)
    private Role groupRole;
    
    // 上级领导岗位
    @Column(name = "up_grouprole_id")
    private Long upGroupRoleId;
    
    @ManyToOne(fetch = FetchType.LAZY)
    @JoinColumn(name="up_grouprole_id",updatable=false,insertable=false)
    private Role upGroupRole;
    
    /**
     * 关联的对象id(用于外部信息同步到组织机构的情况，记录次对象的id)
     */
    private Long refObjectId;
    
    @Lob
    private String note;
    
    /**
     * 关联的对象类型（1：项目，2：分期。。。。。）
     */
    private Integer refObjectType;

    public String getShortName() {
        return shortName;
    }

    public void setShortName(String shortName) {
        this.shortName = shortName;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getCode() {
        return code;
    }

    public void setCode(String code) {
        this.code = code;
    }

    public String getNote() {
        return note;
    }

    public void setNote(String note) {
        this.note = note;
    }

    public Long getGroupRoleId() {
        return groupRoleId;
    }

    public void setGroupRoleId(Long groupRoleId) {
        this.groupRoleId = groupRoleId;
    }

    public Role getGroupRole() {
        return groupRole;
    }

    public void setGroupRole(Role groupRole) {
        this.groupRole = groupRole;
    }

    public Long getUpGroupRoleId() {
        return upGroupRoleId;
    }

    public void setUpGroupRoleId(Long upGroupRoleId) {
        this.upGroupRoleId = upGroupRoleId;
    }

    public Role getUpGroupRole() {
        return upGroupRole;
    }

    public void setUpGroupRole(Role upGroupRole) {
        this.upGroupRole = upGroupRole;
    }

    public Long getRefObjectId() {
        return refObjectId;
    }

    public void setRefObjectId(Long refObjectId) {
        this.refObjectId = refObjectId;
    }

    public Integer getRefObjectType() {
        return refObjectType;
    }

    public void setRefObjectType(Integer refObjectType) {
        this.refObjectType = refObjectType;
    }
    
}
