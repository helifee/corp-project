package com.xinleju.erp.frame.dao;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.xinleju.erp.flow.dao.impl.BaseDAO;
import com.xinleju.erp.frame.models.BizDataScope;
import com.xinleju.erp.frame.models.Group;

/**
 * 业务控制点范围DAO
 * @author lixj
 *
 */
@Repository
public class BizDataScopeDao extends BaseDAO {
	/**
	 * 通过模块名获取业务控制点范围
	 * @param moduleCode
	 * @return
	 */
	public List<BizDataScope> getByModuleCode(String moduleCode){
		return getDao().findByHQL(BizDataScope.class, "from BizDataScope where moduleCode = ? order by sort",
				moduleCode);
	}
}
