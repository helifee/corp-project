package com.xinleju.erp.flow.service.api.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.CompanyDTO;
import com.xinleju.erp.frame.models.Company;

public class CompanyUtils {
	
	/**
	 * 构建公司列表
	 * @param companys
	 * @return
	 */
	public static List<CompanyDTO> buildCompanyDtoList(List<Company> companys) {
		List<CompanyDTO> companyDtos = new ArrayList<CompanyDTO>();
        if(companys != null && !companys.isEmpty()){
        	CompanyDTO dto = null;
            for(Company comp : companys){
                dto =  buildCompanyDto(comp);
                if(dto != null) {
                	companyDtos.add(dto);
                }
            }
        }
        return companyDtos;
	}

	
	/**
	 * 构建公司
	 * @param comp
	 * @return
	 */
	public static CompanyDTO buildCompanyDto(Company comp) {
		CompanyDTO dto = null;
		if(comp != null) {
			dto = new CompanyDTO();
			dto.setId(comp.getId());
			dto.setName(comp.getName());
			dto.setStatus(comp.getStatus());
			dto.setCode(comp.getCode());
		}
		return dto;
	}
}
