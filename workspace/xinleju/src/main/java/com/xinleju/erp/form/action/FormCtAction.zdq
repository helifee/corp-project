package com.xinleju.erp.form.action;

import java.util.Date;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.apache.commons.lang3.StringUtils;
import org.springframework.beans.factory.annotation.Autowired;

import com.xinleju.erp.base.app.action.BaseAction;
import com.xinleju.erp.form.models.FormCt;
import com.xinleju.erp.form.service.FormService;

/**
 * 表单目录管理
 * @author chenhongbin
 *
 */
public class FormCtAction extends BaseAction {
	
	@Autowired
	private FormService formService;
	
	private FormCt formCt;
	
	/**
	 * 表单目录树
	 */
	public void getFormCtTree() {
		String includeDisabled = getParameter("includeDisabled");
		Long parentId = getParameterLong("parentId");
		List<Map<String,Object>> result = formService.getFormCtTree(parentId, (StringUtils.isBlank(includeDisabled) || "false".equals(includeDisabled)) ? false : true);
		renderJson(result);
	}
	
	/**
	 * 表单目录编辑
	 * @return
	 */
	public String edit() {
		Long id = getParameterLong("id");
		if(id == null) {
			formCt = new FormCt();
			formCt.setStatus(FormCt.STATUS_ENABLE);
			
			Long parentId = getParameterLong("parentId");
			formCt.setParentId((parentId == null || parentId == 0L) ? null : parentId);
			if(parentId != null && parentId != 0L) {
				formCt.setParent(getCommonService().getById(FormCt.class, parentId));
			}
		}else {
			formCt = getCommonService().getById(FormCt.class, id);
		}
		request.setAttribute("statusMap", FormCt.getStatusMap());
		return "edit";
	}
	
	/**
	 * 表单目录保存
	 */
	public void save() {
		Map<String,Object> result = new HashMap<String,Object>();
		if(formCt == null) {
			result.put("success", false);
			result.put("msg", "参数错误！");
			renderJson(result);
			return;
		}
		
		if(StringUtils.isBlank(formCt.getName())) {
			result.put("success", false);
			result.put("msg", "名称不能为空！");
			renderJson(result);
			return;
		}
		
		try{
			formService.saveOrUpdate(formCt);
			result.put("success", true);
		}catch(Exception e) {
			e.printStackTrace();
			result.put("success", false);
			result.put("msg", "系统异常！");
		}
		renderJson(result);
	}

	public FormCt getFormCt() {
		return formCt;
	}

	public void setFormCt(FormCt formCt) {
		this.formCt = formCt;
	}
}
