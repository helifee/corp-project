	public void loadCollectionTypeTree() {
		Long companyId = getParameterLong("companyId");
		SyncFinaSaData syncFinaSaData = (SyncFinaSaData) App.getBean("syncFinaSaData");
		FinaQueryParams params = new FinaQueryParams();
		params.setCorpId(companyId+"");
		params.setCurrentPage(0);
		List<FinaData> fds = syncFinaSaData.getFunName(params).getResult().getItems();
		List<FunNameDTO> list = new ArrayList<FunNameDTO>();
		for(FinaData data:fds){
			FunNameDTO dto = new FunNameDTO();
			dto.setId(data.get("id")+"");
			String pid = "";
			if(!"0".equals(data.get("pid")+"")){
				pid = data.get("pid")+"";
			}
			dto.setPid(pid);
			dto.setBankCode(data.get("code")+"");
			dto.setBankName(data.get("name")+"");
			dto.setRid(data.get("rid")+"");
			list.add(dto);
		}
		JsonTreeTableTemplete jttt = new JsonTreeTableTemplete("id", "pid", FunNameDTO.class, FiCollectionTypeComboTreeExtender.class);
		JSONArray jsonTree = CommonUtil.transTree(list, jttt);
		renderJson(jsonTree.toString());
	}
	
	/**
	 * 保存或者更代收类型科目对照
	 */
	public void saveOrUpdate() {
		Map<String, Object> result = new HashMap<String, Object>();
		if (fiCollectionTypeCap.getId() != null) {
			fiCollectionTypeCap.setEditDate(new Date());
			fiCollectionTypeCap.setStatus(1);
			fiCollectionTypeCap.setEditUserId(LoginInfoUtils.getLoginInfoUserDtoId(request));
		} else {
			fiCollectionTypeCap.setCreateDate(new Date());
			fiCollectionTypeCap.setStatus(1);
			fiCollectionTypeCap.setCreateUserId(LoginInfoUtils.getLoginInfoUserDtoId(request));
		}

		try {
			fiCollectionTypeCapService.saveOrUpdate(fiCollectionTypeCap);
			result.put("success", true);
			result.put("msg", "操作成功");
			renderHtml(JsonUtils.toJSONString(result));
		} catch (Exception e) {
			result.put("success", false);
			result.put("msg", e.getMessage());
			renderHtml(JsonUtils.toJSONString(result));
		}
	}

	public void delete() {
