package com.xinleju.erp.flow.service.api.utils;

import java.util.ArrayList;
import java.util.List;

import com.xinleju.erp.flow.service.api.extend.dto.DeptDTO;
import com.xinleju.erp.frame.models.Dept;

public class DeptUtils {
	
	/**
	 * 构建部门列表
	 * @param depts
	 * @return
	 */
	public static List<DeptDTO> buildDeptDtoList(List<Dept> depts) {
		List<DeptDTO> deptDtos = new ArrayList<DeptDTO>();
        if(depts != null && !depts.isEmpty()){
        	DeptDTO dto = null;
            for(Dept comp : depts){
                dto =  buildDeptDto(comp);
                if(dto != null) {
                	deptDtos.add(dto);
                }
            }
        }
        return deptDtos;
	}

	
	/**
	 * 构建部门
	 * @param comp
	 * @return
	 */
	public static DeptDTO buildDeptDto(Dept comp) {
		DeptDTO dto = null;
		if(comp != null) {
			dto = new DeptDTO();
			dto.setId(comp.getId());
			dto.setName(comp.getName());
			dto.setShortName(comp.getShortName());
			dto.setCode(comp.getCode());
		}
		return dto;
	}

}
