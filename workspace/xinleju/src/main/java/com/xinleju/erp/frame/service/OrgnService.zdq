    /**
     * 根据ID查询用户
     * @return
     */
     public List<User> getUserById(String selectedUserIds){ 
    	 if(StringUtils.isNotBlank(selectedUserIds)) {
             String ids[] = StringUtils.split(selectedUserIds, ",");
             List<Long> idList = new ArrayList<Long>();
             for(String id : ids) {
                 if(StringUtils.isNotBlank(id)) {
                     idList.add(Long.valueOf(id));
                 }
             }
             if(!idList.isEmpty()){
               return orgnDao.getUserById(idList);
             }
         }
         return null;
     }
     
