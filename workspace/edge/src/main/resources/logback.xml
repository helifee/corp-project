<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="true" scanPeriod="30 seconds">
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 -->
    <contextName>edge_apitest</contextName>
    <property scope="context" name="CHARSET" value="utf-8" />

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>${CHARSET}</charset>
            <pattern>|%d{yyyy-MM-dd HH:mm:ss}|%d{SSS}|%level|%M|%C:%L|%thread|%msg|%ex{full}%n</pattern>
        </encoder>
    </appender>

    <!-- 自测环境的配置，全部输出到控制台 -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="com.qianmi" level="WARN" />
    <logger name="com.qianmi.edge.util.ClassLoaderUtil" level="DEBUG" />
    <logger name="org.springframework" level="WARN" />
    <logger name="com.alibaba.dubbo" level="ERROR" />
</configuration>