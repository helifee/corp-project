	public String save(String userInfo, String saveJson){
		// TODO Auto-generated method stub
	   DubboServiceResultInfo info=new DubboServiceResultInfo();
	   try {
		   Topic mqTopic=JacksonUtils.fromJson(saveJson, Topic.class);
		   Topic dbMqTopic= topicService.getByName(userInfo,mqTopic.getTopic());
		   if(dbMqTopic == null){
			   topicService.save(mqTopic);
			   info.setResult(JacksonUtils.toJson(mqTopic));
			   info.setSucess(true);
			   info.setMsg("保存对象成功!");
		   }else {
			   info.setSucess(false);
			   info.setMsg("保存对象失败!");
			   info.setExceptionMsg("主题名称重复");
		   }

		} catch (Exception e) {
		 log.error("保存对象失败!"+e.getMessage());
		 info.setSucess(false);
		 info.setMsg("保存对象失败!");
		 info.setExceptionMsg(e.getMessage());
		}
	   return JacksonUtils.toJson(info);
	}

