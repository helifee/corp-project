package com.xinleju.cloud.oa.content.service.impl;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.xinleju.platform.base.service.impl.BaseServiceImpl;
import com.xinleju.cloud.oa.content.dao.ContentAuthorDao;
import com.xinleju.cloud.oa.content.entity.ContentAuthor;
import com.xinleju.cloud.oa.content.entity.ContentChild;
import com.xinleju.cloud.oa.content.service.ContentAuthorService;

/**
 * @author admin
 * 
 * 
 */

@Service
public class ContentAuthorServiceImpl extends  BaseServiceImpl<String,ContentAuthor> implements ContentAuthorService{
	

	@Autowired
	private ContentAuthorDao contentAuthorDao;

	@Override
	public int deleteContentAuthorByTypeId(String typeId) {
		// TODO Auto-generated method stub
		// TODO Auto-generated method stub
		int result = 0;
		Map<String, Object> map= new HashMap<String, Object>();
		map.put("typeId", typeId);
		List<ContentAuthor> contentAuthorList = contentAuthorDao.queryList(map);
		if(contentAuthorList.size() >0){
			List<String> list = new ArrayList<String>();
			for (ContentAuthor contentAuthor : contentAuthorList) {
				list.add(contentAuthor.getId());
			}
			result = contentAuthorDao.deleteAllObjectByIds(list);
		}
		return result;
	}
	

}
