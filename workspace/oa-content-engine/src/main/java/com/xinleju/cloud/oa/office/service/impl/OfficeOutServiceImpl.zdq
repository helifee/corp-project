package com.xinleju.cloud.oa.office.service.impl;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.xinleju.platform.base.service.impl.BaseServiceImpl;
import com.xinleju.platform.base.utils.Page;
import com.xinleju.cloud.oa.office.dao.OfficeOutDao;
import com.xinleju.cloud.oa.office.entity.OfficeOut;
import com.xinleju.cloud.oa.office.service.OfficeOutService;

/**
 * @author admin
 * 
 * 
 */

@Service
public class OfficeOutServiceImpl extends  BaseServiceImpl<String,OfficeOut> implements OfficeOutService{
	

	@Autowired
	private OfficeOutDao officeOutDao;

	/* (non-Javadoc)
	 * @see com.xinleju.cloud.oa.office.service.OfficeOutService#getOfficeOutpage(java.util.Map)
	 */
	@Override
	public Page getOfficeOutpage(Map map) throws Exception {
		Page p=new Page();
		List<Map<String,Object>> list=	officeOutDao.getOfficeOutpage(map);
		Integer total=officeOutDao.getOfficeOutpageCount(map);
		p.setLimit((Integer) map.get("limit"));
		p.setList(list);
		p.setStart((Integer) map.get("start"));
		p.setTotal(total);
		return p;
	}
	

}
