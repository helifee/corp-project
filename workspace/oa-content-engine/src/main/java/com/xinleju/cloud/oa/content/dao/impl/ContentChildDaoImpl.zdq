package com.xinleju.cloud.oa.content.dao.impl;


import java.util.List;

import org.springframework.stereotype.Repository;

import com.xinleju.platform.base.dao.impl.BaseDaoImpl;
import com.xinleju.cloud.oa.content.dao.ContentChildDao;
import com.xinleju.cloud.oa.content.entity.ContentChild;
import com.xinleju.cloud.oa.content.dto.ContentChildTreeData;

/**
 * @author admin
 *
 *
 */
@Repository
public class ContentChildDaoImpl extends BaseDaoImpl<String,ContentChild> implements ContentChildDao{

	public ContentChildDaoImpl() {
		super();
	}

	@Override
	public List<ContentChildTreeData> getContentList(String program) {
		return  getSqlSession().selectList("com.xinleju.cloud.oa.content.entity.ContentChild.queryContentTypeChildList",program);
	}

	@Override
	public List<ContentChildTreeData> getContentChildTreeById(String program) {
		List<ContentChildTreeData>  list = getSqlSession().selectList("com.xinleju.cloud.oa.content.entity.ContentChild.queryContentTypeChildByIdList",program);
		return list;
	}



}
