	 * .
	 */
	@Test
	public final void testSavePerformance() {
		BookDao bookDao = (BookDao) factory.getBean("bookDao");

		long beforetime = System.currentTimeMillis();
		System.out.println("test  max");

		Book book = new Book();
		for (int i = 0; i < 100; i++) {
			// book.setId(2);
			book.setIsbm("1900-001");
			book.setName("bookname01");
			book.setAuthor("usr01");
			
			bookDao.save(book);
		}

		System.out.println("Insert sql execute completed! "
				+ String.valueOf(System.currentTimeMillis() - beforetime)
				+ " Millisecond");
	}

