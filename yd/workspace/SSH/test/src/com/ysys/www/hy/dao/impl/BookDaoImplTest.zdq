	 BookDao bookDaotest2 = (BookDao) factory.getBean("bookDao");
	 Long maxid = bookDaotest2.findMaxId();
	 System.out.println(maxid);
			
	 Book book2 = bookDaotest.findById(maxid);
	
	 bookDao.delete(book);
	 comparePersons(book, book2);
	
	 }
	/**
