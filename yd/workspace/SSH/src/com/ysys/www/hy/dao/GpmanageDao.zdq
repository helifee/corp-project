package com.ysys.www.hy.dao;

import java.util.Date;
import java.util.List;

import com.ysys.www.hy.dao.condition.TabZbcyyl;
import com.ysys.www.hy.dao.condition.TabZbyl;
import com.ysys.www.hy.dao.condition.Tempinfo;
import com.ysys.www.hy.dao.condition.Tprjmgrs;

/**
 * 组管理（数据库访问）
 * @author wangqingzhu
 * @version 1.00 2009/09/23
 */
public interface GpmanageDao {

	/**
	 * 取得组别一览和组成员一览相关信息
	 * 
	 * @param jlzid 登录者id
	 * @param administratorid 系统管理员的职务id
	 * @param shuxingflg ture：取的登陆者建的组，公开的组，组内公开的组；false：自己建的组
	 * @return List 组别一览和组成员一览相关信息
	 */
	public abstract List getzbyl(String jlzid, String administratorid,
			Boolean shuxingflg);

	/**
	 * 项目组的取得
	 * 
	 * @param jlzid 登录者id
	 * @param nownyr 当前时间（年月日）
	 * @param administratorid 系统管理员的职务id
	 * @return List 项目组
	 */
	public abstract List getpjzu(String jlzid, Date nownyr,
			String administratorid);

	/**
	 * 部分全员信息的取得
	 * 
	 * @return List 部分全员信息
	 */
	public abstract List<Tempinfo> getqunyuan();

	/**
	 * 通过组别id取得组别一览中的数据
	 * 
	 * @param zbid 组别id
	 * @return TabZbyl 组别一览中查询的数据
	 */
	public abstract TabZbyl findById(String zbid);

	/**
	 * 通过组别id取得组别成员一览中的数据
	 * 
	 * @param zbid 组别id
	 * @return List 组别成员一览中查询的数据
	 */
	public abstract List findZcyById(String zbid);

	/**
	 * 通过人员id取得人员信息中人员的名字
	 * 
	 * @param empid 人员id
	 * @return String 成员的名字
	 */
	public abstract String getname(String empid);

	/**
	 * 删除组别一览中的数据
	 * 
	 * @param persistentInstance 组别一览中数据对象
	 */
	public abstract void deleteZbyl(TabZbyl persistentInstance);

	/**
	 * 删除组别成员一览中的数据
	 * 
	 * @param persistentInstance 组别成员一览中数据对象
	 */
	public abstract void deleteZbcyyl(List tabzbcyyl);

	/**
	 * 将数据存放到组别一览中
	 * 
	 * @param zbyl 组别一览数据对象
	 */
	public abstract void saveZbylData(TabZbyl zbyl);

	/**
	 * 将数据存放到组别成员一览中
	 * 
	 * @param zbcyyl 组别成员一览数据对象
	 */
	public abstract void saveZbcyylData(TabZbcyyl zbcyyl);

	/**
	 * 从组别一览中取得最大组别ID
	 * 
	 * @return Integer 最大的组别ID
	 */
	public abstract Integer getMaxzbid();

	/**
	 * 取得组别一览中的组信息
	 * 
	 * @return List<TabZbyl> 组别一览的信息
	 */
	public abstract List<TabZbyl> getzbname();

	/**
	 * 取得项目组的组信息
	 * 
	 * @return List<Tprjmgrs> 项目组的信息
	 */
	public abstract List<Tprjmgrs> getrjname();

}