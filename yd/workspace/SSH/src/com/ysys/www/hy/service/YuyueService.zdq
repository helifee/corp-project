package com.ysys.www.hy.service;

import java.util.List;

import com.ysys.www.hy.dao.condition.TabHysyl;
import com.ysys.www.hy.service.condition.Pinfo;
import com.ysys.www.hy.service.condition.YuyueInfo;

/**
 * 预约会议、修改会议、删除会议（业务逻辑处理）
 * 
 * @author zhangdaoqiang
 * @version 1.00 2009/08/28
 */
public interface YuyueService {
	
	/**
	 * 保存预约数据.
	 * 
	 * @param  yuyueinfo: 指定所要保存的预约信息.
	 * @return int 指定保存预约处理后的返回标志.
	 */
	public int saveYuyueData(YuyueInfo yuyueinfo);

	/**
	 * 取得所有会议室
	 * 
	 * @return List<TabHysyl>返回所有的会议室
	 */
	public List<TabHysyl> getHysAll();

	/**
	 * 根据条件检索DB的预约信息
	 * 
	 * @param hys 会议室ID
	 * @param startdate 开始日期；
	 * @param start_hour 开始小时
	 * @param start_minute 开始分钟
	 * @return YuyueInfo
	 */
	public YuyueInfo getYuyueInfo(String startdate, String hys,
			String start_hour, String start_minute);

	/**
	 * 修改预约信息
	 * 
	 * @param yuyueinfo: 预约信息
	 * @return int  返回保存后的处理标志
	 */
	public int modifyYuyueData(YuyueInfo yuyueinfo);

	/**
	 * 删除预约信息.
	 * 
	 * @param yuyueinfo 所删除的预约信息
	 * @return int 删除信息的返回标志
	 */
	public int deleteYuyueData(YuyueInfo yuyueinfo);
	
	/**
	 * 取得参加人String list
	 * 
	 * @param yuyueinfo 预约信息
	 * @return List<String>
	 */
	public List<String> getCjr(YuyueInfo yuyueinfo);
	
	/**
	 * 根据页面预约信息算出Pinfo
	 * 
	 * @param yuyueinfo：预约信息
	 * @return List<Pinfo>
	 */
	public List<Pinfo> getPinfo(YuyueInfo yuyueinfo);
	
	/**
	 * 填写会议报告
	 * 
	 * @param yuyueinfo 预约信息
	 * @param yuyueinfo_old 要修改的预约信息
	 * @return int 返回修改标志
	 */
	public int writeBg(YuyueInfo yuyueinfo, YuyueInfo yuyueinfo_old);
}
