package com.parameter;
import com.opensymphony.xwork2.ActionContext;
import java.util.Map;

public class ParaManager {
	
	public Map session ;
	public String sessionkey;
	
	/**
	 * １つのsessionの空間を創建します
	 * @param pagename session空間名
	 */
	public ParaManager(String pagename){
		sessionkey=pagename;
		this.session = ActionContext.getContext().getSession();
		
	}
	
	/**
	 * session空間を取ります
	 * @return
	 */
	public Object getParameter(){
		return (Object)session.get(sessionkey);
	}
	
	/**
	 *対象をsession空間に預け入れます
	 * @param Para 預け入れる対象
	 */
	
	public void saveParameter(Object Para){
		session.put(sessionkey,Para);
	}
	
	/**
	 * session空間を削除します
	 */
	public void delParameter(){
		
		session.remove(sessionkey);
	}
	
	/**
	 * session空間がすでに存在するかどうかを判断します
	 * @return
	 */
	public boolean existPara(){
		return session.containsKey(sessionkey);
	}
}
