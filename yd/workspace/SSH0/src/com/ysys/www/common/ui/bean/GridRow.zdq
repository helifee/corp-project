package com.ysys.www.common.ui.bean;

import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWALIGN;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWBGCOLOR;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWCHECKRADIO;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWHIGHT;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWNO;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWNOWRAP;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWONCLICK;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWSTYLE;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWVALIGN;

import java.util.ArrayList;
import java.util.List;

public class GridRow {

	// 行首有无checkbox或radio
	private String checkRadio;

	// 行高
	private String hight;

	// 行的ID
	private String id;

	// 行水平对齐
	private String align;

	// 行垂直对齐
	private String valign;

	// 行不换行
	private boolean nowrap;

	// 行背景色
	private String bgcolor;

	// 点击行触发的事件
	private String onclick;

	// 表头的样式
	private String style;

	// 每一单元格的内容
	private List<GridTd> gridTd;

	public GridRow() {

		GridTd ggridTd = new GridTd();
		this.gridTd = new ArrayList<GridTd>();

		for (int i = 0; i < DEFAULTGRIDROWNO; i++) {
			this.gridTd.add(ggridTd);
		}
		setDefaultGridRow();
		this.hight=DEFAULTGRIDROWHIGHT;
		this.checkRadio=DEFAULTGRIDROWCHECKRADIO;

	}

	public GridRow(List<GridTd> gridTd) {

		this(gridTd, DEFAULTGRIDROWHIGHT);

	}

	public GridRow(List<GridTd> gridTd, String hight) {

		this(gridTd, hight, DEFAULTGRIDROWCHECKRADIO);

	}

	public GridRow(List<GridTd> gridTd, String hight,
			String checkRadio) {

		this.checkRadio = checkRadio;
		this.hight = hight;
		this.gridTd = gridTd;
		setDefaultGridRow();

	}

	public void setDefaultGridRow(){
		this.id = null;
		this.align = DEFAULTGRIDROWALIGN;
		this.valign = DEFAULTGRIDROWVALIGN;
		this.nowrap = DEFAULTGRIDROWNOWRAP;
		this.bgcolor = DEFAULTGRIDROWBGCOLOR;
		this.onclick = DEFAULTGRIDROWONCLICK;
		this.style = DEFAULTGRIDROWSTYLE;
		
	}
	
	/**
	 * @return the checkRadio
	 */
	public String getCheckRadio() {
		return checkRadio;
	}

	/**
	 * @param checkRadio
	 *            the checkRadio to set
	 */
	public void setCheckRadio(String checkRadio) {
		this.checkRadio = checkRadio;
	}

	/**
	 * @return the hight
	 */
	public String getHight() {
		return hight;
	}

	/**
	 * @param hight
	 *            the hight to set
	 */
	public void setHight(String hight) {
		this.hight = hight;
	}

	/**
	 * @return the id
	 */
	public String getId() {
		return id;
	}

	/**
	 * @param id
	 *            the id to set
	 */
	public void setId(String id) {
		this.id = id;
	}

	/**
	 * @return the align
	 */
	public String getAlign() {
		return align;
	}

	/**
	 * @param align
	 *            the align to set
	 */
	public void setAlign(String align) {
		this.align = align;
	}

	/**
	 * @return the valign
	 */
	public String getValign() {
		return valign;
	}

	/**
	 * @param valign
	 *            the valign to set
	 */
	public void setValign(String valign) {
		this.valign = valign;
	}

	/**
	 * @return the nowrap
	 */
	public boolean isNowrap() {
		return nowrap;
	}

	/**
	 * @param nowrap
	 *            the nowrap to set
	 */
	public void setNowrap(boolean nowrap) {
		this.nowrap = nowrap;
	}

	/**
	 * @return the bgcolor
	 */
	public String getBgcolor() {
		return bgcolor;
	}

	/**
	 * @param bgcolor
	 *            the bgcolor to set
	 */
	public void setBgcolor(String bgcolor) {
		this.bgcolor = bgcolor;
	}

	/**
	 * @return the onclick
	 */
	public String getOnclick() {
		return onclick;
	}

	/**
	 * @param onclick
	 *            the onclick to set
	 */
	public void setOnclick(String onclick) {
		this.onclick = onclick;
	}

	/**
	 * @return the style
	 */
	public String getStyle() {
		return style;
	}

	/**
	 * @param style
	 *            the style to set
	 */
	public void setStyle(String style) {
		this.style = style;
	}

	/**
	 * @return the gridTd
	 */
	public List<GridTd> getGridTd() {
		return gridTd;
	}

	/**
	 * @param gridTd
	 *            the gridTd to set
	 */
	public void setGridTd(List<GridTd> gridTd) {
		this.gridTd = gridTd;
	}

}
