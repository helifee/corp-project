package com.ysys.www.common.ui.bean;

import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDALIGN;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDBGCOLOR;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDBORDER;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDBORDERCOLOR;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDCELLPADDING;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDCELLSPACING;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDCOLNO;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDHEIGHT;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDID;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDROWNO;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDSTYLE;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTGRIDWIDTH;
import static com.ysys.www.common.ui.bean.GridConstants.DEFAULTHEADHIGHT;
import static com.ysys.www.common.ui.bean.GridConstants.GRIDROWCHECKBOX;
import static com.ysys.www.common.ui.bean.GridConstants.GRIDROWRADIO;

import java.util.ArrayList;
import java.util.List;

public class Grid {

	// 表格ID
	private String id;

	// 表头
	private List<GridHeadCol> head;

	// 表内容及表内样式
	private List<GridRow> body;

	// 表格样式
	private String style;

	// 表格宽度
	private String width;

	// 表格高度
	private String height;

	// 表格边框
	private int border;

	// 表格填充（像素）
	private int cellpadding;

	// 表格间距（像素）
	private int cellspacing;

	// 表格对齐属性
	private String align;

	// 边框颜色
	private String bordercolor;

	// 表格背景颜色
	private String bgcolor;

	// 是否有全选的CheckBox
	private String checkAll;

	// 表头高度
	private String headHight;
	
	/**
	 * 根据head和body生成Grid(表)，是推荐使用生成Grid(表)的构造方法，将采用默认的样式
	 * 是否有checkall的选项将根据body中第一行的是否有check自动设置。 Grid生成后仍可通过set方法设置样式属性。
	 * 
	 * @param head
	 *            表头
	 * @param body
	 *            表内容
	 */
	public Grid(List<GridHeadCol> head, List<GridRow> body) {

		this.head = head;
		this.body = body;
		
		setDefaultGrid();
		
	}


	/**
	 * 生成一个空的Grid(表)，生成空表后仍旧可以通过set方法重新设置数据，将采用默认的样式
	 * 空表的行列数与DEFAULTGRIDCOLNO.DEFAULTGRIDROWNO
	 * 及GridConstants.DEFAULTGRIDCOLNO有关
	 */

	public Grid() {

		GridHeadCol gridHeadCol = new GridHeadCol();
		this.head = new ArrayList<GridHeadCol>();
		for (int i = 0; i < DEFAULTGRIDCOLNO; i++) {
			this.head.add(gridHeadCol);
		}

		GridRow gridRow = new GridRow();
		this.body = new ArrayList<GridRow>();
		for (int i = 0; i < DEFAULTGRIDROWNO; i++) {
			this.body.add(gridRow);
		}

		setDefaultGrid();

	}

	/**
	 * 生成Grid(表)的构造方法，不建议使用
	 * 
	 * @param id
	 * @param head
	 * @param body
	 * @param style
	 * @param width
	 * @param height
	 * @param border
	 * @param cellpadding
	 * @param cellspacing
	 * @param align
	 * @param bordercolor
	 * @param bgcolor
	 * @param checkAll
	 * @param headHight
	 */
	@Deprecated
	public Grid(String id, List<GridHeadCol> head, List<GridRow> body,
			String style, String width, String height, int border,
			int cellpadding, int cellspacing, String align, String bordercolor,
			String bgcolor ,String checkAll, String headHight) {

		this.id = id;
		this.head = head;
		this.body = body;
		this.style = style;
		this.width = width;
		this.height = height;
		this.border = border;
		this.cellpadding = cellpadding;
		this.cellspacing = cellspacing;
		this.align = align;
		this.bordercolor = bordercolor;
		this.bgcolor = bgcolor;
		this.checkAll = checkAll;
		this.headHight = headHight;

	}
	
	public void setDefaultGrid(){
		
		this.id = DEFAULTGRIDID;
		this.style = DEFAULTGRIDSTYLE;
		this.width = DEFAULTGRIDWIDTH;
		this.height = DEFAULTGRIDHEIGHT;
		this.border = DEFAULTGRIDBORDER;
		this.cellpadding = DEFAULTGRIDCELLPADDING;
		this.cellspacing = DEFAULTGRIDCELLSPACING;
		this.align = DEFAULTGRIDALIGN;
		this.bordercolor = DEFAULTGRIDBORDERCOLOR;
		this.bgcolor = DEFAULTGRIDBGCOLOR;
		this.checkAll = "";
		if (null != body) {
			GridRow gridRow = body.get(0);
			if (null != gridRow) {
				if (gridRow.getCheckRadio() == GRIDROWCHECKBOX) {
					this.checkAll = GRIDROWCHECKBOX;
				}else if (gridRow.getCheckRadio() == GRIDROWRADIO){
					this.checkAll = GRIDROWRADIO;
				}
			}
		}
		this.headHight = DEFAULTHEADHIGHT;
		
	}

	/**
	 * @return the id
	 */
	public String getId() {
		return id;
	}

	/**
	 * @param id
	 *            the id to set
	 */
	public void setId(String id) {
		this.id = id;
	}

	/**
	 * @return the head
	 */
	public List<GridHeadCol> getHead() {
		return head;
	}

	/**
	 * @param head
	 *            the head to set
	 */
	public void setHead(List<GridHeadCol> head) {
		this.head = head;
	}

	/**
	 * @return the body
	 */
	public List<GridRow> getBody() {
		return body;
	}

	/**
	 * @param body
	 *            the body to set
	 */
	public void setBody(List<GridRow> body) {
		this.body = body;
	}

	/**
	 * @return the style
	 */
	public String getStyle() {
		return style;
	}

	/**
	 * @param style
	 *            the style to set
	 */
	public void setStyle(String style) {
		this.style = style;
	}

	/**
	 * @return the width
	 */
	public String getWidth() {
		return width;
	}

	/**
	 * @param width
	 *            the width to set
	 */
	public void setWidth(String width) {
		this.width = width;
	}

	/**
	 * @return the height
	 */
	public String getHeight() {
		return height;
	}

	/**
	 * @param height
	 *            the height to set
	 */
	public void setHeight(String height) {
		this.height = height;
	}

	/**
	 * @return the border
	 */
	public int getBorder() {
		return border;
	}

	/**
	 * @param border
	 *            the border to set
	 */
	public void setBorder(int border) {
		this.border = border;
	}

	/**
	 * @return the cellpadding
	 */
	public int getCellpadding() {
		return cellpadding;
	}

	/**
	 * @param cellpadding
	 *            the cellpadding to set
	 */
	public void setCellpadding(int cellpadding) {
		this.cellpadding = cellpadding;
	}

	/**
	 * @return the cellspacing
	 */
	public int getCellspacing() {
		return cellspacing;
	}

	/**
	 * @param cellspacing
	 *            the cellspacing to set
	 */
	public void setCellspacing(int cellspacing) {
		this.cellspacing = cellspacing;
	}

	/**
	 * @return the align
	 */
	public String getAlign() {
		return align;
	}

	/**
	 * @param align
	 *            the align to set
	 */
	public void setAlign(String align) {
		this.align = align;
	}

	/**
	 * @return the bordercolor
	 */
	public String getBordercolor() {
		return bordercolor;
	}

	/**
	 * @param bordercolor
	 *            the bordercolor to set
	 */
	public void setBordercolor(String bordercolor) {
		this.bordercolor = bordercolor;
	}

	/**
	 * @return the bgcolor
	 */
	public String getBgcolor() {
		return bgcolor;
	}

	/**
	 * @param bgcolor
	 *            the bgcolor to set
	 */
	public void setBgcolor(String bgcolor) {
		this.bgcolor = bgcolor;
	}

	/**
	 * @return the checkAll
	 */
	public String getCheckAll() {
		return checkAll;
	}


	/**
	 * @param checkAll the checkAll to set
	 */
	public void setCheckAll(String checkAll) {
		this.checkAll = checkAll;
	}


	/**
	 * @return the headHight
	 */
	public String getHeadHight() {
		return headHight;
	}

	/**
	 * @param headHight
	 *            the headHight to set
	 */
	public void setHeadHight(String headHight) {
		this.headHight = headHight;
	}

}
