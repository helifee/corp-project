<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="bookInfo.bookName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"教材名称"})}</message>
		</field-validator>
	</field>
	
	<field name="bookInfo.bookName">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">100</param>
			<message>${getText("yds.com.warning.0007","",{"教材名称", maxLength})}</message>
		</field-validator>
	</field>
		
	<field name="bookInfo.bookAbstract">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">400</param>
			<message>${getText("yds.com.warning.0007","",{"概述", maxLength})}</message>
		</field-validator>
	</field>
	
	<field name="bookInfo.approverUserId">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"审批者ID"})}</message>
		</field-validator>
	</field>
	<field name="bookInfo.approverUserId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">6</param>
			<message>${getText("yds.com.warning.0011","",{"审批者ID", maxLength})}</message>
		</field-validator>
	</field>
</validators>