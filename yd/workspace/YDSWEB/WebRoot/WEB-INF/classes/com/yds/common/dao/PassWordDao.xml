<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTDSQLMap2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="PassWordDao">
	<typeAlias alias="passWord" type="com.yds.common.bean.PassWord"/>
	
	<!-- 修改密码信息 --> 
    <update id="updatePwd" parameterClass="passWord">
		UPDATE COM_USER 
		   SET PASSWORD     = #newPW#,
		       UPDATE_TIME  = NOW()
		 WHERE USER_ID      = #userId#
	</update>
	
	<!-- 设置旧DB密码 --> 
    <update id="updatePwdOld" parameterClass="passWord">
		UPDATE TEMPINFO 
		   SET EMP_PASSWD   = #newPW#
		 WHERE EMP_ID       = #userId#
	</update>	
	
</sqlMap>