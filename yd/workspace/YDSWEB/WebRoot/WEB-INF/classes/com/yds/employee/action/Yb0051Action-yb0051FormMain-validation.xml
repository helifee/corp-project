<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="empOrgInfo.orgNm">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">30</param>
			<message>${getText("yds.com.warning.0011","",{"部门名称","30"})}</message>
		</field-validator>
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"部门名称"})}</message>
		</field-validator>
	</field>

	<field name="empOrgInfo.orgSnm">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">15</param>
			<message>${getText("yds.com.warning.0011","",{"部门略称","15"})}</message>
		</field-validator>
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"部门略称"})}</message>
		</field-validator>
	</field>
	<field name="empOrgInfo.orgDesc">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">100</param>
			<message>${getText("yds.com.warning.0011","",{"部门描述","100"})}</message>
		</field-validator>
		
	</field>
	
	<field name="empInfo.empId">
		
		<field-validator type="stringlength" >
			<param name="minLength">6</param>
			<param name="maxLength">6</param>
			<message>${getText("yds.com.warning.0003","",{"部门主管ID","6"})}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[0-9]{0,6}$</param>
			<message>${getText("yds.com.warning.0002","",{"部门主管ID"})}</message>
		</field-validator>
	</field>
	



</validators>