<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTDSQLMap2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="CommonbooksortDao">
	<typeAlias alias="Commonbooksort" type="com.yds.library.common.bean.Commonbooksort"/>

	<!-- 查询所有种类 --> 
	<select id="getbookclassallInfo" parameterClass="String" resultClass="Commonbooksort"> 
		select CLASS_ID classid,
		CLASS_NAME  classname
		from ydb_class_info 
		ORDER BY CLASS_ID
	</select>
		<!-- 查询条件种类 --> 
	<select id="getbookclassInfo" parameterClass="String" resultClass="Commonbooksort"> 
		select CLASS_ID classid,
		CLASS_NAME  classname
		from ydb_class_info 
		where  
        CLASS_ID = #classid#  
		ORDER BY CLASS_ID
	</select>
	
	
</sqlMap>  
