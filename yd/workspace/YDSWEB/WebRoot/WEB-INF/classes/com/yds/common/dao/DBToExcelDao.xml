<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTDSQLMap2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="DBToExcelDao">
	<!-- 表的数据取得 --> 
	<select id="getTableData" parameterClass="String" resultClass="java.util.HashMap" remapResults="true">
		SELECT * FROM $tableName$;
	</select>
	<!-- 表的列名取得 --> 
	<select id="getTableColumn" parameterClass="java.util.HashMap" resultClass="String">
	    SELECT column_name
		FROM information_schema.columns 
		WHERE table_name = #tableName#
		  AND table_schema = #tableSchema#;
	</select>
	
</sqlMap>  
