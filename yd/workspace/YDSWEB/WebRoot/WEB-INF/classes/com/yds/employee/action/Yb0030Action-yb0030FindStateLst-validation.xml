<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="empId">
		<field-validator type="requiredstring" short-circuit="true">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"员工ID"})}</message>
		</field-validator>
		<field-validator type="stringlength" >
			<param name="minLength">6</param>
			<param name="maxLength">6</param>
			<message>${getText("yds.com.warning.0003","",{"员工ID","6"})}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[0-9]{0,6}$</param>
			<message>${getText("yds.com.warning.0002","",{"员工ID"})}</message>
		</field-validator>
	</field>
	<field name="empNm">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">30</param>
			<message>${getText("yds.com.warning.0011","",{"员工姓名","30"})}</message>
		</field-validator>
	</field>
</validators>