<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="passWord.oldPW">
		<field-validator type="requiredstring">
			<message>${getText("yds.com.warning.0001","",{"旧密码"})}</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">1</param>
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0013","",{"旧密码",minLength,maxLength})}</message>
		</field-validator>
	</field>
	<field name="passWord.newPW">
		<field-validator type="requiredstring">
			<message>${getText("yds.com.warning.0001","",{"新密码"})}</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">7</param>
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0013","",{"新密码",minLength,maxLength})}</message>
		</field-validator>
	</field>
	<field name="passWord.reNewPW">
		<field-validator type="requiredstring">
			<message>${getText("yds.com.warning.0001","",{"确认密码"})}</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">4</param>
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0013","",{"确认密码",minLength,maxLength})}</message>
		</field-validator>
	</field>  	
</validators>
