<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<!-- 活动桌面相关配置 -->
	<package name="gadget" extends="struts-base" namespace="/gadget">
		
		<!-- 活动桌面日历 START -->
		<action name="findFestvalData" method="execute" class="calendarGadgetAction">
			<result name="success" type="str">strFestval</result>
		</action>
		<!-- 活动桌面日历 END -->
	
		<!-- 组件一览 START -->
		<action name="findGadgetList" method="findGadgetInfoLst" class="manageGadgetAction">
			<result name="success" type="str">strJson</result>
		</action>
		<action name="addGadget" method="addGadget" class="manageGadgetAction">
			<result name="success" type="str">strJson</result>
		</action>
		<action name="initManageGadget" method="initManageGadget" class="manageGadgetAction">
			<result name="success">ManageGadget.jsp</result>
		</action>
		<!-- 组件一览 END -->
	
		<!-- 个人活动桌面 START -->
		<action name="initActiveDesk" method="findActiveDeskInfoLst" class="activeDeskAction">
			<result name="success">ActiveDesk.jsp</result>
		</action>

		<action name="updatePersonSetting" method="updateDeskInfo" class="activeDeskAction">
			<result name="success" type="str">strJson</result>
		</action>
		
		<action name="changeStatus" method="updateFoldStatus" class="activeDeskAction">
			<result name="success" type="str">strJson</result>
		</action>
		
		<action name="delGadget" method="delGadget" class="activeDeskAction">
			<result name="success" type="str">strJson</result>
		</action>
		
		<action name="resetGadget" method="resetGadget" class="activeDeskAction">
			<result name="success" type="redirectAction">initActiveDesk</result>
		</action>
		<!-- 个人活动桌面 END -->
		
		<!-- 天气预报 -->
		<action name="getWeather" method="findWeather" class="weatherAction">
			<result name="success">weatherGadget.jsp</result>
		</action>

		<!-- 查电话 -->
		<action name="getphone" method="execute" class="searchPhoneNOAction">
			<result name="success" type="str">phone</result>
		</action>

		<!-- 查座位ID -->
		<action name="getseat" method="executeSeat" class="searchPhoneNOAction">
			<result name="success" type="str">seatId</result>
		</action>


		<!-- RSS读取 -->
		<action name="getRSS" method="readRSS" class="readRSSAction">
			<result name="success">RSSGadget.jsp</result>
		</action>
				
	
		<!-- 公告新闻 START -->
		<action name="newsGadget" method="findNewsList" class="newsGadgetAction">
			<result name="success">NewsGadget.jsp</result>
		</action>
		<!-- 公告新闻 END -->
		
		<!-- 审批办公桌 START -->
		<action name="aprvlInfo" method="findAprvlInfoList" class="aprvlGadgetAction">
			<result name="success">AprvlGadget.jsp</result>
		</action>
		<!-- 审批办公桌 END -->
		
		<!-- 广告 START -->
		<action name="advSlide" method="findSlideList" class="advGadgetAction">
			<result name="success">AdvGadget.jsp</result>
		</action>
		<!-- 广告 END -->
		
		<!-- 社内学堂 START -->
		<action name="eduGadget" method="findNewsList" class="eduGadgetAction">
			<result name="success">eduGadget.jsp</result>			
		</action>
		<!-- 社内学堂 END -->
		
		<!-- 工作小秘书 START -->
		<action name="assistant" method="findWorkSecretaryInfoList" class="assistantAction">
			<result name="success">assistant.jsp</result>
		</action>
		<!-- 工作小秘书 END -->
				
	</package>
</struts>

	