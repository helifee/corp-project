<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="courseInfo.courseName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"课程名称"})}</message>
		</field-validator>
	</field>
	<field name="courseInfo.courseName">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">100</param>
			<message>${getText("yds.com.warning.0007","",{"课程名称","100"})}</message>
		</field-validator>
	</field>
	<field name="courseInfo.courseAbstract">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">400</param>
			<message>${getText("yds.com.warning.0007","",{"课程简介","400"})}</message>
		</field-validator>
	</field>
	<field name="approverInfo.userId">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"审批者ID"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">6</param>
			<param name="maxLength">6</param>
			<message>${getText("yds.com.warning.0003","",{"审批者ID","6"})}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[0-9]{6}</param>
			<message>${getText("yds.com.warning.0002","",{"审批者ID"})}</message>
		</field-validator>
	</field>
</validators>