<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="testPaperInfo.paperTitle">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"试卷标题"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0007","",{"试卷标题","50"})}</message>
		</field-validator>
	</field>
	<field name="testPaperInfo.paperComment">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"试卷说明"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0007","",{"试卷说明","200"})}</message>
		</field-validator>
	</field>
	<field name="testPaperInfo.paperDescription">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"试卷概要"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0007","",{"试卷概要","200"})}</message>
		</field-validator>
	</field>
	<field name="testPaperInfo.paperTime">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"答题时间"})}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[1-9][0-9]*$</param>
			<message>${getText("yds.com.warning.0002","",{"答题时间"})}</message>
		</field-validator>
	</field>
</validators>