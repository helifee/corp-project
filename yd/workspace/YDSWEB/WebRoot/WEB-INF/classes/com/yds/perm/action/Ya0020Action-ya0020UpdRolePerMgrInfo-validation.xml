<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="perRoleInfo.roleId">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"角色ID"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">3</param>
			<param name="maxLength">3</param>
			<message>${getText("yds.com.warning.0003","",{"角色ID",${maxLength}})}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[a-z0-9A-Z]{3}</param>
			<message>${getText("yds.com.warning.0002","",{"角色ID"})}</message>
		</field-validator>	
	</field>
	<field name="perRoleInfo.roleName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"角色名"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">20</param>
			<message>${getText("yds.com.warning.0013","",{"角色名",${minLength},${maxLength}})}</message>
		</field-validator>
	</field>
	<field name="perRoleInfo.roleDescription">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">200</param>
			<message>${getText("yds.com.warning.0013","",{"角色描述",${minLength},${maxLength}})}</message>
		</field-validator>
	</field>
</validators>
