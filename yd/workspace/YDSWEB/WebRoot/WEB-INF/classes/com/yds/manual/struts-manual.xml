<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<!-- manual系统配置 -->
	<package name="manual" extends="struts-base" namespace="/manual">
		<!--关联下拉列表相关Action-->
		<action name="getSelectListAction" method="findSelect" 
			class="relatedSelectAction">
			<result name="success">relatedSelect.jsp</result>
		</action>
		<!-- Example 1 -->
		<action name="getNationListAction" method="findNationList" 
			class="relatedSelectAction">
			<result name="success" type="str">selectList</result>
		</action>
		<action name="getProvinceListAction" method="findProvinceList" 
			class="relatedSelectAction">
			<result name="success" type="str">selectList</result>
		</action>
		<action name="getCityListAction" method="findCityList" 
			class="relatedSelectAction">
			<result name="success" type="str">selectList</result>
		</action>
		
		<!-- Example 2 -->
		<action name="getNationList2Action" method="findNationList" 
			class="relatedSelectEg2Action">
			<result name="success" type="str">selectList</result>
		</action>
		<action name="getProvinceList2Action" method="findProvinceList" 
			class="relatedSelectEg2Action">
			<result name="success" type="str">selectList</result>
		</action>
		
		<!-- 导航链接演示 -->
		<action name="guideA">
			<result>guideLink/guideA.jsp</result>
		</action>
		<action name="guideB">
			<result>guideLink/guideB.jsp</result>
		</action>
		<action name="guideC">
			<result>guideLink/guideC.jsp</result>
		</action>
		<action name="guideD">
			<result>guideLink/guideD.jsp</result>
		</action>
		<action name="guideE">
			<result>guideLink/guideE.jsp</result>
		</action>
		<action name="guideLinkManual" class="guideAction" method="xmlSet">
			<result name="success">guideLinkManual.jsp</result>
		</action>
		
		<!-- 输入框内容过滤 -->
		<action name="contentInputFilter" class="contentInputFilterSample">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>

		<!-- session保存数据示例 -->
		<!-- 初始化处理-->
		<action name="initSessionStoreManual" method="initSessionStoreManual" class="sessionStorePerson">
			<result name="success">sessionStoreManual.jsp</result>
		</action>		
		<action name="initPerson" method="initPerson" class="sessionStorePerson">
			<result name="success">personSearch.jsp</result>
		</action>
		<action name="initGroup" method="initGroup" class="sessionStorePerson">
			<result name="success">groupAdd.jsp</result>
		</action>		
		<!-- 从manual链接-->
		<action name="guideLinkShow" class="guideAction" method="xmlSet">
			<result name="success" type="redirectAction">initPerson</result>
			<result name="input" type="redirectAction">initGroup</result>
		</action>
		
		<!-- 查询符合条件的员工 -->
		<action name="searchPersons" method="searchPersons" class="sessionStorePerson">
			<result name="success">personSearch.jsp</result>
		</action>
		
		<!-- 员工信息画面初始化 -->
		<action name="initSearchPerson" method="initSearchPerson" class="personView">
			<result name="success">personInfo.jsp</result>
		</action>
		
		<!-- 删除操作 -->
		<action name="deletePerson" method="deletePerson" class="personView">
			<result name="success" type="redirectAction">
				<param name="actionName">initPerson</param>
				<param name="reloadFlg">1</param>
			</result>
		</action>
		
		<!-- 更新人员画面初始化 -->
		<action name="initModifyPerson" method="initModifyPerson" class="personModify">
			<result name="success">personModify.jsp</result>
		</action>
		
		<!-- 更新操作 -->
		<action name="savePerson" method="savePerson" class="personModify">
			<result name="success" type="redirectAction">
				<param name="actionName">initSearchPerson</param>
				<param name="fromId">${fromId}</param>					
				<param name="reloadFlg">1</param>
			</result>
		</action>
				
		<!-- 选择人员 -->
		<action name="selectPerson" method="beforeSelectPerson" class="sessionStoreGroup">
			<result name="success">selectPerson.jsp</result>
		</action>
		
		<action name="selectSearch" method="searchPersons" class="sessionStorePerson">
			<result name="success">selectPerson.jsp</result>
		</action>
		
		<action name="selectSubmit" method="selectSubmit" class="sessionStoreGroup">
			<result name="success">groupAdd.jsp</result>
		</action>

		<!-- 校验框架 START -->
		<!-- 基本校验 -->
		<action name="baseSubmitAction" method="baseSubmit" class="formValidationAction">
			<result name="success">formValidationResult.jsp</result>
			<result name="input">formValidationBaseSample.jsp</result>
		</action>

		<!-- 自定义校验 -->
		<action name="customSubmitAction" method="customSubmit" class="formValidationAction">
			<result name="success">formValidationResult.jsp</result>
			<result name="input">formValidationCustomSample.jsp</result>
		</action>
		<!-- 校验框架 END -->
		
		<!-- 树表格 START -->
		<action name="treeTableData" method="treeTableData" class="treeTableAction">
			<result name="success" type="str">dataJson</result>
		</action>
		<!-- 树表格 END -->
		
		<!-- 表格排序 START -->
		<action name="sortTable" class="sortTableAction">
			<result name="success">sortTable.jsp</result>
		</action>
		<!-- 表格排序 END -->
		
		<!-- 组织图 START -->
		<action name="orgMapData" class="orgMapAction">
			<result name="success" type="str">mapJson</result>
		</action>
		<!-- 组织图 END -->
		
		<!-- 树 START-->
		<!-- tianjian Start -->
		<action name="initTreeWithRoot" method="initTreeWithRoot" class="treeAction">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		<action name="initTreeWithNoRoot" method="initTreeWithNoRoot" class="treeAction">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
				
		<action name="saveTree" method="saveTree" class="treeAction">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		<!-- tianjian End   -->	
		<!-- 树 END-->	
	
		<!-- 树形分类下拉框 START -->
		<action name="treeComboxFindTreeLst" method="findTreeLst" class="treeComboxAction">
			<result name="success">TreeCombox.jsp</result>
		</action>
		<!-- 树形分类下拉框 END -->
		
		
		<!-- 分页示例 START -->
		<action name="manualFindPageLst" method="findPaginationCondALst" class="paginationAction">
			<result name="success">paginationList.jsp</result>
		</action>
		<!-- 分页示例 END -->
		
	</package>
</struts>