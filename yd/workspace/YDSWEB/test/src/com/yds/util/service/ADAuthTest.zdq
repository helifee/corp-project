package com.yds.util.service;

import static org.junit.Assert.*;

import org.junit.Test;

/**
 * @author chenyuer
 * @version 1.00 2010/06/03
 */
public class ADAuthTest {

	/**
	 * Test method for {@link com.yds.util.service.ADAuth#login(java.lang.String, java.lang.String)}.
	 */
	@Test
	public void testLogin() {
		// 初始化方法参数(用户名和密码都正确)
		String userId = "webtestuser";
		String password = "ysys@123";
		// 调用测试方法
		String actual = ADAuth.login(userId, password);
		// 设定预期值
		String expect = "webtestuser@yds.yd";
		// 断言结果和预期是否一致
		assertEquals(expect, actual);
		
		// 初始化方法参数(用户名正确，密码错误)
		userId = "webtestuser";
		password = "ysys@123111";
		// 调用测试方法
		actual = ADAuth.login(userId, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(用户名错误，密码正确)
		userId = "webtestuser111";
		password = "ysys@123";
		// 调用测试方法
		actual = ADAuth.login(userId, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(用户名，密码都错误)
		userId = "webtestuser111";
		password = "ysys@123111";
		// 调用测试方法
		actual = ADAuth.login(userId, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(用户名为null)
		password = "ysys@123";
		// 调用测试方法
		actual = ADAuth.login(null, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(密码为null)
		userId = "webtestuser";
		// 调用测试方法
		actual = ADAuth.login(userId, null);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(用户名为空)
		userId = "";
		password = "ysys@123";
		// 调用测试方法
		actual = ADAuth.login(userId, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(密码为空)
		userId = "webtestuser";
		password = "";
		// 调用测试方法
		actual = ADAuth.login(userId, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
		// 初始化方法参数(用户名为@xx格式)
		userId = "@yds.yd";
		password = "ysys@123";
		// 调用测试方法
		actual = ADAuth.login(userId, password);
		// 断言结果和预期是否一致
		assertNull(actual);
		
	}

}
