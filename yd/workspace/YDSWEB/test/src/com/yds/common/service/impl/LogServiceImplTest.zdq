package com.yds.common.service.impl;

import static com.yds.base.test.BeanAssert.assertBeanLenientEquals;
import static org.junit.Assert.*;

import java.util.Map;

import javax.annotation.Resource;

import org.junit.Before;
import org.junit.BeforeClass;
import org.junit.Test;
import com.yds.base.test.AbstractSpringTransTest;
import com.yds.base.test.ExcelUtil;
import com.yds.common.bean.LogInfo;
import com.yds.common.bean.UserInfo;
import com.yds.common.service.LogService;
import com.yds.common.service.SessionConstants;

/**
 * @author xupai
 * 
 */
public class LogServiceImplTest extends AbstractSpringTransTest {

	/** @Resource，自动注入 */
	@Resource
	private LogService logService;
	private static Map<String, Object> session;

	/**
	 * @throws java.lang.Exception
	 */
	@BeforeClass
	public static void setUpBeforeClass() throws Exception {
		// 模拟Session设值
		UserInfo userInfo = new UserInfo();
		userInfo.setUserId("YD200308");
		session = ExcelUtil.getSession();
		session.put(SessionConstants.USERINFO, userInfo);
		session.put(SessionConstants.IPADDR, "127.0.0.1");
	}

	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {
		// 删除表中数据(避免和测试数据冲突)
		deleteFromTables("com_log_mst");

		initCommonData(LogServiceImpl.class);
	}

	/**
	 * {@link com.yds.common.service.impl.LogServiceImpl#insertLogInfo(java.lang.String, java.lang.String, java.lang.String, java.lang.String, java.lang.String)}
	 * 的测试方法。
	 * 
	 * @throws Exception
	 */
	@Test
	public void testInsertLogInfo() throws Exception {

		// 初始化数据库
		initData("", "result01.xls");
		// 初始化测试方法参数
		String logLevel = getParamObject(String.class, "param_logLevel");
		String subId = getParamObject(String.class, "param_subId");
		String userId = getParamObject(String.class, "param_userId");
		String logMsg = getParamObject(String.class, "param_logMsg");
		String refer = getParamObject(String.class, "param_refer");

		// 调用被测试方法
		Boolean result = logService.insertLogInfo(logLevel, subId, userId,
				logMsg, refer);

		// 检索com_log_mst插入的数据
		LogInfo actualLogInfo = findBeanByCondition(LogInfo.class,
				"param_com_log_mst");
		// 得到预期值
		LogInfo expectLogInfo = getExpectObject(LogInfo.class, "expect");
		// 断言检索结果和预期是不是一致
		assertBeanLenientEquals(expectLogInfo, actualLogInfo);
		assertTrue(result);

	}

}
