	/**
	 * 日志等级枚举测试. Test method for
	 * {@link com.yds.common.service.CommonConstants.LoglevelEnum} .
	 */
	@Test
	public void testLoglevelEnum() {
		logger.debug("========enum test Start========");
		String[][] except = new String[][] { { "Not_Delete", "0" },
				{ "Every_Year_Delete", "1" }, { "Every_Season_Delete", "2" },
				{ "Every_Month_Delete", "3" }, { "Every_Week_Delete", "4" },
				{ "Every_Day_Delete", "5" }, { "Every_Start_Delete", "6" },
				{ "Every_Reserve1", "7" }, { "Every_Reserve2", "8" },
				{ "Every_Reserve3", "9" } };

		int cnt = 0;
		for (LoglevelEnum loglevel : LoglevelEnum.values()) {
			String key = except[cnt][0];
			String value = except[cnt][1];
			Assert.assertEquals(key, loglevel.name());
			Assert.assertEquals(value, loglevel.toString());
			cnt++;
			logger.debug("LoglevelEnum " + loglevel.name() + " = "
					+ loglevel.toString());
		}

		// 自定义数组遍历
		for (int i = 0; i < except.length; i++) {
			String key = except[i][0];
			String value = except[i][1];

			logger.debug("except[" + i + "] key= " + key + " vale= " + value);
		}
		logger.debug("========enum test End  ========");
	}

