import com.yds.base.test.AbstractSpringTransTest;
import com.yds.base.test.ExcelUtil;
import com.yds.common.bean.LogInfo;
import com.yds.common.bean.UserInfo;
import com.yds.common.service.LogDeleteService;
import com.yds.common.service.SessionConstants;

/**
 * @author pengchuan
 * 
 */
public class LogDeleteServiceImplTest extends AbstractSpringTransTest {

	/** @Resource，自动注入Service */
	@Resource
	private LogDeleteService logDeleteService;
	
	/**
	 * @throws java.lang.Exception
	 */
	@BeforeClass
	public static void setUpBeforeClass() throws Exception {
		// 模拟Session设值
		UserInfo userInfo = new UserInfo();
		userInfo.setUserId("YD201001");
		Map<String, Object> session = ExcelUtil.getSession();
		session.put(SessionConstants.USERINFO, userInfo);
		session.put(SessionConstants.IPADDR, "127.0.0.1");
	}

	/**
	 * @throws java.lang.Exception
	 */
	@AfterClass
	public static void tearDownAfterClass() throws Exception {
	}

	
	/**
	 * @throws java.lang.Exception
	 */
	@After
	public void tearDown() throws Exception {
	}


	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {
		// 删除表中数据(避免和测试数据冲突)
		deleteFromTables("com_log_mst");

		initCommonData(LogDeleteServiceImpl.class);
	}

	/**
	 * Test method for {@link com.yds.common.service.impl.LogDeleteServiceImpl#logMstDelete(com.yds.common.bean.LogInfo, java.util.List)}.
	 * 系统时间每天更新，因此忽略时间测试
	 */
	@Test
    @Ignore
	public void testLogMstDelete() throws Exception {

		// 初始化数据库
		initData("input.xls", "result.xls");
	
		// 调用被测试方法
	     logDeleteService.logMstDelete();

		// 检索数据
		LogInfo actualLogInfo = findBeanByCondition(LogInfo.class,
				"param_COM_LOG_MST");
		// 得到预期值
		LogInfo expectLogInfo = getExpectObject(LogInfo.class, "expect");
		// 断言检索结果和预期是不是一致
		assertBeanLenientEquals(expectLogInfo, actualLogInfo);

	}

}
