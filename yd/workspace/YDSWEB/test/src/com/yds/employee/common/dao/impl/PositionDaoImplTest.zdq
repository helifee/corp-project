package com.yds.employee.common.dao.impl;

import static com.yds.base.test.BeanAssert.assertListLenientEquals;

import java.util.ArrayList;
import java.util.List;

import javax.annotation.Resource;

import org.junit.Before;
import org.junit.Test;

import com.yds.base.test.AbstractSpringTransTest;
import com.yds.common.bean.EmpPos;
import com.yds.common.dao.PositionDao;


/**
 * 职位信息处理(数据库访问测试)
 * 
 * @author bixiuqing
 * @version 1.0 2010/05/25
 */
public class PositionDaoImplTest extends AbstractSpringTransTest {

	/** @Resource，自动注入Dao */
	@Resource
	private PositionDao positionDao;

	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {

		// 删除表中数据(避免和测试数据冲突)
		deleteFromTables("EMP_POS");
		initCommonData(PositionDaoImpl.class, "init.xls");
	}

	/**
	 * Test method for
	 * {@link com.yds.employee.common.dao.impl.PositionDaoImpl#getPosList()}.
	 * 
	 * @throws Exception
	 */
	@Test
	public void testGetPosList() throws Exception {

		// 初始化数据库
		initData("", "result01.xls");
		// 初始化测试方法参数
		String posTypeId = getParamObject(String.class, "param1");
		// 调用被测试方法
		List<EmpPos> actualInfo = positionDao.getPosList(posTypeId);
		// 断言检索结果和预期是否一致
		assertListLenientEquals(new ArrayList<EmpPos>(), actualInfo);

		// 初始化测试方法参数
		posTypeId = getParamObject(String.class, "param2");
		// 调用被测试方法
		actualInfo = positionDao.getPosList(posTypeId);
		// 得到预期值
		List<EmpPos> expectInfo = getExpectList(EmpPos.class, "expect2");
		// 断言检索结果和预期是否一致
		assertListLenientEquals(expectInfo, actualInfo);
	}

}
