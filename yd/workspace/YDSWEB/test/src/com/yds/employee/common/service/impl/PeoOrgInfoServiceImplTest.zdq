package com.yds.employee.common.service.impl;

import static com.yds.base.test.BeanAssert.*;

import java.util.List;

import javax.annotation.Resource;

import org.junit.Before;
import org.junit.Ignore;
import org.junit.Test;

import com.yds.base.test.AbstractSpringTransTest;
import com.yds.common.bean.EmpOrgInfo;
import com.yds.common.bean.PeoOrgInfo;
import com.yds.common.service.PeoOrgInfoService;

/**
 * 组织信息查询(业务逻辑测试)
 * 
 * @author bixiuqing
 * @version 1.00 2010/05/25
 */
public class PeoOrgInfoServiceImplTest extends AbstractSpringTransTest {

	/** @Resource，自动注入Service */	
	@Resource
	private PeoOrgInfoService peoOrgInfoService;	
	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {

		// 删除表中数据(避免和测试数据冲突)
		deleteFromTables("EMP_ORG_INFO", "EMP_ORG_PROPERTY");
		initCommonData(PeoOrgInfoServiceImpl.class, "init.xls");
	}

	/**
	 * Test method for {@link com.yds.employee.common.service.impl.PeoOrgInfoServiceImpl#geOrgNm(java.lang.String)}.
	 * @throws Exception 
	 */
	@Test
	public void testGeOrgNm() throws Exception {

		// 初始化数据库
		initData("", "result01.xls");
		// 初始化测试方法参数
		String orgId = getParamObject(String.class, "param1");
		// 调用被测试方法
		String actualInfo = peoOrgInfoService.geOrgNm(orgId);
		// 得到预期值
		String expectInfo = getExpectObject(String.class, "expect1");
		// 断言检索结果和预期是否一致
		assertBeanEquals(expectInfo, actualInfo);
		
		// 初始化测试方法参数
		orgId = getParamObject(String.class, "param2");
		// 调用被测试方法
		actualInfo = peoOrgInfoService.geOrgNm(orgId);
		// 得到预期值
		expectInfo = getExpectObject(String.class, "expect2");
		// 断言检索结果和预期是否一致
		assertBeanEquals(expectInfo, actualInfo);
	}

	/**
	 * Test method for {@link com.yds.employee.common.service.impl.PeoOrgInfoServiceImpl#getDeptList(java.lang.String[])}.
	 * @throws Exception 
	 */
	@SuppressWarnings("deprecation")
	@Test
	@Ignore
	public void testDeptList() throws Exception {

		// 初始化数据库
		initData("", "result02.xls");
		// 初始化测试方法参数
		List<String> orgNmList = getParamList(String.class);
		String[] orgNm = orgNmList.toArray(new String[1]);
		// 调用被测试方法
		List<PeoOrgInfo> actualInfo = peoOrgInfoService.getDeptList(orgNm);
		// 得到预期值
		List<PeoOrgInfo> expectInfo = getExpectList(PeoOrgInfo.class, "expect");
		// 断言检索结果和预期是否一致
		assertListLenientEquals(expectInfo, actualInfo);
	}

	/**
	 * Test method for {@link com.yds.employee.common.service.impl.PeoOrgInfoServiceImpl#getPrjtList(java.lang.String)}.
	 * @throws Exception 
	 */
	@Test
	public void testGetPrjtList() throws Exception {
		deleteFromTables("EMP_ORG_INFO","SYS_CODE_MST");
		// 初始化数据库
		initData("input03.xls", "result03.xls");
		// 初始化测试方法参数
		String deptInfo = getParamObject(String.class, "param1");
		// 调用被测试方法
		List<EmpOrgInfo> actualInfo = peoOrgInfoService.getPrjtList(deptInfo);
		// 得到预期值
		List<EmpOrgInfo> expectInfo = getExpectList(EmpOrgInfo.class, "expect1");
		// 断言检索结果和预期是否一致
		assertBeanEquals(expectInfo, actualInfo);
		
		// 初始化测试方法参数
		deptInfo = getParamObject(String.class, "param2_1");
		String prjtName = getParamObject(String.class, "param2_2");
		// 调用被测试方法
		actualInfo = peoOrgInfoService.getPrjtList(deptInfo,prjtName);
		// 得到预期值
		expectInfo = getExpectList(EmpOrgInfo.class, "expect2");
		// 断言检索结果和预期是否一致
		assertBeanEquals(expectInfo, actualInfo);
	}
}
