package com.yds.employee.service.impl;

import static com.yds.base.test.BeanAssert.assertListLenientEquals;

import java.util.List;

import javax.annotation.Resource;

import org.junit.Before;
import org.junit.Test;

import com.yds.base.test.AbstractSpringTransTest;
import com.yds.employee.bean.Yb0011CondA;
import com.yds.common.bean.EmpInfo;
import com.yds.employee.service.Yb0011Service;

/**
 * 员工一览（业务逻辑处理测试）
 * 
 * @author 远东)bixiuqing
 * @version 1.00 2010/06/07
 */
public class Yb0011ServiceImplTest extends AbstractSpringTransTest {

	/** @Resource，自动注入 */
	@Resource
	private Yb0011Service yb0011Service;

	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {
		// 删除表中数据(避免和测试数据冲突)
		deleteFromTables("EMP_INFO", "EMP_STAFF_POS", "EMP_POS",
				"SYS_CODE_MST", "EMP_ORG_INFO");

		initCommonData(Yb0011ServiceImpl.class);
	}

	/**
	 * Test method for {@link com.yds.employee.service.impl.Yb0011ServiceImpl#getEmpInfoListAdv(com.yds.employee.bean.Yb0011CondA)}.
	 * @throws Exception 
	 */
	@Test
	public void testGetEmpInfoListAdv() throws Exception {
		
		// 初始化数据库
		initData("input.xls", "result.xls");
		
		// 初始化测试方法参数
		Yb0011CondA yb0011CondA = getParamObject(Yb0011CondA.class, "param1");
		// 调用被测试方法
		List<EmpInfo> actualInfo = yb0011Service.getEmpInfoListAdv(yb0011CondA);
		// 得到预期值
		List<EmpInfo> expectInfo = getExpectList(EmpInfo.class, "expect1");
		// 断言检索结果和预期是否一致
		assertListLenientEquals(expectInfo, actualInfo);
		
		// 初始化测试方法参数
		yb0011CondA = getParamObject(Yb0011CondA.class, "param2");
		List<String> deptIdInfos = getParamList(String.class, "param2_deptIdInfos");
		List<String> posIdInfos = getParamList(String.class, "param2_posIdInfos");
		List<String> empStatusIdInfos = getParamList(String.class, "param2_empStatusIdInfos");
		List<String> empStateIdInfos = getParamList(String.class, "param2_empStateIdInfos");
		yb0011CondA.setDeptIdInfos(deptIdInfos);
		yb0011CondA.setPosIdInfos(posIdInfos);
		yb0011CondA.setEmpStateIdInfos(empStateIdInfos);
		yb0011CondA.setEmpStatusIdInfos(empStatusIdInfos);
		
		// 调用被测试方法
		actualInfo = yb0011Service.getEmpInfoListAdv(yb0011CondA);
		// 得到预期值
		expectInfo = getExpectList(EmpInfo.class, "expect2");
		// 断言检索结果和预期是否一致
		assertListLenientEquals(expectInfo, actualInfo);
		
		// 初始化测试方法参数
		yb0011CondA = getParamObject(Yb0011CondA.class, "param3");
		deptIdInfos = getParamList(String.class, "param3_deptIdInfos");
		posIdInfos = getParamList(String.class, "param3_posIdInfos");
		empStatusIdInfos = getParamList(String.class, "param3_empStatusIdInfos");
		empStateIdInfos = getParamList(String.class, "param3_empStateIdInfos");
		yb0011CondA.setDeptIdInfos(deptIdInfos);
		yb0011CondA.setPosIdInfos(posIdInfos);
		yb0011CondA.setEmpStateIdInfos(empStateIdInfos);
		yb0011CondA.setEmpStatusIdInfos(empStatusIdInfos);
		
		// 调用被测试方法
		actualInfo = yb0011Service.getEmpInfoListAdv(yb0011CondA);
		// 得到预期值
		expectInfo = getExpectList(EmpInfo.class, "expect3");
		// 断言检索结果和预期是否一致
		assertListLenientEquals(expectInfo, actualInfo);
		
	}

}
