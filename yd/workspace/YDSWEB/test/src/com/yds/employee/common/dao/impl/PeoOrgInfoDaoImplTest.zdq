package com.yds.employee.common.dao.impl;

import static com.yds.base.test.BeanAssert.*;

import java.util.List;

import javax.annotation.Resource;

import org.junit.Before;
import org.junit.Ignore;
import org.junit.Test;

import com.yds.base.test.AbstractSpringTransTest;
import com.yds.common.bean.PeoOrgInfo;
import com.yds.common.dao.PeoOrgInfoDao;

/**
 * 组织信息查询（数据库访问测试）
 * 
 * @author bixiuqing
 * @version 1.00 2010/05/25
 */
public class PeoOrgInfoDaoImplTest extends AbstractSpringTransTest {

	/** @Resource，自动注入Dao */
	@Resource
	private PeoOrgInfoDao peoOrgInfoDao;

	/**
	 * @throws java.lang.Exception
	 */
	@Before
	public void setUp() throws Exception {

		// 删除表中数据(避免和测试数据冲突)
		deleteFromTables("EMP_ORG_INFO", "EMP_ORG_PROPERTY");
		initCommonData(PeoOrgInfoDaoImpl.class, "init.xls");
	}

	/**
	 * Test method for
	 * {@link com.yds.employee.common.dao.impl.PeoOrgInfoDaoImpl#geOrgNm(java.lang.String)}
	 * .
	 * 
	 * @throws Exception
	 */
	@Test
	public void testGeOrgNm() throws Exception {

		// 初始化数据库
		initData("", "result01.xls");
		// 初始化测试方法参数
		String orgId = getParamObject(String.class, "param1");
		// 调用被测试方法
		String actualInfo = peoOrgInfoDao.geOrgNm(orgId);
		// 得到预期值
		String expectInfo = getExpectObject(String.class, "expect1");
		// 断言检索结果和预期是否一致
		assertBeanEquals(expectInfo, actualInfo);
		
		// 初始化测试方法参数
		orgId = getParamObject(String.class, "param2");
		// 调用被测试方法
		actualInfo = peoOrgInfoDao.geOrgNm(orgId);
		// 断言检索结果和预期是否一致
		assertBeanEquals(null, actualInfo);
		
		// 初始化测试方法参数
		orgId = getParamObject(String.class, "param3");
		// 调用被测试方法
		actualInfo = peoOrgInfoDao.geOrgNm(orgId);
		// 断言检索结果和预期是否一致
		assertBeanEquals(null, actualInfo);
	}

	/**
	 * Test method for
	 * {@link com.yds.employee.common.dao.impl.PeoOrgInfoDaoImpl#getDeptList()}.
	 * 
	 * @throws Exception
	 */
	@Test
	@Ignore
	public void testGetDeptList() throws Exception {

		// 初始化数据库
		initData("", "result02.xls");
		// 调用被测试方法
		List<PeoOrgInfo> actualInfo = peoOrgInfoDao.getDeptList();
		// 得到预期值
		List<PeoOrgInfo> expectInfo = getExpectList(PeoOrgInfo.class, "expect");
		// 断言检索结果和预期是否一致
		assertListLenientEquals(expectInfo, actualInfo);
	}

}
