package com.yds.base.test;

import org.junit.runner.notification.RunNotifier;
import org.junit.runners.model.InitializationError;
import org.springframework.test.context.junit4.SpringJUnit4ClassRunner;

/*
 * 继承spring的junit运行器，添加带抓图功能的监听器.
 */
public class SeleniumTestRunner extends SpringJUnit4ClassRunner {
	private SeleniumTestListener stl;

	public SeleniumTestRunner(Class<?> klass) throws InitializationError {
		super(klass);
		stl = new SeleniumTestListener();
	}

	/**
	 * 重载加入Class级别控制.
	 */
	@Override
	public void run(RunNotifier rn) {
		rn.addListener(stl);
		super.run(rn);
	}

}
