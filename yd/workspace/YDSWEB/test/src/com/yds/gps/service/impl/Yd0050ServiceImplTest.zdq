	/**
	 * Test method for {@link com.yds.gps.service.impl.Yd0050ServiceImpl#getOrderInfoList(com.yds.gps.bean.Yd0050CondA, int, int)}.
	 * @throws Exception 
	 */
	@Test
	public final void testGetOrderInfoList() throws Exception {
		// 初始化数据库
		initData("input.xls", "result.xls");

		// 初始化测试方法参数
		Yd0050CondA yd0050CondA1 = getParamObject(Yd0050CondA.class,"param_Yd0050CondA1");
		int intValue = 0;
		int intValue2 = 20;
		// 调用被测试方法
		List<Yd0050CondA> actual1 = yd0050Service.getOrderInfoList(yd0050CondA1, intValue, intValue2);
		// 得到预期值
		List<Yd0050CondA> expect1 = getExpectList(Yd0050CondA.class,"expect1_ORDER_INFO");
		// 断言检索结果和预期是否一致
		assertBeanLenientEquals(expect1, actual1);
		
		// 初始化测试方法参数
		Yd0050CondA yd0050CondA2 = getParamObject(Yd0050CondA.class,"param_Yd0050CondA2");
		// 调用被测试方法
		List<Yd0050CondA> actual2 = yd0050Service.getOrderInfoList(yd0050CondA2, intValue, intValue2);
		// 得到预期值
		List<Yd0050CondA> expect2 = getExpectList(Yd0050CondA.class,"expect2_ORDER_INFO");
		// 断言检索结果和预期是否一致
		assertBeanLenientEquals(expect2, actual2);
	}

