<?xml version="1.0" encoding="UTF-8"?>

<ruleset name="ydsruleset" xmlns="http://pmd.sf.net/ruleset/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd" 
	xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
	<description> The Favorites ruleset contains links to rules that I like to use. Usually I combine this ruleset with 
		the unusedcode.xml, basic.xml, and import.xml rulesets for my projects. This ruleset also serves as an example 
		of how to do a custom ruleset. Sample ruleset for xieyujun all rules. </description>
	<!-- 排除模式 -->
	<exclude-pattern>.*/com/yds/common/service/impl/StaffPinyinServiceImpl.java</exclude-pattern>
	<!-- 排除模式 -->
	<exclude-pattern>.*/bean/.*</exclude-pattern>
	<exclude-pattern>.*/com/yds/common/service/CommonConstants.java</exclude-pattern>
	<exclude-pattern>.*/com/yds/tt/manager/service/TtConstants.java</exclude-pattern>
	<!-- Bean字段个数限制  -->
	<rule ref="rulesets/codesize.xml/TooManyFields">
		<priority>4</priority>
		<properties>
			<property name="maxfields" value="60"/>
		</properties>
	</rule>
	
	<rule ref="rulesets/codesize.xml/ExcessivePublicCount">
		<properties>
			<property name="minimum" value="60"/>
		</properties>
	</rule>
	

</ruleset>

