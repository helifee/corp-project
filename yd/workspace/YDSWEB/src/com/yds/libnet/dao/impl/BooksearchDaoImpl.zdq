package com.yds.libnet.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.libnet.dao.BooksearchDao;
import com.yds.library.bean.Bookinfo;

/**
 * @see booksearchDao
 */
@Repository("booksearchDao")
public class BooksearchDaoImpl extends AbstractBaseDao implements BooksearchDao {
	
	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<Bookinfo> getBookmanageInfo(Bookinfo bookmanageInfo,int offset,int perCounts) {
		
		return (List<Bookinfo>)super
					.queryForList("Bookmanageinfo.getBookmanageInfo",bookmanageInfo,offset, perCounts);
	}

	@Override
	public String getBookCount(Bookinfo bookmanageInfo) {
		return (String)super.queryForObject("Booksearchinfo.getbooksNum",bookmanageInfo);
	}
}