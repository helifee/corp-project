package com.yds.gps.dao;

import java.util.List;

import com.yds.gps.bean.GpsGoodsInfo;
import com.yds.gps.bean.GpsOrderDetail;
import com.yds.gps.bean.GpsOrderGoods;
import com.yds.gps.common.bean.GpsOrderInfo;

/**
 * 订单详细（数据库访问）
 * 
 * @author gaoweiwei
 * @version 1.00 2010/10/21
 */
public interface Yd0070Dao {

	/**
	 * 显示分割线上部信息（除金额）
	 * 
	 * @param String 订单ID
	 * @return GpsOrderInfo 订单信息
	 */
	public GpsOrderInfo getGpsOrderInfo(String orderId);

	/**
	 * 显示分割线上部信息（金额）
	 * 
	 * @param String 订单ID
	 * @return GpsOrderInfo 订单信息
	 */
	public double getGpsAccountSum(String accId);

	/**
	 * 显示已订购商品信息一览
	 * 
	 * @param GpsOrderDetail gpsOrderDetail
	 * @return List<GpsOrderDetail> 已订购商品一览
	 */
	public List<GpsOrderDetail> getDetailNowList(GpsOrderDetail gpsOrderDetail);

	/**
	 * 显示商品信息
	 * 
	 * @param String goodsId
	 * @return GpsGoodsInfo 商品信息
	 */
	public GpsGoodsInfo getGoodsInfo(String goodsId);
	
	/**
	 * 取得已订单个商品信息
	 * 
	 * @param GpsOrderDetail gpsOrderDetail
	 * @return GpsOrderDetail 订购详细
	 */
	public GpsOrderDetail getOrderDetail(GpsOrderDetail gpsOrderDetail);

	/**
	 * 显示订单商品一览
	 * 
	 * @param String 订单ID
	 * @return List<GpsOrderGoods> 订单商品一览
	 */
	public List<GpsOrderGoods> getDetailAllList(String orderId);

	/**
	 * 删除已订商品信息
	 * 
	 * @param gpsOrderDetail	订购详细
	 */
	public abstract Object deleteGpsOrderDetail(GpsOrderDetail gpsOrderDetail);

	/**
	 * 取得商品分类名
	 * @param goodsId
	 * @return
	 */
	public String getCateName(String goodsId);
	
	/**
	 * 删除已订商品信息
	 * 
	 * @param gpsOrderDetail	订购详细
	 */
	public abstract Object deleteAllGpsOrderDetail(GpsOrderDetail gpsOrderDetail);

	/**
	 * 登录新的订购商品
	 * 
	 * @param gpsOrderDetail	订购详细
	 */
	public abstract Object insertGpsOrderDetail(GpsOrderDetail gpsOrderDetail);

	/**
	 * 登录新的订购商品信息
	 * 
	 * @param gpsOrderDetail	订购详细
	 */
	public abstract Object insertGpsOrderGoods(GpsOrderDetail gpsOrderDetail);

	/**
	 * 更新订购商品信息
	 * 
	 * @param gpsOrderDetail	订购详细
	 */
	public abstract Object updateGpsOrderDetail(GpsOrderDetail gpsOrderDetail);
	
	/**
	 * 更新订单商品信息
	 * 
	 * @param gpsOrderGoods	订单商品
	 */
	public abstract Object updateGpsOrderGoods(GpsOrderDetail gpsOrderDetail);
}