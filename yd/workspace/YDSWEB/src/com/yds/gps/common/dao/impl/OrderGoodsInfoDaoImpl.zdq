package com.yds.gps.common.dao.impl;

import java.util.Map;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.gps.bean.GpsOrderGoods;
import com.yds.gps.common.bean.GpsOrderInfo;
import com.yds.gps.common.dao.OrderGoodsInfoDao;

/**
 * @see com.yds.gps.dao.OrderGoodsInfoDaoImpl
 */
@Repository("orderGoodsInfoDao")
public class OrderGoodsInfoDaoImpl extends AbstractBaseDao implements OrderGoodsInfoDao {

	@Override
	public Object updateGpsOrderGoodsCnt(GpsOrderGoods gpsOrderGoods) {
		
		// 更新订单信息表的订购数量
		return super.update("orderGoodsInfoDao.updateGpsOrderGoodsCnt", gpsOrderGoods);
	}

	@Override
	public Object updateGpsOrderInfoCnt(GpsOrderInfo gpsOrderInfo) {
		
		// 更新订单信息表的订购数量
		return super.update("orderGoodsInfoDao.updateGpsOrderInfoCnt", gpsOrderInfo);
	}

	@Override
	public String getPayFlag(String orderId) {

		// 取结算方式
		return (String)super.queryForObject("orderGoodsInfoDao.getPayFlag", orderId);
	}

	@Override
	public int getMngOrder(Map<String, String> orderUserInfo) {
		// TODO Auto-generated method stub
		return (Integer) super.queryForObject("orderGoodsInfoDao.getMngOrder", orderUserInfo);
	}
}