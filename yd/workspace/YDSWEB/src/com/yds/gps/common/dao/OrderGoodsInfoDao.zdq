package com.yds.gps.common.dao;

import java.util.Map;

import com.yds.gps.bean.GpsOrderGoods;
import com.yds.gps.common.bean.GpsOrderInfo;

/**
 * 订购处理共通
 * 
 * @author gaoweiwei
 * @version 1.00 2010/10/25
 */
public interface OrderGoodsInfoDao {

	/**
	 * 更新订单信息表的订购数量
	 * 
	 * @param gpsOrderGoods	订单商品
	 */
	public abstract Object updateGpsOrderGoodsCnt(GpsOrderGoods gpsOrderGoods);

	/**
	 * 订单信息表及订单商品表的更新
	 * 
	 * @param gpsOrderInfo	订单信息
	 */
	public abstract Object updateGpsOrderInfoCnt(GpsOrderInfo gpsOrderInfo);
	
	/**
	 * 判断结算方式是否为账户结算
	 * @param orderId
	 * @return
	 */
	public String getPayFlag(String orderId);
	
	/**
	 * 判断用户是否可以管理订单
	 * @param orderUserInfo 订单ID，人员ID，管理者flg
	 * @return
	 */
	public int getMngOrder(Map<String, String> orderUserInfo);
}