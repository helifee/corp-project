<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="gpsGoodsInfo.goodsName">
		
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0011","",{"商品名称",${maxLength}})}</message>
		</field-validator>
		
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"商品名称"})}</message>
		</field-validator>
	</field>
	
	<field name="gpsGoodsInfo.goodsPrice">
		<field-validator type="double">
			<param name="minInclusive">0.00</param>
            <param name="maxInclusive">999.99</param>
            <message>${getText("yds.com.warning.0014","",{"商品售价","0.01",${maxLength}})}</message>
        </field-validator>
	</field>
	<field name="gpsGoodsInfo.store">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">100</param>
			<message>${getText("yds.com.warning.0011","",{"所属店铺",${maxLength}})}</message>
		</field-validator>
		
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"所属店铺"})}</message>
		</field-validator>
		
	</field>
	
	<field name="gpsGoodsInfo.goodsDesc">
		
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">0</param>
			<param name="maxLength">300</param>
			<message>${getText("yds.com.warning.0011","",{"商品描述",${maxLength}})}</message>
		</field-validator>
	</field>

</validators>