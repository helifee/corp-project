package com.yds.att.dao;

import java.util.List;
import java.util.Map;

import com.yds.att.bean.AttInfo;
import com.yds.att.bean.AttOvertime;
import com.yds.att.bean.Ye0060CondA;
import com.yds.att.bean.Ye0060Overtime;
import com.yds.common.bean.UserInfo;

/**
 * Ye0060Dao
 * 
 * @author 远东)sundefu
 * @version 1.00 2010/12/02
 */
public interface Ye0060Dao {
	
	/**
	 * 取得项目加班信息一览条数
	 * @param ye0060CondA 检索条件
	 * @return long 一览条数
	 */
	public long getPrjOvertimeInfoCount (Ye0060CondA ye0060CondA);
	
	/**
	 * 取得项目加班信息一览
	 * @param ye0060CondA 检索条件
	 * @return List<Ye0060Overtime> 加班信息一览
	 */
	public List<Ye0060Overtime> getPrjOvertimeInfo (Ye0060CondA ye0060CondA);

	/**
	 * 取得项目指定日期已申请加班的员工一览
	 * @param AttOvertime 检索条件
	 * @return List<UserInfo> 已申请加班的员工列表
	 */
	public List<UserInfo> getAppliedEmp (AttOvertime attOvertime);
	
	/**
	 * 插入员工加班申请信息
	 * @param AttOvertime 员工加班信息
	 * @return Object 执行状况
	 */
	public abstract Object insertApplyEmp (AttOvertime attOvertime);
	
	/**
	 * 查询员工加班申请信息
	 * @param AttOvertime 员工加班信息查询条件
	 * @return AttOvertime 员工加班信息
	 */
	public abstract AttOvertime getApplyOvertimeByPk (AttOvertime attOvertime);
	
	/**
	 * 查询员工加班申请信息
	 * @param AttOvertime 员工加班信息查询条件
	 * @return AttOvertime 员工加班信息
	 */
	public abstract List<AttOvertime> getApplyOvertimes (AttOvertime attOvertime);
	
	/**
	 * 更新员工加班申请信息
	 * @param AttOvertime 员工加班信息
	 * @return Object 员工加班信息
	 */
	public abstract Object updateApplyOvertime (AttOvertime attOvertime);
	
	/**
	 * 删除员工加班申请信息
	 * @param AttOvertime 员工加班信息
	 * @return Object 员工加班信息
	 */
	public abstract Object deleteApplyOvertime (AttOvertime attOvertime);
	
	/**
	 * 查询员工考勤信息
	 * @param AttInfo 员工考勤信息查询条件
	 * @return AttInfo 员工考勤信息
	 */
	public abstract AttInfo getAttInfoByPk (AttInfo attInfo);
	
	/**
	 * 更新员工考勤信息
	 * @param AttInfo 员工考勤信息
	 */
	public abstract Object updateAttInfoByPk (AttInfo attInfo);
	
	/**
	 * 取得可管理部门列表
	 * @param empId 员工Id
	 */
	public abstract List<String> getManageDepts(String empId);
}
