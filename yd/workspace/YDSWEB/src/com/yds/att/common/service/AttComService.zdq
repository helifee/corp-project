package com.yds.att.common.service;

import com.yds.att.service.AttConstants.AppCategory;

public interface AttComService {
	
	/**
	 * 从考勤系统参数中取得对应key的value
	 * @param key key值
	 * @return 对应的value
	 */
	public String getParameter(String key);
	
	/**
	 * 向考勤系统参数中设置对应key的value值
	 * @param key key值
	 * @param value getParameter
	 */
	public void setParameter(String key, String value);
	
	/**
	 * 删除考勤系统参数中对应key值
	 * @param key key值
	 */
	public void removeParameter(String key);
	
	/**
	 * 申请编号采番
	 * @param category 申请类别
	 * @return 申请编号
	 * @throws Exception 采番异常（如采番越界）
	 */
	public String getAppId(AppCategory category) throws Exception;

}
