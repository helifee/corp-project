package com.yds.att.common.dao.impl;

import java.util.Date;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.att.bean.AttEmpType;
import com.yds.att.bean.AttExrestInfo;
import com.yds.att.bean.AttInfo;
import com.yds.att.bean.AttMonReport;
import com.yds.att.bean.AttRestApp;
import com.yds.att.bean.AttYearRest;
import com.yds.att.common.dao.DateRelationDao;
import com.yds.gadget.bean.CalendarGadgetInfo;

import org.springframework.stereotype.Repository;

/**
 * @see com.yds.att.common.dao.DateRelationDao
 */
@Repository("dateRelationDao")
public class DateRelationDaoImpl extends AbstractBaseDao implements DateRelationDao{

	/** 
	 *  {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<CalendarGadgetInfo> selectHolInfoAll() {
		return (List<CalendarGadgetInfo>) super.queryForList("dateRelationDao.selectHolInfoAll");
	}

	/** 
	 *  {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<CalendarGadgetInfo> selectHolInfoLunarAll() {
		return (List<CalendarGadgetInfo>) super.queryForList("dateRelationDao.selectHolInfoLunarAll");
	}

	/** 
	 *  {@inheritDoc}
	 */
	@Override
	public AttInfo selectEmpWorkInfo(String empId, String leaveDateYear,
			String leaveDateMonth, String leaveDateDay) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("year", leaveDateYear);
		param.put("month", leaveDateMonth);
		param.put("day", leaveDateDay);
		return (AttInfo) super.queryForObject("dateRelationDao.selectHolInfoFromAttInfo", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@Override
	public AttEmpType selectEmpWorkInfo(String empId, String leaveDate) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("leavedate", leaveDate);
		return (AttEmpType) super.queryForObject("dateRelationDao.selectHolInfoFromAttEmpType", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@Override
	public AttExrestInfo selectExrestTimeApply(String empId, String exrestdate) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("exrestdate", exrestdate);
		return (AttExrestInfo) super.queryForObject("dateRelationDao.selectExrestInfoApply", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<AttRestApp> selectExrestTime(String empId) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		return (List<AttRestApp>) super.queryForList("dateRelationDao.selectExrestTimeInfo", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@Override
	public AttYearRest selectPtoValidTime(String empId, String ptoYear) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("ptoYear", ptoYear);
		return (AttYearRest) super.queryForObject("dateRelationDao.selectPtoValidTime", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@Override
	public AttYearRest selectPtoValidTime(String empId, String ptoYear, Date ptoStartTime, Date ptoEndTime) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("ptoYear", ptoYear);
		param.put("ptoStartTime", ptoStartTime);
		param.put("ptoEndTime", ptoEndTime);
		return (AttYearRest) super.queryForObject("dateRelationDao.selectPtoValidTimeCheck", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@Override
	public AttMonReport selectReportTime(String empId, String reportYear) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("year", reportYear);
		return (AttMonReport) super.queryForObject("dateRelationDao.selectReportTime", param);
	}

	/** 
	 *  {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<AttRestApp> selectRestApp(String empId, String restYear) {
		Map<String,Object> param = new HashMap<String,Object>();
		param.put("empid", empId);
		param.put("year", restYear);
		return (List<AttRestApp>) super.queryForList("dateRelationDao.selectRestApp", param);
	}

}
