package com.yds.att.common.service;

import java.util.Date;
import java.util.List;

import com.yds.att.bean.OrgInfo;
import com.yds.att.service.AttConstants;
import com.yds.common.bean.UserInfo;

/**
 * 组织关系Service
 * 
 * @author zhangdaoqiang
 *
 */
public interface OrgRelationService {
	/**
	 * 取得请假审批流程
	 * 
	 * @param empId: 申请人ID
	 * @param days: 请假天数
	 * @return OrgInfo表示一个审批组织，List<OrgInfo>表示一个请假审批流程，
	 * 			List<List<OrgInfo>>表示指定人员所有的请假审批流程
	 */
	public List<List<OrgInfo>> getFlowForLeave(String empId, float days, Date fromDate);
	
	/**
	 * 取得考勤更正审批流程
	 * @param empId : 申请人ID
	 * @return OrgInfo表示一个审批组织，List<OrgInfo>表示一个考勤更正审批流程，
	 * 			List<List<OrgInfo>>表示指定人员所有的考勤更正审批流程
	 */
	public List<List<OrgInfo>> getFlowForAtt(String empId, Date attDate);
	
	/**
	 * 取得加班审批流程
	 * @param empId : 申请人ID
	 * @param date : 加班日期
	 * @return OrgInfo表示一个审批组织，List<OrgInfo>表示一个加班审批流程，
	 * 			List<List<OrgInfo>>表示指定人员所有的加班审批流程
	 */
	public List<List<OrgInfo>> getFlowForOvertime(String empId, Date date);
	
	/**
	 * 取得员工负责组织信息及其下属组织信息
	 * 
	 * @param empId ： 员工ID
	 * @return 指定员工所能管理的组织，包括下属组织
	 */
	public List<OrgInfo> getManagedOrgBy(String empId);
	
	/**
	 * 取得员工所能管理的项目
	 * 
	 * @param empId ： 员工ID
	 * @param type : 项目时效性 "0"->已过期； "1"->正在进行； "2"->筹备中
	 * @return 返回指定员工所能管理的项目
	 */
	public List<OrgInfo> getManagedProjectBy(String empId, AttConstants.OrgLifeCycle type);
	
	/**
	 * 取得指定组织的上级组织.
	 * 
	 * @param orgId : 组织ID
	 * @return 返回指定组织ID的直接上级组织
	 */
	public OrgInfo getParentOrgBy(String orgId);
	
	/**
	 * 取得指定组织下的所有成员.
	 * 
	 * @param orgId : 组织ID
	 * @return 返回指定组织ID的所有成员
	 */
	public List<UserInfo> getMembersBy(String orgId, Date date);
	
	/**
	 * 取得指定人员所参与的项目(按项目开始时间倒序排列).
	 * 
	 * @param empId : 人员ID
	 * @param type : 项目时效性 "0"->已过期； "1"->正在进行； "2"->筹备中（暂时未使用）
	 * @return 返回指定人员的参与的项目（三种情况）
	 */
	public List<OrgInfo> getJoinProjectBy(String empId, AttConstants.OrgLifeCycle type);
	
	/**
	 * 根据组织ID取得组织信息.
	 * 
	 * @param orgId : 组织ID
	 * @return 组织信息
	 */
	public OrgInfo getOrgInfoBy(String orgId);
	
}
