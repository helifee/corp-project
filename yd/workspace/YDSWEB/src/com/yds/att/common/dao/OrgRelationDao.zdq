package com.yds.att.common.dao;

import java.util.Date;
import java.util.List;

import com.yds.att.bean.AttEmpOrgInfo;
import com.yds.common.bean.UserInfo;


/**
 * 组织关系Dao
 * 
 * @author zhangdaoqiang
 *
 */
public interface OrgRelationDao {
	
	/**
	 * 取得申请人指定时间所在组织及所有上级组织
	 * 
	 * @param empId ： 员工ID
	 * @return  申请人指定时间所在组织及所有上级组织集合
	 */
	public List<AttEmpOrgInfo> getOrgsBy(String empId, Date date);
	
	/**
	 * 取得员工负责组织ID及其下属组织ID.
	 * 
	 * @param empId : 员工ID
	 * @return 指定员工负责的组织及其下属组织集合
	 */
	public List<AttEmpOrgInfo> getManagedOrgBy(String empId);
	
	/**
	 * 取得员工所能管理的项目.
	 * 
	 * @param empId : 员工ID
	 * @return 返回指定员工所能管理的项目
	 */
	public List<AttEmpOrgInfo> getManagedProjectBy(String empId);
	
	/**
	 * 取得指定ID的组织的层级表示.
	 * 
	 * @param orgId : 组织ID
	 * @return 返回指定组织的level（如： 00001000020001400000000...）
	 */
	public String getOrgLevelBy(String orgId);
	
	/**
	 *  根据层级取得组织信息.
	 *  
	 * @param level : 组织层级level
	 * @return 返回某一层级位置的组织信息
	 */
	public AttEmpOrgInfo getOrgBy(String level);
	
	/**
	 * 根据组织ID取得组织信息
	 * 
	 * @param orgId ： 组织ID
	 * @return 组织信息
	 */
	public AttEmpOrgInfo getOrgInfoBy(String orgId);
	
	/**
	 * 取得指定组织ID指定日期的成员.
	 * 
	 * @param orgId : 组织ID
	 * @param date : 指定日期
	 * @return 返回指定组织ID的成员集合
	 */
	public List<UserInfo> getMembersBy(String orgId, Date date);
	
	/**
	 * 取得指定员工ID的所参与的指定类型（过期、正在进行、未开始）的项目.
	 * 
	 * @param orgId : 组织ID
	 * @return 返回指定员工所参与的项目
	 */
	public List<AttEmpOrgInfo> getJoinPrjt(String empId, String type);
}
