package com.yds.gadget.service.impl;

import java.util.Calendar;
import java.util.Date;
import java.util.List;

import org.springframework.stereotype.Service;

import com.yds.base.service.AbstractBaseService;
import com.yds.gadget.bean.NewsGadgetInfo;
import com.yds.gadget.dao.NewsGadgetDao;
import com.yds.gadget.service.NewsGadgetService;
import com.yds.util.service.DateUtil;

/**
 * @see com.yds.gadget.service.NewsGadgetService
 *
 */
@Service("newsGadgetService")
public class NewsGadgetServiceImpl extends AbstractBaseService implements
		NewsGadgetService {

	private NewsGadgetDao newsGadgetDao;	
	
	private List<NewsGadgetInfo> dayType(List<NewsGadgetInfo> info){
		int passDayType;
		Date newsDate;
		for(int i=0;i < info.size();i++){
			newsDate=DateUtil.parse(info.get(i).getNewsDate());
			
			Calendar c = Calendar.getInstance();			
			c .add(Calendar.MONTH, -1);
			Date nowDate =c.getTime();

			passDayType =nowDate.compareTo(newsDate)>=0?1:0;
			
			info.get(i).setPassDayType(passDayType);
		}
		return info;
		
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public List<NewsGadgetInfo> getPubsInfo() {
		List<NewsGadgetInfo> result = newsGadgetDao.getNewsInfoList("0");		
		return dayType(result);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public List<NewsGadgetInfo> getNewsInfo() {
		List<NewsGadgetInfo> result = newsGadgetDao.getNewsInfoList("1");		
		return dayType(result);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public List<NewsGadgetInfo> getBriefInfo() {
		List<NewsGadgetInfo> result = newsGadgetDao.getNewsInfoList("2");		
		return dayType(result);
	}
	

	public void setNewsGadgetDao(NewsGadgetDao newsGadgetDao) {
		this.newsGadgetDao = newsGadgetDao;
	}
}
