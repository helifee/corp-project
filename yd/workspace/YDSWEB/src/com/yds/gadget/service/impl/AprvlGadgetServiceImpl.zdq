package com.yds.gadget.service.impl;

import java.util.List;

import org.springframework.stereotype.Service;

import com.yds.base.service.AbstractBaseService;
import com.yds.common.service.SessionService;
import com.yds.gadget.bean.AprvlGadgetInfo;
import com.yds.gadget.dao.AprvlGadgetDao;
import com.yds.gadget.service.AprvlGadgetService;

/**
 * 
 * @see com.yds.gadget.service.AprvlGadgetService
 * 
 */
@Service("aprvlGadgetService")
public class AprvlGadgetServiceImpl extends AbstractBaseService implements
		AprvlGadgetService {

	private AprvlGadgetDao aprvlGadgetDao;

	/**
	 * {@inheritDoc}
	 */
	@Override
	public List<AprvlGadgetInfo> getAprvlGadgetInfoList() {

		String titleStr;
		List<AprvlGadgetInfo> resultList = aprvlGadgetDao
				.getAprvlGadgetInfoList(SessionService.getLoginUserId());

		for (int i = 0; i < resultList.size(); i++) {
			titleStr = resultList.get(i).getMsgTitle();
			titleStr = titleStr
					.replace("href=", "href=http://www.yds.yd/kaoqin/");
			
			resultList.get(i).setMsgTitle(titleStr);
		}
		return resultList;
	}

	public AprvlGadgetDao getAprvlGadgetDao() {
		return aprvlGadgetDao;
	}

	public void setAprvlGadgetDao(AprvlGadgetDao aprvlGadgetDao) {
		this.aprvlGadgetDao = aprvlGadgetDao;
	}

}
