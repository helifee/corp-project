package com.yds.gadget.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.gadget.bean.ActiveDeskInfo;
import com.yds.gadget.bean.GadgetInfo;
import com.yds.gadget.dao.ActiveDeskDao;

/**
 * @see com.yds.gadget.dao.ActiveDeskDao
 */
@Repository("activeDeskDao")
public class ActiveDeskDaoImpl extends AbstractBaseDao implements ActiveDeskDao {

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<ActiveDeskInfo> getActiveDeskInfoList(String userId) {
		return super.queryForList("ActiveDeskDao.getActiveDeskInfoList", userId);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public GadgetInfo getGadgetInfo(int gadgetId) {
		return (GadgetInfo) super.queryForObject("ActiveDeskDao.getGadgetInfo", gadgetId);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public int updateDeskInfo(ActiveDeskInfo gadget) {
		return super.update("ActiveDeskDao.updateDeskInfo", gadget);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public int deleteGadget(ActiveDeskInfo gadget) {
		return super.delete("ActiveDeskDao.deleteGadget", gadget);
	}

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<GadgetInfo> getDefGadget() {
		return super.queryForList("ActiveDeskDao.getDefGadget");
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public int deleteAll(String uid) {
		return super.delete("ActiveDeskDao.deleteAll", uid);
	}
}
