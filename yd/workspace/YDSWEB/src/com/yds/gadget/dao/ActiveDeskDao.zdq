package com.yds.gadget.dao;

import java.util.List;

import com.yds.gadget.bean.ActiveDeskInfo;
import com.yds.gadget.bean.GadgetInfo;

/**
 * 获取用户桌面设置
 * 
 * @author 远东)zhangzheng
 * @version 1.00 2010/08/12
 */
public interface ActiveDeskDao {

	/**
	 * 取得用户桌面设置列表
	 * @return 用户桌面设置列表
	 */
	public List<ActiveDeskInfo> getActiveDeskInfoList(String userId);
	
	/**
	 * 取得组件信息
	 * @return 组件信息
	 */
	public GadgetInfo getGadgetInfo(int gadgetId);
	
	/**
	 * 更新用户桌面信息
	 */
	public int updateDeskInfo(ActiveDeskInfo gadget);
		
	/**
	 * 删除组件 
	 */
	public int deleteGadget(ActiveDeskInfo gadget);
	
	/**
	 * 删除全部组件
	 * 
	 * @param uid 用户ID
	 * @return 删除数量
	 */
	public int deleteAll(String uid);
	
	/**
	 * 取得默认组件
	 * 
	 * @return 默认组件列表
	 */
	public List<GadgetInfo> getDefGadget();
}
