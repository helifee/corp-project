package com.yds.gadget.action;

import java.util.List;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.gadget.service.ReadRSSService;
import com.yds.util.bean.RSSCfgBean;

/**
 * RSS读取Action
 * 
 * @author 远东)zhaodong
 * @version 1.00 2010/09/03
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("readRSSAction")
public class ReadRSSAction extends AbstractBaseAction {

	private static final long serialVersionUID = 4297275056745668547L;

	/** RSS Service */
	private ReadRSSService readRSSService;

	/** RSS 类别 */
	private String type;

	/** RSS 内容 */
	private List<RSSCfgBean> content;

	/** 强制刷新 */
	private boolean forceUpdate;
	
	/**
	 * 读取RSS内容
	 * @return SUCCESS
	 * @throws Exception 
	 */
	 
	public String readRSS() throws Exception {
		content = readRSSService.getContent(type,forceUpdate);
		return SUCCESS;
	}

	/**
	 * @param readRSSService the readRSSService to set
	 */
	public void setReadRSSService(ReadRSSService readRSSService) {
		this.readRSSService = readRSSService;
	}

	/**
	 * @return the content
	 */
	public List<RSSCfgBean> getContent() {
		return content;
	}

	/**
	 * @param type the type to set
	 */
	public void setType(String type) {
		this.type = type;
	}

	/**
	 * @param forceUpdate the forceUpdate to set
	 */
	public void setForceUpdate(boolean forceUpdate) {
		this.forceUpdate = forceUpdate;
	}


}
