package com.yds.gadget.action;

import java.util.List;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.common.service.CommonConstants.DataSourceEnum;
import com.yds.gadget.bean.AprvlGadgetInfo;
import com.yds.gadget.service.AprvlGadgetService;
import com.yds.util.service.DbContextHolder;

/**
 * 审批办公桌Action
 * 
 * @author 远东)yuanjinling
 * @version 1.00 2010/09/06
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("aprvlGadgetAction")
public class AprvlGadgetAction extends AbstractBaseAction{

	private static final long serialVersionUID = 4251890077737520320L;
	private AprvlGadgetService aprvlGadgetService;
	private List<AprvlGadgetInfo> aprvlGadgetInfoList;
 	

	public String findAprvlInfoList(){
		try {
			// 使用旧数据库源
			DbContextHolder.setDbType(DataSourceEnum.OLD.toString());
			
			aprvlGadgetInfoList = aprvlGadgetService.getAprvlGadgetInfoList();
		} catch (Exception e) {
			LOG.error("ERROR:get news from old db!", e);
		} finally {
			// 切换到默认数据库源
			DbContextHolder.clearDbType();
		}		
		return SUCCESS;
	}

	public void setAprvlGadgetService(AprvlGadgetService aprvlGadgetService) {
		this.aprvlGadgetService = aprvlGadgetService;
	}

	public List<AprvlGadgetInfo> getAprvlGadgetInfoList() {
		return aprvlGadgetInfoList;
	}

	public void setAprvlGadgetInfoList(List<AprvlGadgetInfo> aprvlGadgetInfoList) {
		this.aprvlGadgetInfoList = aprvlGadgetInfoList;
	}
	
	

}
