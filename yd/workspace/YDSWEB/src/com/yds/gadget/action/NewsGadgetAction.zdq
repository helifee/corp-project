package com.yds.gadget.action;

import java.util.List;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.common.service.CommonConstants.DataSourceEnum;
import com.yds.gadget.service.NewsGadgetService;
import com.yds.gadget.bean.NewsGadgetInfo;
import com.yds.util.service.DbContextHolder;

/**
 * 公告新闻Action
 * 
 * @author 远东)zhangzheng
 * @version 1.00 2010/08/25
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("newsGadgetAction")
public class NewsGadgetAction extends AbstractBaseAction {

	private static final long serialVersionUID = -452507035004537262L;
	
	private NewsGadgetService newsGadgetService;
	private List<NewsGadgetInfo> newsList;
	private List<NewsGadgetInfo> pubsList;
	private List<NewsGadgetInfo> briefList;
	
	public String findNewsList(){
		try {
			// 使用旧数据库源
			DbContextHolder.setDbType(DataSourceEnum.OLD.toString());
			
			newsList = newsGadgetService.getNewsInfo();
			pubsList = newsGadgetService.getPubsInfo();
			briefList = newsGadgetService.getBriefInfo();
		} catch (Exception e) {
			LOG.error("ERROR:get news from old db!", e);
		} finally {
			// 切换到默认数据库源
			DbContextHolder.clearDbType();
		}
		return SUCCESS;
	}

	public void setNewsGadgetService(NewsGadgetService newsGadgetService) {
		this.newsGadgetService = newsGadgetService;
	}

	public List<NewsGadgetInfo> getNewsList() {
		return newsList;
	}

	public void setNewsList(List<NewsGadgetInfo> newsList) {
		this.newsList = newsList;
	}

	public List<NewsGadgetInfo> getPubsList() {
		return pubsList;
	}

	public void setPubsList(List<NewsGadgetInfo> pubsList) {
		this.pubsList = pubsList;
	}

	public List<NewsGadgetInfo> getBriefList() {
		return briefList;
	}

	public void setBriefList(List<NewsGadgetInfo> briefList) {
		this.briefList = briefList;
	}

}
