package com.yds.gadget.action;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.common.service.CommonConstants.DataSourceEnum;
import com.yds.gadget.service.SearchPhoneNOService;
import com.yds.util.service.DbContextHolder;


/**
 * 查找电话号码Action
 * 
 * @author 远东)zhaodong
 * @version 1.00 2010/09/14
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("searchPhoneNOAction")
public class SearchPhoneNOAction extends AbstractBaseAction {

	private static final long serialVersionUID = 1887385753949638012L;
	
	/** 用户ID */
	private String userId;
	
	/** 电话 */
	private String phone;
	
	/** 座位ID */
	private String seatId;
	
	/** Service */
	private SearchPhoneNOService searchPhoneNOService;
	
	/** 
	 * 查询电话号码
	 * @return SUCCESS
	 */
	@Override
	public String execute(){
		try {
			// 使用座位数据库源
			DbContextHolder.setDbType(DataSourceEnum.SEAT.toString());
			phone = searchPhoneNOService.getPhoneNO(userId);
			
		} catch (Exception e) {
			LOG.error("ERROR:get news from seat db!", e);
		} finally {
			// 切换到默认数据库源
			DbContextHolder.clearDbType();
		}
		return SUCCESS;
		
	}

	/** 
	 * 查询座位ID
	 * @return SUCCESS
	 */
	public String executeSeat(){
		try {
			// 使用座位数据库源
			DbContextHolder.setDbType(DataSourceEnum.SEAT.toString());
			seatId = searchPhoneNOService.getSeatId(userId);
			
		} catch (Exception e) {
			LOG.error("ERROR:get news from seat db!", e);
		} finally {
			// 切换到默认数据库源
			DbContextHolder.clearDbType();
		}
		return SUCCESS;
		
	}
	
	/**
	 * @param userId the userId to set
	 */
	public void setUserId(String userId) {
		this.userId = userId;
	}

	/**
	 * @return the phone
	 */
	public String getPhone() {
		return phone;
	}

	/**
	 * @param searchPhoneNOService the searchPhoneNOService to set
	 */
	public void setSearchPhoneNOService(SearchPhoneNOService searchPhoneNOService) {
		this.searchPhoneNOService = searchPhoneNOService;
	}

	/**
	 * @return the seatId
	 */
	public String getSeatId() {
		return seatId;
	}
	
}
