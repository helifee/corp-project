package com.yds.util.service;

import com.opensymphony.xwork2.ActionContext;

/**
 * Application管理
 * @author zhangdaoqiang
 * @version 1.00 2009/03/08
 */
public class ApplicationManager {


	/**
	 * 从Application中根据key取值
	 * 
	 * @param key
	 *            对应key
	 * @return 返回key在application中所对应的对象
	 */
	public static Object get(String key) {
		if (null == key || "".equals(key)) {
			return null;
		}
		return ActionContext.getContext().getApplication().get(key);
	}

	/**
	 * 向Application中相应key设值(注意: 删除Application中相应key的值请使用delete()方法)
	 * 
	 * @param key
	 *            对应key
	 * @param value
	 *            要设置的值(对象)
	 */
	public static void set(String key, Object value) {
		if (null == key || "".equals(key)) {
			return;
		}
		ActionContext.getContext().getApplication().put(key, value);
	}

	/**
	 * 删除Application中相应key的值
	 * 
	 * @param key
	 *            对应key
	 */
	public static void delete(String key) {
		if (null == key || "".equals(key)) {
			return;
		}
		set(key, null);
		ActionContext.getContext().getApplication().remove(key);
	}

	/**
	 * 销毁Application(关闭系统)
	 */
	public static void destroy() {
		ActionContext.getContext().getApplication().clear();
	}
}
