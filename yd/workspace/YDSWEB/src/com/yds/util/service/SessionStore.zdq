package com.yds.util.service;

/**
 * 静态调用SessionStoreManager
 * 
 * @author wangduo
 * @version 1.00 2010/06/24
 */
public class SessionStore {

	/**
	 * 保存条件对象
	 * 
	 * @param actionkey
	 * @param object
	 */
	public static void setCondition(String actionkey, Object condition) {
		
		new SessionStoreManager().setCondition(actionkey, condition);
		
	}
	
	/**
	 * 取得条件对象
	 * 
	 * @param actionkey
	 * 
	 * @return 条件bean
	 */
	public static Object getCondition(String actionkey) {
		
		return new SessionStoreManager().getCondition(actionkey);
	}
	
	/**
	 * 保存数据对象
	 * 
	 * @param actionkey
	 * @param object
	 */
	public static void setData(String actionkey, Object condition) {
		
		new SessionStoreManager().setData(actionkey, condition);
		
	}
	
	/**
	 * 取得数据对象
	 * 
	 * @param actionkey
	 * 
	 * @return 数据bean
	 */
	public static Object getData(String actionkey) {
		
		return new SessionStoreManager().getData(actionkey);
	}
	
	/**
	 * 销毁存储的数据
	 */
	public static void destroy() {
		
		new SessionStoreManager().destroy();
		
	}
	
	/**
	 * 判断参数key是否在storeList中
	 * @param key
	 * 
	 * @return boolean值
	 */
	public static boolean isStore(String key) {
		
		return new SessionStoreManager().isStore(key);
		
	}

}
