package com.yds.library.service;

import java.util.List;

import com.yds.library.bean.Bookinfo;
import com.yds.library.bean.Finishheadinfo;
import com.yds.library.bean.Finishinfo;



/**
 * 图书归还(业务逻辑)
 * 
 * @author zhangchi
 * @version 1.00 2010/12/09
 */
public interface BookreturnService {
	
	/**
	 * 根据登录用户ID取得借书信息
	 * 
	 * @return List<Bookreturninfo> 借书信息
	 */
	public abstract List<Bookinfo> getbookreturnInfo();
	
	/**
	 * 逻辑删除用户借阅信息
	 * 
	 * @param loanId
	 *            需要逻辑删除的借阅信息ID
	 * @return boolean 更新成功：true ; 更新失败：false
	 */
	public boolean deleteLoanInfo(List<String> loanlist);
	
	/**
	 * 取得用户刚刚逻辑删除的借阅信息
	 * 
	 * @param loanlist 已经逻辑删除的借阅信息ID
	 * @return List<Finishinfo> 刚刚逻辑删除的借阅信息
	 */
	public List<Finishinfo> getFilishInfo(List<String> loanlist);
	
	/**
	 * 取得用户的借阅上限并整合成提示信息
	 * 
	 * @return Finishheadinfo 整合的提示信息
	 */
	public Finishheadinfo getbooklimit(Integer returnNum);
}