package com.yds.library.dao;

import java.util.List;

import com.yds.library.bean.Bookinfo;

/**
 * 书籍管理
 * @author zhangchi
 * @version 1.0 2010/12/14
 */
public interface BookmanageDao {
	
	/**
	 * 检索图书详细信息
	 * 
	 * @return List<Bookmanageinfo> 书籍详细信息
	 */
	public abstract List<Bookinfo> getBookmanageInfo(Bookinfo bookmanageInfo);
	
	/**
	 * 通过ID检索用户名
	 * 
	 * @return String 书籍详细信息
	 */
	public abstract String getPursename(String purseid);
	
	/**
	 * 更新图书信息
	 * 
	 * @return int 更新成功
	 */
	public abstract int updateBookInfo(Bookinfo bookmanageInfo);
	
	/**
	 * 取得图书总册数
	 * 
	 * @return String 图书册数
	 */
	public abstract String getBookCount();
}