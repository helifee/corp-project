package com.yds.library.dao;

import com.yds.common.bean.UserResult;


/**
 * 登录处理（数据库访问）
 * 
 * @author zhangchi
 * @version 1.00 20010/12/08
 */
public interface LogonDao {
	
	/**
	 * 检索用户表中用户ID='userId'的密码版本号(新数据库)
	 * 
	 * @param userId
	 *            用户ID
	 * @return String 版本号信息
	 */
	public abstract String verCheck(String userId);
	
	/**
	 * 检索用户表中用户ID='userId'的信息(新数据库)
	 * 
	 * @param userId
	 *            用户ID
	 * @return UserResult 用户信息
	 */
	public abstract UserResult login(String userId);
	
	/**
	 * 检索用户表中用户ID='userId'的信息（旧数据库）
	 * 
	 * @param userId
	 *            用户ID
	 * @return UserResult 用户信息
	 */
	public abstract UserResult oldlogin(String userId);
	
	/**
	 * 根据用户登陆的ID和密码信息更改新数据库中的密码为旧数据库密码新加密方式后的密码
	 * 
	 * @param passwordInfo
	 *            用户ID和密码信息
	 */
	public int updatePWInfo (UserResult passwordInfo);
}