package com.yds.library.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.library.bean.Bookinfo;
import com.yds.library.dao.BookmanageDao;

/**
 * @see BookmanageDao
 */
@Repository("bookmanageDao")
public class BookmanageDaoImpl extends AbstractBaseDao implements BookmanageDao {
	
	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<Bookinfo> getBookmanageInfo(Bookinfo bookmanageInfo) {
		
		return (List<Bookinfo>)super
					.queryForList("Bookmanageinfo.getBookmanageInfo",bookmanageInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public String getPursename(String purseid) {
		return (String)super
					.queryForObject("Bookmanageinfo.getPursename",purseid);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public int updateBookInfo(Bookinfo bookmanageInfo) {
		
		return super.update("Bookmanageinfo.updatebookInfo",bookmanageInfo);
	}

	@Override
	public String getBookCount() {
		return (String)super.queryForObject("Bookmanageinfo.getbookCount");
	}
}