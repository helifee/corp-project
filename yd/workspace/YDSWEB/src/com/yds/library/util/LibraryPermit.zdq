package com.yds.library.util;

import com.yds.library.util.SessionConstants;
import com.yds.util.service.Session;

/**
 * 判断是否拥有管理员权限
 * @author zhangchi
 * @version 1.00 2010/12/10
 */
public class LibraryPermit {

	/**
	 * 取得session中管理员权限
	 * 
	 * @return true:拥有管理员权限  false：没有管理员权限
	 */
	public static boolean hasThePermitOfAdmin() {
		
		String liabary = (String)Session.get(SessionConstants.LIBRARYPERM);
		if ("1".equals(liabary)) {
			return true;
		}
		return false;
	}
}
