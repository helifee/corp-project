package com.yds.common.bean;

import com.yds.base.bean.BaseBean;

/**
 * 部门详细信息Bean
 * 
 * @author fengliang
 * @version 1.0 2010/03/05
 */
public class PagerInfo extends BaseBean {

	private static final long serialVersionUID = 2967206459115096041L;
	
	/** 开始查询的记录数. */
	private Integer offset;
	/** 总记录数. */
	private Long totalCount; 
	/** 总页数. */
	private Long totalPagesCount; 
	/** 每页的记录数. */
	private Integer perDisplayCount; 
	/** 当前页. */
	private Integer pageNumber; 
	/** 分页导航条页码数量设置. */
	private Integer pagerIndexCount; 
	/** 分页请求的action. */
	private String pagerActionName; 

	/**
	 * 设置总页数 
	 * 
	 * @param totalCount
	 * @param perDisplayCount
	 */
	public void setTotalPagesCount(Long totalCount, Integer parPerDisplayCount) {
		if (totalCount == 0 || parPerDisplayCount == null || parPerDisplayCount == 0) {
			totalPagesCount = 1L;
		} else {
			// 显示的页码数
			totalPagesCount = totalCount / parPerDisplayCount;
			// 如果不能整除则增加一页
			if ((totalPagesCount * parPerDisplayCount) != totalCount) {
				totalPagesCount = totalPagesCount + 1;
			}
		}
	}

	/**
	 * @return the offset
	 */
	public Integer getOffset() {
		return offset;
	}
	
	/**
	 * @param offset
	 *            the offset to set
	 */
	public void setOffset(Integer offset) {
		this.offset = offset;
	}

	/**
	 * @return the totalCount
	 */
	public Long getTotalCount() {
		return totalCount;
	}

	/**
	 * @param totalCount
	 *            the totalCount to set
	 */
	public void setTotalCount(Long totalCount) {
		this.totalCount = totalCount;
	}

	/**
	 * @return the totalPagesCount
	 */
	public Long getTotalPagesCount() {
		return totalPagesCount;
	}

	/**
	 * @return the perDisplayCount
	 */
	public Integer getPerDisplayCount() {
		return perDisplayCount;
	}

	/**
	 * @param perDisplayCount
	 *            the perDisplayCount to set
	 */
	public void setPerDisplayCount(Integer perDisplayCount) {
		this.perDisplayCount = perDisplayCount;
	}

	/**
	 * @return the pageNumber
	 */
	public Integer getPageNumber() {
		return pageNumber;
	}

	/**
	 * @param pageNumber
	 *            the opageNumber to set
	 */
	public void setPageNumber(Integer pageNumber) {
		this.pageNumber = pageNumber;
	}

	/**
	 * @return the pagerIndexCount
	 */
	public Integer getPagerIndexCount() {
		return pagerIndexCount;
	}

	/**
	 * @param offset
	 *            the offset to set
	 */
	public void setPagerIndexCount(Integer pagerIndexCount) {
		this.pagerIndexCount = pagerIndexCount;
	}

	/**
	 * @return the pagerActionName
	 */
	public String getPagerActionName() {
		return pagerActionName;
	}

	/**
	 * @param offset
	 *            the offset to set
	 */
	public void setPagerActionName(String pagerActionName) {
		this.pagerActionName = pagerActionName;
	}

}
