package com.yds.common.service;

import java.util.List;

import com.yds.common.bean.ComCodeConf;
import com.yds.common.bean.ComCodeMaint;
import com.yds.common.bean.TypeInfo;

/**
 * 系统参数维护(业务逻辑)
 * 
 * @author renlong
 * @version 1.00 2010/06/09
 */
public interface ComCodeMaintService {

	/**
	 * 取得系统参数信息一览
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @return List<ComCodeMaint> 系统参数信息List
	 */
	public List<ComCodeMaint> getDiffList(String subSys, String typeId) throws Exception ;

	/**
	 * 取得系统参数类别一览
	 * 
	 * @param subSys
	 *            子系统ID
	 * @return List<TypeInfo> 系统参数类别List
	 */
	public List<TypeInfo> getTypeList(String subSys);

	/**
	 * 画面显示的Label内容
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @return List<ComCodeConf> 画面显示的Label内容List
	 */
	public List<ComCodeConf> getDispNameList(String subSys, String typeId);

	/**
	 * 取得区分信息
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @param diffNo
	 *            区分NO
	 * @return ComCodeMaint 区分信息
	 */
	public ComCodeMaint getDiffInfo(String subSys, String typeId, String diffNo);

	/**
	 * 取得区分附加属性
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @param comCodeMaint
	 *            区分信息
	 * @return List<ComCodeConf> 区分附加属性List
	 */
	public List<ComCodeConf> getComCodeConfList(String subSys, String typeId,
			ComCodeMaint comCodeMaint)throws Exception ;

	/**
	 * 添加区分信息
	 * 
	 * @param comCodeMaint
	 *            区分信息
	 * @return true/false
	 */
	public boolean insertDiffInfo(ComCodeMaint comCodeMaint);

	/**
	 * 修改区分信息
	 * 
	 * @param comCodeMaint
	 *            区分信息
	 * @return 更新行数
	 */
	public int updateDiffInfo(ComCodeMaint comCodeMaint);

	/**
	 * 取得系统参数排序信息一览
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @return List<ComCodeMaint> 系统参数排序List
	 */
	public List<ComCodeMaint> getDiffSortList(String subSys, String typeId);

	/**
	 * 更新区分排序
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @param diffSort
	 *            区分顺
	 * @return 更新行数
	 */
	public int updateDiffSort(String subSys, String typeId, String diffSort);
}
