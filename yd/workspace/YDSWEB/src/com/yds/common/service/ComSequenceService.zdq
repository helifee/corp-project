package com.yds.common.service;

import com.yds.common.bean.ComSeq;

/**
 * 序列取得处理（数据库访问）
 * 
 * @author tianjian
 * @version 1.00 2010/08/06
 */
public interface ComSequenceService {

	/**
	 * 取得下一个序列
	 * 
	 * @param table
	 *            表名
	 * @param colunm
	 *            列名
	 * @param valueSize
	 *            列的位数（如果大于0，返回一个按位数补零的字符串，如果等于0，直接返回序列）            
	 * @return String 下一个序列字符串
	 */
	public String getNextSequence(String table,String colunm,int valueSize) throws Exception;
	
	/**
	 * 取得采番表信息
	 * 
	 * @param table
	 *            表名
	 * @param colunm
	 *            列名           
	 * @return ComSeq 取得采番表信息
	 */	
	public ComSeq getSequence(String table,String colunm) throws Exception;
}
