package com.yds.common.service.impl;

import java.util.List;
import org.springframework.stereotype.Service;
import com.yds.base.service.AbstractBaseService;
import com.yds.common.bean.SysLogSearchInfo;
import com.yds.common.dao.SysLogSearchDao;
import com.yds.common.service.SysLogSearchService;
import com.yds.util.service.StringUtil;

/**
 * @see com.com.yds.common.service.SysLogSearchService
 */
@Service("sysLogSearchService")
public class SysLogSearchServiceImpl extends AbstractBaseService implements
		SysLogSearchService {

	private SysLogSearchDao sysLogSearchDao;

	/**
	 * @param sysLogSearchDao
	 *            the sysLogSearchDao to set
	 */
	public void setSysLogSearchDao(SysLogSearchDao sysLogSearchDao) {
		this.sysLogSearchDao = sysLogSearchDao;
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public List<SysLogSearchInfo> getSysLogInfo(SysLogSearchInfo param,
			int offset, int perCounts) {

		param = beanProcess(param);
		List<SysLogSearchInfo> logInfo = (List<SysLogSearchInfo>) sysLogSearchDao
				.getSysLogInfo(param, offset, perCounts);

		return logInfo;
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long getTotalCount(SysLogSearchInfo param) {
		
		param = beanProcess(param);
		
		return sysLogSearchDao.getTotalCount(param);
	}
	
	private SysLogSearchInfo beanProcess(SysLogSearchInfo param){
		// 检索ID前自动生成YD
		String userId = param.getUserId();
		if (!((null == userId) || "".equals(userId))) {
			param.setUserId(StringUtil.leftPadYd(userId));
		}

		String opId = param.getOpId();
		if (!((null == opId) || "".equals(opId))) {
			param.setOpId(StringUtil.leftPadYd(opId));
		}
		
		return param;
	}
}
