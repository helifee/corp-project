package com.yds.common.service;

import com.yds.common.bean.UserResult;

/**
 * 登录处理(业务逻辑)
 * 
 * @author zhaodong
 * @version 1.00 2009/09/22
 */
public interface LoginService {

	/**
	 * 根据输入的用户名密码判断是否可以登录
	 * 
	 * @param userid
	 *            用户ID
	 * @param password
	 *            密码
	 * @param isDomainLogin
	 * 			  域登录标记
	 * @return boolean 成功登录的情况： true， 未成功登录的情况: false
	 */
	public boolean login(String userid, String password, boolean isDomainLogin);
	
	/**
	 * 根据输入的用户名密码判断是否可以登录(新数据库)
	 * 
	 * @param userid
	 *            用户ID
	 * @param password
	 *            密码
	 * @param isDomainLogin
	 * 			  域登录标记
	 * @return UserResult 
	 */
	public UserResult loginCheck(String userid, String password, boolean isDomainLogin);
	
	/**
	 * 根据输入的用户名密码判断是否可以登录(旧数据库)
	 * 
	 * @param userid
	 *            用户ID
	 * @param password
	 *            密码
	 * @return UserResult 
	 */
	public UserResult oldLogin(String userid, String password);
	
	/**
	 * 根据用户登陆信息和密码验证结果记录日志
	 * 
	 * @param userId
	 *            用户ID
	 * @param userResult
	 *            用户信息
	 * @param userCheckFlg
	 *            验证成功用户：	true ，  验证失败用户：false 
	 */
	public void logging(String userId,UserResult userResult,boolean userCheckFlg );
	
	/**
	 * 根据输入的用户ID判断密码版本号
	 * 
	 * @param userId
	 *            用户ID
	 * @return String
	 *            初始登陆： '0' ， 非初始登陆：'1'
	 */
	public String verCheck(String userId);

	/**
	 * 更改密码
	 * 
	 * @param userResult
	 *            用户信息
	 * @param password
	 *            用户密码
	 * @return boolean 更新成功：true ; 更新失败：false
	 */
	public boolean updatePWInfo(UserResult userResult , String password);
	
}
