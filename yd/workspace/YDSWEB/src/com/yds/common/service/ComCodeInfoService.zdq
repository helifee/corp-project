package com.yds.common.service;

import java.util.List;

import com.yds.common.bean.ComCodeInfo;
import com.yds.common.bean.ComCodeMaint;

/**
 * 系统参数信息取得(业务逻辑)
 * 
 * @author bixiuqing
 * @version 1.00 2010/05/21
 */
public interface ComCodeInfoService {

	/**
	 * 取得系统参数信息
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @param diff
	 *            追加的区分信息
	 * @return List<ComCodeInfo> 系统参数信息list
	 */
	public List<ComCodeInfo> getComCodeInfo(String subSys, String typeId,
			String... diff);

	/**
	 * 取得系统参数信息
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @param diffNo
	 *            区分NO
	 * @return String 区分名称
	 */
	public String getDiffName(String subSys, String typeId, String diffNo);

	/**
	 * 取得系统参数信息
	 * 
	 * @param comCodeInfo
	 *            系统参数信息
	 * @return List<ComCodeInfo> 系统参数信息list
	 */
	public List<ComCodeInfo> getComCodeInfo(ComCodeInfo comCodeInfo);
	
	/**
	 * 取得系统区分详细信息
	 * 
	 * @param subSys
	 *            子系统ID
	 * @param typeId
	 *            类型ID
	 * @param diffNo
	 *            区分NO
	 * @return String 区分名称
	 */
	public ComCodeMaint getDetailComCodeInfo(String subSys, String typeId, String diffNo);
	
	
	
}
