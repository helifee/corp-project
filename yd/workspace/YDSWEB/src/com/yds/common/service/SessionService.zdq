package com.yds.common.service;

import com.yds.common.bean.UserInfo;
import com.yds.util.service.Session;

/**
 * 取Session里固定信息
 * @author tianjian
 * @version 1.00 2009/09/22
 */
public class SessionService extends Session {
	/**
	 * 取得session中登录用户ID
	 * 
	 * @return 登录用户ID
	 */
	public static String getLoginUserId() {
		UserInfo userInfo = (UserInfo) Session.get(SessionConstants.USERINFO);
		if (userInfo == null) {
			return null;
		}
		return userInfo.getUserId();
	}
}
