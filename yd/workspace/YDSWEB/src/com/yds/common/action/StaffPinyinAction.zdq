package com.yds.common.action;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.common.service.StaffPinyinService;

/**
 * 获得员ID、姓名、工拼音首字母
 * 
 * @author wangduo
 * @version 1.00 2010/04/06
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("staffPinyinAction")
public class StaffPinyinAction extends AbstractBaseAction {

	private static final long serialVersionUID = 514618870761149255L;
	private StaffPinyinService staffPinyinService;
	/**员工ID. */
	private List<String> personIdList;
	/**员工姓名. */
	private List<String> personNameList;
	/**员工拼音首字母. */
	private List<String> personPinyinList;

	/**
	 * 得到员工ID，姓名，拼音首字母数组
	 * 
	 * @return
	 */
	public String getPinyin() {

		personIdList = new ArrayList<String>();
		personNameList = new ArrayList<String>();
		personPinyinList = new ArrayList<String>();

		staffPinyinService.setPinyin(personIdList, personNameList, personPinyinList);

		return SUCCESS;
	}

	/**
	 * @return the personIdList
	 */
	public List<String> getPersonIdList() {
		return personIdList;
	}

	/**
	 * @return the personNameList
	 */
	public List<String> getPersonNameList() {
		return personNameList;
	}

	/**
	 * @return the personPinyinList
	 */
	public List<String> getPersonPinyinList() {
		return personPinyinList;
	}

	/**
	 * @param pinyinService
	 *            the pinyinService to set
	 */
	public void setStaffPinyinService(StaffPinyinService staffPinyinService) {
		this.staffPinyinService = staffPinyinService;
	}

}
