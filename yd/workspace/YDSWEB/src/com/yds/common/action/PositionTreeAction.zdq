package com.yds.common.action;

import java.util.List;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.common.bean.Tree;
import com.yds.common.service.PositionService;

/**
 * 职位树Action
 * 
 * @author zhangdaoqiang
 * @version 1.0 2010/06/07
 */
@Controller("positionTreeAction")
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
public class PositionTreeAction extends AbstractBaseAction {

	private static final long serialVersionUID = -2266565361752001714L;
	
	private PositionService positionService;
	
	private List<Tree> positionTree;

	/**
	 * 取得所有职位树
	 * 
	 * @return 所有职位的json串
	 */
	public String queryAllPositions() {
		
		this.setPositionTree(this.positionService.getPositionTree());
		
		return SUCCESS;
	}

	public void setPositionService(PositionService positionService) {
		this.positionService = positionService;
	}

	public List<Tree> getPositionTree() {
		return positionTree;
	}

	public void setPositionTree(List<Tree> positionTree) {
		this.positionTree = positionTree;
	}

}
