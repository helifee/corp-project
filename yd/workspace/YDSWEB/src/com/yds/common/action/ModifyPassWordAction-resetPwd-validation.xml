<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="passWord.managerPW">
		<field-validator type="requiredstring">
			<message>管理员密码不能为空！</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">4</param>
			<param name="maxLength">50</param>
			<message>管理员密码长度为${minLength}到${maxLength}位！</message>
		</field-validator>
	</field>
	<field name="passWord.userId">
		<field-validator type="requiredstring">
			<message>重置用户ID不能为空！</message>
		</field-validator>	
		<field-validator type="stringlength">
			<param name="minLength">6</param>
			<param name="maxLength">6</param>
			<message>重置用户ID长度必须为${minLength}位！</message>
		</field-validator>		
	</field>
	<field name="passWord.newPW">
		<field-validator type="requiredstring">
			<message>重置密码不能为空！</message>
		</field-validator>
		<field-validator type="stringlength">
			<param name="minLength">7</param>
			<param name="maxLength">50</param>
			<message>重置密码长度为${minLength}到${maxLength}位！</message>
		</field-validator>
	</field>	
</validators>