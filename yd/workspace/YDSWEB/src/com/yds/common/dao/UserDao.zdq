package com.yds.common.dao;

import java.util.List;
import java.util.Map;

import com.yds.common.bean.EmpInfo;
import com.yds.common.bean.UserInfo;
import com.yds.common.bean.UserResult;

/**
 * 用户编辑处理（数据库访问）
 * 
 * @author renlong
 * @version 1.00 2010/01/07
 */
public interface UserDao {

	/**
	 * 取得用户中文名
	 * 
	 * @param userId
	 *            用户ID
	 * @return userNm 用户名称
	 */
	public String getUserNm(Map<String,String> condition);
	
	/**
	 * 全部用户ID、用户名取得
	 * @return 用户一览
	 */
	public List<UserResult> getExistUsers();
	
	
	/**
	 * 按组取得用户ID、名称
	 * @return 用户一览
	 */
	public List<UserInfo> getTeamUserList(String teamId);
	
	
	/**
	 * 判断用户ID是否存在
	 * 
	 * @param userId
	 *            用户ID
	 * @return Long 检索条数
	 */
	public Long findUserId(String userId);
	
	/**
	 * 根据ID取得人员信息(人员ID、性别、生日)
	 * 
	 * @param id ： 人员ID
	 * @return 人员信息
	 */
	public EmpInfo getEmpInfoById(String id);
	
	/**
	 * 取得全体人员List(人员ID、性别、生日)
	 * @return 全体人员List
	 */
	public List<EmpInfo> getEmpList();

}
