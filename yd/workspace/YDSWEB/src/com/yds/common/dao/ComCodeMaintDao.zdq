package com.yds.common.dao;

import java.util.List;

import com.yds.common.bean.ComCodeConf;
import com.yds.common.bean.ComCodeMaint;
import com.yds.common.bean.ItemInfo;
import com.yds.common.bean.TypeInfo;

/**
 * 系统参数信息获取（数据库访问）
 * 
 * @author renlong
 * @version 1.00 2010/06/11
 */
public interface ComCodeMaintDao {

	/**
	 * 取得系统参数信息
	 * 
	 * @param comCodeInfo
	 *            系统参数信息检索条件
	 * @return List<ComCodeMaint> 系统参数信息list
	 */
	public List<ComCodeMaint> getDiffList(ComCodeMaint comCodeMaint);

	/**
	 * 取得系统参数类别一览
	 * 
	 * @param subSys
	 *            子系统ID
	 * @return List<TypeInfo> 系统参数类别list
	 */
	public List<TypeInfo> getTypeList(String subSys);

	/**
	 * 取得区分附加属性
	 * 
	 * @param comCodeConf
	 *            区分附加属性检索条件
	 * @return List<ComCodeConf> 区分附加属性
	 */
	public List<ComCodeConf> getComCodeConfList(ComCodeConf comCodeConf);

	/**
	 * 区分信息的添加
	 * 
	 * @param comCodeMaint
	 *            要添加区分信息
	 */
	public abstract Object insertDiffInfo(ComCodeMaint comCodeMaint);

	/**
	 * 区分信息的修改
	 * 
	 * @param comCodeMaint
	 *            要修改区分信息
	 */
	public abstract int updateDiffInfo(ComCodeMaint comCodeMaint);

	/**
	 * 取得区分附加属性外部数据
	 * 
	 * @param itemInfo
	 *            区分附加属性外部数据检索条件
	 * @return List<ComCodeConf> 区分附加属性
	 */
	public List<ItemInfo> getItemInfoList(ItemInfo itemInfo);

	/**
	 * 取得系统参数排序信息
	 * 
	 * @param comCodeMaint
	 *            系统参数排序信息检索条件
	 * @return List<ComCodeMaint> 系统参数排序信息list
	 */
	public List<ComCodeMaint> getDiffSortList(ComCodeMaint comCodeMaint);

	/**
	 * 区分信息顺的修改
	 * 
	 * @param comCodeMaint
	 *            要修改区分信息
	 */
	public abstract int updateDiffSort(ComCodeMaint comCodeMaint);
	
	/**
	 * 取得区分最大序号
	 * 
	 * @param comCodeMaint
	 *            区分最大序号检索条件
	 * @return List<ComCodeMaint> 系统参数排序信息list
	 */
	public String getMaxDiffSort(ComCodeMaint comCodeMaint);
}
