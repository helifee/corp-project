package com.yds.common.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.common.bean.ThemeInfo;
import com.yds.common.dao.UserThemeDao;

/**
 * @param <themeInfo>
 * @see UserThemeDao
 */
@Repository("userThemeDao")
public class UserThemeDaoImpl extends AbstractBaseDao implements UserThemeDao {

	/**
	 * {@inheritDoc}
	 */
	@Override
	public ThemeInfo getThemeNm(String userId) {
		ThemeInfo result = (ThemeInfo)super.queryForObject("UserThemeDao.getThemeNm", userId);
		return result;
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<ThemeInfo> getThemeNmList(){
		return super.queryForList("UserThemeDao.getThemeNmList");
	}

	@Override
	public boolean updateUserTheme(ThemeInfo themeInfo) {
		ThemeInfo result = (ThemeInfo)super.queryForObject("UserThemeDao.getThemeNm", themeInfo.getUserId());
		if(result == null){
			return super.insert("UserThemeDao.insertUserTheme", themeInfo) != null;
		}else{
			return super.update("UserThemeDao.updateUserTheme", themeInfo) > 0;
		}
	}
}
