<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTDSQLMap2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="PageLockBatchDao">

	<!-- 删除排他用户信息-->
	
	<!-- 最近一次更新时间 < 当前时间- 20分钟 or 登陆状态 = '2'  --> 
	<delete id="deleteLockUser" parameterClass="java.util.Date">
		<![CDATA[
		DELETE FROM COM_PAGE_LOCK 
		WHERE  CURRENT_UPDATE_TIME < #deleteTime#
		   OR  STATE_FLAG = '2';
		   ]]> 
	</delete>
</sqlMap>
