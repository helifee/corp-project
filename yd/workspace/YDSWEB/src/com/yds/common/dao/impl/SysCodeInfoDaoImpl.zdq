package com.yds.common.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.common.bean.SysCodeInfo;
import com.yds.common.dao.SysCodeInfoDao;

/**
 * @see SysCodeInfoDao
 */
@Repository("sysCodeInfoDao")
public class SysCodeInfoDaoImpl extends AbstractBaseDao implements
		SysCodeInfoDao {

	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<SysCodeInfo> getSysCodeInfo(String typeId) {
		List<SysCodeInfo> resultList = (List<SysCodeInfo>) super.queryForList(
				"SysCodeInfoDao.getCodeInfo", typeId);
		if (resultList.size() == 0) {
			return null;
		} else {
			return (List<SysCodeInfo>) resultList;
		}
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public String getDiffName(SysCodeInfo sysCodeInfo) {

		return (String) super.queryForObject("SysCodeInfoDao.getDiffName", sysCodeInfo);
	}
}
