package com.yds.sample.action;

import java.util.List;

import net.sf.json.JSONArray;

import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;

import com.yds.base.action.AbstractBaseAction;
import com.yds.sample.service.TreeTableNewService;
import com.yds.sample.bean.TreeTableNewAuthorBean;
import com.yds.sample.bean.TreeTableNewBookBean;
import com.yds.sample.bean.TreeTableNewStoreBean;

/**
 * 多级树表格演示Action
 * 
 * @author 远东)zhangzheng
 * @version 1.00 2010/12/08
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("treeTableNewAction")
public class TreeTableNewAction extends AbstractBaseAction {

	private static final long serialVersionUID = 7809218306479850160L;
	private TreeTableNewService treeTableNewService;
	private String authorId;
	private String bookIsbn;
	private String jsonStr;

	public String findAuthorLst() {
		JSONArray jsobj = JSONArray.fromObject(treeTableNewService.getAuthorList());
		setJsonStr(jsobj.toString());
		return SUCCESS;
	}

	public String findBookLst() {
		JSONArray jsobj = JSONArray.fromObject(treeTableNewService.getBookList(authorId));
		setJsonStr(jsobj.toString());
		return SUCCESS;
	}

	public String findStoreLst() {
		JSONArray jsobj = JSONArray.fromObject(treeTableNewService.getStoreList(bookIsbn));
		setJsonStr(jsobj.toString());
		return SUCCESS;
	}

	public String getAuthorId() {
		return authorId;
	}

	public void setAuthorId(String authorId) {
		this.authorId = authorId;
	}

	public String getBookIsbn() {
		return bookIsbn;
	}

	public void setBookIsbn(String bookIsbn) {
		this.bookIsbn = bookIsbn;
	}

	public String getJsonStr() {
		return jsonStr;
	}

	public void setJsonStr(String jsonStr) {
		this.jsonStr = jsonStr;
	}

	public void setTreeTableNewService(TreeTableNewService treeTableNewService) {
		this.treeTableNewService = treeTableNewService;
	}

}
