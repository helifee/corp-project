<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="aid">
		<field-validator type="requiredstring">
			<message>${getText("yds.com.warning.0001","",{"ID"})}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">3</param>
			<param name="maxLength">3</param>
			<message>${getText("yds.com.warning.0003","",{"ID","3"})}</message>
		</field-validator>
	</field>
	<field name="mail">
		<field-validator type="stringlength">
			<param name="minLength">3</param>
			<param name="maxLength">50</param>
			<message>${getText("yds.com.warning.0003","",{"邮箱","3到50"})}</message>
		</field-validator>
		<field-validator type="email">
			<message>${getText("yds.com.warning.0002","",{"邮箱"})}</message>
		</field-validator>	
	</field>
	<field name="phone">
		<field-validator type="regex">
			<param name="expression">0[0-9]{2,3}-[0-9]{7,8}</param>
			<message>${getText("yds.com.warning.0002","",{"电话"})}</message>
		</field-validator>	
	</field>
	<field name="year">
		<field-validator type="required">
			<message>${getText("yds.com.warning.0001","",{"年龄"})}</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">^[0-9]{1,2}$</param>
			<message>${getText("yds.com.warning.0002","",{"年龄"})}</message>
		</field-validator>
	</field>
	<field name="card">
		<field-validator type="regex">
			<param name="expression">^([0-9]{14}|[0-9]{17})[0-9x]{1}$</param>
			<message>${getText("yds.com.warning.0002","",{"身份证"})}</message>
		</field-validator>	
	</field>
	<field name="qq">
		<field-validator type="regex">
			<param name="expression">^\d{5,10}$</param>
			<message>${getText("yds.com.warning.0002","",{"QQ"})}</message>
		</field-validator>	
	</field>
</validators>