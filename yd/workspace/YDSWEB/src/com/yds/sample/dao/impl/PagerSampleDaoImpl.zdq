package com.yds.sample.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.sample.bean.DepartmentInfo;
import com.yds.sample.dao.PagerSampleDao;

/**
 * @see com.yds.sample.dao.PagerSampleDao
 */
@Repository("pagerSampleDao")
public class PagerSampleDaoImpl extends AbstractBaseDao implements PagerSampleDao{

	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<DepartmentInfo> getDepartmentInfos(int offset , int perCounts , DepartmentInfo departmentInfo){
		return (List<DepartmentInfo>) super.queryForList(
				"PagerSampleDao.getPagerInfos", departmentInfo , offset , perCounts);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long getTotalCount(DepartmentInfo departmentInfo){
		return  (Long)super.queryForObject("PagerSampleDao.getTotalCount", departmentInfo);
	}
}
