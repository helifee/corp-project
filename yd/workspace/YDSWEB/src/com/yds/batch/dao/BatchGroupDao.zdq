package com.yds.batch.dao;

import java.util.List;

import com.yds.batch.bean.BatchGroup;

/**
 * 批处理任务组（数据库访问）
 * 
 * @author wangduo
 * @version 1.00 2010/04/21
 */
public interface BatchGroupDao {

	/**
	 * 得到待执行任务组列表
	 * 
	 * @return 任务组列表
	 */
	public List<BatchGroup> getBatchGroups();
	
	/**
	 * 更新任务组执行信息
	 * 
	 * @param jobGroup
	 *            任务组
	 */
	public void updateExecInfo(BatchGroup jobGroup);
	
	/**
	 * 插入任务组执行履历
	 * 
	 * @param jobGroup
	 *            任务组
	 */
	public void insertExecHis(BatchGroup jobGroup);
	
	/**
	 * 在守护线程启动时修正任务组执行状态
	 */
	public void modifyStatus();
	
}
