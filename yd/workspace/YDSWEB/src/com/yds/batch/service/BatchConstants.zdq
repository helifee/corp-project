public class BatchConstants {

	/*
	 * 执行频度
	 */
	public static enum FREQ {
		/** 即时执行. */
		NOW("1"),
		/** 循环执行. */
		CYCLES("2"),
		/** 指定时间执行. */
		APPOINT("3"),
		/** 每日. */
		PER_DAY("4"),
		/** 每周. */
		PER_WEEK("5"),
		/** 每月. */
		PER_MONTH("6"),
		/** 月末. */
		MONTH_END("7"),
		/** 年末. */
		YEAR_END("8");	
		
		private String value;

		FREQ(String value) {
			this.value = value;
		}

		public static String getEnumName() {
			return "FREQ";
		}

		@Override
		public String toString() {
			return this.value;
		}

		public String value() {
			return this.value;
		}
	}

	/*
	 * 执行状态
	 */
	public static enum EXEC_STATUS {
		/** 正常终了. */
