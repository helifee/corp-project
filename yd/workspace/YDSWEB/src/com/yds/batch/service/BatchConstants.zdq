		/** 等待执行. */
		WAITING("3"),
		/** 执行中. */
		PROCESSING("4");	
		
		private String value;

		EXEC_STATUS(String value) {
			this.value = value;
		}

		public static String getEnumName() {
			return "EXEC_STATUS";
		}

		@Override
		public String toString() {
			return this.value;
		}

		public String value() {
			return this.value;
		}
	}

