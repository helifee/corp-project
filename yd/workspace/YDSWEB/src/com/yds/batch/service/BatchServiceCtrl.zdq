package com.yds.batch.service;

/**
 * 批处理服务启动停止控制
 * 
 * @author wangduo
 * @version 1.00 2010/05/28
 */
public interface BatchServiceCtrl {
	
	/**
	 * 启动服务(用socket绑定一个端口,等待停止服务的请求)
	 */
	public void startup(int servicePort);
	
	/**
	 * 停止服务
	 * 
	 * @return 是否停止成功
	 */
	public boolean shutdown();

}
