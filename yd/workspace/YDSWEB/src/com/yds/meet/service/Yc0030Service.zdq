package com.yds.meet.service;

import java.util.Date;
import java.util.List;

import com.yds.meet.bean.MetRoomInfo;
import com.yds.meet.bean.Yc0030MetInfo;


/**
 * 会议室预约详细（业务逻辑处理）.
 * 
 * @author 远东)chenyuer,bixiuqing
 * @version 1.00 2010/07/21
 */
public interface Yc0030Service {
	
	/**
	 * 会议预约页面信息查询.
	 * 
	 * @param yc0030MetInfo 预约信息.
	 * 
	 * @return Yc0030MetInfo 会议预约信息检索结果.
	 * @throws Exception.
	 */
	public Yc0030MetInfo getYc0030MetInfo(Yc0030MetInfo yc0030MetInfo) throws Exception;
	
	/**
	 * 会议室信息查询.
	 * 
	 * @return List<MetRoomInfo> 会议室信息检索结果.
	 */
	public List<MetRoomInfo> getMetRoomInfoLst();
	
	/**
	 * 时间冲突的会议个数查询（单日时）.
	 * 
	 * @param yc0030MetInfoLst 预约信息(修改时包括旧的预约信息).
	 * 
	 * @return Integer 当日时间冲突的会议个数.
	 */
	public Integer getMetDayNum(Yc0030MetInfo... yc0030MetInfoLst);
	
	/**
	 * 时间冲突的会议个数查询（周期时）.
	 * 
	 * @param yc0030MetInfoLst 预约信息(修改时包括旧的预约信息).
	 * 
	 * @return Integer 一段时间内冲突的会议个数.
	 */
	public Integer getMetDaysNum(Yc0030MetInfo... yc0030MetInfoLst);
	
	
	/**
	 * 时间冲突的会议个数查询(周期时).
	 * 
	 * @param yc0030MetInfoLst 预约信息(修改时包括旧的预约信息).
	 * 
	 * @return List<Date> 一段时间内冲突的会议的日期.
	 */
	public List<Date> getMetDaysDate(Yc0030MetInfo... yc0030MetInfoLst);
	
	/**
	 * 会议室信息查询.
	 * 
	 * @return String 会议室容纳人数.
	 */
	public String getMetRoomSize();
	
	/**
	 * 保存预约信息.
	 * 
	 * @param yc0030MetInfo 预约信息.
	 * 
	 * @return boolean spark消息发送是否成功.
	 */
	public void saveReserveData(Yc0030MetInfo yc0030MetInfo) throws Exception;
	
	/**
	 * 修改预约信息.
	 * 
	 * @param yc0030MetInfo 预约信息.
	 * @return boolean spark消息发送是否成功.
	 */
	public void updateReserveData(Yc0030MetInfo yc0030MetInfo) throws Exception;
	
	/**
	 * 删除预约信息.
	 * 
	 * @param yc0030MetInfo 预约信息.
	 * @return boolean spark消息发送是否成功.
	 */
	public void deleteReserveData(Yc0030MetInfo yc0030MetInfo) throws Exception;

}
