package com.yds.manual.service.impl;

import java.util.List;

import org.springframework.stereotype.Service;

import com.yds.base.service.AbstractBaseService;
import com.yds.manual.bean.TreeTableAuthor;
import com.yds.manual.dao.TreeTableDao;
import com.yds.manual.service.TreeTableService;

/**
 * @see com.yds.manual.service.TreeTableService
 *
 */
@Service("treeTableService")
public class TreeTableServiceImpl extends AbstractBaseService implements
		TreeTableService {

	private TreeTableDao treeTableDao;
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public List<TreeTableAuthor> getAuthorList() {
		List<TreeTableAuthor> authors = treeTableDao.getAuthorList();
		for(TreeTableAuthor author:authors){
			author.setAuthorBooks(treeTableDao.getBookList(author.getAuthorId()));
		}
		return authors;
	}

	public void setTreeTableDao(TreeTableDao treeTableDao) {
		this.treeTableDao = treeTableDao;
	}
}
