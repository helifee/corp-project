package com.yds.manual.dao;

import java.util.List;

import com.yds.manual.bean.PaginationCondA;

/**
 * 获取paginationCondA列表
 * 
 * @author 远东)xupai
 * @version 1.00 2010/08/04
 */
public interface PaginationDao {

	/**
	 * 信息检索情况一览
	 * 
	 * @param   PaginationCondA  检索条件
	 * @return  List<PaginationCondA> 信息检索结果
	 */
	public List<PaginationCondA> getPaginationCondAList(int offset,
			int perCounts, PaginationCondA paginationCondA);

	/**
	 * 取得信息总数（分页）
	 * 
	 * @return Long 取得总数
	 */
	public Long getTotalCount(PaginationCondA paginationCondA);
}
