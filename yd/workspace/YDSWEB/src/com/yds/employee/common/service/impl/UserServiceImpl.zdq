package com.yds.employee.common.service.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Service;

import com.yds.base.service.AbstractBaseService;
import com.yds.common.bean.UserInfo;
import com.yds.common.dao.UserDao;
import com.yds.common.service.UserService;
import com.yds.util.service.StringUtil;

/**
 * @see UserService
 */
@Service("userService")
public class UserServiceImpl extends AbstractBaseService implements UserService {

	private UserDao userDao;

	/**
	 * @param userDao
	 *            the userDao to set
	 */
	public void setUserDao(UserDao userDao) {
		this.userDao = userDao;
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public String getUserNm(String userId,boolean ...allFlg) {
		
		
		Map<String, String>  condition = new HashMap<String, String>();
		condition.put("userId", StringUtil.leftPadYd(userId));
		if (0 == allFlg.length){
			condition.put("allFlg","" );
		}else{
			condition.put("allFlg",String.valueOf(allFlg[0]));
		}
		
		return userDao.getUserNm(condition);  
	}

	@Override
	public Long findUserId(String userId) {
		
		String findUserId = StringUtil.leftPadYd(userId);
		return userDao.findUserId(findUserId);
	}

	@Override
	public List<UserInfo> getTeamUserList(String teamId) {
		return userDao.getTeamUserList(teamId);
	}
}
