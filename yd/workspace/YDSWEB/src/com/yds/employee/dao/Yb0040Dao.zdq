package com.yds.employee.dao;

import java.util.List;

import com.yds.common.bean.EmpPos;
import com.yds.employee.bean.EmpPosHis;
import com.yds.employee.bean.EmpStaffPos;
/**
 * 员工一览高级查询（数据库访问）
 * 
 * @author 远东)jinfang
 * @version 1.00 2010/06/22
 */
public interface Yb0040Dao {

	/**
	 * 取得当前职位一览
	 * 
	 * @param String 员工ID
	 * @return List<EmpStaffPos> 当前职位一览检索结果
	 */
	public List<EmpStaffPos> getEmpPosNowInfo(String empId);
	
	/**
	 * 取得历史职位一览
	 * 
	 * @param String 员工ID
	 * @return List<EmpStaffPos> 历史职位一览检索结果
	 */
	public List<EmpStaffPos> getEmpPosAllInfo(String empId);
	
	/**
	 * 取得职位级别
	 * 
	 * @param String 职位ID
	 * @return List<EmpPos> 职位级别检索结果
	 */
	public List<EmpPos> getSeqInfo();
	/**
	 * 员工职位历史信息的添加
	 * 
	 * @param empStaffPos
	 *            要添加员工职位历史信息
	 */
	public abstract Object insertEmpPosHis(EmpPosHis empPosHis);
	/**
	 * 员工职位信息的添加
	 * 
	 * @param empStaffPos
	 *            要添加员工职位信息
	 */
	public abstract Object insertEmpStaffPos(EmpStaffPos empStaffPos);

	/**
	 * 员工职位信息的删除
	 * 
	 * @param empId
	 *            要删除员工ID
	 */
	public abstract Object deleteEmpStaffPos(String empId);
	/**
	 * 员工职位历史信息的删除
	 * 
	 * @param empPosHis
	 *            要删除员工职位历史信息
	 */
	public abstract Object deleteEmpPosHis(EmpPosHis empPosHis);
	
	/**
	 * 取得员工历史职位信息
	 * 
	 * @param empPosHis
	 *            要检索员工历史职位信息
	 */
	public String getEmpPosHis(EmpPosHis empPosHis);
	/**
	 * 员工职位历史信息的更新
	 * 
	 * @param empStaffPos
	 *            要更新员工职位历史信息
	 */
	public abstract Object updateEmpPosHis(EmpPosHis empPosHis);
	
	/**
	 * 取得终了时间信息
	 * 
	 * @param empPosHis    员工职位历史信息
	 * @return endTime 终了时间
	 */
	public String getEmpPosHisEndTime(EmpPosHis empPosHis);


	

}
