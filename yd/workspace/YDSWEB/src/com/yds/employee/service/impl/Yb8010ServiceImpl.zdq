package com.yds.employee.service.impl;
import java.util.List;
import org.springframework.stereotype.Service;
import com.yds.batch.service.BatchJobRun;
import com.yds.employee.dao.Yb8010Dao;
import com.yds.employee.service.Yb8010Service;
import com.yds.employee.bean.EmpStateInfo;

/**
 * @see com.yds.employee.service.yb8010Service
 */
@Service("yb8010Service")
public class Yb8010ServiceImpl implements Yb8010Service,BatchJobRun {
	private Yb8010Dao yb8010Dao;
	
	/**
	 * {@inheritDoc}
	 */
	@Override	
	public void empInfoIntegrate(){	
		// 员工状态信息表有效员工状态ID取得
		List<EmpStateInfo> empStateInfoList = yb8010Dao.getEmpStateInfoList();
		for(EmpStateInfo empStateInfo : empStateInfoList){
			// 员工基本信息表有效员工状态ID更新
			yb8010Dao.updateEmpInfo(empStateInfo);
		}		
	}
	/**
	 * {@inheritDoc}
	 */
	@Override
	public void jobRun() throws Throwable {
		this.empInfoIntegrate();						
	}
	/**
	 * @return the yb8010Dao
	 */
	public Yb8010Dao getYb8010Dao() {
		return yb8010Dao;
	}
	/**
	 * @param yb8010Dao the yb8010Dao to set
	 */
	public void setYb8010Dao(Yb8010Dao yb8010Dao) {
		this.yb8010Dao = yb8010Dao;
	}
}
