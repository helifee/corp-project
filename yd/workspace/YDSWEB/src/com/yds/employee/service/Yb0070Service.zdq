	public void deleteTeamUserInfo(String teamId,String joinApplayFlg);
	
	/**
	 * 组信息成员加入
	 * 
	 * @param teamId
	 *            组别Id
	 *        joinApplayFlg
	 *        	  是否需要申请Flg
	 * @return void
	 */
	public void insertTeamUserInfo(String teamId,String joinApplayFlg);

	/**
	 *同意成员状态更新
	 * 
	 * @param yb0071CondA
	 *            申请内容
	 * @return void
	 */
	public void updateAgreeTeamUserFlg(Yb0071CondA yb0071CondA);

	/**
	 *不同意成员状态更新
