package com.yds.employee.service;

import java.util.List;
import java.util.Map;
import com.yds.employee.bean.Yb0070CondA;
import com.yds.employee.bean.Yb0071CondA;

/**
 * 组信息一览（业务逻辑处理）.
 * 
 * @author 远东)fangjiayuan
 * @version 1.00 2010/08/05
 */
public interface Yb0070Service {

	/**
	 * 取得组信息一览
	 * @param hasPermitFlg
	 *            权限判断	 * 
	 * @return List<Yb0070CondA> 组信息检索结果
	 */
	public List<Yb0070CondA> getTeamInfoList(boolean hasPermitFlg);
	
	/**
	 * 取得申请内容信息一览
	 * 
	 * @return Map<String,String> 申请内容信息检索结果
	 */
	public Map<String,String> getApplayInfoList();
	
	/**
	 * 取得组信息
	 * @param teamId
	 *            组别Id
	 * @param hasPermitFlg
	 *            权限判断	 * 
	 * @return Yb0070CondA 组信息检索结果
	 */
	public Yb0070CondA getTeamInfo(String teamId,boolean hasPermitFlg);

	/**
	 * 插入组信息记录
	 * @param Yb0070CondA
	 *            组信息Bean
	 * @return String 组ID
	 */
	public String insertTeamInfo (Yb0070CondA yb0070CondA)throws Exception;
	
	/**
	 * 更新组信息记录
	 * @param Yb0070CondA
	 *            组信息Bean
	 * @return void
	 */
	public void updateTeamInfo (Yb0070CondA yb0070CondA);

	/**
	 * 删除组信息记录
	 * @param teamId
	 *            组别Id
	 * @return void
	 */
	public void deleteTeamInfo (String teamId);
	
	/**
