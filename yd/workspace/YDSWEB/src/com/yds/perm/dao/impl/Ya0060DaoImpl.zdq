package com.yds.perm.dao.impl;

import java.util.List;
import org.springframework.stereotype.Repository;
import com.yds.base.dao.AbstractBaseDao;
import com.yds.perm.bean.PerRoleInfo;
import com.yds.perm.bean.PosInfo;
import com.yds.perm.bean.RolePerMgrInfo;
import com.yds.common.bean.EmpInfo;
import com.yds.perm.dao.Ya0060Dao;

/**
 * 用户权限查看处理
 * 
 * @author liyanrui
 * @version 1.00 2010/01/27
 */
@Repository("ya0060Dao")
public class Ya0060DaoImpl extends AbstractBaseDao implements Ya0060Dao {
	
	/**
	 * 检索用户表中用户ID='userId'的信息
	 * 
	 * @param userId 用户ID
	 * @return UserInfo 用户信息.
	 */
	@Override
	public EmpInfo getUser(String userId) {

		return (EmpInfo) super.queryForObject("Ya0060Dao.getUser",
				userId);
	}

	/**
	 * 取得职位名称
	 * 
	 * @param userId 用户ID
	 * @return List<PosInfo> 职位名称.
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<PosInfo> getPosNameList(String userId) {

		return (List<PosInfo>) super.queryForList("Ya0060Dao.getPosNameList",
				userId);
	}

	/**
	 * 取得角色名称
	 * 
	 * @param userId 用户ID
	 * @return List<PerRoleInfo> 角色名称.
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<PerRoleInfo> getRoleNameList(String userId) {

		return (List<PerRoleInfo>) super.queryForList("Ya0060Dao.getRoleNameList",
				userId);
	}

	/**
	 * 取得用户权限一览
	 * 
	 * @param userId
	 *            用户ID
	 * @return List<RolePerMgrInfo> 用户权限一览.
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<RolePerMgrInfo> getUserPerInfoList(String userId) {

		return (List<RolePerMgrInfo>) super.queryForList(
				"Ya0060Dao.getUserPerInfoList", userId);
	}
}
