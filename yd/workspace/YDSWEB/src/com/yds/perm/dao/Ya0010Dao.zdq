package com.yds.perm.dao;

import java.util.List;

import com.yds.common.bean.PositionInfo;
import com.yds.perm.bean.PositionRoleInfo;
import com.yds.perm.bean.RoleInfo;

/**
 * 职位角色管理（数据库访问）
 * @author lijinling
 * @version 1.0 2010/01/26
 */
public interface Ya0010Dao {

	/**
	 * 取得职位信息一览
	 * @return List<PositionInfo> 职位信息一览
	 */
	public List<PositionInfo> getPositionInfos();
	
	
	/**
	 * 取得职位角色对应信息
	 * @return List<PositionRoleInfo> 职位所对应的角色
	 */
	public List<PositionRoleInfo> getRolePosInfos();
	
	/**
	 * 取得职位角色对应信息
	 * @param positionRoleInfo 职位角色bean
	 * @return List<PositionRoleInfo> 职位角色bean
	 */
	public PositionRoleInfo getRolePosInfo(PositionRoleInfo positionRoleInfo);
	/**
	 * 添加职位角色信息
	 * @param positionRoleInfo 职位角色信息
	 */
	public abstract void insertPositionRole(PositionRoleInfo positionRoleInfo);
	
	/**
	 * 删除职位角色信息
	 * @param positionRoleInfo 职位角色信息
	 */
	public abstract void deletePositionRole(PositionRoleInfo positionRoleInfo);
	
	/**
	 * 取得角色信息一览
	 * @return List<RoleInfo> 角色信息一览
	 */
	public List<RoleInfo> getRoleInfos();
}
