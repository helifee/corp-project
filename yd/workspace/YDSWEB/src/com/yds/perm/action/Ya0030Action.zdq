package com.yds.perm.action;
import java.util.List;
import org.springframework.beans.factory.config.BeanDefinition;
import org.springframework.context.annotation.Scope;
import org.springframework.stereotype.Controller;
import com.yds.base.action.AbstractBaseAction;
import com.yds.perm.bean.PerRoleInfo;
import com.yds.perm.service.Ya0030Service;

/**
 * 角色管理处理。
 * 
 * @author lihuajuan
 * @version 1.00 2010/08/13
 */
@Scope(BeanDefinition.SCOPE_PROTOTYPE)
@Controller("ya0030Action")
public class Ya0030Action extends AbstractBaseAction {

	private static final long serialVersionUID = -6682579800871671447L;
	
	/**角色一览检索条件集合 */
	private List<PerRoleInfo> roleInfos;
	
	/** 角色一览信息件数 */
	private int roleInfosCnt;

	/** 角色检索Service */
	private Ya0030Service ya0030Service;

	/**
	 * 角色管理画面的初期显示。
	 * 
	 * @return SUCCESS
	 */
	public String initInfo() throws Exception {
		
		// 取得角色一览信息
		this.roleInfos = ya0030Service.searchPerRoleInfoList();

		// 取得角色一览信息件数
		this.roleInfosCnt = roleInfos.size();
		
		return SUCCESS;
	}

	/**
	 * @return the roleInfos
	 */
	public List<PerRoleInfo> getRoleInfos() {
		return roleInfos;
	}

	/**
	 * @param roleInfos
	 *            the roleInfos to set
	 */
	public void setRoleInfos(List<PerRoleInfo> roleInfos) {
		this.roleInfos = roleInfos;
	}

	/**
	 * @param ya0030Service
	 *            the ya0030Service to set
	 */
	public void setYa0030Service(Ya0030Service ya0030Service) {
		this.ya0030Service = ya0030Service;
	}
	
	/**
	 * @return the roleInfosCnt
	 */
	public int getRoleInfosCnt() {
		return roleInfosCnt;
	}

	/**
	 * @param roleInfosCnt
	 *            the roleInfosCnt to set
	 */
	public void setRoleInfosCnt(int roleInfosCnt) {
		this.roleInfosCnt = roleInfosCnt;
	}
}
