<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<!-- 权限管理系统配置 -->
    <constant name="struts.il8n.encoding" value="UTF-8"/>
	<package name="perm" extends="struts-base" namespace="/perm">
		<!-- bailiandong Start -->
		<!-- bailiandong End   -->

		<!-- bixiuqing Start -->
		<!-- 用户角色信息（按角色）取得明细信息一览Action -->
		<action name="roleUserSearchAction" method="getRoleUserInfo" class="userRoleMgrAction">
			<result name="success">/perm/user_role_mgr_role.jsp</result>
			<result name="input"  type="redirectAction">roleUserSearchAction</result>
		</action>
		<!-- 用户角色信息（按角色）取得用户信息一览Action -->
		<action name="userListSearchAction" method="getUserInfoList" class="userRoleMgrAction">
			<result name="success">/perm/user_role_mgr_role_userlist.jsp</result>
			<result name="input"  type="redirectAction">roleUserSearchAction</result>
		</action>
		<!-- bixiuqing End   -->

		<!-- caoxiaodong Start -->
		<!-- 角色授权生成树型Action -->
		<action name="ya0020GetRolePerMgrTree" method="getRolePerMgrTree" class="ya0020Action">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		<!-- caoxiaodong End   -->

		<!-- chenjunshuai Start -->
		<!-- 职位信息一览初始Action -->
		<action name="getPosInfosAction" method="execute" class="posInfoAction">
			<result name="success">/perm/pos_info_main.jsp</result>
		</action>
		
		<!-- 修改职位信息Action -->
		<action name="updPosInfosAction" method="updatePosInfos" class="posInfoAction">
			<result name="success" type="redirectAction">
				getPosInfosAction</result>
		</action>			
		<!-- chenjunshuai End   -->


		<!-- fangjiayuan Start -->
		<action name="getUserRoleAction" method="execute" class="userRoleMgrAction">
			<result name="success">/perm/user_role_mgr.jsp</result>
		</action>
		<!-- 用户角色信息（按用户）取得信息一览Action -->
		<action name="userRoleSearchAction" method="getUserRoleInfos" class="userRoleMgrAction">
			<result name="success">/perm/user_role_mgr_userlist.jsp</result>
		</action>		
		<!-- 用户角色信息（按用户）一览初始Action -->		
		<action name="userRoleInitAction" method="roleInfo" class="userRoleMgrAction">
			<result name="success">/perm/user_role_mgr_user.jsp</result>
		</action>
		<!--提交用户角色Action-->
		<action name="submitUserRoleAction" method="submitUserRole" class="userRoleMgrAction">
			<result name="success">/perm/user_role_mgr_userlist.jsp</result>
		</action>
		
		<!-- fangjiayuan End   -->

		<!-- jiaosunquan Start -->
		<!-- 角色&角色授权信息一览初始Action -->
		<action name="ya0020GetRolePerMgrInfo" method="execute" class="ya0020Action">
			<result name="success">/perm/Ya0020.jsp</result>
		</action>
		<!-- 添加角色&角色授权信息一览Action -->
		<action name="ya0020AddRolePerMgrInfo" method="insertRolePerMgrInfo" class="ya0020Action">
			<result name="success" type="str">perRoleInfo.getRoleId()</result>
			<result name="error" type="str"></result>
		</action>
		<!-- 修改角色&角色授权信息一览Action -->
		<action name="ya0020UpdRolePerMgrInfo" method="updateRolePerMgrInfo" class="ya0020Action">
			<result name="success" type="str">perRoleInfo.getRoleId()</result>
			<result name="error" type="str"></result>
		</action>
		<!-- 删除角色&角色授权信息一览Action -->
		<action name="ya0020DelRolePerMgrInfo" method="deleteRolePerMgrInfo" class="ya0020Action">
			<result name="success" type="str">roleId</result>
			<result name="error" type="str"></result>
		</action>
		<!-- jiaosunquan End   -->

		<!-- liangkezhen Start -->
		<!-- 权限查询一览初始Action -->
		<action name="ya0050GetPermInfos" method="execute" class="ya0050Action">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>

		</action>
		<!-- 查询具有该权限的用户Action -->
		<action name="ya0050GetInfoByPermitId" method="getInfoByPermitId" class="ya0050Action">
			<result name="success">/perm/Ya0051.jsp</result>
			<result name="input">/perm/Ya0050.jsp</result>
		</action>
		<action name="ya0050Init" method="init" class="ya0050Action">
			<result name="success">/perm/Ya0050.jsp</result>
		</action>
		
		<!-- liangkezhen End   -->

		<!-- lijinling Start -->
		<!--职位角色管理初始Action-->
		<action name="ya0010Init" method="execute" class="ya0010Action">
			<result name="success">/perm/Ya0010.jsp</result>
		</action>
		<!--查询职位角色信息Action-->
		<action name="ya0010GetPosRoleInfos" method="getPosRoleInfos" class="ya0010Action">
			<result name="success" type="str">positionRoleInfos</result>
		</action>
		<!--提交职位角色信息Action-->
		<action name="ya0010Sub" method="submit" class="ya0010Action">
			<result name="success" type="str">flag</result>
			<result name="error" type="str">flag</result>
		</action>
		<!-- lijinling End   -->

		<!-- liyanrui Start -->
		<!-- 用户权限查看Action -->
		<action name="ya0060GetUserPermInfo" method="execute" class="ya0060Action">
			<result name="success">/perm/Ya0060.jsp</result>
			<result name="error" type="redirect">/perm/ya0060GetUserPermInfo.action</result>
		</action>
		<!-- 用户权限查看生成树型Action -->
		<action name="ya0060GetUserPermInfoTree" method="initTree" class="ya0060Action">
			<result type="json">
				<param name="excludeNullProperties">true</param>
			</result>
		</action>
		
		<!-- liyanrui End   -->


		<!-- yuanjinling Start -->
		<!-- 用户角色管理——按角色一览初始Action -->
		<action name="getUserRoleMgrRoleAction" method="initRolePage" class="userRoleMgrAction">
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>				
            </result>
		</action>	
		<!-- 用户角色管理——取得用户列表一览Action-->
		<action name="getUserListInRoleAction" method="searchUserList" class="userRoleMgrAction">
			<result name="success"  type="json">
				<param name="excludeNullProperties">true</param>  
			</result>
        </action>			
		<!-- 用户角色管理——提交用户职位Action-->
		<action name="submitUserRoleAction" method="submitUserRole" class="userRoleMgrAction">
			<result name="success" type="str"></result>
		</action> 			
		<!-- yuanjinling End   -->
		
		<!-- lihuajuan Start -->
		<!-- 用户角色管理初始画面 -->
		<action name="ya0030Init" method="initInfo" class="ya0030Action">
			<result name="success">/perm/Ya0030.jsp</result>
		</action>
		
		<!-- lihuajuan End -->
		
		<!-- yuchenglin Start -->
		<!-- 用户角色管理——初期化画面Action -->
		<action name="ya0040Init" method="initInfo" class="ya0040Action">
			<result name="success">/perm/Ya0040.jsp</result>
		</action>	
		
		<!-- 用户角色管理——未入力用户ID用户名时检索用户角色信息一览Action -->	
		<action name="ya0040FindUserRoleList" method="findUserRoleList" class="ya0040Action">
			<result name="success">/perm/Ya0041.jsp</result>
		</action>

		<!-- 用户角色管理——取得用户角色信息一览Action -->		
		<action name="ya0040FindUserRoleLst" method="findUserRoleResultList" class="ya0040Action">
			<result name="success">/perm/Ya0041.jsp</result>
		</action>
		
		<!-- 用户角色管理——取得角色一览Action -->
		<action name="ya0040FindRoleLst" method="findRoleResultList" class="ya0040Action">
			<result name="success">/perm/Ya0042.jsp</result>
		</action>
		
		<!-- 用户角色管理——角色选择Action -->
		<action name="ya0040InsertRoleLst" method="insertRoleResultList" class="ya0040Action">
			<result name="success">/perm/Ya0041.jsp</result>
		</action>
		
		<!-- 用户角色管理——有效权限时间修改画面提交事件Action -->
		<action name="ya0040UpdateTime" method="updateTime" class="ya0040Action">
			<result name="success">/perm/Ya0041.jsp</result>
		</action>
		
		<!-- 用户角色管理——删除用户角色事件Action -->
		<action name="ya0040DeletePermitData" method="deletePermitData" class="ya0040Action">
			<result name="success">/perm/Ya0041.jsp</result>
		</action>
		<!-- yuchenglin End -->
		
	</package>
</struts>