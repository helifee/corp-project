package com.yds.tt.training.service;

import java.util.List;

import com.yds.tt.training.bean.BookContent;
import com.yds.tt.training.bean.Bookmark;

/**
 * 教材内容浏览
 * 
 * @author yukunpeng
 * @version 1.00 2010/03/15
 */
public interface J030071Service {
	/**
	 * 取得当前教材ID对应的编辑号
	 * @param String 教材ID
	 * @return int 编辑号
	 */
	public Integer getEditNo(String bookId);
	
	/**
	 * 取得当前教材ID对应的编辑号
	 * @param String 教材ID
	 * @return int 编辑号
	 */
	public Integer getChapterNo(String bookId, Integer editNo);

	/**
	 * 取得当前教材名
	 * @param bookContent 教材内容
	 * @return String 教材名
	 */
	public String getBookName(BookContent bookContent);

	/**
	 * 取得章节列表
	 * @param bookContent 教材内容
	 * @return List<BookContent> 章节列表
	 */
	public List<BookContent> getMenuList(BookContent bookContent);

	/**
	 * 根据章节编号取得教材内容
	 * @param bookContent 教材内容检索条件
	 * @return BookContent 教材内容
	 */
	public BookContent getContentByChapter(BookContent bookContent);

	/**
	 * 根据显示顺序取得教材内容
	 * @param bookContent 教材内容检索条件
	 * @return BookContent 教材内容
	 */
	public BookContent getContentByOrder(BookContent bookContent);
	
	/**
	 * 编辑书签表
	 * @param bookmark 书签表内容
	 * @return true/false 成功/失败
	 */
	public boolean updateEditBookmark(Bookmark bookmark);
	
}
