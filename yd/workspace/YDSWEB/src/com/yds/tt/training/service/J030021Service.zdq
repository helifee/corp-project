package com.yds.tt.training.service;

import java.util.List;

import net.sf.json.JSONObject;

import com.yds.tt.manager.bean.TtCheckResult;
import com.yds.tt.training.bean.BookInfo;
import com.yds.tt.training.bean.J030021Info;

/**
 * 教材一览处理(业务逻辑)
 * 
 * @author sundefu
 * @version 1.00 2010/03/17
 */
public interface J030021Service {
	
	// 教材一览（追加模式）
	public final Integer ADD_MODE = 1;
	// 教材一览（一览模式）
	public final Integer SHOWLIST_MODE = 2;
	/**
	 * 画面初期业务处理
	 * 
	 * @param mode 画面模式
	 */
	public TtCheckResult initProcess(Integer mode);

	/**
	 * 取得教材信息一览
	 * 
	 * @param J030021Info 教材一览检索条件
	 * @return long 教材信息一览件数
	 */
	public long selectCountBookInfo(J030021Info j030021Info);
	
	/**
	 * 取得教材信息一览
	 * 
	 * @param J030021Info 教材一览检索条件
	 * @return BookInfos 教材信息一览
	 */
	public List<BookInfo> getBookInfoList(J030021Info j030021Info, int offset, int perCounts);

	/**
	 * 加入课程
	 * 
	 * @param JSONObject 画面选中教材信息
	 */
	public void addToCourse(JSONObject json);

	/**
	 * 教材一览检索条件检查
	 * 
	 * @param J030021Info 教材一览检索条件
	 * @return Boolean 条件检查结果 （合法：true；不合法：false）
	 */
	public Boolean checkBookInfo(J030021Info j030021Info);

	/**
	 * 课程存在性检查
	 * 
	 * @return Boolean 检查结果 （存在：true；不存在：false）
	 */
	public Boolean checkCourseInfo();

	/**
	 * 画面初期业务处理
	 * 
	 * @param mode 画面模式
	 */
	public TtCheckResult checkEditCourse ();
	
	/**
	 * 教材是否被引用检查
	 *
	 * @param bookId 教材Id
	 * @return Boolean 检查结果 （已引用：true；未引用：false）
	 */
	public Boolean checkBookQuoteFlg(String bookId);
}
