package com.yds.tt.training.dao.impl;

import java.util.Date;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.tt.training.bean.BookInfo;
import com.yds.tt.training.dao.J030011Dao;
/**
 * @see com.yds.tt.training.dao.J030011Dao
 */
@Repository("j030011Dao")
public class J030011DaoImpl extends AbstractBaseDao implements J030011Dao {

	/**
	 * {@inheritDoc}
	 */
	@Override
	public BookInfo getBookInfo(String bookId) {
		
		// 取得教材信息
		return (BookInfo)super.queryForObject(
				"J030011Dao.getBookInfo", bookId);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Object insertBook(BookInfo bookInfo) {
		
		// 添加教材信息
		return super.insert("J030011Dao.insertBook", bookInfo);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Object insertCourseBook(BookInfo bookInfo) {
		
		// 添加课程教材关联信息
		return super.insert("J030011Dao.insertCourseBook", bookInfo);
	}	
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public int updateBook(BookInfo bookInfo) {
		
		// 修改教材信息
		return super.update("J030011Dao.updateBook", bookInfo);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public BookInfo getBelongCategory(String belongCourseId) {
		
		// 检索创建课程所属分类信息
		return (BookInfo)super.queryForObject(
				"J030011Dao.getBelongCategory", belongCourseId);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public Date getUpdateTime(BookInfo bookInfo) {
		
		// 获取最新修改时间
		return (Date)super.queryForObject("J030011Dao.getUpdateTime", bookInfo);
	}
}
