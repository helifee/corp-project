package com.yds.tt.training.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.tt.training.bean.BookContent;
import com.yds.tt.training.dao.J030061Dao;

/**
 * @see com.yds.perm.dao.UserRoleMgrDao
 */
@Repository("j030061Dao")
public class J030061DaoImpl extends AbstractBaseDao implements J030061Dao {

	private List<BookContent> chapterInfos;
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<BookContent> getChapterInfos(BookContent bookContentInfo) {
		
		chapterInfos = super.queryForList(
				"J030061Dao.getChapterInfos", bookContentInfo);
        return  chapterInfos;
	}
	
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Integer getMaxChapterNo(BookContent bookContentInfo){
		return (Integer) super.queryForObject("J030061Dao.getMaxChapterNo",bookContentInfo);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public void insertChapterInfos(BookContent bookContentInfo ){
		
		super.insert("J030061Dao.insertChapterInfos", bookContentInfo);	
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public void updateChapterInfos(BookContent bookContentInfo){
		super.update("J030061Dao.updateChapterInfos", bookContentInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public void deleteChapterInfos(BookContent bookContentInfo){
		super.delete("J030061Dao.deleteChapterInfos", bookContentInfo);	
	}
	
	/**
	 * 取得教材版本数
	 */
	@Override
	public int searchBookEditNum(String bookId) {
		
		return (Integer) super.queryForObject(
				"J030061Dao.searchBookEditNum", bookId);
	}

}
