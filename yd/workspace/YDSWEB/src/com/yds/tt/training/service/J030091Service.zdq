package com.yds.tt.training.service;

import java.io.File;
import java.util.List;

import com.yds.tt.testing.bean.QuestionAttachments;
import com.yds.tt.training.bean.BookAttachments;

/**
 * 插入图片(业务逻辑)
 * 
 * @author shiyanyan
 * @version 1.00 2010/04/16
 */
public interface J030091Service {

	/**
	 * 教材状态取得
	 * 
	 * @param bookId
	 *            教材ID
	 * @param editNo
	 *            编辑号
	 * @return Integer 教材状态
	 */
	public Integer getBookInfo(String bookId, Integer editNo);

	/**
	 * 教材资料取得
	 * 
	 * @param bookId
	 *            教材ID
	 * @return List<BookAttachments> 教材资料信息
	 */
	public List<BookAttachments> getBookAttachmentsList(String bookId);

	/**
	 * 题库资料取得
	 * 
	 * @param questionId
	 *            试题ID
	 * @return List<QuestionAttachments> 题库资料信息
	 */
	public List<QuestionAttachments> getQuestionAttachmentsList(
			String questionId);

	/**
	 * 上传图片
	 * 
	 * @param uploadImg
	 *            图片文件
	 * @param fileName
	 *            文件名
	 * @param objectId
	 *            接口参数ID
	 * @param mode
	 *            接口参数模式
	 * @param picRemark
	 *            图片描述
	 * 
	 */
	public void saveAndUploadPic(File uploadImg, String fileName,
			String objectId, String mode, String picRemark) throws Exception;

	/**
	 * 更新教材资料表
	 * 
	 * @param objectId
	 *            教材ID
	 * @param dataId
	 *            资料ID
	 */
	public void updatePic(String objectId, String dataId);

	/**
	 * 删除题库资料表
	 * 
	 * @param objectId
	 *            试题ID
	 * @param fileId
	 *            资料ID
	 */
	public void deletePic(String objectId, String fileId) throws Exception;

}
