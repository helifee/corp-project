package com.yds.tt.training.dao;

import java.util.List;

import com.yds.tt.training.bean.BookContent;
import com.yds.tt.training.bean.Bookmark;

/**
 * 教材内容浏览
 * 
 * @author yukunpeng
 * @version 1.00 2010/03/15
 */
public interface J030071Dao {
	
	/**
	 * 取得教材编辑号
	 * 
	 * @param bookId 教材ID 
	 *  
	 * @return Integer 教材编辑号
	 */
	public Integer getEditNo(String bookId);
	/**
	 * 取得教材名称
	 * 
	 * @param bookInfo 教材详细
	 *  
	 * @return String 教材名称
	 */
	public String getBookName(BookContent bookContent);
	
	/**
	 * 取得章节列表
	 *
	 * @param bookContent 教材内容详细 
	 *  
	 * @return List<BookContent> 章节列表
	 */
	public List<BookContent> getMenuList(BookContent bookContent) ;
	/**
	 * 取得章节内容
	 *
	 * @param bookContent 教材内容详细 
	 *  
	 * @return BookContent 章节内容
	 */
	public BookContent getContentByChapter(BookContent bookContent); 
	/**
	 * 取得章节内容
	 *
	 * @param bookContent 教材内容详细 
	 *  
	 * @return BookContent 章节内容
	 */
	public BookContent getContentByOrder(BookContent bookContent) ;
	/** 取得书签内容
	 *
	 * @param bookContent 取得书签内容详细 
	 *  
	 * @return BookContent 章节内容
	 */
	public Bookmark getBookmark(Bookmark bookmark);

	/** 更新书签表
	 *
	 * @param bookmark 书签内容详细 
	 *  
	 * @return int 更新行数
	 */
	public int updateBookmark(Bookmark bookmark);
	
	/** 插入书签表
	 *
	 * @param bookmark 书签内容详细 
	 *  
	 * @return int 插入结果
	 */
	public Object insetBookmark(Bookmark bookmark);
}
