package com.yds.tt.training.dao;

import java.util.Date;

import com.yds.tt.training.bean.CourseInfo;

/**
 * 课程新建及权限管理（数据库访问）
 * @author qianguorong
 * @version 1.00 2010/03/12
 */
public interface J020011Dao {
	/**
	 * 取得课程信息
	 * 
	 * @return CourseInfo 课程信息
	 */
	public CourseInfo getCourseInfo(String courseId);
		
	/**
	 * 课程信息的插入
	 * 
	 * @param courseInfo
	 *            需要插入的课程信息
	 */
	public abstract Object insertCourse(CourseInfo courseInfo);
	
	/**
	 * 课程信息的更新
	 * 
	 * @param CourseInfo
	 *            需要更新的课程信息
	 */
	public int updateCourse(CourseInfo courseInfo);
	
	/**
	 * 教材分类更新
	 * 
	 * @param courseId
	 *            课程Id
	 */
	public int updateBookCategory(CourseInfo courseInfo);

	/**
	 * 课程发布状态的更新
	 * 
	 * @param CourseInfo
	 *            需要更新的课程信息
	 */
	public int updateCoursePublishStatus(CourseInfo courseInfo);
	
	/**
	 * 排他用取得最新时间
	 * 
	 * @param courseInfo 教材信息
	 * @return Date 最新时间
	 */
	public Date getUpdateTime(CourseInfo courseInfo);
}
