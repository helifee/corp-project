package com.yds.tt.training.dao.impl;

import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.tt.training.bean.BookInfo;
import com.yds.tt.training.bean.CourseBookRelation;
import com.yds.tt.training.bean.J030021Info;
import com.yds.tt.training.dao.J030021Dao;

/**
 * @see com.yds.tt.training.dao.J030021Dao
 */
@Repository("j030021Dao")
public class J030021DaoImpl extends AbstractBaseDao implements J030021Dao {
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long selectCountBookInfoAddMode(J030021Info j030021Info){
		return  (Long)super.queryForObject("J030021Dao.selectCountBookInfoListAddMode", j030021Info);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<BookInfo> getBookInfoListAddMode(J030021Info j030021Info, int offset, int perCounts) {
		return (List<BookInfo>) super.queryForList("J030021Dao.getBookInfoListAddMode", 
				j030021Info, offset, perCounts);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long selectCountBookInfoShowMode(J030021Info j030021Info){
		return  (Long)super.queryForObject("J030021Dao.selectCountBookInfoListShowMode", j030021Info);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<BookInfo> getBookInfoListShowMode(J030021Info j030021Info, int offset, int perCounts) {
		return (List<BookInfo>) super.queryForList("J030021Dao.getBookInfoListShowMode", 
				j030021Info, offset, perCounts);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long selectCountCourse (String courseId) {
		return (Long)super.queryForObject("J030021Dao.selectCountCourse", courseId);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public Map<String, String> getCourseBookRelation(Map<String, String> bookCourseIds) {
		return (Map<String, String>) super.queryForMap("J030021Dao.getCourseBookRelation",
				bookCourseIds, "bookId");
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public void saveCourseBookRelation(CourseBookRelation courseBookRelation) {
		super.insert("J030021Dao.insertCourseBookRelation", courseBookRelation);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long selectCountCourseManager(String loginUserId) {
		return (Long)super.queryForObject("J030021Dao.selectCountCourseManager", loginUserId);
	}
}
