package com.yds.tt.testing.service;

import java.util.List;

import com.yds.tt.testing.bean.K060101ValuateSingleInfo;
import com.yds.tt.testing.bean.TestEmployeeAnswerInfo;

/**
 * 
 * @author lijinling
 * @version 1.00 2010/04/26
 */
public interface K060101Service {

	// 10进制十
	public final Integer DECIMALSM = 10;
	// 上一大题
	public final int PREBIGQUESTION = 1;
	// 上一小题
	public final int PREQUESTION = 2;
	// 下一小题
	public final int NEXTQUESTION = 3;
	// 下一大题
	public final int NEXTBIGQUESTION = 4;
	// 逗点
	public final String COMMA = ",";
	// 斜线号
	public final String SLASH = "/";
	// 标识答案信息使用Key
	public final String QUESTION_ANSWER = "questionAnswer";
	
	/**
	 * 评分者权限检查.
	 * 
	 * @param markTaskList
	 *            评分任务列表
	 * @param examId
	 *            考试ID
	 * @param markMode
	 *            评分任务分配模式
	 * @return true/false
	 */
	public boolean checkPerm(List<String> markTaskList, String examId, String markMode);

	/**
	 * 取得考试阅卷信息.
	 * 
	 * @param markMode
	 *            评分任务分配方式
	 * @param markTaskList
	 *            评分任务列表
	 * @param examId
	 *            考试ID
	 * @return 考试阅卷信息
	 */
	public K060101ValuateSingleInfo getValuateSingleInfo();

	/**
	 * 下一大题.
	 * 
	 * @param isSkipMarked
	 *            是否跳过已评试题
	 * @return 考试阅卷信息
	 */
	public K060101ValuateSingleInfo getNextBigquestion(Boolean isSkipMarked);

	/**
	 * 上一大题.
	 * 
	 * @param isSkipMarked
	 *            是否跳过已评试题
	 * @return 考试阅卷信息
	 */
	public K060101ValuateSingleInfo getPreBigquestion(Boolean isSkipMarked);

	/**
	 * 上一题.
	 * 
	 * @param isSkipMarked
	 *            是否跳过已评试题
	 * @return 考试阅卷信息
	 */
	public K060101ValuateSingleInfo getPreExamquestion(Boolean isSkipMarked);

	/**
	 * 下一题.
	 * 
	 * @param isSkipMarked
	 *            是否跳过已评试题
	 * @return 考试阅卷信息
	 */
	public K060101ValuateSingleInfo getNextExamquestion(Boolean isSkipMarked);

	/**
	 * 试题跳转
	 * 
	 * @param questionOrder
	 *            跳转试题题号
	 * @return 考试阅卷信息
	 */
	public K060101ValuateSingleInfo getJumpQuestion(Integer questionOrder);

	/**
	 * 评分.
	 * 
	 * @param testEmployeeAnswerInfo
	 *            考试员工答卷信息bean
	 */
	public void updateTestEmployeeAnswerInfo(
			TestEmployeeAnswerInfo testEmployeeAnswerInfo);

	/**
	 * 重置考生得分信息
	 * 
	 * @param testEmployeeAnswerInfo
	 */
	public void updateResetTestEmployeeAnswerInfo(
			TestEmployeeAnswerInfo testEmployeeAnswerInfo);

