package com.yds.tt.testing.service;

import java.util.List;

import com.opensymphony.xwork2.util.XWorkList;
import com.yds.tt.testing.bean.ExamineInfo;
import com.yds.tt.testing.bean.TestPaperInfo;
import com.yds.tt.training.bean.CourseInfo;

/**
 * 考试总体设定及生成(业务逻辑)
 * 
 * @author qiliqiang
 * @version 1.00 2010/04/28
 */
public interface K060061Service {

	/**
	 * 取得考试信息
	 * 
	 * @param examineId
	 *            考试ID
	 * @return ExamineInfo 考试信息
	 */
	public ExamineInfo getExamineInfo(String examineId);
	
	/**
	 * 取得所选试卷信息
	 * 
	 * @param examineId
	 *            考试ID
	 * @return List<TestPaperInfo> 所选试卷信息
	 */
	public List<TestPaperInfo> getTestPaperInfoList(String examineId);
	/**
	 * 取得需要参加的考试
	 * 
	 * @param examineId
	 *            考试ID
	 * @return List<ExamineInfo> 需要参加的考试
	 */
	public List<ExamineInfo> getSelectedExamineList(String examineId);
	
	/**
	 * 取得需要学习的课程
	 * 
	 * @param examineId
	 *            考试ID
	 * @return List<CourseInfo> 需要学习的课程
	 */
	public List<CourseInfo> getSelectedCourseList(String examineId);
	
	/**
	 * 取得子考试一览
	 * 
	 * @param examineId
	 *            考试ID
	 * @return List<ExamineInfo> 子考试一览
	 */
	public List<ExamineInfo> getChildExamineInfoList(String examineId);
	
	/**
	 * 删除父考试信息
	 * 
	 * @param examineId
	 *            考试ID
	 * 
	 */
	public void deleteParentExamine(String examineId);
	
	/**
	 * 更新考试总体信息
	 * 
	 * @param examineInfo
	 * 				考试信息
	 * @param sltExamineId 
	 * 				所需考试一览
	 * @param sltCourseId 
	 * 				所需课程一览
	 * @param selectedPaper 
	 * 				所选试卷一览
	 * @param strUserIdList 
	 * 				针对对象人员
	 * 
	 */
	public void updateTotalExamineInfo(ExamineInfo examineInfo,
									XWorkList sltExamineId,
									XWorkList sltCourseId,
									List<TestPaperInfo> selectedPaper);
	/**
	 * 更新考试生成方式
	 * 
	 * @param examineId
	 * 			考试ID
	 * @param createStyleFlg
	 * 			考试生成方式
	 * @param strExamineStartTime
	 * 			考试开始日时串
	 * @param strExamineEndTime
	 * 			考试结束日时串
	 * @param strExamineNotifyDate
	 * 			通知提醒日期串
	 * @param strApplyClosingTime
	 * 			报名截止日时串
	 */
	public void insertExamineCreateStyle(String examineId,
										String createStyleFlg,
										String strExamineStartTime,
										String strExamineEndTime,
										String strExamineNotifyDate,
										String strApplyClosingTime) throws CloneNotSupportedException;
	
	/**
	 * 删除所选试卷
	 * 
	 * @param examineId
	 *            考试Id
	 * @param paperId 试卷ID
	 */	
	public void deleteSelectedPaper(String examineId, String paperId);
	
	/**
	 * 删除关联课程
	 * 
	 * @param examineId
	 *            考试Id
	 * @param necessaryCourseId 需要学习课程ID
	 */	
	public void deleteSelectedCourse(String examineId, String necessaryCourseId);
	
	/**
	 * 删除关联考试
	 * 
	 * @param examineId
	 *            考试Id
	 * @param necessaryExamineId 需要通过考试ID
	 */	
	public void deleteSelectedExamine(String examineId, String necessaryExamineId);
}
