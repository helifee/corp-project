package com.yds.tt.testing.dao;

import java.util.Date;
import java.util.List;

import com.yds.tt.testing.bean.AnswerInfo;
import com.yds.tt.testing.bean.AnswerPointInfo;
import com.yds.tt.testing.bean.QuestionInfo;


/**
 * 新建试题处理（数据库访问）
 * 
 * @author wanqiuhong
 * @version 1.00 2010/04/09
 */
public interface K040021Dao {
	/**
	 * 试题信息的添加
	 * 
	 * @param questionInfo
	 *            需要添加的试题信息
	 */
	public abstract Object insertQuestionInfo(QuestionInfo questionInfo);
	
	/**
	 * 答案信息的添加
	 * 
	 * @param answerInfo
	 *            需要添加的答案信息
	 */
	public abstract Object insertAnswerInfo(AnswerInfo answerInfo);
	
	/**
	 * 答案得分点信息的添加
	 * 
	 * @param answerPointInfo
	 *            需要添加的答案得分点信息
	 */
	public abstract Object insertAnswerPointInfo(AnswerPointInfo answerPointInfo);
	
	/**
	 * 关键字存在的检索
	 * 
	 * @param questionInfo
	 *            关键字信息
	 */
	public abstract Integer getKeyWordExist(QuestionInfo questionInfo);
	
	/**
	 * 关键字的添加
	 * 
	 * @param questionInfo
	 *            需要添加的关键字信息
	 */
	public abstract Object insertKeyWord(QuestionInfo questionInfo);
	
	/**
	 * 取得试题信息
	 * 
	 * @param questionId
	 *            试题ID
	 * @return QuestionInfo 试题信息
	 */
	public QuestionInfo getQuestionInfo(QuestionInfo questionInfo);
	
	/**
	 * 取得答案信息
	 * 
	 * @param questionId
	 *            试题ID
	 * @return List<AnswerInfo> 答案信息一览
	 */
	public List<AnswerInfo> getAnswerInfoList(AnswerInfo answerInfo);
	
	/**
	 * 取得答案得分点信息
	 * 
	 * @param answerPointInfo
	 *            得答案得分点信息
	 * @return List<AnswerPointInfo> 得答案得分点信息一览
	 */
	public List<AnswerPointInfo> getAnswerPointInfoList(AnswerPointInfo answerPointInfo);
	
	/**
	 * 取得最新时间
	 * 
	 * @param questionInfo 试题信息
	 * @return Date 最新时间
	 */
	public Date getUpdateTime(QuestionInfo questionInfo);
	
	/**
	 * 修改试题版本号
	 * 
	 * @param questionInfo 试题信息
	 */
	public int updateQuestionVersionNo(QuestionInfo questionInfo);
	
	/**
	 * 修改试题信息
	 * 
	 * @param questionInfo 试题信息
	 */
	public int updateQuestionInfo(QuestionInfo questionInfo);
	
	/**
	 * 删除答案信息
	 * 
	 * @param AnswerInfo 答案信息
	 */
	public int deleteAnswerInfo(AnswerInfo answerInfo);
	
	/**
	 * 删除答案得分点信息
	 * 
	 * @param AnswerPointInfo 答案得分点信息
	 */
	public int deleteAnswerPointInfo(AnswerPointInfo answerPointInfo);

	/**
	 * 取得试卷分类信息
	 * 
	 * @param paperId 试卷ID
	 */
	public QuestionInfo getPaperCategory(String paperId);
}
