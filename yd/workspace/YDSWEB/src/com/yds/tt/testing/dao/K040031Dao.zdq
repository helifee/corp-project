package com.yds.tt.testing.dao;

import java.util.Date;
import java.util.List;
import java.util.Map;

import com.yds.tt.testing.bean.AnswerInfo;
import com.yds.tt.testing.bean.AnswerPointInfo;
import com.yds.tt.testing.bean.QuestionLibrary;

/**
 * 试题批量修改（数据库访问）.
 * 
 * @author chenjunshuai
 * @version 1.00 2010/05/13
 */
public interface K040031Dao {
	
	/**
	 * 取得题库一览信息列表 
	 * 
	 * @param  questionIdList 试题ID
	 * 
	 * @return List<QuestionLibrary> 试题信息一览 
	 */
	public List<QuestionLibrary> getQuestionLibraryInfoList(List<String> questionIdList);
	
	/**
	 * 取得关键字信息 
	 * 
	 * @return List<String> 关键字信息 
	 */
	public List<String> getKeyWordInfo(Map<String, Integer> categoryId);

	/**
	 * 修改最新状态 
	 * 
	 * @param questionId 试题ID
	 */	
	public void updateNewFlag(String questionId);
	
	/**
	 * 修改试题信息 
	 * 
	 * @param questionLibrary 修改信息 
	 */
	public int updateTestQuestions(QuestionLibrary questionLibrary);
	
	/**
	 * 取得最新的更新时间
	 * 
	 * @param questionId 试题ID
	 * 
	 * @return  Date 更新时间
	 */
	public Date getUpateTime(String questionId);
	
	/**
	 * 插入试题信息 
	 * 
	 * @param questionLibrary 试题信息 
	 */
	public void insertTestQuestions(QuestionLibrary questionLibrary);
	
	/**
	 * 取得答案信息列表 
	 * 
	 * @param  questionLibrary 试题信息
	 * 
	 * @return List<AnswerInfo> 试题信息一览 
	 */	
	public List<AnswerInfo> getAnswerInfoList(QuestionLibrary questionLibrary);
	
	/**
	 * 插入答案信息 
	 * 
	 * @param answerInfo 答案信息 
	 */
	public void insertAnswerInfo(AnswerInfo answerInfo);
	
	
	/**
	 * 取得得分信息列表 
	 * 
	 * @param  questionLibrary 试题信息
	 * 
	 * @return List<AnswerPointInfo> 试题信息一览 
	 */		
	public List<AnswerPointInfo> getAnswerPointInfoList(QuestionLibrary questionLibrary);
	
	/**
	 * 插入得分信息 
	 * 
	 * @param answerPointInfo 得分信息 
	 */	
	public void insertAnswerPointInfo(AnswerPointInfo answerPointInfo);
}
