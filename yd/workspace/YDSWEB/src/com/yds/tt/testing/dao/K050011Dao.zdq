package com.yds.tt.testing.dao;

import java.util.Date;
import java.util.Map;

import com.yds.tt.testing.bean.TestPaperInfo;

/**
 * 试卷新建及权限分配（数据库）.
 * 
 * @author jiaosunquan
 * @version 1.00 2010/03/17
 */
public interface K050011Dao {

	/**
	 * <管理><参照新建>模式下检索项目,取得试卷基本信息.
	 * 
	 * @param conditionBean
	 *            检索条件Bean(参数.试卷ID ，参数.试卷版本号)
	 * @return TestPaperInfo 试卷基本信息bean
	 */
	public TestPaperInfo getTestPaperInfo(TestPaperInfo conditionBean);

	/**
	 * 插入试卷表数据处理（<新建试卷>模式下进行）.
	 * 
	 * @param testPaperInfo
	 *            参数.试卷信息(插入)Bean
	 */
	public void insertTestPaperInfo(TestPaperInfo testPaperInfo);

	/**
	 * 更新试卷表数据处理（<管理>模式下进行）.
	 * 
	 * @param testPaperInfo
	 *            参数.试卷信息（更新）Bean
	 */
	public void updateTestPaperInfo(TestPaperInfo testPaperInfo);

	/**
	 * 插入试卷表数据处理（<参照新建>模式下进行）.
	 * 
	 * @param testPaperInfo
	 *            参数.试卷信息(插入)Bean
	 */
	public void insertCopyTestPaperInfo(
			Map<String, Object> paraMap);
	
	/**
	 * 复制试卷大题信息.
	 * 
	 * @param paperBigQuestionInfo
	 *            PaperBigQuestionInfo 试卷大题信息表bean
	 */
	public void insertCopyPaperBigQuestionInfo(
			Map<String, Object> paraMap);

	/**
	 * 复制试卷固定大题信息.
	 * 
	 * @param paperStableQuestionInfo
	 *            PaperStableQuestionInfo 试卷固定大题表bean
	 */
	public void insertCopyPaperStableQuestionInfo(
			Map<String, Object> paraMap);

	/**
	 * 复制试卷随机大题信息.
	 * 
	 * @param PaperRandomQuestionInfo
	 *            paperRandQuestionInfo 试卷随机大题表bean
	 */
	public void insertCopyPaperRandQuestionInfo(
			Map<String, Object> paraMap);

	/**
	 * 排他用取得最新时间
	 * 
	 * @param testPaperInfo 试卷信息
	 * @return Date 最新时间
	 */
	public Date getUpdateTime(TestPaperInfo testPaperInfo);
}
