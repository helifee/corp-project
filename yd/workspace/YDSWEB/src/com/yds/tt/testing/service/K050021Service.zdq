package com.yds.tt.testing.service;

import java.util.List;

import net.sf.json.JSONObject;

import com.yds.tt.testing.bean.K050021SearchInfo;
import com.yds.tt.testing.bean.TestPaperInfo;

/**
 * 试卷一览(业务逻辑)
 * 
 * @author yinfuyan
 * @version 1.00 2010/03/15
 */
public interface K050021Service {
	// 画面模式定数
	public static final Integer TT_K050021MODE_MANAGE = 1;
	public static final Integer TT_K050021MODE_CHOOSE = 2;

	/**
	 * 编辑用户ID
	 * 
	 * @param paperListInfo
	 *            检索条件Bean
	 */
	public void editUserId(K050021SearchInfo paperListInfo);

	/**
	 * 考试管理者区分取得
	 * 
	 * @return boolean 考试管理者区分
	 */
	public boolean isTestManager();

	/**
	 * 画面初期业务处理
	 * 
	 * @param mode
	 *            画面模式
	 */
	public void initProcess(int modeKbn);

	/**
	 * 取得试卷一览信息
	 * 
	 * @param modeKbn
	 *            画面模式
	 * @param aperListInfo
	 *            检索条件
	 * @param offset
	 *            分页控制游标
	 * @param perCounts
	 *            分页显示件数
