<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="searchInfo.questionType">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>${getText("yds.com.warning.0001","",{"试题类型"})}</message>
		</field-validator>
	</field>
	
	<field name="searchInfo.keyword">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">200</param>
			<message>${getText("yds.com.warning.0007","",{"关键字","200"})}</message>
		</field-validator>
	</field>
	
	<field name="searchInfo.scoreDown">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">3</param>
			<message>${getText("yds.com.warning.0007","",{"试题分数（下限）","3"})}</message>
		</field-validator>
		
		<field-validator type="regex">
			<param name="expression">^[0-9]*$</param>
			<message>${getText("yds.com.warning.0002","",{"试题分数（下限）"})}</message>
		</field-validator>
	</field>

	<field name="searchInfo.scoreUp">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">3</param>
			<message>${getText("yds.com.warning.0007","",{"试题分数（上限）","3"})}</message>
		</field-validator>
		
		<field-validator type="regex">
			<param name="expression">^[0-9]*$</param>
			<message>${getText("yds.com.warning.0002","",{"试题分数（上限）"})}</message>
		</field-validator>
	</field>
	
	<field name="searchInfo.createUserId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">6</param>
			<message>${getText("yds.com.warning.0007","",{"创建者","6"})}</message>
		</field-validator>
		
		<field-validator type="regex">
			<param name="expression">[0-9]{6}</param>
			<message>${getText("yds.com.warning.0002","",{"创建者"})}</message>
		</field-validator>
	</field>

	<field name="searchInfo.updateUserId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="maxLength">6</param>
			<message>${getText("yds.com.warning.0007","",{"更新者","6"})}</message>
		</field-validator>
		
		<field-validator type="regex">
			<param name="expression">[0-9]{6}</param>
			<message>${getText("yds.com.warning.0002","",{"更新者"})}</message>
		</field-validator>
	</field>
</validators>