package com.yds.tt.testing.dao;

import java.util.List;
import java.util.Map;

import com.yds.tt.testing.bean.K060141SearchInfo;
import com.yds.tt.training.bean.CourseInfo;

/**
 * 课程选择（数据库访问）
 * 
 * @author liyanrui
 * @version 1.00 2010/04/16
 */
public interface K060141Dao {

	/**
	 * 取得课程一览信息列表
	 * 
	 * @param param
	 *            检索条件信息
	 * @param offset
	 *            取得日志信息
	 * @param perCounts
	 *            取得翻页信息
	 * @return CourseInfo 课程信息一览
	 */
	public List<CourseInfo> getSearchList(K060141SearchInfo searchInfo,
			int offset, int perCounts);

	/**
	 * 取得课程一览信息总数(分页)
	 * 
	 * @param param
	 *            检索条件信息
	 * @return Long 信息总数
	 */
	public Long getTotalCount(K060141SearchInfo param);

	/**
	 * 取得考试已有的需要学习课程
	 * 
	 * @param examineId
	 *            考试ID
	 * @return List<String> 需要学习课程ID结果集
	 */
	public List<String> getHadCourses(String examineId);

	/**
	 * 插入需要学习课程信息
	 * 
	 * @param necessaryCourses
	 *            需要学习课程信息
	 */
	public void insertNecessaryCourses(Map<String, String> necessaryCourses);
}
