package com.yds.tt.testing.service;

import java.util.List;
import java.util.Map;

import com.yds.common.bean.SysCodeInfo;
import com.yds.tt.testing.bean.ExamineInfo;
import com.yds.tt.testing.bean.K060051SearchInfo;

/**
 * 考试信息检索
 * 
 * @author wangqingzhu
 * @version 1.00 2010/03/30
 */
public interface K060051Service {

	/**
	 * 取得编辑考试一览信息
	 * 
	 * @param param
	 *            检索条件信息
	 * @param offset
	 *            取得日志信息
	 * @param perCounts
	 *            取得翻页信息
	 * @return List<ExamineInfo> 编辑考试一览信息
	 */
	public List<ExamineInfo> getK060051EditInfo(K060051SearchInfo param,
			int offset, int perCounts);

	/**
	 * 取得编辑考试信息总数(分页)
	 * 
	 * @param param
	 *            检索得信息内容
	 * @return K060051editInfo 编辑考试信息一览
	 */
	public Long getEditTC(K060051SearchInfo param);

	/**
	 * 取得实施考试一览信息
	 * 
	 * @param param
	 *            检索条件信息
	 * @param offset
	 *            取得日志信息
	 * @param perCounts
	 *            取得翻页信息
	 * @return List<ExamineInfo> 实施考试一览信息
	 */
	public List<ExamineInfo> getK060051ImplementInfo(K060051SearchInfo param,
			int offset, int perCounts);

	/**
	 * 取得实施考试信息总数(分页)
	 * 
	 * @param param
	 *            检索得信息内容
	 * @return K060051editInfo 实施考试信息总数
	 */
	public Long getImplementTC(K060051SearchInfo param);

	/**
	 * 取得考试状态信息
	 * 
	 * @return List<SysCodeInfo> 考试状态信息
	 */
	public List<SysCodeInfo> getExamstus();

	/**
	 * 取得考试信息
	 * 
	 * @param examineId
	 *            考试ID
	 * @return ExamineInfo 考试信息
	 */
	public ExamineInfo getExamineInfoById(String examineId);

	/**
	 * 更新考试信息
	 * 
	 * @param examineId
	 *            考试ID
	 * @param updateTimepa
	 *            更新时间
	 * @param examineStatuspa
	 *            考试状态
	 * @return
	 */
	public void updateExmRelatedInfo(String examineId, String updateTimepa,
			int examineStatuspa);

	/**
	 * 更新考试答卷信息
	 * 
	 * @param examineId
	 *            考试ID
	 * @param updateTimepa
	 *            更新时间
	 * @return String 结果状态
	 */
	public String updateExamineAnswer(String examineId, String updateTimepa);

	/**
	 * 更新考试员工信息
	 * 
	 * @param examineId
	 *            考试ID
	 * @param updateTimepa
	 *            更新时间
	 * @return
	 */
	public void updateExamineEmployee(String examineId, String updateTimepa);

	/**
	 * 取得评分者ID
	 * 
	 * @return List<Map<String, String>> 评分者ID
	 */
	public List<Map<String, String>> getMarkingEmpId();

}
