package com.yds.tt.manager.action;

import com.yds.base.action.BasePagerAction;

/**
 * TT分页PagerAction基类.
 *
 * @author 	qianguorong
 * @version 1.00 2010/06/11
 */
public class TtBasePagerAction extends BasePagerAction {

	private static final long serialVersionUID = 535831821078316412L;

	/** 画面重载方式. 
	 * "1": 使用Session保存的条件检索画面
	 * "2": 使用Session保存的信息给画面赋值
	 * 其他：初始化检索
	 * */
	private String reloadFlg = "0";

	/**
	 * @param reloadFlg the reloadFlg to set
	 */
	public void setReloadFlg(String reloadFlg) {
		this.reloadFlg = reloadFlg;
	}

	/**
	 * @return the reloadFlg
	 */
	public String getReloadFlg() {
		return reloadFlg;
	}

}
