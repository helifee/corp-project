package com.yds.tt.manager.dao.impl;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.yds.base.dao.AbstractBaseDao;
import com.yds.tt.manager.bean.MessageReminding;
import com.yds.tt.manager.bean.PermRequestInfo;
import com.yds.tt.manager.dao.G100011Dao;
import com.yds.tt.testing.bean.ExamineInfo;
import com.yds.tt.training.bean.Bookmark;
import com.yds.tt.training.bean.J020021SearchInfo;

/**
 * @see com.yds.tt.manager.dao.G100011Dao
 */
@Repository("g100011Dao")
public class G100011DaoImpl extends AbstractBaseDao implements G100011Dao {

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<Bookmark> getBookMarkList(String userId) {
		return (List<Bookmark>) super.queryForList(
				"G100011Dao.getBookMarkList",userId);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public int deleteBookMark(Bookmark bookMarkInfo) {
		return super.delete("G100011Dao.delBookMark", bookMarkInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public Integer checkBookInfo(Bookmark bookMarkInfo) {
		return (Integer)super.queryForObject(
				"G100011Dao.checkBookMarkInfo",bookMarkInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<MessageReminding> getMessageRemindingList(String userId) {
		return (List<MessageReminding>) super.queryForList(
				"G100011Dao.getMessageRemindingList",userId);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public int updateLoseTime(MessageReminding messageRemindingInfo) {
		return super.update("G100011Dao.updateLoseTime", messageRemindingInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public Integer messageExitCheck(
			MessageReminding messageRemindingInfo) {
		return (Integer) super.queryForObject(
				"G100011Dao.checkMessageInfo",messageRemindingInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long getCourseCount(J020021SearchInfo courseInfo) {
		return (Long) super.queryForObject("G100011Dao.getCourseInfoCount", courseInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<J020021SearchInfo> getCourseInfoList(int offset, int perCounts,
			J020021SearchInfo courseInfo) {
		return (List<J020021SearchInfo>) super.queryForList("G100011Dao.getCourseInfoList", courseInfo, offset , perCounts);
	}

	/**
	 * {@inheritDoc}
	 */
	@Override
	public Long getExamineCount(ExamineInfo examineInfo) {
		return (Long) super.queryForObject("G100011Dao.getExamineInfoCount", examineInfo);
	}

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<ExamineInfo> getExamineInfoList(int offset, int perCounts,
			ExamineInfo examineInfo) {
		return (List<ExamineInfo>) super.queryForList("G100011Dao.getExamineInfoList", examineInfo, offset , perCounts);
	}

	/**
	 * {@inheritDoc}
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<MessageReminding> getMessageRemindingMarquee(String userId) {
		return (List<MessageReminding>) super.queryForList("G100011Dao.getMessageRemindingMarquee",userId);
	}
	
	/**
	 * {@inheritDoc}
	 */
	@Override
	public Object insertPermRequest(PermRequestInfo permRequestInfo) {

		// 终了时间设置默认值
		String strDate =permRequestInfo.getEndTime();
		if (strDate == null || strDate.length() == 0) {
			strDate = "9999-12-31";
		}
		permRequestInfo.setEndTime(strDate);
		
		return super.insert("G100011Dao.insertPermRequestInfo",
				permRequestInfo);
	}
}
