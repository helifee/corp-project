<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd" 
	default-autowire="byName" default-lazy-init="false">
	
	<!-- quartz执行线程池 -->
	<bean id="quartzExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<property name="maxPoolSize" value="10" />
	</bean>
	
	<!-- 创建调度任务 使用已有的service类方法，不需要单独编写调度类QuartzJob-->
	<bean id="reportJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="batchGroupService" />
		<property name="targetMethod" value="executeJobGroups" />
	</bean>
	
	<!-- 配置调度任务,简单模式   -->
	<bean id="simpleReportTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<!-- 设置调度内容 -->
		<property name="jobDetail" ref="reportJob" />
		<!-- 服务启动后延迟1秒执行 -->
		<property name="startDelay" value="1000" />	
		<!-- 设置时间间隔 -->
		<property name="repeatInterval" value="60000" />
	</bean>

	<!-- 任务调度 -->
	<bean id="schedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean" autowire="no">
			<property name="taskExecutor" ref="quartzExecutor" />
			<property name="triggers">
			<list>
				<!-- 添加调度 -->
				<ref bean="simpleReportTrigger"/>
			</list>
		</property>
	</bean>
	
</beans>