<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="departmentInfo.deptId">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>部门ID不能为空！</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">3</param>
			<param name="maxLength">3</param>
			<message>部门ID长度为${minLength}到${maxLength}位！</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[a-z0-9A-Z]{3}</param>
			<message>用户ID格式错误！</message>
		</field-validator>
		
	</field>
	<field name="departmentInfo.deptNm">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>部门名称不能为空！</message>
		</field-validator>
	</field>
	<field name="departmentInfo.deptSnm">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>部门略称不能为空！</message>
		</field-validator>
	</field>
	<field name="departmentInfo.parentDeptId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">3</param>
			<param name="maxLength">3</param>
			<message>上级部门ID长度为${minLength}到${maxLength}位！</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[a-z0-9A-Z]{3}</param>
			<message>用户ID格式错误！</message>
		</field-validator>
	
	</field>
	<field name="departmentInfo.leaderId">
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">6</param>
			<param name="maxLength">6</param>
			<message>上级部门ID长度为${minLength}到${maxLength}位！</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">19[8-9][0-9]{3}|20[0-9]{4}|[0]{6}</param>
			<message>用户ID格式错误！</message>
		</field-validator>		
	</field>
	
</validators>