package com.ydsweb.www.dao.impl.perm;

import java.util.List;

import org.springframework.stereotype.Repository;

import com.ydsweb.www.dao.base.BaseDao;
import com.ydsweb.www.dao.condition.perm.DepartmentInfo;
import com.ydsweb.www.dao.perm.DepartmentDao;


/**
 *  @see com.ydsweb.www.dao.perm.DepartmentDao
 */
@Repository("departmentDao")
public class DepartmentDaoImpl  extends BaseDao implements DepartmentDao{

	 /**
	 * {@inheritDoc}
	 */
	@Override
	public void departmentadd(DepartmentInfo departmentinfo) {
		super.insert("DepartmentDao.departmentadd", departmentinfo);
	}

	 /**
	 * {@inheritDoc}
	 */
	@Override
	public void departmentdel(String deptId) {
		super.delete("DepartmentDao.departmentdel", deptId);
	}

	 /**
	 * {@inheritDoc}
	 */
	@Override
	public void departmentupt(DepartmentInfo departmentInfo) {
		super.update("DepartmentDao.departmentupt", departmentInfo);
	}

	 /**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public String getdepartmentnm(String deptId) {
		List<String> resultList = super.queryForList("DepartmentDao.getdeptNm", deptId);
		if (resultList.size() == 0) {
			return "";
		}else{
			return resultList.get(0);
		}
	}

	 /**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public List<DepartmentInfo> getdepartmentinfos() {
		return (List<DepartmentInfo>)super.queryForList("DepartmentDao.getdepartmentinfos", "");
	}

	 /**
	 * {@inheritDoc}
	 */
	@Override
	@SuppressWarnings("unchecked")
	public DepartmentInfo getdepartmentinfo(String deptId) {
		List<DepartmentInfo> resultList = super.queryForList("DepartmentDao.getdepartmentinfo", deptId);
		if (resultList.size() == 0) {
			return null;
		}else{
			return resultList.get(0);
		}
	}
}
