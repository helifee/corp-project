package com.ydsweb.www.dao.perm;

import java.util.List;

import com.ydsweb.www.dao.condition.perm.DepartmentInfo;


/**
 * 部门编辑处理（数据库访问）
 * @author 远东)renlong
 * @version 1.00 2010/01/04
 */

public interface DepartmentDao {
	
	/**
	 * 部门信息的添加
	 * 
	 * @param departmentinfo 要添加部门信息
	 */
	public abstract void departmentadd(DepartmentInfo departmentinfo);
	
	/**
	 * 取得部门信息一览
	 * 
	 * @return List<DepartmentInfo> 部门信息一览
	 */
	public List<DepartmentInfo> getdepartmentinfos();
	
	/**
	 * 删除部门信息
	 * 
	 * @param deptId 部门ID
	 */
	public void departmentdel(String deptId);
	
	/**
	 * 取得部门名称
	 * 
	 * @param deptId 部门ID
	 * @return deptNm 部门名称
	 */
	public String getdepartmentnm(String deptId);
	
	/**
	 * 部门信息的修改
	 * 
	 * @param departmentInfo 要修改部门信息
	 */
	public abstract void departmentupt(DepartmentInfo departmentInfo);
	
	/**
	 * 取得部门信息
	 * 
	 * @param deptId 部门ID
	 * @return DepartmentInfo 部门信息
	 */
	public DepartmentInfo getdepartmentinfo(String deptId);
}
