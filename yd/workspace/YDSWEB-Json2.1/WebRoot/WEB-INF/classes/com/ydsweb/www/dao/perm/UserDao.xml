<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTDSQLMap2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="UserDao">
	
	<typeAlias alias="userInfo" type="com.ydsweb.www.dao.condition.perm.UserResult"/>
	
	<!-- 用户名称取得 --> 
	<select id="getuserNm" parameterClass="String" resultClass="userInfo">
		SELECT 
			USER_CNM AS userName
			FROM PER_USER
		WHERE
			USER_ID = #userId#;
	</select>
</sqlMap>  
