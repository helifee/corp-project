<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerDepartment">

    <typeAlias alias="perDepartment" type="com.ysys.www.model.PerDepartment"/>

    <resultMap id="perDepartmentResult" class="perDepartment">
        <result property="deptId" column="DEPT_ID"/>
        <result property="deptNm" column="DEPT_NM"/>
        <result property="parentDeptId" column="PARENT_DEPT_ID"/>
        <result property="companyId" column="COMPANY_ID"/>
        <result property="deptDesc" column="DEPT_DESC"/>
        <result property="deptRoom" column="DEPT_ROOM"/>
        <result property="leaderId" column="LEADER_ID"/>
        <result property="leaderTel" column="LEADER_TEL"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	DEPT_ID ,
        	DEPT_NM ,
        	PARENT_DEPT_ID ,
        	COMPANY_ID ,
        	DEPT_DESC ,
        	DEPT_ROOM ,
        	LEADER_ID ,
        	LEADER_TEL ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perDepartment">
    <![CDATA[
        INSERT INTO
        per_department (
        	DEPT_ID ,
        	DEPT_NM ,
        	PARENT_DEPT_ID ,
        	COMPANY_ID ,
        	DEPT_DESC ,
        	DEPT_ROOM ,
        	LEADER_ID ,
        	LEADER_TEL ,
        	UPDATETIME 
        ) VALUES (
        	#deptId# ,
        	#deptNm# ,
        	#parentDeptId# ,
        	#companyId# ,
        	#deptDesc# ,
        	#deptRoom# ,
        	#leaderId# ,
        	#leaderTel# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="deptId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perDepartment">
    <![CDATA[
        UPDATE per_department SET
	        DEPT_NM = #deptNm# ,
	        PARENT_DEPT_ID = #parentDeptId# ,
	        COMPANY_ID = #companyId# ,
	        DEPT_DESC = #deptDesc# ,
	        DEPT_ROOM = #deptRoom# ,
	        LEADER_ID = #leaderId# ,
	        LEADER_TEL = #leaderTel# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        DEPT_ID = #deptId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_department where
        DEPT_ID = #deptId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perDepartmentResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_department 
	        where 
		        DEPT_ID = #deptId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="deptId">
	             DEPT_ID = #deptId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="deptNm">
	             DEPT_NM = #deptNm#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="parentDeptId">
	             PARENT_DEPT_ID = #parentDeptId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="companyId">
	             COMPANY_ID = #companyId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="deptDesc">
	             DEPT_DESC = #deptDesc#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="deptRoom">
	             DEPT_ROOM = #deptRoom#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="leaderId">
	             LEADER_ID = #leaderId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="leaderTel">
	             LEADER_TEL = #leaderTel#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_department
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perDepartmentResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_department 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
