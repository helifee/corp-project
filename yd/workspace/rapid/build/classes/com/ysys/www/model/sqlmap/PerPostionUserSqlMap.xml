<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerPostionUser">

    <typeAlias alias="perPostionUser" type="com.ysys.www.model.PerPostionUser"/>

    <resultMap id="perPostionUserResult" class="perPostionUser">
        <result property="positionId" column="POSITION_ID"/>
        <result property="empId" column="EMP_ID"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	POSITION_ID ,
        	EMP_ID ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perPostionUser">
    <![CDATA[
        INSERT INTO
        per_postion_user (
        	POSITION_ID ,
        	EMP_ID ,
        	UPDATETIME 
        ) VALUES (
        	#positionId# ,
        	#empId# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="positionIdempId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perPostionUser">
    <![CDATA[
        UPDATE per_postion_user SET
	        UPDATETIME = #updatetime# 
        WHERE 
	        POSITION_ID = #positionId# ,
	        EMP_ID = #empId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_postion_user where
        POSITION_ID = #positionId# ,
        EMP_ID = #empId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perPostionUserResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_postion_user 
	        where 
		        POSITION_ID = #positionId# ,
		        EMP_ID = #empId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="positionId">
	             POSITION_ID = #positionId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="empId">
	             EMP_ID = #empId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_postion_user
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perPostionUserResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_postion_user 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
