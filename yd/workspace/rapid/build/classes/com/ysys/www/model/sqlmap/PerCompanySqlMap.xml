<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerCompany">

    <typeAlias alias="perCompany" type="com.ysys.www.model.PerCompany"/>

    <resultMap id="perCompanyResult" class="perCompany">
        <result property="companyId" column="COMPANY_ID"/>
        <result property="companyNm" column="COMPANY_NM"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	COMPANY_ID ,
        	COMPANY_NM ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perCompany">
    <![CDATA[
        INSERT INTO
        per_company (
        	COMPANY_ID ,
        	COMPANY_NM ,
        	UPDATETIME 
        ) VALUES (
        	#companyId# ,
        	#companyNm# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="companyId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perCompany">
    <![CDATA[
        UPDATE per_company SET
	        COMPANY_NM = #companyNm# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        COMPANY_ID = #companyId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_company where
        COMPANY_ID = #companyId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perCompanyResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_company 
	        where 
		        COMPANY_ID = #companyId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="companyId">
	             COMPANY_ID = #companyId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="companyNm">
	             COMPANY_NM = #companyNm#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_company
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perCompanyResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_company 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
