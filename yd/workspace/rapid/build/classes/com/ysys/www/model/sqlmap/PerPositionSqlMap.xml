<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerPosition">

    <typeAlias alias="perPosition" type="com.ysys.www.model.PerPosition"/>

    <resultMap id="perPositionResult" class="perPosition">
        <result property="posId" column="POS_ID"/>
        <result property="posName" column="POS_NAME"/>
        <result property="posDesc" column="POS_DESC"/>
        <result property="posLevel" column="POS_LEVEL"/>
        <result property="posMode" column="POS_MODE"/>
        <result property="parentPos" column="PARENT_POS"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	POS_ID ,
        	POS_NAME ,
        	POS_DESC ,
        	POS_LEVEL ,
        	POS_MODE ,
        	PARENT_POS ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perPosition">
    <![CDATA[
        INSERT INTO
        per_position (
        	POS_ID ,
        	POS_NAME ,
        	POS_DESC ,
        	POS_LEVEL ,
        	POS_MODE ,
        	PARENT_POS ,
        	UPDATETIME 
        ) VALUES (
        	#posId# ,
        	#posName# ,
        	#posDesc# ,
        	#posLevel# ,
        	#posMode# ,
        	#parentPos# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="posId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perPosition">
    <![CDATA[
        UPDATE per_position SET
	        POS_NAME = #posName# ,
	        POS_DESC = #posDesc# ,
	        POS_LEVEL = #posLevel# ,
	        POS_MODE = #posMode# ,
	        PARENT_POS = #parentPos# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        POS_ID = #posId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_position where
        POS_ID = #posId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perPositionResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_position 
	        where 
		        POS_ID = #posId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="posId">
	             POS_ID = #posId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="posName">
	             POS_NAME = #posName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="posDesc">
	             POS_DESC = #posDesc#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="posLevel">
	             POS_LEVEL = #posLevel#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="posMode">
	             POS_MODE = #posMode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="parentPos">
	             PARENT_POS = #parentPos#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_position
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perPositionResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_position 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
