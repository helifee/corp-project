<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerPermitOld">

    <typeAlias alias="perPermitOld" type="com.ysys.www.model.PerPermitOld"/>

    <resultMap id="perPermitOldResult" class="perPermitOld">
        <result property="permitId" column="PERMIT_ID"/>
        <result property="moduleId" column="MODULE_ID"/>
        <result property="actionId" column="ACTION_ID"/>
        <result property="permitValue" column="PERMIT_VALUE"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	PERMIT_ID ,
        	MODULE_ID ,
        	ACTION_ID ,
        	PERMIT_VALUE 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perPermitOld">
    <![CDATA[
        INSERT INTO
        per_permit_old (
        	PERMIT_ID ,
        	MODULE_ID ,
        	ACTION_ID ,
        	PERMIT_VALUE 
        ) VALUES (
        	#permitId# ,
        	#moduleId# ,
        	#actionId# ,
        	#permitValue# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="permitId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perPermitOld">
    <![CDATA[
        UPDATE per_permit_old SET
	        MODULE_ID = #moduleId# ,
	        ACTION_ID = #actionId# ,
	        PERMIT_VALUE = #permitValue# 
        WHERE 
	        PERMIT_ID = #permitId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_permit_old where
        PERMIT_ID = #permitId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perPermitOldResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_permit_old 
	        where 
		        PERMIT_ID = #permitId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="permitId">
	             PERMIT_ID = #permitId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="moduleId">
	             MODULE_ID = #moduleId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="actionId">
	             ACTION_ID = #actionId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="permitValue">
	             PERMIT_VALUE = #permitValue#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_permit_old
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perPermitOldResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_permit_old 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
