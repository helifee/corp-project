<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerPermitGroupOld">

    <typeAlias alias="perPermitGroupOld" type="com.ysys.www.model.PerPermitGroupOld"/>

    <resultMap id="perPermitGroupOldResult" class="perPermitGroupOld">
        <result property="groupId" column="GROUP_ID"/>
        <result property="groupName" column="GROUP_NAME"/>
        <result property="permitId" column="PERMIT_ID"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	GROUP_ID ,
        	GROUP_NAME ,
        	PERMIT_ID 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perPermitGroupOld">
    <![CDATA[
        INSERT INTO
        per_permit_group_old (
        	GROUP_ID ,
        	GROUP_NAME ,
        	PERMIT_ID 
        ) VALUES (
        	#groupId# ,
        	#groupName# ,
        	#permitId# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="groupId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perPermitGroupOld">
    <![CDATA[
        UPDATE per_permit_group_old SET
	        GROUP_NAME = #groupName# ,
	        PERMIT_ID = #permitId# 
        WHERE 
	        GROUP_ID = #groupId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_permit_group_old where
        GROUP_ID = #groupId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perPermitGroupOldResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_permit_group_old 
	        where 
		        GROUP_ID = #groupId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="groupId">
	             GROUP_ID = #groupId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="groupName">
	             GROUP_NAME = #groupName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="permitId">
	             PERMIT_ID = #permitId#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_permit_group_old
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perPermitGroupOldResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_permit_group_old 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
