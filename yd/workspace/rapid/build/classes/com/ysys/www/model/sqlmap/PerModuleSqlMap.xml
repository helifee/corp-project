<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerModule">

    <typeAlias alias="perModule" type="com.ysys.www.model.PerModule"/>

    <resultMap id="perModuleResult" class="perModule">
        <result property="moduleId" column="MODULE_ID"/>
        <result property="moduleName" column="MODULE_NAME"/>
        <result property="moduleValue" column="MODULE_VALUE"/>
        <result property="linkUrl" column="LINK_URL"/>
        <result property="parentModule" column="PARENT_MODULE"/>
        <result property="moduleDesc" column="MODULE_DESC"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	MODULE_ID ,
        	MODULE_NAME ,
        	MODULE_VALUE ,
        	LINK_URL ,
        	PARENT_MODULE ,
        	MODULE_DESC 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perModule">
    <![CDATA[
        INSERT INTO
        per_module (
        	MODULE_ID ,
        	MODULE_NAME ,
        	MODULE_VALUE ,
        	LINK_URL ,
        	PARENT_MODULE ,
        	MODULE_DESC 
        ) VALUES (
        	#moduleId# ,
        	#moduleName# ,
        	#moduleValue# ,
        	#linkUrl# ,
        	#parentModule# ,
        	#moduleDesc# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="moduleId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perModule">
    <![CDATA[
        UPDATE per_module SET
	        MODULE_NAME = #moduleName# ,
	        MODULE_VALUE = #moduleValue# ,
	        LINK_URL = #linkUrl# ,
	        PARENT_MODULE = #parentModule# ,
	        MODULE_DESC = #moduleDesc# 
        WHERE 
	        MODULE_ID = #moduleId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_module where
        MODULE_ID = #moduleId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perModuleResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_module 
	        where 
		        MODULE_ID = #moduleId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="moduleId">
	             MODULE_ID = #moduleId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="moduleName">
	             MODULE_NAME = #moduleName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="moduleValue">
	             MODULE_VALUE = #moduleValue#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="linkUrl">
	             LINK_URL = #linkUrl#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="parentModule">
	             PARENT_MODULE = #parentModule#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="moduleDesc">
	             MODULE_DESC = #moduleDesc#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_module
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perModuleResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_module 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
