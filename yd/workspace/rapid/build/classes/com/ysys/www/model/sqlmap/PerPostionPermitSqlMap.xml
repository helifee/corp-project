<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerPostionPermit">

    <typeAlias alias="perPostionPermit" type="com.ysys.www.model.PerPostionPermit"/>

    <resultMap id="perPostionPermitResult" class="perPostionPermit">
        <result property="posId" column="POS_ID"/>
        <result property="permitId" column="PERMIT_ID"/>
        <result property="operator" column="OPERATOR"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	POS_ID ,
        	PERMIT_ID ,
        	OPERATOR ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perPostionPermit">
    <![CDATA[
        INSERT INTO
        per_postion_permit (
        	POS_ID ,
        	PERMIT_ID ,
        	OPERATOR ,
        	UPDATETIME 
        ) VALUES (
        	#posId# ,
        	#permitId# ,
        	#operator# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="posId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perPostionPermit">
    <![CDATA[
        UPDATE per_postion_permit SET
	        PERMIT_ID = #permitId# ,
	        OPERATOR = #operator# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        POS_ID = #posId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_postion_permit where
        POS_ID = #posId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perPostionPermitResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_postion_permit 
	        where 
		        POS_ID = #posId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="posId">
	             POS_ID = #posId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="permitId">
	             PERMIT_ID = #permitId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="operator">
	             OPERATOR = #operator#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_postion_permit
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perPostionPermitResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_postion_permit 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
