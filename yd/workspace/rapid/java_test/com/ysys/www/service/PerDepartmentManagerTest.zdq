public class PerDepartmentManagerTest extends BaseManagerTestCase{

	private PerDepartmentManager manager;
	
	// autowire by name
	@Resource
	public void setPerDepartmentManager(PerDepartmentManager manager) {
		this.manager = manager;
	}

	@Override
	protected String[] getDbUnitDataFiles() {
		return new String[]{"classpath:common_testdata.xml","classpath:PerDepartment_testdata.xml"};
	}

	@Test
	public void crud() {
		PerDepartment obj = new PerDepartment();
		
	  	obj.setDeptNm(new java.lang.String("1"));
	  	obj.setParentDeptId(new java.lang.String("1"));
	  	obj.setCompanyId(new java.lang.String("1"));
	  	obj.setDeptDesc(new java.lang.String("1"));
	  	obj.setDeptRoom(new java.lang.String("1"));
	  	obj.setLeaderId(new java.lang.String("1"));
	  	obj.setLeaderTel(new java.lang.Integer("1"));
	  	obj.setUpdatetime(new java.sql.Timestamp(System.currentTimeMillis()));
		
		manager.save(obj);
		manager.getEntityDao().flush();
		
		manager.update(obj);
		manager.getEntityDao().flush();
		
		assertNotNull(obj.getDeptId());
		
		manager.removeById(obj.getDeptId());
		manager.getEntityDao().flush();
	
	}
}
