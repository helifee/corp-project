<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerPermit">

    <typeAlias alias="perPermit" type="com.ysys.www.model.PerPermit"/>

    <resultMap id="perPermitResult" class="perPermit">
        <result property="permitId" column="PERMIT_ID"/>
        <result property="namespace" column="NAMESPACE"/>
        <result property="actionName" column="ACTION_NAME"/>
        <result property="isModule" column="IS_MODULE"/>
        <result property="moduleName" column="MODULE_NAME"/>
        <result property="parentModule" column="PARENT_MODULE"/>
        <result property="dispSeq" column="DISP_SEQ"/>
        <result property="isMenu" column="IS_MENU"/>
        <result property="description" column="DESCRIPTION"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	PERMIT_ID ,
        	NAMESPACE ,
        	ACTION_NAME ,
        	IS_MODULE ,
        	MODULE_NAME ,
        	PARENT_MODULE ,
        	DISP_SEQ ,
        	IS_MENU ,
        	DESCRIPTION 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perPermit">
    <![CDATA[
        INSERT INTO
        per_permit (
        	PERMIT_ID ,
        	NAMESPACE ,
        	ACTION_NAME ,
        	IS_MODULE ,
        	MODULE_NAME ,
        	PARENT_MODULE ,
        	DISP_SEQ ,
        	IS_MENU ,
        	DESCRIPTION 
        ) VALUES (
        	#permitId# ,
        	#namespace# ,
        	#actionName# ,
        	#isModule# ,
        	#moduleName# ,
        	#parentModule# ,
        	#dispSeq# ,
        	#isMenu# ,
        	#description# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="permitId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perPermit">
    <![CDATA[
        UPDATE per_permit SET
	        NAMESPACE = #namespace# ,
	        ACTION_NAME = #actionName# ,
	        IS_MODULE = #isModule# ,
	        MODULE_NAME = #moduleName# ,
	        PARENT_MODULE = #parentModule# ,
	        DISP_SEQ = #dispSeq# ,
	        IS_MENU = #isMenu# ,
	        DESCRIPTION = #description# 
        WHERE 
	        PERMIT_ID = #permitId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_permit where
        PERMIT_ID = #permitId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perPermitResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_permit 
	        where 
		        PERMIT_ID = #permitId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="permitId">
	             PERMIT_ID = #permitId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="namespace">
	             NAMESPACE = #namespace#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="actionName">
	             ACTION_NAME = #actionName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="isModule">
	             IS_MODULE = #isModule#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="moduleName">
	             MODULE_NAME = #moduleName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="parentModule">
	             PARENT_MODULE = #parentModule#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="dispSeq">
	             DISP_SEQ = #dispSeq#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="isMenu">
	             IS_MENU = #isMenu#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="description">
	             DESCRIPTION = #description#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_permit
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perPermitResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_permit 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
