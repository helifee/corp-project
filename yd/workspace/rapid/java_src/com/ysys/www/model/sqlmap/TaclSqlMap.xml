<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Tacl">

    <typeAlias alias="tacl" type="com.ysys.www.model.Tacl"/>

    <resultMap id="taclResult" class="tacl">
        <result property="id" column="id"/>
        <result property="principalType" column="principalType"/>
        <result property="principalSn" column="principalSn"/>
        <result property="resourceSn" column="resourceSn"/>
        <result property="aclState" column="aclState"/>
        <result property="extendsState" column="extendsState"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	id ,
        	principalType ,
        	principalSn ,
        	resourceSn ,
        	aclState ,
        	extendsState 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tacl">
    <![CDATA[
        INSERT INTO
        t_acl (
        	id ,
        	principalType ,
        	principalSn ,
        	resourceSn ,
        	aclState ,
        	extendsState 
        ) VALUES (
        	#id# ,
        	#principalType# ,
        	#principalSn# ,
        	#resourceSn# ,
        	#aclState# ,
        	#extendsState# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="id" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tacl">
    <![CDATA[
        UPDATE t_acl SET
	        principalType = #principalType# ,
	        principalSn = #principalSn# ,
	        resourceSn = #resourceSn# ,
	        aclState = #aclState# ,
	        extendsState = #extendsState# 
        WHERE 
	        id = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from t_acl where
        id = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="taclResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from t_acl 
	        where 
		        id = #id# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             id = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="principalType">
	             principalType = #principalType#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="principalSn">
	             principalSn = #principalSn#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="resourceSn">
	             resourceSn = #resourceSn#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="aclState">
	             aclState = #aclState#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="extendsState">
	             extendsState = #extendsState#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from t_acl
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="taclResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from t_acl 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
