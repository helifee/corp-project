<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Tmodule">

    <typeAlias alias="tmodule" type="com.ysys.www.model.Tmodule"/>

    <resultMap id="tmoduleResult" class="tmodule">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sn" column="sn"/>
        <result property="url" column="url"/>
        <result property="orderNum" column="orderNum"/>
        <result property="parentId" column="parentId"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	id ,
        	name ,
        	sn ,
        	url ,
        	orderNum ,
        	parentId 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tmodule">
    <![CDATA[
        INSERT INTO
        t_module (
        	id ,
        	name ,
        	sn ,
        	url ,
        	orderNum ,
        	parentId 
        ) VALUES (
        	#id# ,
        	#name# ,
        	#sn# ,
        	#url# ,
        	#orderNum# ,
        	#parentId# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="id" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tmodule">
    <![CDATA[
        UPDATE t_module SET
	        name = #name# ,
	        sn = #sn# ,
	        url = #url# ,
	        orderNum = #orderNum# ,
	        parentId = #parentId# 
        WHERE 
	        id = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from t_module where
        id = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="tmoduleResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from t_module 
	        where 
		        id = #id# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             id = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="name">
	             name = #name#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="sn">
	             sn = #sn#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="url">
	             url = #url#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="orderNum">
	             orderNum = #orderNum#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="parentId">
	             parentId = #parentId#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from t_module
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tmoduleResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from t_module 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

    <select id="getByName" resultMap="tmoduleResult" parameterClass="java.lang.String">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from t_module where name = #name#
	    ]]>
    </select>
    
    <select id="getBySn" resultMap="tmoduleResult" parameterClass="java.lang.String">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from t_module where sn = #sn#
	    ]]>
    </select>
    
	
</sqlMap>
