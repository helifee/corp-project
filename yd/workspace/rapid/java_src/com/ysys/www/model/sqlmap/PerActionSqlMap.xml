<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerAction">

    <typeAlias alias="perAction" type="com.ysys.www.model.PerAction"/>

    <resultMap id="perActionResult" class="perAction">
        <result property="actionId" column="ACTION_ID"/>
        <result property="actionName" column="ACTION_NAME"/>
        <result property="actionValue" column="ACTION_VALUE"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ACTION_ID ,
        	ACTION_NAME ,
        	ACTION_VALUE 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perAction">
    <![CDATA[
        INSERT INTO
        per_action (
        	ACTION_ID ,
        	ACTION_NAME ,
        	ACTION_VALUE 
        ) VALUES (
        	#actionId# ,
        	#actionName# ,
        	#actionValue# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="actionId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perAction">
    <![CDATA[
        UPDATE per_action SET
	        ACTION_NAME = #actionName# ,
	        ACTION_VALUE = #actionValue# 
        WHERE 
	        ACTION_ID = #actionId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_action where
        ACTION_ID = #actionId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perActionResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_action 
	        where 
		        ACTION_ID = #actionId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="actionId">
	             ACTION_ID = #actionId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="actionName">
	             ACTION_NAME = #actionName#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="actionValue">
	             ACTION_VALUE = #actionValue#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_action
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perActionResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_action 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
