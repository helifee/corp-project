<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TabHysyl">

    <typeAlias alias="tabHysyl" type="com.ysys.www.model.TabHysyl"/>

    <resultMap id="tabHysylResult" class="tabHysyl">
        <result property="hysid" column="HYSID"/>
        <result property="hysmc" column="HYSMC"/>
        <result property="rnrs" column="RNRS"/>
        <result property="dh" column="DH"/>
        <result property="sb" column="SB"/>
        <result property="hybgbz" column="HYBGBZ"/>
        <result property="wxjk" column="WXJK"/>
        <result property="sortid" column="SORTID"/>
        <result property="imagefromx" column="IMAGEFROMX"/>
        <result property="imagefromy" column="IMAGEFROMY"/>
        <result property="imagetox" column="IMAGETOX"/>
        <result property="imagetoy" column="IMAGETOY"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	HYSID ,
        	HYSMC ,
        	RNRS ,
        	DH ,
        	SB ,
        	HYBGBZ ,
        	WXJK ,
        	SORTID ,
        	IMAGEFROMX ,
        	IMAGEFROMY ,
        	IMAGETOX ,
        	IMAGETOY ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tabHysyl">
    <![CDATA[
        INSERT INTO
        tab_hysyl (
        	HYSID ,
        	HYSMC ,
        	RNRS ,
        	DH ,
        	SB ,
        	HYBGBZ ,
        	WXJK ,
        	SORTID ,
        	IMAGEFROMX ,
        	IMAGEFROMY ,
        	IMAGETOX ,
        	IMAGETOY ,
        	UPDATETIME 
        ) VALUES (
        	#hysid# ,
        	#hysmc# ,
        	#rnrs# ,
        	#dh# ,
        	#sb# ,
        	#hybgbz# ,
        	#wxjk# ,
        	#sortid# ,
        	#imagefromx# ,
        	#imagefromy# ,
        	#imagetox# ,
        	#imagetoy# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="hysid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tabHysyl">
    <![CDATA[
        UPDATE tab_hysyl SET
	        HYSMC = #hysmc# ,
	        RNRS = #rnrs# ,
	        DH = #dh# ,
	        SB = #sb# ,
	        HYBGBZ = #hybgbz# ,
	        WXJK = #wxjk# ,
	        SORTID = #sortid# ,
	        IMAGEFROMX = #imagefromx# ,
	        IMAGEFROMY = #imagefromy# ,
	        IMAGETOX = #imagetox# ,
	        IMAGETOY = #imagetoy# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        HYSID = #hysid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from tab_hysyl where
        HYSID = #hysid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="tabHysylResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_hysyl 
	        where 
		        HYSID = #hysid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="hysid">
	             HYSID = #hysid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="hysmc">
	             HYSMC = #hysmc#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="rnrs">
	             RNRS = #rnrs#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="dh">
	             DH = #dh#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="sb">
	             SB = #sb#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="hybgbz">
	             HYBGBZ = #hybgbz#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="wxjk">
	             WXJK = #wxjk#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="sortid">
	             SORTID = #sortid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="imagefromx">
	             IMAGEFROMX = #imagefromx#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="imagefromy">
	             IMAGEFROMY = #imagefromy#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="imagetox">
	             IMAGETOX = #imagetox#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="imagetoy">
	             IMAGETOY = #imagetoy#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from tab_hysyl
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tabHysylResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_hysyl 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
