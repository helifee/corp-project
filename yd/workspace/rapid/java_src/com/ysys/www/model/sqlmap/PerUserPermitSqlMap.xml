<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="PerUserPermit">

    <typeAlias alias="perUserPermit" type="com.ysys.www.model.PerUserPermit"/>

    <resultMap id="perUserPermitResult" class="perUserPermit">
        <result property="userId" column="USER_ID"/>
        <result property="roleId" column="ROLE_ID"/>
        <result property="posId" column="POS_ID"/>
        <result property="proId" column="PRO_ID"/>
        <result property="permitId" column="PERMIT_ID"/>
        <result property="permitRefer" column="PERMIT_REFER"/>
        <result property="operator" column="OPERATOR"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USER_ID ,
        	ROLE_ID ,
        	POS_ID ,
        	PRO_ID ,
        	PERMIT_ID ,
        	PERMIT_REFER ,
        	OPERATOR ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="perUserPermit">
    <![CDATA[
        INSERT INTO
        per_user_permit (
        	USER_ID ,
        	ROLE_ID ,
        	POS_ID ,
        	PRO_ID ,
        	PERMIT_ID ,
        	PERMIT_REFER ,
        	OPERATOR ,
        	UPDATETIME 
        ) VALUES (
        	#userId# ,
        	#roleId# ,
        	#posId# ,
        	#proId# ,
        	#permitId# ,
        	#permitRefer# ,
        	#operator# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="userId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="perUserPermit">
    <![CDATA[
        UPDATE per_user_permit SET
	        ROLE_ID = #roleId# ,
	        POS_ID = #posId# ,
	        PRO_ID = #proId# ,
	        PERMIT_ID = #permitId# ,
	        PERMIT_REFER = #permitRefer# ,
	        OPERATOR = #operator# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        USER_ID = #userId# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from per_user_permit where
        USER_ID = #userId# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="perUserPermitResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_user_permit 
	        where 
		        USER_ID = #userId# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userId">
	             USER_ID = #userId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="roleId">
	             ROLE_ID = #roleId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="posId">
	             POS_ID = #posId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="proId">
	             PRO_ID = #proId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="permitId">
	             PERMIT_ID = #permitId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="permitRefer">
	             PERMIT_REFER = #permitRefer#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="operator">
	             OPERATOR = #operator#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from per_user_permit
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="perUserPermitResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from per_user_permit 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
