public class PerUserAction extends BaseStruts2Action implements Preparable,ModelDriven{
	//默认多列排序,example: username desc,createTime asc
	protected static final String DEFAULT_SORT_COLUMNS = null; 
	
	//forward paths
	protected static final String QUERY_JSP = "/pages/PerUser/query.jsp";
	protected static final String LIST_JSP= "/pages/PerUser/list.jsp";
	protected static final String CREATE_JSP = "/pages/PerUser/create.jsp";
	protected static final String EDIT_JSP = "/pages/PerUser/edit.jsp";
	protected static final String SHOW_JSP = "/pages/PerUser/show.jsp";
	//redirect paths,startWith: !
	protected static final String LIST_ACTION = "!/pages/PerUser/list.do";
	
	private PerUserManager perUserManager;
	
	private PerUser perUser;
	java.lang.String id = null;
	private String[] items;

	public void prepare() throws Exception {
		if (isNullOrEmptyString(id)) {
			perUser = new PerUser();
		} else {
			perUser = (PerUser)perUserManager.getById(id);
		}
	}
	
	/** 通过spring自动注入 */
	public void setPerUserManager(PerUserManager manager) {
		this.perUserManager = manager;
	}	
	
	public Object getModel() {
		return perUser;
	}
	
	public void setEmpId(java.lang.String val) {
		this.id = val;
	}

	public void setItems(String[] items) {
		this.items = items;
	}



	/**
	 * ExtGrid使用
	 * 列表
	 * @throws IOException
	 */
	public void extlist() throws IOException
	{
		PageRequest<Map> pr = ExtJsPageHelper.createPageRequestForExtJs(getRequest(), DEFAULT_SORT_COLUMNS);
		Page page = perUserManager.findByPageRequest(pr);
		
		List<PerUser> PerUserlist = (List) page.getResult();
		ListRange<PerUser> resultList = new ListRange<PerUser>();
		resultList.setList(PerUserlist);
		resultList.setTotalSize(page.getTotalCount());
		resultList.setMessage("ok");
		resultList.setSuccess(true);
		outJson(resultList);
	}

	/**
	 * extGrid保存
	 * @throws IOException
	 */
	public void extsave() throws IOException
	{
		Map<String, Object> result = new HashMap<String, Object>();
		try
		{
			perUserManager.save(perUser);
			result.put("success", true);
			result.put("msg", "添 加 成 功!");
		}
		catch (Exception e)
		{
			result.put("failure", true);
			result.put("msg", e.getMessage());
			e.printStackTrace();
		}
		outJson(result);
	}
	
	/**
	 * extGrid修改
	 * @throws IOException
	 */
	public void extupdate() throws IOException
	{
		Map<String, Object> result = new HashMap<String, Object>();
		try
		{
			perUserManager.save(perUser);
			result.put("success", true);
			result.put("msg", "修 改 成 功!");
		}
		catch (Exception e)
		{
			result.put("failure", true);
			result.put("msg", e.getMessage());
			e.printStackTrace();
		}
		outJson(result);
	}
	
	/**
	 * extGrid删除
	 * @throws IOException
	 */
	public void extdelete() throws IOException
	{
		String ids = getRequest().getParameter("ids");
		String[] idarray = ids.split(",");
		Map<String, Object> result = new HashMap<String, Object>();
		try
		{
			for (int i = 0; i < idarray.length; i++)
			{
				java.lang.String id = new java.lang.String((String)idarray[i]);
				perUserManager.removeById(id);
			}
			result.put("success", true);
			result.put("msg", "删除成功");
		}
		catch (Exception e)
		{
			result.put("failure", true);
			result.put("msg", e.getMessage());
			e.printStackTrace();
		}
		outJson(result);
	}
	
}
