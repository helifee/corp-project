import org.springframework.stereotype.Component;


@Component
public class PerUserPermitDao extends BaseIbatisDao<PerUserPermit,java.lang.String>{

	public Class getEntityClass() {
		return PerUserPermit.class;
	}
	
	public void saveOrUpdate(PerUserPermit entity) {
		if(entity.getUserId() == null) 
			save(entity);
		else 
			update(entity);
	}
	
	public Page findByPageRequest(PageRequest pageRequest) {
		return pageQuery("PerUserPermit.pageSelect",pageRequest);
	}
	

}
