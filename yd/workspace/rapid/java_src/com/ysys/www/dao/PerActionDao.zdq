import org.springframework.stereotype.Component;


@Component
public class PerActionDao extends BaseIbatisDao<PerAction,java.lang.String>{

	public Class getEntityClass() {
		return PerAction.class;
	}
	
	public void saveOrUpdate(PerAction entity) {
		if(entity.getActionId() == null) 
			save(entity);
		else 
			update(entity);
	}
	
	public Page findByPageRequest(PageRequest pageRequest) {
		return pageQuery("PerAction.pageSelect",pageRequest);
	}
	

}
