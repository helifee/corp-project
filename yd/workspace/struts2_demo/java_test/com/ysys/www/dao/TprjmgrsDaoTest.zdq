public class TprjmgrsDaoTest extends BaseDaoTestCase{
	
	private TprjmgrsDao dao;
	
	/** autowire by name */
	@Resource
	public void setTprjmgrsDao(TprjmgrsDao dao) {
		this.dao = dao;
	}

	@Override
	protected String[] getDbUnitDataFiles() {
		return new String[]{"classpath:common_testdata.xml","classpath:Tprjmgrs_testdata.xml"};
	}
	
	@Test
	public void findByPageRequest() {
		int pageNumber = 1;
		int pageSize = 10;
		
		PageRequest<Map> pageRequest = new PageRequest(new HashMap());
		pageRequest.setPageNumber(pageNumber);
		pageRequest.setPageSize(pageSize);
		pageRequest.setSortColumns(null);
		
		pageRequest.getFilters().put("prjName", "1");
		pageRequest.getFilters().put("prjDescribe", "1");
		pageRequest.getFilters().put("prjCusname", "1");
		pageRequest.getFilters().put("prjCuscontact", "1");
		pageRequest.getFilters().put("prjEnvir", "1");
		pageRequest.getFilters().put("prjDptid", "1");
		pageRequest.getFilters().put("prjPbdate", "1");
		pageRequest.getFilters().put("prjPedate", "1");
		pageRequest.getFilters().put("prjTbdate", "1");
		pageRequest.getFilters().put("prjTedate", "1");
		pageRequest.getFilters().put("prjDate", "1");
		pageRequest.getFilters().put("prjRef", "1");
		pageRequest.getFilters().put("prjCname", "1");
		pageRequest.getFilters().put("prjEname", "1");
		
		Page page = dao.findByPageRequest(pageRequest);
		
		assertEquals(pageNumber,page.getThisPageNumber());
		assertEquals(pageSize,page.getPageSize());
		List resultList = (List)page.getResult();
		assertNotNull(resultList);
		
	}
	
}
