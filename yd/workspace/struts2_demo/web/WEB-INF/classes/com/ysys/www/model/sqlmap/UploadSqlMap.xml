<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Upload">

    <typeAlias alias="upload" type="com.ysys.www.model.Upload"/>

    <resultMap id="uploadResult" class="upload">
        <result property="id" column="ID"/>
        <result property="filename" column="FILENAME"/>
        <result property="upfiledate" column="UPFILEDATE"/>
        <result property="upfiledir" column="UPFILEDIR"/>
        <result property="upfileuser" column="UPFILEUSER"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID ,
        	FILENAME ,
        	UPFILEDATE ,
        	UPFILEDIR ,
        	UPFILEUSER 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="upload">
    <![CDATA[
        INSERT INTO
        upload (
        	ID ,
        	FILENAME ,
        	UPFILEDATE ,
        	UPFILEDIR ,
        	UPFILEUSER 
        ) VALUES (
        	#id# ,
        	#filename# ,
        	#upfiledate# ,
        	#upfiledir# ,
        	#upfileuser# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="id" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="upload">
    <![CDATA[
        UPDATE upload SET
	        FILENAME = #filename# ,
	        UPFILEDATE = #upfiledate# ,
	        UPFILEDIR = #upfiledir# ,
	        UPFILEUSER = #upfileuser# 
        WHERE 
	        ID = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from upload where
        ID = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="uploadResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from upload 
	        where 
		        ID = #id# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             ID = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="filename">
	             FILENAME = #filename#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="upfiledate">
	             UPFILEDATE = #upfiledate#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="upfiledir">
	             UPFILEDIR = #upfiledir#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="upfileuser">
	             UPFILEUSER = #upfileuser#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from upload
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="uploadResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from upload 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
