<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TabZbyl">

    <typeAlias alias="tabZbyl" type="com.ysys.www.model.TabZbyl"/>

    <resultMap id="tabZbylResult" class="tabZbyl">
        <result property="zbid" column="ZBID"/>
        <result property="jlzid" column="JLZID"/>
        <result property="zbqf" column="ZBQF"/>
        <result property="zzwmc" column="ZZWMC"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ZBID ,
        	JLZID ,
        	ZBQF ,
        	ZZWMC ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tabZbyl">
    <![CDATA[
        INSERT INTO
        tab_zbyl (
        	ZBID ,
        	JLZID ,
        	ZBQF ,
        	ZZWMC ,
        	UPDATETIME 
        ) VALUES (
        	#zbid# ,
        	#jlzid# ,
        	#zbqf# ,
        	#zzwmc# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="zbid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tabZbyl">
    <![CDATA[
        UPDATE tab_zbyl SET
	        JLZID = #jlzid# ,
	        ZBQF = #zbqf# ,
	        ZZWMC = #zzwmc# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        ZBID = #zbid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from tab_zbyl where
        ZBID = #zbid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="tabZbylResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_zbyl 
	        where 
		        ZBID = #zbid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="zbid">
	             ZBID = #zbid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="jlzid">
	             JLZID = #jlzid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="zbqf">
	             ZBQF = #zbqf#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="zzwmc">
	             ZZWMC = #zzwmc#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from tab_zbyl
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tabZbylResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_zbyl 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
