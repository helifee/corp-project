<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Userkindmst">

    <typeAlias alias="userkindmst" type="com.ysys.www.model.Userkindmst"/>

    <resultMap id="userkindmstResult" class="userkindmst">
        <result property="userkindid" column="USERKINDID"/>
        <result property="userkindname" column="USERKINDNAME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USERKINDID ,
        	USERKINDNAME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="userkindmst">
    <![CDATA[
        INSERT INTO
        userkindmst (
        	USERKINDID ,
        	USERKINDNAME 
        ) VALUES (
        	#userkindid# ,
        	#userkindname# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="userkindid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="userkindmst">
    <![CDATA[
        UPDATE userkindmst SET
	        USERKINDNAME = #userkindname# 
        WHERE 
	        USERKINDID = #userkindid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from userkindmst where
        USERKINDID = #userkindid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="userkindmstResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from userkindmst 
	        where 
		        USERKINDID = #userkindid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userkindid">
	             USERKINDID = #userkindid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="userkindname">
	             USERKINDNAME = #userkindname#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from userkindmst
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="userkindmstResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from userkindmst 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
