<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Busyomst">

    <typeAlias alias="busyomst" type="com.ysys.www.model.Busyomst"/>

    <resultMap id="busyomstResult" class="busyomst">
        <result property="busyoid" column="BUSYOID"/>
        <result property="busyoidname" column="BUSYOIDNAME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	BUSYOID ,
        	BUSYOIDNAME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="busyomst">
    <![CDATA[
        INSERT INTO
        busyomst (
        	BUSYOID ,
        	BUSYOIDNAME 
        ) VALUES (
        	#busyoid# ,
        	#busyoidname# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="busyoid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="busyomst">
    <![CDATA[
        UPDATE busyomst SET
	        BUSYOIDNAME = #busyoidname# 
        WHERE 
	        BUSYOID = #busyoid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from busyomst where
        BUSYOID = #busyoid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="busyomstResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from busyomst 
	        where 
		        BUSYOID = #busyoid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="busyoid">
	             BUSYOID = #busyoid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="busyoidname">
	             BUSYOIDNAME = #busyoidname#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from busyomst
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="busyomstResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from busyomst 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
