<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TabMcyl">

    <typeAlias alias="tabMcyl" type="com.ysys.www.model.TabMcyl"/>

    <resultMap id="tabMcylResult" class="tabMcyl">
        <result property="jnid" column="JNID"/>
        <result property="hmid" column="HMID"/>
        <result property="xmid" column="XMID"/>
        <result property="xmsx" column="XMSX"/>
        <result property="xmmc" column="XMMC"/>
        <result property="scqf" column="SCQF"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	JNID ,
        	HMID ,
        	XMID ,
        	XMSX ,
        	XMMC ,
        	SCQF ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tabMcyl">
    <![CDATA[
        INSERT INTO
        tab_mcyl (
        	JNID ,
        	HMID ,
        	XMID ,
        	XMSX ,
        	XMMC ,
        	SCQF ,
        	UPDATETIME 
        ) VALUES (
        	#jnid# ,
        	#hmid# ,
        	#xmid# ,
        	#xmsx# ,
        	#xmmc# ,
        	#scqf# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="jnidhmidxmidxmsx" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tabMcyl">
    <![CDATA[
        UPDATE tab_mcyl SET
	        XMMC = #xmmc# ,
	        SCQF = #scqf# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        JNID = #jnid# ,
	        HMID = #hmid# ,
	        XMID = #xmid# ,
	        XMSX = #xmsx# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from tab_mcyl where
        JNID = #jnid# ,
        HMID = #hmid# ,
        XMID = #xmid# ,
        XMSX = #xmsx# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="tabMcylResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_mcyl 
	        where 
		        JNID = #jnid# ,
		        HMID = #hmid# ,
		        XMID = #xmid# ,
		        XMSX = #xmsx# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="jnid">
	             JNID = #jnid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="hmid">
	             HMID = #hmid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="xmid">
	             XMID = #xmid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="xmsx">
	             XMSX = #xmsx#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="xmmc">
	             XMMC = #xmmc#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="scqf">
	             SCQF = #scqf#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from tab_mcyl
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tabMcylResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_mcyl 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
