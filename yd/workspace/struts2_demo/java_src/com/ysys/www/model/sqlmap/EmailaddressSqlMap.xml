<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Emailaddress">

    <typeAlias alias="emailaddress" type="com.ysys.www.model.Emailaddress"/>

    <resultMap id="emailaddressResult" class="emailaddress">
        <result property="id" column="ID"/>
        <result property="emailaddress" column="EMAILADDRESS"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	ID ,
        	EMAILADDRESS 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="emailaddress">
    <![CDATA[
        INSERT INTO
        emailaddress (
        	ID ,
        	EMAILADDRESS 
        ) VALUES (
        	#id# ,
        	#emailaddress# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="id" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="emailaddress">
    <![CDATA[
        UPDATE emailaddress SET
	        EMAILADDRESS = #emailaddress# 
        WHERE 
	        ID = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from emailaddress where
        ID = #id# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="emailaddressResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from emailaddress 
	        where 
		        ID = #id# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="id">
	             ID = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="emailaddress">
	             EMAILADDRESS = #emailaddress#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from emailaddress
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="emailaddressResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from emailaddress 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
