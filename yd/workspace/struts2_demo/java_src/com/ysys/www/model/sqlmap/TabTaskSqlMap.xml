<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="TabTask">

    <typeAlias alias="tabTask" type="com.ysys.www.model.TabTask"/>

    <resultMap id="tabTaskResult" class="tabTask">
        <result property="userid" column="USERID"/>
        <result property="taskflag" column="TASKFLAG"/>
        <result property="taskid" column="TASKID"/>
        <result property="content" column="CONTENT"/>
        <result property="link" column="LINK"/>
        <result property="readflag" column="READFLAG"/>
        <result property="createtime" column="CREATETIME"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USERID ,
        	TASKFLAG ,
        	TASKID ,
        	CONTENT ,
        	LINK ,
        	READFLAG ,
        	CREATETIME ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tabTask">
    <![CDATA[
        INSERT INTO
        tab_task (
        	USERID ,
        	TASKFLAG ,
        	TASKID ,
        	CONTENT ,
        	LINK ,
        	READFLAG ,
        	CREATETIME ,
        	UPDATETIME 
        ) VALUES (
        	#userid# ,
        	#taskflag# ,
        	#taskid# ,
        	#content# ,
        	#link# ,
        	#readflag# ,
        	#createtime# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="useridtaskflagtaskid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tabTask">
    <![CDATA[
        UPDATE tab_task SET
	        CONTENT = #content# ,
	        LINK = #link# ,
	        READFLAG = #readflag# ,
	        CREATETIME = #createtime# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        USERID = #userid# ,
	        TASKFLAG = #taskflag# ,
	        TASKID = #taskid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from tab_task where
        USERID = #userid# ,
        TASKFLAG = #taskflag# ,
        TASKID = #taskid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="tabTaskResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_task 
	        where 
		        USERID = #userid# ,
		        TASKFLAG = #taskflag# ,
		        TASKID = #taskid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userid">
	             USERID = #userid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="taskflag">
	             TASKFLAG = #taskflag#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="taskid">
	             TASKID = #taskid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="content">
	             CONTENT = #content#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="link">
	             LINK = #link#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="readflag">
	             READFLAG = #readflag#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="createtime">
	             CREATETIME = #createtime#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from tab_task
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tabTaskResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from tab_task 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
