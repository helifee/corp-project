<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Mdistrict">

    <typeAlias alias="mdistrict" type="com.ysys.www.model.Mdistrict"/>

    <resultMap id="mdistrictResult" class="mdistrict">
        <result property="cityid" column="CITYID"/>
        <result property="distid" column="DISTID"/>
        <result property="udflag" column="UDFLAG"/>
        <result property="distname" column="DISTNAME"/>
        <result property="flag" column="FLAG"/>
        <result property="updatetime" column="UPDATETIME"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	CITYID ,
        	DISTID ,
        	UDFLAG ,
        	DISTNAME ,
        	FLAG ,
        	UPDATETIME 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="mdistrict">
    <![CDATA[
        INSERT INTO
        m_district (
        	CITYID ,
        	DISTID ,
        	UDFLAG ,
        	DISTNAME ,
        	FLAG ,
        	UPDATETIME 
        ) VALUES (
        	#cityid# ,
        	#distid# ,
        	#udflag# ,
        	#distname# ,
        	#flag# ,
        	#updatetime# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="cityiddistid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="mdistrict">
    <![CDATA[
        UPDATE m_district SET
	        UDFLAG = #udflag# ,
	        DISTNAME = #distname# ,
	        FLAG = #flag# ,
	        UPDATETIME = #updatetime# 
        WHERE 
	        CITYID = #cityid# ,
	        DISTID = #distid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from m_district where
        CITYID = #cityid# ,
        DISTID = #distid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="mdistrictResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from m_district 
	        where 
		        CITYID = #cityid# ,
		        DISTID = #distid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="cityid">
	             CITYID = #cityid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="distid">
	             DISTID = #distid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="udflag">
	             UDFLAG = #udflag#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="distname">
	             DISTNAME = #distname#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="flag">
	             FLAG = #flag#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="updatetime">
	             UPDATETIME = #updatetime#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from m_district
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="mdistrictResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from m_district 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
