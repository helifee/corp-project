<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Usermst">

    <typeAlias alias="usermst" type="com.ysys.www.model.Usermst"/>

    <resultMap id="usermstResult" class="usermst">
        <result property="userid" column="USERID"/>
        <result property="username" column="USERNAME"/>
        <result property="busyoid" column="BUSYOID"/>
        <result property="userkindid" column="USERKINDID"/>
        <result property="password" column="PASSWORD"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	USERID ,
        	USERNAME ,
        	BUSYOID ,
        	USERKINDID ,
        	PASSWORD 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="usermst">
    <![CDATA[
        INSERT INTO
        usermst (
        	USERID ,
        	USERNAME ,
        	BUSYOID ,
        	USERKINDID ,
        	PASSWORD 
        ) VALUES (
        	#userid# ,
        	#username# ,
        	#busyoid# ,
        	#userkindid# ,
        	#password# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="userid" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="usermst">
    <![CDATA[
        UPDATE usermst SET
	        USERNAME = #username# ,
	        BUSYOID = #busyoid# ,
	        USERKINDID = #userkindid# ,
	        PASSWORD = #password# 
        WHERE 
	        USERID = #userid# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from usermst where
        USERID = #userid# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="usermstResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from usermst 
	        where 
		        USERID = #userid# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="userid">
	             USERID = #userid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="username">
	             USERNAME = #username#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="busyoid">
	             BUSYOID = #busyoid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="userkindid">
	             USERKINDID = #userkindid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="password">
	             PASSWORD = #password#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from usermst
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="usermstResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from usermst 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
