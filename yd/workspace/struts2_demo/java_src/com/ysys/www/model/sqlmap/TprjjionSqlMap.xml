<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Tprjjion">

    <typeAlias alias="tprjjion" type="com.ysys.www.model.Tprjjion"/>

    <resultMap id="tprjjionResult" class="tprjjion">
        <result property="prjId" column="PRJ_ID"/>
        <result property="prjEmpid" column="PRJ_EMPID"/>
        <result property="prjFlag" column="PRJ_FLAG"/>
        <result property="prjBegdate" column="PRJ_BEGDATE"/>
        <result property="prjEnddate" column="PRJ_ENDDATE"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="commonColumns">
	    <![CDATA[
        	PRJ_ID ,
        	PRJ_EMPID ,
        	PRJ_FLAG ,
        	PRJ_BEGDATE ,
        	PRJ_ENDDATE 
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="tprjjion">
    <![CDATA[
        INSERT INTO
        tprjjion (
        	PRJ_ID ,
        	PRJ_EMPID ,
        	PRJ_FLAG ,
        	PRJ_BEGDATE ,
        	PRJ_ENDDATE 
        ) VALUES (
        	#prjId# ,
        	#prjEmpid# ,
        	#prjFlag# ,
        	#prjBegdate# ,
        	#prjEnddate# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="prjIdprjEmpidprjBegdate" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="update" parameterClass="tprjjion">
    <![CDATA[
        UPDATE tprjjion SET
	        PRJ_FLAG = #prjFlag# ,
	        PRJ_ENDDATE = #prjEnddate# 
        WHERE 
	        PRJ_ID = #prjId# ,
	        PRJ_EMPID = #prjEmpid# ,
	        PRJ_BEGDATE = #prjBegdate# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.String">
    <![CDATA[
        delete from tprjjion where
        PRJ_ID = #prjId# ,
        PRJ_EMPID = #prjEmpid# ,
        PRJ_BEGDATE = #prjBegdate# 
    ]]>
    </delete>
    
    <select id="getById" resultMap="tprjjionResult">
	    select <include refid="commonColumns"/>
	    <![CDATA[
	        from tprjjion 
	        where 
		        PRJ_ID = #prjId# ,
		        PRJ_EMPID = #prjEmpid# ,
		        PRJ_BEGDATE = #prjBegdate# 
	    ]]>
    </select>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="prjId">
	             PRJ_ID = #prjId#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="prjEmpid">
	             PRJ_EMPID = #prjEmpid#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="prjFlag">
	             PRJ_FLAG = #prjFlag#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="prjBegdate">
	             PRJ_BEGDATE = #prjBegdate#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="prjEnddate">
	             PRJ_ENDDATE = #prjEnddate#
	       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="count" resultClass="long">
    <![CDATA[
        select count(*) from tprjjion
    ]]>
		<include refid="dynamicWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="pageSelect" resultMap="tprjjionResult">
    	select <include refid="commonColumns"/>
	    <![CDATA[
	        from tprjjion 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>
