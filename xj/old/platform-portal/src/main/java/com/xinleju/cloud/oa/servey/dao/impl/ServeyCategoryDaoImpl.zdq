package com.xinleju.cloud.oa.servey.dao.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.apache.ibatis.session.SqlSession;
import org.springframework.stereotype.Repository;

import com.xinleju.platform.base.dao.impl.BaseDaoImpl;
import com.xinleju.platform.base.utils.Page;
import com.xinleju.cloud.oa.content.util.SqlStatementUtil;
import com.xinleju.cloud.oa.servey.dao.ServeyCategoryDao;
import com.xinleju.cloud.oa.servey.entity.ServeyCategory;

/**
 * @author admin
 * 
 * 
 */

@Repository
public class ServeyCategoryDaoImpl extends BaseDaoImpl<String,ServeyCategory> implements ServeyCategoryDao{

	public ServeyCategoryDaoImpl() {
		super();
	}

	@Override
    public Page queryObjectsByPage(Map<String, Object> map) {
        map.put("delflag", false);
        Page page = new Page();
        page.setLimit((Integer) map.get("limit"));
        page.setStart((Integer) map.get("start"));

        //设置总条数查询条件
        Map<String, Object> countMap = new HashMap<String, Object>(map.size());
        countMap.putAll(map);

        //查询数据
        SqlSession sqlSession = this.getSqlSession();
        String pageSqlStatment = SqlStatementUtil.getPageSqlStatment(map, ServeyCategory.class);
        List<ServeyCategory> list = sqlSession.selectList(ServeyCategory.class.getName() + ".queryObjectsByPage", pageSqlStatment);
        page.setList(list);

        //查询总数
        String pageCountSqlStatment = SqlStatementUtil.getPageCountSqlStatment(countMap, ServeyCategory.class);
        Integer count = sqlSession.selectOne(ServeyCategory.class.getName() + ".queryObjectsCountByPage", pageCountSqlStatment);
        page.setTotal(count);
        return page;
    }

	@Override
	public List<Map<String, Object>> getServeyCategoryPage(Map map) {
		// TODO Auto-generated method stub
		return getSqlSession().selectList("com.xinleju.cloud.oa.servey.entity.ServeyCategory.getServeyCategoryPage", map);
	}

	@Override
	public Integer getServeyCategoryPageCount(Map map) {
		// TODO Auto-generated method stub
		return getSqlSession().selectOne("com.xinleju.cloud.oa.servey.entity.ServeyCategory.getServeyCategoryPageCount", map);
	}
	
	@Override
	public Integer deleteServeyCategoryByParentId(Map map){
		return getSqlSession().delete("com.xinleju.cloud.oa.servey.entity.ServeyCategory.deleteServeyCategoryByParentId", map);
	}

	@Override
	public List<Map<String, Object>> getServeyCategoryById(Map map) {
		// TODO Auto-generated method stub
		return getSqlSession().selectList("com.xinleju.cloud.oa.servey.entity.ServeyCategory.getServeyCategoryById", map);
	}
	
}
