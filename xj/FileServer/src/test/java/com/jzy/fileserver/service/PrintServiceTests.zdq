package com.jzy.fileserver.service;

import static org.junit.Assert.assertTrue;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.junit4.SpringRunner;

import com.jzy.fileserver.controller.params.PrintParam;
import com.jzy.fileserver.domain.Result;
import com.jzy.fileserver.utils.JacksonUtils;

@RunWith(SpringRunner.class)
@SpringBootTest
public class PrintServiceTests {
	
	@Autowired
	private PrintService printService;

	@Test
	public void contextLoads() {
	}

	@Test
	public void print() {
		PrintParam printParam = new PrintParam();
		printParam.setFileId(1);
		printParam.setApplicationCode("hr");
		printParam.setConfId(1);
		printParam.setGroupId(1);
		printParam.setSendPageNotify(true);
		printParam.setGenThumb(true);
		Result result = printService.print(printParam);
		assertTrue(result.isSuccess());
	}
	
	@Test
	public void queryPrintResult() {
		Result printResult = printService.queryPrintResult(1);
		System.out.println(JacksonUtils.toJson(printResult));
		assertTrue(printResult.isSuccess());
	}
	
}
