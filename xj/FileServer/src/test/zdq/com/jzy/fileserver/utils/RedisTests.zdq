package com.jzy.fileserver.utils;

import static org.junit.Assert.assertEquals;
import static org.junit.Assert.assertNotNull;

import java.util.Map;
import java.util.concurrent.TimeUnit;

import javax.annotation.Resource;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.data.redis.core.RedisTemplate;
import org.springframework.test.context.junit4.SpringRunner;

@RunWith(SpringRunner.class)
@SpringBootTest
public class RedisTests {

	@Resource
	private RedisTemplate<String, Object> redisTemplate;

	@Test
	public void test() {
		// 保存字符串
		redisTemplate.opsForValue().set("bbb", 111);
		assertEquals(111, redisTemplate.opsForValue().get("bbb"));
	}
	
	@Test
	public void testMap() {
		// 保存字符串
		redisTemplate.opsForHash().put(FileServerConstants.TASK_COUNTER, "192.168.1.1", 2);
		redisTemplate.opsForHash().put(FileServerConstants.TASK_COUNTER, "192.168.1.2", 3);
		redisTemplate.opsForHash().put(FileServerConstants.TASK_COUNTER, "192.168.1.3", 4);
		Map<Object, Object> taskCountMap = redisTemplate.opsForHash().entries(FileServerConstants.TASK_COUNTER);
		System.out.println(taskCountMap);
	}
	
	@Test
	public void testPattern() {
		RedisUtils.set("name", "zhangsan", 5, TimeUnit.SECONDS);
		Map<String, String> map = RedisUtils.getValues("name*");
		assertNotNull(map);
	}
}
