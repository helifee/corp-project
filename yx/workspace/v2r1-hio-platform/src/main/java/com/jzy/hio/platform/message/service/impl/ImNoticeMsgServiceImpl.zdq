package com.jzy.hio.platform.message.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.github.pagehelper.PageHelper;
import com.github.pagehelper.PageInfo;
import com.jzy.hio.annotation.DataSource;
import com.jzy.hio.base.service.impl.BaseServiceImpl;
import com.jzy.hio.entity.ImNoticeMsg;
import com.jzy.hio.platform.message.mapper.ImNoticeMsgMapper;
import com.jzy.hio.platform.message.param.ImNoticeMsgSearchParam;
import com.jzy.hio.platform.message.param.NoticeMsgUpdateParam;
import com.jzy.hio.platform.message.service.ImNoticeMsgService;
import com.jzy.hio.utils.Page;

@Service
public class ImNoticeMsgServiceImpl extends BaseServiceImpl<ImNoticeMsg> implements ImNoticeMsgService {

    @Autowired
    ImNoticeMsgMapper imNoticeMsgMapper;

    @Override
    public Page getImNoticeMsg(ImNoticeMsgSearchParam imNoticeMsgParma) {
        pageStart(imNoticeMsgParma);
        return pageReturn(imNoticeMsgMapper.getImNoticeMsg(imNoticeMsgParma));
    }


    @Override
    public int updateStatusOfNoticeMsg(NoticeMsgUpdateParam noticeMsgUpdateParam) {

        return imNoticeMsgMapper.updateStatusOfNoticeMsg(noticeMsgUpdateParam);
    }

    @Override
    public int setMessageOpened(String id) {
        return imNoticeMsgMapper.setMessageOpened(id);
    }

    protected Page pageReturn(List<? extends Object> list) {
        PageInfo<?> pageInfo = new PageInfo<>(list);
        Page resultPage = super.getResultPage(pageInfo);
        return resultPage;
    }

    protected void pageStart(ImNoticeMsgSearchParam imNoticeMsgParma) {
        int pageNum = imNoticeMsgParma.getPageNumber();
        int pageCount = imNoticeMsgParma.getPageSize();
        int pageStart = (pageNum - 1) * pageCount;
        if (pageStart < 0) {
            pageStart = 0;
        }
        PageHelper.startPage(pageStart, pageCount, true);
    }
}
