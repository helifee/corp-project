package com.jzy.hio.platform.userinfo.controller;

import java.security.Principal;
import java.util.List;
import java.util.Map;

import org.apache.commons.lang3.StringUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.jzy.hio.base.controller.BasePlatformController;
import com.jzy.hio.platform.userinfo.mode.StarInfoModel;
import com.jzy.hio.platform.userinfo.param.StarSetParam;
import com.jzy.hio.platform.userinfo.service.StarInfoService;
import com.jzy.hio.redis.JedisUtil;
import com.jzy.hio.springmvc.ApiResponse;

/**
 * 特别关注
 * @author
 * 
 */
@RestController
@RequestMapping("/starInfo")
public class StarInfoServiceController extends BasePlatformController<StarInfoService>{
	
	@Autowired
	private StarInfoService starInfoService;
	
	/**
	 * 特别关注列表
	 * @return
	 */
	@PostMapping("/starList")
	public ApiResponse<List<StarInfoModel>> getStarList(Principal user) {
		ApiResponse<List<StarInfoModel>> res = new ApiResponse<>(200, "查询成功");
		
		String uid = getUserIdIM();
		
		List<StarInfoModel> list = starInfoService.getStartList(uid);
		res.setResult(list);
		return res;
	}
	
	/**
	 * 设置特别关注
	 * @param starSetParam
	 * @return
	 */
	@PostMapping("/setStarStatus")
	public ApiResponse<Void> updateStarStatus(Principal user,@RequestBody StarSetParam starSetParam) {
		ApiResponse<Void> res = new ApiResponse<>(200, "设置成功");
		
		String uid = getUserIdIM();
		starSetParam.setUid(uid);
		
		// 参数验证
		if (StringUtils.isBlank(starSetParam.getFid()) || starSetParam.getOnOff() == null) {
			res.setMessage("参数不完整");
			res.setStatus(101);
			return res;
		}
		
		// 设置或取消关注
		boolean reslut = starInfoService.updateStarStatus(starSetParam);
		if (!reslut) {
			res.setMessage("设置无效");
		}
		
		return res;
	}
	
}
