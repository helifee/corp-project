package com.jzy.hio.platform.utils;

import java.util.Random;

import javax.persistence.Table;

import com.jzy.hio.redis.JedisUtil;

/**
 * 公共工具类
 * @author 
 *
 */
public class CommonUtils {
	
	/**
	 * 
	 * @param t
	 * @return
	 */
	public static <T> String getTableName(T t) {
		return t.getClass().getAnnotation(Table.class).name();
	}
	
	/**
	 * 
	 * @param c
	 * @return
	 */
	public static <T> String getTableName(Class<T> c) {
		return c.getAnnotation(Table.class).name();
	}
	
	/**
	 * 
	 * @param t
	 * @return
	 */
	public static <T> String getTablePKId(T t) {
		return JedisUtil.generateKey(getTableName(t));
	}
	
	/**
	 * 
	 * @param c
	 * @return
	 */
	public static <T> String getTablePKId(Class<T> c) {
		return JedisUtil.generateKey(getTableName(c));
	}
	
	/**
	 * 
	 * @param tableName
	 * @return
	 */
	public static String getTablePKId(String tableName) {
		return JedisUtil.generateKey(tableName);
	}
	
	/**
	 * 随机生成6位数(范围100000~999999)
	 * @return
	 */
	public static int getSixRandomNO() {
		return new Random().nextInt(899999) + 100000;
	}
}
