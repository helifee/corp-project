package com.jzy.hio;

import org.mybatis.spring.annotation.MapperScan;
import org.springframework.beans.BeansException;
import org.springframework.beans.factory.config.AutowireCapableBeanFactory;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;
import org.springframework.cloud.netflix.feign.EnableFeignClients;
import org.springframework.context.ApplicationContext;
import org.springframework.context.ApplicationContextAware;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Import;

import com.jzy.hio.base.datasource.DataSourceRegister;
import com.jzy.hio.base.service.aop.DynamicDataSourceAop;
import com.jzy.hio.redis.RedisClient;
import com.jzy.tools.login.LoginUtils;

 
@Import({ DataSourceRegister.class, DynamicDataSourceAop.class })
@MapperScan(value = { "com.jzy.hio.sys.**.mapper", "com.jzy.hio.base.mapper" })
@EnableEurekaClient
@SpringBootApplication
@EnableFeignClients // 开启feign注解扫描、可以调用feign服务
public class HioSysApplication implements ApplicationContextAware {

	public static void main(String[] args) {
		SpringApplication.run(HioSysApplication.class, args);
		System.out.println("【【【【【【 SysProvider微服务 】】】】】】已启动.");
	}

	private AutowireCapableBeanFactory autowireCapableBeanFactory;

	@Override
	public void setApplicationContext(ApplicationContext applicationContext) throws BeansException {
		autowireCapableBeanFactory = applicationContext.getAutowireCapableBeanFactory();
	}

	/**
	 * 临时解决方案 后期待优化 <br/>
	 * @author coffee 2018年2月5日上午9:03:10<br/>
	 * 
	 * @return
	 */
	@Bean
	public LoginUtils createLoginUtils() {
		LoginUtils loginUtils = autowireCapableBeanFactory.createBean(LoginUtils.class);
		RedisClient redisClient = autowireCapableBeanFactory.getBean(RedisClient.class);
		loginUtils.setRedisClient(redisClient);
		return loginUtils;
	}


}
