package com.jzy.hio;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.client.circuitbreaker.EnableCircuitBreaker;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;
import org.springframework.cloud.netflix.feign.EnableFeignClients;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.EnableAspectJAutoProxy;
import org.springframework.context.annotation.Import;
import org.springframework.session.data.redis.config.annotation.web.http.EnableRedisHttpSession;
import org.springframework.web.client.RestTemplate;

import com.jzy.hio.cloud.core.CoreHttpRequestInterceptor;
import com.jzy.hio.database.DataSourceRegister;

@EnableEurekaClient
@SpringBootApplication
@EnableFeignClients
@EnableCircuitBreaker
@Import({ DataSourceRegister.class })
@EnableAspectJAutoProxy(proxyTargetClass = true, exposeProxy = true)
@EnableRedisHttpSession
public class HioFlowApplication {

	public static void main(String[] args) {
//		args = new String[] { "--spring.profiles.active=dev" };
		SpringApplication.run(HioFlowApplication.class, args);
		System.out.println("【【【【【【 FlowV2微服务 】】】】】】已启动.");
	}
	
	@Bean
	public RestTemplate restTemplate(){
		RestTemplate restTemplate = new RestTemplate();
		restTemplate.getInterceptors().add(new CoreHttpRequestInterceptor());
 
		return restTemplate;
	}

}