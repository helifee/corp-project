package com.jzy.hio.flow.service;

import java.util.List;

import com.jzy.hio.base.service.BaseService;
import com.jzy.hio.flow.entity.FlowCustomForm;
import com.jzy.hio.flow.entity.dto.FormItem;
import com.jzy.hio.flow.entity.param.FlowCustomFormParam;
import com.jzy.hio.flow.entity.param.FlowFormParam;

/**
 * 自定义表单服务类
 * 
 * @author daoqi
 *
 */
public interface FlowCustomFormService extends BaseService<FlowCustomForm> {
	
	/**
	 * 新增修改自定义表单
	 * 
	 * @param customFormParam
	 * @return
	 */
	Object saveCustomForm(FlowCustomForm customFormParam);

    /**
     * 根据流程模板编码查询自定义表单
     * 
     * @param flowTemplateCode
     * @return
     */
	FlowCustomForm getCustomFormByTemplateCode(String flowTemplateCode);

	/**
	 * 查询指定自定义表单中的流程属性
	 * 
	 * @param flowTemplateCode
	 * @return
	 */
	List<FormItem> queryFlowPropertiesBy(String flowTemplateCode);
	
	/**
	 * 判断指定自定义表单是否为用户自定义：
	 * @param customFormId
	 * @return true:用户自定义 false:第三方表单
	 */
	boolean isUserDefined(String customFormId);

    Object getExpression(FlowFormParam FlowFormParam);

}
