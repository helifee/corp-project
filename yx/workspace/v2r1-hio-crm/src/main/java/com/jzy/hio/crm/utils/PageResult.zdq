package com.jzy.hio.crm.utils;

import java.io.Serializable;
import java.util.List;

/**
 * 分页结果封装
 * @author 
 *
 */
public final class PageResult implements Serializable {

	/**
	 * 
	 */
	private static final long serialVersionUID = 3029018240204081978L;
	
	/**
	 * 总记录数
	 */
	private Integer total;
	
	/**
	 * 总页数
	 */
	private Integer pageTotal;

	/**
	 * 分页记录大小
	 */
	private Integer pageCount;
	
	/**
	 * 当前页码
	 */
	private Integer pageNum;
	
	/**
	 * 当前记录实体对象列表
	 */
	private List<?> list;

	public Integer getTotal() {
		return total;
	}

	public Integer getPageTotal() {
		return pageTotal;
	}

	public Integer getPageCount() {
		return pageCount;
	}

	public Integer getPageNum() {
		return pageNum;
	}

	public List<?> getList() {
		return list;
	}

	/**
	 * 分页结果封装
	 * @param pageParam 分页参数
	 * @param total 总条数
	 * @param list 结果列表
	 * @return
	 */
	public static PageResult pageResult(PageHelper pageParam, Integer total, List<?> list) {
		PageResult page = new PageResult();
		page.total = total;
		page.pageTotal = total % pageParam.getPageCount() == 0 ? 
				total / pageParam.getPageCount()
				: total / pageParam.getPageCount() + 1;
		page.pageCount = pageParam.getPageCount();
		page.pageNum = pageParam.getPageNum();
		page.list = list;
		return page;
	}
	
}
