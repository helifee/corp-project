package com.jzy.hio.crm.mapper;

import java.util.List;
import java.util.Map;

import org.apache.ibatis.annotations.Param;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.crm.dto.CrmProductCategoryDto;
import com.jzy.hio.entity.CrmProductCategory;

/**
 * 产品类别
 * @author 
 *
 */
public interface CrmProductCategoryMapper extends BaseMapper<CrmProductCategory> {

	/**
	 * 查询名字同一级类别名字是否重复
	 * @param map
	 * @return
	 */
	int selectCateNameCanUse(Map<String, Object> map);
	
	/**
	 * 根据状态查询类别
	 * @param level 指定级别查询,为null时查询所有级别类别
	 * @param categoryStatus 指定状态查询，为null则不指定
	 * @return
	 */
	List<CrmProductCategoryDto> selectCateByLevelAndStatus(@Param("level") Integer level, @Param("categoryStatus") Integer categoryStatus);

	/**
	 * 禁用下属的类别
	 * @param parentId
	 * @return
	 */
	int closeCategoryByParent(String parentId);
	
}
