package com.jzy.hio.constant;

/**
 * 客户来源
 * @author 
 *
 */
public enum CrmCustomerSourceEnum {

	WEBSITE(0, "网站"),
	BAIDU(1, "百度推广"),
	SALE(2, "会销"),
	WECHAT(3, "微信"),
	GROUNDPUSH(4, "地推"),
	OTHER(9, "其他");
	
	private int source;
	private String sourceName;
	
	private CrmCustomerSourceEnum(int source, String sourceName) {
		this.source = source;
		this.sourceName = sourceName;
	}
	public int getSource() {
		return source;
	}
	public String getSourceName() {
		return sourceName;
	}
	
	/**
	 * 根据sorceName获取名称
	 * @param sourceName
	 * @return
	 */
	public static int getSourceByName(String sourceName) {
		for (CrmCustomerSourceEnum enumItem : CrmCustomerSourceEnum.values()) {
			if (enumItem.getSourceName().equals(sourceName)) {
				return enumItem.getSource();
			}
			
		}
		
		return -1;
	}
	
	/**
	 * 根据source查询source名称
	 * @param source
	 * @return
	 */
	public static String getNameBySource(Integer source) {
		for (CrmCustomerSourceEnum enumItem : CrmCustomerSourceEnum.values()) {
			if (enumItem.getSource() == source) {
				return enumItem.getSourceName();
			}
			
		}
		
		return null;
	}
	
}
