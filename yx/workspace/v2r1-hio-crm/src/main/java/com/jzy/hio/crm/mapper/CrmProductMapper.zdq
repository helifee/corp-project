package com.jzy.hio.crm.mapper;

import java.util.List;

import org.apache.ibatis.annotations.Param;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.crm.dto.CrmProductCurrentInfoDto;
import com.jzy.hio.crm.dto.CrmProductPageDto;
import com.jzy.hio.crm.param.CrmProductSearchParam;
import com.jzy.hio.entity.CrmProduct;

/**
 * 产品
 * @author 
 *
 */
public interface CrmProductMapper extends BaseMapper<CrmProduct> {

	/**
	 * 查询产品名称是否有重复
	 * @param id
	 * @param name
	 * @return
	 */
	int selectProNameCount(@Param("id") String id,@Param("name") String name);
	
	/**
	 * 查询选择产品页面分页
	 * @param productSearchParam
	 * @return
	 */
	List<CrmProductPageDto> getPageToSelect(CrmProductSearchParam productSearchParam);
	
	/**
	 * 查询选择产品页面总数
	 * @param productSearchParam
	 * @return
	 */
	int getPageToSelectCount(CrmProductSearchParam productSearchParam);
	
	/**
	 * 产品列表分页
	 * @param productSearchParam
	 * @return
	 */
	List<CrmProductPageDto> getPage(CrmProductSearchParam productSearchParam);
	
	/**
	 * 产品列表分页总数
	 * @param productSearchParam
	 * @return
	 */
	int getPageCount(CrmProductSearchParam productSearchParam);

	/**
	 * 根据产品的二级类别修改一级类别
	 * @param cateBaseId 一级类别id
	 * @param cateId 二级级类别id
	 * @return
	 */
	int updateCateBaseIdByCateId(@Param("cateBaseId")String cateBaseId, @Param("cateId")String cateId);
	
	/**
	 * 根据产品id集合查询产品信息
	 * @param productIdList
	 * @return
	 */
	List<CrmProductCurrentInfoDto> selectCurrentInfo(List<String> productIdList);
}
