package com.jzy.hio.constant;

/**
 * 商机阶段
 * @author 
 *
 */
public enum CrmOpportunityStageEnum {

	HAS_ITEM(0, "立项"),
	FISRT_CONTACT(1, "初步沟通"),
	DEMAND_AGREEMENT(2, "需求商定"),
	SCHEME_QUOTATION(3, "方案报价"),
	WIN_ORDER(4, "赢单"),
	FAILED_ORDER(5, "输单");
	
	private int status;
	private String stausName;
	
	private CrmOpportunityStageEnum(int status, String stausName) {
		this.status = status;
		this.stausName = stausName;
	}

	public int getStatus() {
		return status;
	}

	public String getStausName() {
		return stausName;
	}
	
	public static String getNameByStatus(Integer status) {
		for (CrmOpportunityStageEnum enumItem : CrmOpportunityStageEnum.values()) {
			if (enumItem.status == status) {
				return enumItem.stausName;
			}
			
		}
		
		return null;
	}
	
}
