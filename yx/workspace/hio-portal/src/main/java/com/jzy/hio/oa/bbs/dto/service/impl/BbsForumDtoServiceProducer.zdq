	@Override
	public String getObjectById(String userInfo, String getJson)
	 {
		DubboServiceResultInfo info=new DubboServiceResultInfo();
		try {
			BbsForumDto bbsForumDto = new BbsForumDto();
			BbsForum BbsForum=JacksonUtils.fromJson(getJson, BbsForum.class);
			BbsForum result = bbsForumService.getObjectById(BbsForum.getId());
			if(result.getTypeId()!=null){
				BbsForumType bbsForumType=bbsForumTypeService.getObjectById(result.getTypeId());
				BeanUtils.copyProperties(result, bbsForumDto);
				bbsForumDto.setForumTypeName(bbsForumType.getName());
			}
			
			if(bbsForumDto != null){
				info.setResult(JacksonUtils.toJson(bbsForumDto));
				info.setSucess(true);
				info.setMsg("获取论坛版块成功!");
			}else{
				info.setResult(JacksonUtils.toJson(bbsForumDto));
				info.setSucess(false);
				info.setCode(ErrorInfoCode.NULL_ERROR.getValue());
				info.setMsg("获取论坛版块为空!");
			}

		} catch (Exception e) {
			 log.error("获取论坛版块失败!"+e.getMessage());
			 info.setSucess(false);
			 info.setMsg("取获论坛版块失败!");
			 info.setCode(ErrorInfoCode.SYSTEM_ERROR.getValue());
		}
		return JacksonUtils.toJson(info);
	}

