package com.jzy.hio.oa.portal.service.impl;

import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jzy.hio.base.service.impl.BaseServiceImpl;
import com.jzy.hio.base.utils.IDGenerator;
import com.jzy.hio.oa.portal.entity.PortalPagePermision;
import com.jzy.hio.oa.portal.mapper.PortalPagePermisionDao;
import com.jzy.hio.oa.portal.service.PortalPagePermisionService;

/**
 * @author admin
 */

@Service
public class PortalPagePermisionServiceImpl extends BaseServiceImpl<String, PortalPagePermision> implements PortalPagePermisionService {


    @Autowired
    private PortalPagePermisionDao portalPagePermisionDao;

    @Override
    public int saveBatch(List<PortalPagePermision> objectList,String portalPageId) throws Exception {

        Map<String,Object> paramMap = new HashMap<String, Object>();
        paramMap.put("portalPageId",portalPageId);
        this.portalPagePermisionDao.deleteBatchByPortalPageId(paramMap);

        int num = 0;
        for (PortalPagePermision portalPagePermision:objectList) {

                if (portalPagePermision.getId() == null) {
                    portalPagePermision.setId(IDGenerator.getUUID());
                }
                int result = this.portalPagePermisionDao.insertSelective(portalPagePermision);
                num += result;
        }
        return num;
    }
}
