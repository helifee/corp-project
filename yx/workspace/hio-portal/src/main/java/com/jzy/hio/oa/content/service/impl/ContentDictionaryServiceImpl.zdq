package com.jzy.hio.oa.content.service.impl;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jzy.hio.base.service.impl.BaseServiceImpl;
import com.jzy.hio.oa.content.entity.ContentDictionary;
import com.jzy.hio.oa.content.entity.ContentRowAttribute;
import com.jzy.hio.oa.content.mapper.ContentDictionaryDao;
import com.jzy.hio.oa.content.mapper.ContentDictionaryItemDao;
import com.jzy.hio.oa.content.mapper.ContentRowAttributeDao;
import com.jzy.hio.oa.content.service.ContentDictionaryService;

/**
 * @author admin
 */

@Service
public class ContentDictionaryServiceImpl extends BaseServiceImpl<String, ContentDictionary> implements ContentDictionaryService {


    @Autowired
    private ContentDictionaryDao contentDictionaryDao;
    @Autowired
    private ContentDictionaryItemDao contentDictionaryItemDao;

    @Autowired
    private ContentRowAttributeDao contentRowAttributeDao;

    @Override
    public List<Map<String, Object>> queryDictionaryTree(Map<String, Object> paramMap) {
        paramMap.put("delflag",false);
        paramMap.put("sidx","createDate");
        paramMap.put("sord","asc");

        List<ContentDictionary> list = this.contentDictionaryDao.selectByExample(paramMap);
        List<Map<String,Object>> resultList = new ArrayList<Map<String,Object>>();
        if (list != null && list.size() > 0) {
            for (ContentDictionary contentDictionary:list) {
                String code = contentDictionary.getCode();
                String name = contentDictionary.getName();
                String id = contentDictionary.getId();
                Boolean status = contentDictionary.getStatus();
                Boolean isSystem = contentDictionary.getIsSystem();
                String pId = "0";
                Map<String,Object> map = new HashMap<String,Object>();
                map.put("id",id);
                map.put("code",code);
                map.put("name",name);
                map.put("pId",pId);
                map.put("status",status);
                map.put("isSystem",isSystem);
                resultList.add(map);
            }
        }
        return resultList;
    }

	/* (non-Javadoc)
	 * @see com.jzy.hio.oa.content.service.ContentDictionaryService#deleteContentDictionary(java.lang.String)
	 */
	@Override
	public int deleteContentDictionary(String id) throws Exception {
        ContentDictionary dictionary = this.contentDictionaryDao.selectByPrimaryKey(id);
        Map<String,Object> paramMap = new HashMap<String,Object>();
        paramMap.put("fieldCode",dictionary.getCode());
        List<ContentRowAttribute> list = contentRowAttributeDao.selectByExample(paramMap);
        if(list!=null&&list.size()>0){
            throw new Exception("当前字典已被引用，不能删除！");
            //return -1;
        }
		return  contentDictionaryDao.deleteByPrimaryKey(id);
	  
	}
}
