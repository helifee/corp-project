package com.jzy.hio.oa.content.service.impl;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import com.jzy.hio.base.dao.BaseMapper;
import com.jzy.hio.base.service.impl.BaseServiceImpl;
import com.jzy.hio.oa.content.entity.ContentAuthor;
import com.jzy.hio.oa.content.mapper.ContentAuthorDao;
import com.jzy.hio.oa.content.service.ContentAuthorService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;


/**
 * @author admin
 * 
 * 
 */

@Service
public class ContentAuthorServiceImpl extends BaseServiceImpl<String,ContentAuthor> implements ContentAuthorService {
	

	@Autowired
	private ContentAuthorDao contentAuthorDao;

	@Override
	public int deleteContentAuthorByTypeId(String typeId) {
		// TODO Auto-generated method stub
		// TODO Auto-generated method stub
		int result = 0;
		Map<String, Object> map= new HashMap<String, Object>();
		map.put("typeId", typeId);
		List<ContentAuthor> contentAuthorList = contentAuthorDao.selectByExample(map);
		if(contentAuthorList.size() >0){
			List<String> list = new ArrayList<String>();
			for (ContentAuthor contentAuthor : contentAuthorList) {
			    	list.add(contentAuthor.getId());
			}
			try{
                result = this.deleteAllObjectByIds(list);
            }catch (Exception e){
                e.printStackTrace();
            }
		}
		return result;
	}
    public ContentAuthorDao getAcDao() {
        return contentAuthorDao;
    }
    
    public BaseMapper<ContentAuthor> getMapper() {
        return contentAuthorDao;
    }

}
