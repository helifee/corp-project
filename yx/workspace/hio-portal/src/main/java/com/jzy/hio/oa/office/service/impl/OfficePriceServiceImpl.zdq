package com.jzy.hio.oa.office.service.impl;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jzy.hio.base.service.impl.BaseServiceImpl;
import com.jzy.hio.base.utils.Page;
import com.jzy.hio.oa.office.entity.OfficePrice;
import com.jzy.hio.oa.office.mapper.OfficePriceDao;
import com.jzy.hio.oa.office.service.OfficePriceService;

/**
 * @author sy
 * 
 * 
 */

@Service
public class OfficePriceServiceImpl extends  BaseServiceImpl<String,OfficePrice> implements OfficePriceService{
	

	@Autowired
	private OfficePriceDao officePriceDao;

	/* (non-Javadoc)
	 * @see com.jzy.hio.oa.office.service.OfficePriceService#getPricePage(java.util.Map)
	 */
	@Override
	public Page getPricePage(Map map) throws Exception {
		Page page=new Page();
		List<Map<String,Object>> list = officePriceDao.getOfficePricePage(map);
		Integer count = officePriceDao.getOfficePriceCount(map);
		page.setLimit((Integer) map.get("limit") );
		page.setList(list);
		page.setStart((Integer) map.get("start"));
		page.setTotal(count);
		return page;
	}
	

}
