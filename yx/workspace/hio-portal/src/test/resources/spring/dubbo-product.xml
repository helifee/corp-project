<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	    http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-4.3.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="platform-sysManager"/>

    <dubbo:registry protocol="zookeeper" address="#{configuration['zookeeper']}"/>
    <!-- 用dubbo协议在20880端口暴露服务 -->

    <dubbo:protocol name="dubbo" port="#{configuration['dubbo.port']}"/>
    <!-- portal站点服务提供者  -->
    <dubbo:service interface="com.xinleju.cloud.oa.portal.dto.service.PortalPageDtoServiceCustomer"
                   ref="portalPageDtoServiceProducer"/>
    <!--  portal站点组件位置服务提供者  -->
    <dubbo:service interface="com.xinleju.cloud.oa.portal.dto.service.PortalComponentPositionDtoServiceCustomer"
                   ref="portalComponentPositionDtoServiceProducer"/>
    <!--  portal站点权限服务提供者  -->
    <dubbo:service interface="com.xinleju.cloud.oa.portal.dto.service.PortalPagePermisionDtoServiceCustomer"
                   ref="portalPagePermisionDtoServiceProducer"/>
    <!--  portal站点服务提供者  -->
    <bean id="portalPageDtoServiceProducer"
          class="com.xinleju.cloud.oa.portal.dto.service.impl.PortalPageDtoServiceProducer"></bean>
    <!--  portal站点组件位置服务提供者  -->
    <bean id="portalComponentPositionDtoServiceProducer"
          class="com.xinleju.cloud.oa.portal.dto.service.impl.PortalComponentPositionDtoServiceProducer"></bean>
    <!--  portal站点权限服务提供者  -->
    <bean id="portalPagePermisionDtoServiceProducer"
          class="com.xinleju.cloud.oa.portal.dto.service.impl.PortalPagePermisionDtoServiceProducer"></bean>

    <dubbo:provider filter="DubboServiceFilter"></dubbo:provider>
</beans>