package com.jzy.hio.oa.news.mapper;

import java.util.List;

import org.apache.ibatis.annotations.Param;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.entity.News;
import com.jzy.hio.oa.news.dto.NewsDto;

public interface NewsMapper extends BaseMapper<com.jzy.hio.entity.News> {

	/**
	 * 条件查询新闻
	 * @param newsTitle
	 * @param newsTypeId
	 * @param newsStatus
	 * @param ids
	 * @return
	 */
	public List<NewsDto> queryNewsList(@Param("newsTitle") String newsTitle, @Param("newsTypeId") String newsTypeId, @Param("newsStatus") String newsStatus,
			@Param("userId") String userId, @Param("orgIds") List<String> orgIds, @Param("roleIds") List<String> roleIds);
	
	/**
	 * 点击量+1
	 */
	public void addHitNum(@Param("newsId")String newsId);

	/**
	 * 置顶新闻
	 * @param newsId
	 */
	public void topNewsById(String newsId);

	/**
	 * 取消新闻置顶
	 * @param newsId
	 */
	public void cancelTopNewsById(String newsId);

	/**
	 * 取消发布
	 * @param newsId
	 */
	public void cancelPublishNews(String newsId);

	/**
	 * 查询所有的新闻
	 * @param newsTitle
	 * @param newsTypeId
	 * @return
	 */
	public List<NewsDto> findAllNews(@Param("newsTitle")String newsTitle, @Param("newsTypeId")String newsTypeId, @Param("createUserId")String createUserId, @Param("newsStatus") String newsStatus);

	/**
	 * 查询个人所有的草稿新闻
	 * @param newsTitle
	 * @param newsTypeId
	 * @param userId
	 * @return
	 */
	public List<NewsDto> findDraftNews(@Param("newsTitle")String newsTitle, @Param("newsTypeId")String newsTypeId, @Param("userId")String userId);

	/**
	 * 获取发布状态新闻
	 * @param newsTitle
	 * @param newsTypeId
	 * @param userId
	 * @param orgIds
	 * @param roleIds
	 * @return
	 */
	public List<NewsDto> findPublishedNews(@Param("newsTitle") String newsTitle, @Param("newsTypeId") String newsTypeId,
			@Param("userId") String userId, @Param("orgIds") List<String> orgIds, @Param("roleIds") List<String> roleIds);
}