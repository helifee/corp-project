package com.jzy.hio.oa.task.mapper;

import java.util.List;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.entity.Task;
import com.jzy.hio.entity.TaskFollow;
import com.jzy.hio.oa.schedule.dto.QueryScheduleIndexDto;
import com.jzy.hio.oa.schedule.dto.QueryTaskIndexDto;
import com.jzy.hio.oa.schedule.param.QueryScheduleListParam;
import com.jzy.hio.oa.task.dto.QueryTaskDto;
import com.jzy.hio.oa.task.dto.QueryTaskListDto;
import com.jzy.hio.oa.task.param.QueryScheduleTaskListParam;
import com.jzy.hio.oa.task.param.QueryTaskListParam;

/**
 * 任务表
 * @author wdy
 *
 */
public interface TaskMapper extends BaseMapper<Task>{

	/**
	 * 任务状态变更
	 * @param updateStatusParam
	 * @return
	 */
	public int updateStatus(Task task);
	
	/**
	 * 任务批量状态变更
	 * @param updateStatusParam
	 * @return
	 */
	public int updateRemindStatus(Task task);
	
	/**
	 * 任务伪删除
	 * @param updateStatusParam
	 * @return
	 */
	public int delete(Task task);
	
	/**
	 * 根据任务id查询任务对象
	 * @param task
	 * @return
	 */
	public Task queryTaskId(Task task);
	
	/**
	 * 根据条件查询任务列表
	 * @param queryTaskListParam
	 * @return
	 */
	public List<QueryTaskListDto> queryTaskList(QueryTaskListParam queryTaskListParam);
	/**
	 * 根据条件查询任务列表总条数
	 * @param queryTaskListParam
	 * @return
	 */
	public Integer queryCountTaskList(QueryTaskListParam queryTaskListParam);
	
	/**
	 * 任务是否关注变更
	 * @param updateStatusParam
	 * @return
	 */
	public int updateIsFollow(Task task);
	
	/**
	 * 根据条件查询任务管理列表
	 * @param queryTaskListParam
	 * @return
	 */
	public List<QueryTaskListDto> queryTaskAdminList(QueryTaskListParam queryTaskListParam);
	
	/**
	 * 根据条件查询任务管理列表总条数
	 * @param queryTaskListParam
	 * @return
	 */
	public Integer queryCountTaskAdminList(QueryTaskListParam queryTaskListParam);
	
	/**
	 * 查询首页任务列表
	 * @param queryScheduleListParam
	 * @return
	 */
	public List<QueryTaskDto> queryTaskIndexList(QueryScheduleTaskListParam queryScheduleTaskListParam);
	
	
	/**
	 * 查询首页是否有任务
	 * @return
	 */
	public List<QueryTaskIndexDto> queryTaskIndexCount(QueryScheduleTaskListParam queryScheduleTaskListParam);
}
