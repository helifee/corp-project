package com.jzy.hio.oa.mailbox.param;

import com.fasterxml.jackson.annotation.JsonProperty;
import lombok.Data;
import org.hibernate.validator.constraints.NotBlank;
import org.hibernate.validator.constraints.Range;

import javax.validation.Valid;

/**
 * <p>
 * 邮箱账号和域名参数对象，绑定邮箱账号时同时设置域名时使用
 * </p>
 *
 * @author haoqipeng 2018/5/8 21:33
 */
@Data
public class MailboxAccountAndDomainNameParam {

    /**
     * 邮箱账号
     */
    @Valid
    @JsonProperty("mailbox")
    private MailboxAccountParam mailboxAccountParam;

    /**
     * 主键
     */
    @JsonProperty("sid")
    private String id;

    /**
     * 邮箱域名
     */
    @NotBlank(message = "域名不能为空")
    private String domainName;

    /**
     * IMAP服务器
     */
    @NotBlank(message = "IMAP服务器不能为空")
    private String imapHost;

    /**
     * IMAP端口
     */
    @Range(min = 0, max = 65535, message = "IMAP 端口有效范围是0~65535")
    private Integer imapPort;

    /**
     * IMAP加密
     */
    private Integer imapSecure;

    /**
     * 使用短用户名登录
     */
    private Boolean imapShortLogin;

    /**
     * SMTP服务器
     */
    @NotBlank(message = "SMTP 服务器不能为空")
    private String smtpHost;

    /**
     * SMTP端口
     */
    @Range(min = 0, max = 65535, message = "SMTP 端口有效范围是0~65535")
    private Integer smtpPort;

    /**
     * SMTP加密
     */
    private Integer smtpSecure;

    /**
     * 使用短用户名登录
     */
    private Boolean smtpShortLogin;

    /**
     * 使用认证
     */
    private Boolean smtpAuth;

    /**
     * 使用php mail函数
     */
    private Boolean smtpPhpMail;

}
