package com.jzy.hio.oa.project.controller;

import java.util.List;

import com.jzy.hio.entity.ProjectStageTaskInfo;
import com.jzy.hio.oa.project.dto.*;
import com.jzy.hio.oa.project.service.ProjectStageTaskInfoService;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import com.jzy.hio.base.controller.BaseController;
import com.jzy.hio.entity.ProjectTrends;
import com.jzy.hio.exception.HioMybatisGetException;
import com.jzy.hio.exception.HioMybatisInsertException;
import com.jzy.hio.exception.HioMybatisQueryException;
import com.jzy.hio.exception.HioMybatisUpdateException;
import com.jzy.hio.oa.project.service.ProjectStageGroupService;

/**
 * 項目动态
 *
 * @author yangn
 *
 */
@RestController
@RequestMapping("project/projectStageTaskInfo")
public class ProjectStageTaskInfoController extends BaseController {

	private static Logger logger = LoggerFactory.getLogger(ProjectStageTaskInfoController.class);
	@Autowired
	private ProjectStageTaskInfoService projectStageTaskInfoService;



	/**
	 * 根据项目ID获取项目动态
	 * 
	 * @param id
	 *            业务对象主键
	 *
	 * @return
	 * @throws HioMybatisGetException
	 */
	@RequestMapping(value = "/saveProjectStageTaskInfo",  method = RequestMethod.POST, consumes = "application/json")
	public int saveProjectStageTaskInfo(@RequestBody ProjectStageTaskInfoDto projectStageTaskInfoDto) throws HioMybatisInsertException {

		try {
			return projectStageTaskInfoService.saveProjectStageTaskInfo(projectStageTaskInfoDto);
		} catch (Exception e) {
			logger.error("保存阶段任务排序信息失败!" + e.getMessage());
			throw new HioMybatisQueryException(e);
		}

	}

	/**
	 *拖拽排序
	 * 
	 * @param projectStageTaskInfoParam
	 * @return
	 */
	@RequestMapping(value = "/dragProjectStageTaskInfo", method = RequestMethod.POST, consumes = "application/json")
	public Object dragProjectStageTaskInfo(@RequestBody ProjectStageTaskInfoParam projectStageTaskInfoParam) throws HioMybatisUpdateException {

		try {
			return projectStageTaskInfoService.dragProjectStageTaskInfo(projectStageTaskInfoParam);
		} catch (Exception e) {
			logger.error("项目阶段分组拖拽排序失败!" + e.getMessage());
			throw new HioMybatisUpdateException(e);
		}
	}



}
