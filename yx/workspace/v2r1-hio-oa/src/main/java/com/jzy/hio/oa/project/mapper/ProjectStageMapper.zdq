import java.util.List;

/**
 * @author yangning
 */
public interface ProjectStageMapper extends BaseMapper<com.jzy.hio.entity.ProjectStage> {

	/**
	 * 根据项目id查询项目阶段
	 *
	 * @param projectStagePageParam
	 *
	 * @return
	 */
	List<ProjectStage> queryProjectStageListByProjectInfoId(ProjectStagePageParam projectStagePageParam);

	/**
	 * 根据项目id查询项目阶段数量
	 *
	 * @param projectId
	 *
	 * @return
	 */
	Integer queryProjectStageCountByProjectInfoId(String projectId);

	/**
	 * 根据阶段id删除阶段
	 *
	 * @param id
	 *
	 * @return
	 */
	int deleteProjectStageById(String id);

	/**
	 * 根据项目id 阶段名称 查询项目阶段
	 *
	 * @param projectStage
	 *
	 * @return
	 */
	List<ProjectStage> queryProjectStageByProjectInfoIdAndStageName(ProjectStage projectStage);
