package com.jzy.hio.oa.project.controller;

import com.jzy.hio.base.controller.BaseController;
import com.jzy.hio.entity.ProjectConcern;
import com.jzy.hio.exception.*;
import com.jzy.hio.oa.project.service.ProjectConcernService;

import com.jzy.hio.utils.LoginUser;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

/**
 * 項目詳情
 *
 * @author yangn
 *
 */
@RestController
@RequestMapping("project/projectConcern")
public class ProjectConcernController extends BaseController {

	private static Logger logger = LoggerFactory.getLogger(ProjectConcernController.class);
	@Autowired
	private ProjectConcernService projectConcernService;

	/**
	 * 关注
	 *
	 * @param id
	 *            业务对象主键
	 *
	 * @return
	 */
	@RequestMapping(value = "/changeProjectConcern/{id}", method = RequestMethod.GET)
	public Object changeProjectConcern(@PathVariable("id") String id) {

		LoginUser loginUser = getLoginUser();

		return projectConcernService.changeProjectConcern(id, loginUser);

	}

	/**
	 * 根据Id动态详情
	 *
	 * @param id
	 *            业务对象主键
	 *
	 * @return 业务对象
	 */
	@RequestMapping(value = "/get/{id}", method = RequestMethod.GET)
	@Override
	public Object get(@PathVariable("id") String id) throws HioMybatisGetException {
		ProjectConcern projectConcern = projectConcernService.getObjectById(id);

		return projectConcern;
	}

}
