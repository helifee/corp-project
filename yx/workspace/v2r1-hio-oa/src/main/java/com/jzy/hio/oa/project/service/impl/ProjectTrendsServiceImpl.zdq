
package com.jzy.hio.oa.project.service.impl;

import com.jzy.hio.base.service.impl.BaseServiceImpl;

import com.jzy.hio.entity.ProjectTrends;
import com.jzy.hio.exception.HioMybatisInsertException;
import com.jzy.hio.exception.HioMybatisQueryException;
import com.jzy.hio.oa.project.dto.ProjectTrendsDto;
import com.jzy.hio.oa.project.dto.ProjectTrendsPageParam;
import com.jzy.hio.oa.project.mapper.ProjectTrendsMapper;
import com.jzy.hio.oa.project.service.ProjectTrendsService;
import com.jzy.hio.utils.Page;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.beans.BeanUtils;
import com.jzy.hio.annotation.DataSource;

import java.util.List;
import java.util.stream.Collectors;

/**
 * 项目动态
 * @author yangning
 */
@Service("projectTrendsService")
public class ProjectTrendsServiceImpl extends BaseServiceImpl<ProjectTrends> implements ProjectTrendsService {

	@Autowired
	ProjectTrendsMapper projectTrendsMapper;

	/**
	 * 保存项目动态
	 * 
	 * @param projectTrendsDto
	 * @return
	 * @throws Exception
	 */
	@Override
	public int saveProjectTrends(ProjectTrendsDto projectTrendsDto) throws HioMybatisInsertException {
		ProjectTrends projectTrends = new ProjectTrends();
		BeanUtils.copyProperties(projectTrendsDto, projectTrends);
		return save(projectTrends);
	}

	/**
	 * 根据项目ID获取项目动态
	 *
	 * @return
	 * @throws Exception
	 */
	@Override
	public List<ProjectTrendsDto> queryProjectTrendsListByProjectInfoId(String id) throws HioMybatisQueryException {
		ProjectTrendsPageParam projectTrendsPageParam = new ProjectTrendsPageParam();
		projectTrendsPageParam.setProjectId(id);
		List<ProjectTrends> trendsList = projectTrendsMapper.queryProjectTrendsListByProjectInfoId(projectTrendsPageParam);

		List<ProjectTrendsDto> trendsDtoList = trendsList.stream().map(projectTrends -> {
			return changeDto(projectTrends);
		}).collect(Collectors.toList());
		return trendsDtoList;

	}
	/**
	 * 根据项目ID获取项目动态
	 *
	 * @return
	 * @throws Exception
	 */
	@Override
	public Page queryProjectTrendsPageByProjectInfoId(ProjectTrendsPageParam projectTrendsPageParam) throws HioMybatisQueryException {

		String projectId = projectTrendsPageParam.getProjectId();
		// 每页条数
		Integer pageCount = projectTrendsPageParam.getPageCount();
		pageCount = pageCount == null ? 10 : pageCount;
		// 页码
		Integer pageNum = projectTrendsPageParam.getPageNum();
		pageNum = pageNum == null ? 1 : pageNum;
		int start = (pageNum - 1) * pageCount;
		projectTrendsPageParam.setStart(start);

		Integer count = projectTrendsMapper.queryProjectTrendsCountByProjectInfoId(projectId);
		List<ProjectTrends> trendsList = projectTrendsMapper.queryProjectTrendsListByProjectInfoId(projectTrendsPageParam);

		count = count == null ? 0 : count;


		Page page = new Page();
		Integer pageTotal = count % pageCount > 0 ? count / pageCount + 1 : count / pageCount;
		page.setList(trendsList);
		page.setPageTotal(pageTotal);
		page.setTotal(count);
		page.setPageCount(pageCount);
		page.setPageNum(pageNum);
		return page;

	}
	private ProjectTrendsDto changeDto(ProjectTrends projectTrends) {
		ProjectTrendsDto projectTrendsDto = new ProjectTrendsDto();
		BeanUtils.copyProperties(projectTrends, projectTrendsDto);
		return projectTrendsDto;
	}
}
