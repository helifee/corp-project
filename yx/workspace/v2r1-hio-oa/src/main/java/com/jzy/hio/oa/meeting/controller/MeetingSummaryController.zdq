package com.jzy.hio.oa.meeting.controller;

import java.lang.reflect.InvocationTargetException;
import java.util.Date;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import com.jzy.hio.base.controller.BaseOaController;
import com.jzy.hio.exception.HioMybatisGetException;
import com.jzy.hio.exception.HioMybatisInsertException;
import com.jzy.hio.exception.HioMybatisUpdateException;
import com.jzy.hio.oa.meeting.dto.MeetingSummaryDto;
import com.jzy.hio.oa.meeting.service.MeetingSummaryService;
import com.jzy.hio.utils.LoginUser;

/**
 *会议纪要表
 * @author shangb
 * @date 2018年3月26日 上午11:16:49
 */
@RestController
@RequestMapping("meeting/meetingSummary")
public class MeetingSummaryController extends BaseOaController {
	
	private static Logger logger = LoggerFactory.getLogger(MeetingSummaryController.class);
	
	@Autowired
	private MeetingSummaryService meetingSummaryService;

	
	/**
	 * 根据Id获取会议纪要
	 * @param id 业务对象主键
	 * @return 业务对象
	 */
	@RequestMapping(value = "/get/{id}", method = RequestMethod.GET)
	public Object get(@PathVariable("id") String id) throws HioMybatisGetException {
		MeetingSummaryDto meetingSummaryDto = meetingSummaryService.queryMeetingSummaryById(id);
		return meetingSummaryDto;
	}
	
	/**
	 * 保存会议纪要
	 * 
	 * @param json
	 * @return
	 * @throws InvocationTargetException 
	 * @throws IllegalAccessException 
	 */
	@RequestMapping(value = "/save", method = RequestMethod.POST, consumes = "application/json")
	public Object save(@RequestBody MeetingSummaryDto meetingSummaryDto) throws HioMybatisInsertException {
		LoginUser loginUser = super.getLoginUser();// 获取当前登录用户
		String loginUserId = loginUser.getUserId();// 当前登录用户的userID
		meetingSummaryDto.setLoginUserId(loginUserId);
		return meetingSummaryService.saveMeetingSummaryDto(meetingSummaryDto);
	}
	
	/**
	 * 修改会议纪要
	 * 
	 * @param id
	 * @param map
	 * @return·
	 */
	@RequestMapping(value = "/update/{id}", method = RequestMethod.PUT, consumes = "application/json")
	public Object update(@PathVariable("id") String id, @RequestBody MeetingSummaryDto meetingSummaryDto) throws HioMybatisUpdateException {
		LoginUser loginUser = super.getLoginUser();// 获取当前登录用户
		String loginUserId = loginUser.getUserId();// 当前登录用户的userID
		meetingSummaryDto.setLoginUserId(loginUserId);
		meetingSummaryDto.setId(id);
		meetingSummaryDto.setUpdateDate(new Date());
		return meetingSummaryService.updateMeetingSummaryDto(meetingSummaryDto);
	}
	
	
	
}
