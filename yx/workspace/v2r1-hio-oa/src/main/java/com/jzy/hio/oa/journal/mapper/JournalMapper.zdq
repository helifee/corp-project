package com.jzy.hio.oa.journal.mapper;

import java.util.List;

import org.apache.ibatis.annotations.Param;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.entity.Journal;

public interface JournalMapper extends BaseMapper<Journal> {

	/**
	 * 【我的日志】页面获取某一条日志的详情
	 * @param journal
	 * @return
	 */
	public Journal findJournalDetail(Journal journal);

	/**
	 * 条件查询他人共享给我的日志
	 * @param journalDate
	 * @param userIdList
	 * @param loginOrgIdList
	 * @param loginRoleIdList
	 * @param loginUserId
	 * @return
	 */
	public List<Journal> findShareJournalList(@Param("journalDate")String journalDate, @Param("userIdList")List<String> userIdList, @Param("loginOrgIdList")List<String> loginOrgIdList,
			@Param("loginRoleIdList")List<String> loginRoleIdList, @Param("loginUserId")String loginUserId);

	/**
	 * 分页条件查询我评论过的日志列表
	 * @param journalDate
	 * @param userIdList
	 * @param loginUserId
	 * @return
	 */
	public List<Journal> findCommentJournalList(@Param("journalDate")String journalDate, @Param("userIdList")List<String> userIdList, @Param("loginUserId")String loginUserId,
			@Param("journalShareIdList")List<String> journalShareIdList);

	/**
	 * 获取所有共享给我日志的人
	 * @param loginOrgIdList
	 * @param loginRoleIdList
	 * @param loginUserId
	 * @return
	 */
	public List<String> findShareJournalUserIdList(@Param("journalDate")String journalDate, @Param("loginOrgIdList")List<String> loginOrgIdList, @Param("loginRoleIdList")List<String> loginRoleIdList,
			@Param("loginUserId")String loginUserId);

	/**
	 * 查询我评论过的日志的创建人id集合
	 * @param loginUserId
	 * @return
	 */
	public List<String> findCommentJournalUserIdList(@Param("loginUserId")String loginUserId, @Param("journalDate")String journalDate, @Param("journalShareIdList")List<String> journalShareIdList);

	/**
	 * 根据时间段查询日志
	 * @param loginUserId
	 * @param startDate
	 * @param endDate
	 * @return
	 */
	public List<Journal> findJournalListByDate(@Param("loginUserId")String loginUserId, @Param("startDate")String startDate, @Param("endDate")String endDate);

	/**
	 * 获取所有共享给我的日志id
	 * @param journalDate
	 * @param userIdList
	 * @param loginOrgIdList
	 * @param loginRoleIdList
	 * @param loginUserId
	 * @return
	 */
	public List<String> findShareJournalIdList(@Param("journalDate")String journalDate, @Param("userIdList")List<String> userIdList, @Param("loginOrgIdList")List<String> loginOrgIdList,
			@Param("loginRoleIdList")List<String> loginRoleIdList, @Param("loginUserId")String loginUserId);
	
	
}