/**
 * 合同日志信息
 * @author wangliang
 *
 */
@RestController
@RequestMapping("contract/contractLog")
public class ContractLogController extends BaseOaController {

	private static Logger logger = LoggerFactory.getLogger(ContractLogController.class);
	@Autowired
	private ContractLogService contractLogService;
	
	
	
	/**
	 * 
	 * <p>根据Id获取合同日志详情<br>
	 * @author wliang
	 * @date 2018年4月24日 下午11:18:42 
	 * @param contractLogDto
	 * @return
	 * @throws HioMybatisInsertException
	 */
	@RequestMapping(value = "/get/{id}", method = RequestMethod.GET)
	public Object get(@PathVariable("id") String id) throws HioMybatisGetException {
		
		LoginUser loginUser = getLoginUser();
		return contractLogService.getContractLogById(id,loginUser);
			
	}
	
	/**
	 * 
	 * <p>合同日志列表-分页<br>
	 * @author wliang
	 * @date 2018年4月24日 下午11:18:42 
	 * @param contractLogDto
	 * @return
	 * @throws HioMybatisInsertException
	 */
	@RequestMapping(value = "/page", method = RequestMethod.POST , consumes = "application/json")
	public Page page(@RequestBody ContractLogDto contractLogDto) throws HioMybatisQueryException {
		
		LoginUser loginUser = getLoginUser();
		return contractLogService.getContractLogPage(contractLogDto, loginUser);
	}

	/**
	 * 
	 * <p>合同日志列表-分页<br>
	 * @author wliang
	 * @date 2018年4月24日 下午11:18:42 
	 * @param contractLogDto
	 * @return
	 * @throws HioMybatisInsertException
	 */
	@RequestMapping(value = "/getContractLogByContractId", method = RequestMethod.POST , consumes = "application/json")
	public List<ContractLogDto> getContractLogByContractId(@RequestBody ContractLogDto contractLogDto) throws HioMybatisQueryException {
		
		LoginUser loginUser = getLoginUser();
		
		return contractLogService.getContractLogByContractId(contractLogDto, loginUser);
		
	}
	
	/**
	 * 
	 * <p>日志类型列表<br>
	 * @author wliang
	 * @date 2018年5月4日 下午2:45:29 
	 * @param contractLogDto
	 * @param loginUser
	 * @return
	 * @throws HioMybatisGetException
	 */
	@RequestMapping(value = "/getLogTypeList", method = RequestMethod.POST , consumes = "application/json")
	public List<ContractLogTypeDto> getLogTypeList(@RequestBody ContractLogDto contractLogDto) throws HioMybatisGetException{
		LoginUser loginUser = getLoginUser();
		return contractLogService.getLogTypeList(contractLogDto, loginUser);
	}
	
	/**
	 * 
	 * <p>新建合同日志<br>
	 * @author wliang
	 * @date 2018年4月24日 下午11:18:42 
	 * @param contractLogDto
	 * @return
	 * @throws HioMybatisInsertException
	 */
	@RequestMapping(value = "/save", method = RequestMethod.POST, consumes = "application/json")
	public Object save(@RequestBody ContractLogDto contractLogDto) throws HioMybatisInsertException {

		LoginUser loginUser = getLoginUser();
		return contractLogService.saveContractLog(contractLogDto,loginUser);
	}



	/**
	 * 
	 * <p>编辑合同日志<br>
	 * @author wliang
	 * @date 2018年4月24日 下午11:18:30 
	 * @param contractLogDto
	 * @return
	 * @throws HioMybatisUpdateException
	 */
	@RequestMapping(value = "/update", method = RequestMethod.POST, consumes = "application/json")
	public Object update(@RequestBody ContractLogDto contractLogDto) throws HioMybatisUpdateException {
		
		LoginUser loginUser = getLoginUser();
		return contractLogService.updateContractLog(contractLogDto,loginUser);
	}

	/**
	 * 
	 * <p>删除合同日志<br>
	 * @author wliang
	 * @date 2018年4月24日 下午11:18:18 
	 * @param contractLogDto
	 * @return
	 * @throws HioMybatisDeleteException
	 */
	@RequestMapping(value = "/delete", method = RequestMethod.POST, consumes = "application/json")
	public Object delete(@RequestBody ContractLogDto contractLogDto) throws HioMybatisDeleteException {
		
		LoginUser loginUser = getLoginUser();
		return contractLogService.deleteContractLogById(contractLogDto,loginUser);
	}
	
	/**
	 * 
	 * <p>获取用户信息<br>
	 * @author wliang
	 * @date 2018年4月24日 下午22:27:55 
	 * @return
	 * @throws HioMybatisQueryException
	 */
	@RequestMapping(value = "/getCurrentLoginUser", method = RequestMethod.GET)
	public Object getCurrentLoginUser() throws HioMybatisGetException {
		
		return getLoginUser();
	}
	
	/**
	 * 
	 * <p>获取用户信息<br>
	 * @author wliang
	 * @date 2018年4月24日 下午22:27:55 
	 * @return
	 * @throws HioMybatisQueryException
	 */
	@RequestMapping(value = "/getCurrentGeneratePk", method = RequestMethod.GET)
	public Object getCurrengeneratePk() throws HioMybatisGetException {
		
		return generatePk();
