<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<include resource="org/springframework/boot/logging/logback/base.xml" />
	<jmxConfigurator />
	<appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [hio-oa] [userid:%X{USER_ID},tendid:%X{TEND_ID},ip:%X{IP}] %logger{36} - %msg%n</pattern>
		</layout>
	</appender>
	<appender name="fileLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--滚动策略 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--输出路径 -->
			<fileNamePattern>${user.dir}/logs/log/hio-oa.%d.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [hio-oa] [userid:%X{USER_ID},tendid:%X{TEND_ID},ip:%X{IP}] %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="fileErrorLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<!--滚动策略 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--输出路径 -->
			<fileNamePattern>${user.dir}/logs/error/hio-oa.%d.error
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [hio-oa] [userid:%X{USER_ID},tendid:%X{TEND_ID},ip:%X{IP}] %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<!--批量单独日志打印 -->
	<appender name="fileQuartzLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!--滚动策略 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--输出路径 -->
			<fileNamePattern>${user.dir}/logs/log/hio-oa-quartz.%d.log
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [hio-oa-quartz] [userid:%X{USER_ID},tendid:%X{TEND_ID},ip:%X{IP}] %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="fileQuartzErrorLog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<!--滚动策略 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!--输出路径 -->
			<fileNamePattern>${user.dir}/logs/error/hio-oa-quartz.%d.error
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [hio-oa-quartz] [userid:%X{USER_ID},tendid:%X{TEND_ID},ip:%X{IP}] %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<!-- logger 属性： 1)name:用来指定受此logger约束的某一个包或者具体的某一个类 2)level:用来设置打印级别，大小写无关（最常用的几种）：DEBUG, 
		INFO, WARN, ERROR -->

