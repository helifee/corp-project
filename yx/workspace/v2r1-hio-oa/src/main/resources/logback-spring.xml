	<logger name="com.jzy.hio.oa.quartz" level="ERROR" additivity="false">
		<appender-ref ref="fileQuartzLog" />
		<appender-ref ref="fileQuartzErrorLog" />
	</logger>
	
	<logger name="com.jzy.hio.oa.quartz.service.impl" level="ERROR" additivity="false">
		<appender-ref ref="fileQuartzLog" />
		<appender-ref ref="fileQuartzErrorLog" />
	</logger>
	
