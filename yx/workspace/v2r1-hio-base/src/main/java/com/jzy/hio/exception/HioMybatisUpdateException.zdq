public class HioMybatisUpdateException extends HioException {

	/**
	 * 
	 */
	private static final long serialVersionUID = 5991001241012619197L;

	public HioMybatisUpdateException() {

	}
	
	public HioMybatisUpdateException(String exception) {
		super.exception = exception;
	}

	public HioMybatisUpdateException(Exception e) {
		super(e);
	}
	
	public HioMybatisUpdateException(Exception e, String exception) {
		super(e);
		super.exception = exception;
	}
	
	@Override
	public int getCode() {
		return MYBATIS_UPDATE_FAILED;
	}

	@Override
	public String getMessage() {
		return "更新数据失败";
	}
}
