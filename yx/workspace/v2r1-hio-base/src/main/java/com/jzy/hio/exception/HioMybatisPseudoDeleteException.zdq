package com.jzy.hio.exception;

/**
 * 逻辑-删除数据库抛的异常
 * 
 * @author wt.coffee<br/>
 *         2018年3月15日下午2:40:45
 */
public class HioMybatisPseudoDeleteException extends HioException {

	private static final long serialVersionUID = -6076890764162425867L;

	public HioMybatisPseudoDeleteException(Exception e) {
		super(e);
		super.exception = "删除数据失败";
	}

	public HioMybatisPseudoDeleteException(String exception) {
		if (exception == null) {
			super.exception = "删除数据失败";
		} else {
			super.exception = exception;
		}
	}

	@Override
	public int getCode() {
		return MYBATIS_DELETE_PSEUDO_FAILED;
	}

}
