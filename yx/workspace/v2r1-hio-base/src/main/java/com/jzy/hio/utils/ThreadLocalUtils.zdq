package com.jzy.hio.utils;

import org.apache.log4j.Logger;

/**
 * 
 * @author wt.coffee
 * @date 2018年3月30日下午1:54:20
 */
public class ThreadLocalUtils {
	static Logger logger = Logger.getLogger(ThreadLocalUtils.class);
	private static ThreadLocal<String> threadLocal = new ThreadLocal<String>();

	public static void setDataSource(String securityUserBeanInfo) {
		threadLocal.set(securityUserBeanInfo);
	}

	public static String getDataSource() {
		String beanInfo = threadLocal.get();
		return beanInfo;
	}

}
