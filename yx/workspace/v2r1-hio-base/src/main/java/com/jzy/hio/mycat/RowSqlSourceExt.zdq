package com.jzy.hio.mycat;

import org.apache.ibatis.mapping.BoundSql;
import org.apache.ibatis.mapping.SqlSource;
import org.apache.ibatis.scripting.defaults.RawSqlSource;

/**
 * <p>
 * delete <br>
 * 参考RowSqlSource的源码、如果采用类似 {@link DynamicSqlSourceExt} 的实现方式 处理RowSqlSourceExt比较麻烦<br>
 * 所以采用直接继承SqlSource接口的方式
 * 
 * @author wt.coffee
 * @date 2018年4月9日下午8:27:24
 */
public class RowSqlSourceExt implements SqlSource {

	private RawSqlSource sqlSource;

	public RowSqlSourceExt(RawSqlSource sqlSource) {
		this.sqlSource = sqlSource;
	}

	@Override
	public BoundSql getBoundSql(Object parameterObject) {
		BoundSql boundSql = sqlSource.getBoundSql(parameterObject);
		Sql2Mycat.handleBoundSql(boundSql);
		return boundSql;
	}
}
