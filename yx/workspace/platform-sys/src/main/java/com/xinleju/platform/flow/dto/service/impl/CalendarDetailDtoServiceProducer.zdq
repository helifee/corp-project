	public String initData(String userJson, String initDataJson) {
		DubboServiceResultInfo info=new DubboServiceResultInfo();
		   try {
			   Map<String, Integer> map=JacksonUtils.fromJson(initDataJson, HashMap.class);
			   Integer startYear = map.get("startYear");
			   Integer endYear = map.get("endYear");
			   //先删除calendarBasic的对应的数据,然后再插入初始化的数据
			   calendarBasicService.deleteDataForInitAction(map);
			   for(int year=startYear.intValue(); year<=endYear.intValue(); year++){
				   CalendarBasic basic = new CalendarBasic();
				   basic.setYear(year);
				   basic.setWorkDay("2,3,4,5,6");
				   basic.setStartTime("09:00");
				   basic.setEndTime("18:00");
				   basic.setId(IDGenerator.getUUID());
				   basic.setDelflag(false);
				   calendarBasicService.save(basic);
			   }
			   
			   //先删除calendarDetail的对应的数据,然后再插入初始化的数据
			   calendarDetailService.deleteDataForInitAction(map);
			   for(int year=startYear.intValue(); year<=endYear.intValue(); year++){
				   CalenderUtils dataUtils = new CalenderUtils(year);
				   List<CalendarDetail> detailList = dataUtils.getTotalDetailListFromYear();
				   for(CalendarDetail detail : detailList){
					   detail.setId(IDGenerator.getUUID());
					   detail.setDelflag(false);
					   calendarDetailService.save(detail);
				   }
			   }
			  
			   info.setSucess(true);
			   info.setMsg("保存对象成功!");
			} catch (Exception e) {
			 log.error("保存对象失败!"+e.getMessage());
			 info.setSucess(false);
			 info.setMsg("保存对象失败!");
			 info.setExceptionMsg(e.getMessage());
			}
		   return JacksonUtils.toJson(info);
	}


