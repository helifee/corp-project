package com.jzy.hio.feign;

import java.util.List;
import java.util.Map;

import javax.ws.rs.core.MediaType;

import org.springframework.cloud.netflix.feign.FeignClient;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import com.jzy.hio.feign.dto.flow.FlowPostDataDto;

/**
 * 该类中写所有SysService开放给其他服务的接口<br/>
 * 返回的数据类型一概为String<br/>
 * 
 * <pre>
 * 为了方便查询、@RequestMapping命名规则如下
 * 1、调用Service 采用类名+方法名的格式
 * 2、调用Controller 直接写被调用方的RequestMapping (*****加注释****)
 * </pre>
 * 
 * @author coffee<br/>
 *         2018年2月3日下午2:05:57
 */
@FeignClient(name = "SysService/sys/")
public interface SysFeignService {

	/**
	 * 调用sys工程的 CustomFormGroupServiceImpl
	 */
	@RequestMapping(value = "customFormGroupServiceImpl/queryListForQuickEntry", method = RequestMethod.POST, consumes = "application/json")
	public String queryGroupListForQuickEntry(@RequestBody Map<String, Object> map);

	@RequestMapping(value = "customFormServiceImpl/queryListForQuickEntry", method = RequestMethod.POST, consumes = "application/json")
	public String queryListForQuickEntry(@RequestBody Map<String, Object> map);

	@RequestMapping(value = "userServiceImpl/getUserByUserLoginNames", method = RequestMethod.POST, consumes = "application/json")
	public String getUserByUserLoginNames(@RequestBody Map<String, Object> map);

	/**
	 * 
	 * sys项目{@link OrgnazationController#getUserDataAuthCoAndDeptList} <br/>
	 * 
	 * @author coffee 2018年2月6日下午4:29:31<br/>
	 */
	@RequestMapping(value = "org/orgnazation/getUserDataAuthCoAndDeptList", method = RequestMethod.POST, consumes = "application/json")
	public String getUserDataAuthCoAndDeptList(@RequestBody Map<String, Object> map);

	@RequestMapping(value = "userServiceImpl/selectUserInfoById", method = RequestMethod.POST, consumes = "application/json")
	public String selectUserInfoById(@RequestBody Map<String, Object> map);
	
	@RequestMapping(value = "userServiceImpl/getUserByUserIds", method = RequestMethod.POST, consumes = "application/json")
	public List<Map<String,String>> getUserByUserIds(@RequestBody Map<String, Object> map);

	/**
	 * sys项目CustomFormInstanceController
	 */
	@RequestMapping(value = "base/customFormInstance/updateStatus", method = RequestMethod.POST, consumes = "application/json")
	public String updateStatus(@RequestBody Map<String, Object> map);

	@RequestMapping(value = "base/customFormInstance/getVariable", method = RequestMethod.POST, consumes = "application/json")
	public String getVariable(@RequestBody Map<String, Object> map);

	
	@RequestMapping(value = "orgnazationServiceImpl/queryListByMap", method = RequestMethod.POST, consumes = "application/json")
	public String queryListByMap(@RequestBody Map<String, Object> map);
	
	@RequestMapping(value = "appSystemServiceImpl/queryListByCondition", method = RequestMethod.POST, consumes = "application/json")
	public String queryListByCondition(@RequestBody Map<String, Object> map);

	/**
	 * 
	 * @param FlowPostDataDto
	 * @author zcy
 	 */
	@RequestMapping(value = "postUserServiceImpl/getFlowPostData", method = RequestMethod.POST, consumes = MediaType.APPLICATION_JSON)
	public String getFlowPostData(@RequestBody FlowPostDataDto flowPostDataDto);
	
	/**
	 * 查询所有管理员
	 * @return List<Map<String,Object>>
	 * @author zcy
	 */
	@RequestMapping(value = "userServiceImpl/queryAdminList", method = RequestMethod.POST, 
			consumes = MediaType.APPLICATION_JSON,produces = MediaType.APPLICATION_JSON)
	public List<Map<String,Object>>  queryAdminList() ;
	
	@RequestMapping(value = "sysNoticePhoneMsgServiceImpl/saveSendMsg", method = RequestMethod.POST, consumes = "application/json")
	public String saveSendMsg(@RequestBody Map<String, Object> map);
	
	@RequestMapping(value = "mailMsgServiceImpl/sendMailMsg", method = RequestMethod.POST, consumes = "application/json")
 	public int sendMailMsg(@RequestBody String mailMsgJson);
}
