package com.jzy.hio.utils;

import java.text.DecimalFormat;

/**
 * @author kimchou
 * @create 2018-03-17 16:43
 * @desc prefixSort工具类 code工具类
 **/
public class NumberUtils {
    /**
     * prefix sort最长为5位
     *
     * @param level 从0 开始转化为A、B、C
     * @param sort  1
     * @return A00001
     */
    public static String getSortCode(int level, int sort) {
        DecimalFormat df = new DecimalFormat("00000");
        return byteAsciiToChar(level) + df.format(sort);
    }

    /**
     * A00001-B00001-C00001
     * 规则 每级三位,自增 如：一级 001 二级 001001
     *
     * @return
     */
    public static String getOrgCode(String prefixSort) {
        StringBuilder sb = new StringBuilder();
        String[] prefixSorts = prefixSort.split("-");
        for (int i = 0; i < prefixSorts.length; i++) {
            String sortCode = prefixSorts[i];
            String code = sortCode.substring(3);
            sb.append(code);
        }
        return sb.toString();
    }

    public static String byteAsciiToChar(int ascii) {
        char ch = (char) ((ascii - 1) + 65);
        return ch + "";
    }

}
