package com.jzy.hio.sys.role.mapper;

import java.util.List;
import java.util.Map;

import org.apache.ibatis.annotations.Param;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.entity.OaSysRole;
import com.jzy.hio.sys.role.dto.RoleDto;

/**
 * 角色相关操作
 * 
 * @author wt.coffee
 * @date 2018年4月26日上午9:33:31
 */
public interface RoleMapper extends BaseMapper<OaSysRole> {

	/**
	 * 查询所有的角色
	 * 
	 * @return
	 */
	public List<RoleDto> queryRoles(Map<String, Object> map);

	public RoleDto queryRoleById(String roleId);

	/**
	 * 查询指定用户具备的role
	 * 
	 * @param userId
	 * @return
	 */
	public List<OaSysRole> queryRoleByUserId(String userId);

	/**
	 * 通过角色名查询该角色是否存在
	 * 
	 * @param roleName
	 * @return
	 */
	public int queryRoleIsExist(@Param("roleName") String roleName, @Param("roleId") String roleId);

	/**
	 * 查询该角色下的用户、存在用户的不能删除
	 * 
	 * @param roleName
	 * @return
	 */
	public int queryRoleUserCount(String roleId);

	/**
	 * 查询管理员用户的
	 * @return
	 */
	public List<String> queryManagerUserIdIM();
}
