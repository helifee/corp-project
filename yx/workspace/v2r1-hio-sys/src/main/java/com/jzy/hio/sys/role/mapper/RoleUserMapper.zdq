package com.jzy.hio.sys.role.mapper;

import java.util.List;
import java.util.Map;

import org.apache.ibatis.annotations.Param;

import com.jzy.hio.base.mapper.BaseMapper;
import com.jzy.hio.entity.OaSysRoleUser;
import com.jzy.hio.sys.role.dto.RoleUserDto;

public interface RoleUserMapper extends BaseMapper<OaSysRoleUser> {

	public int deleteByRoleId(String roleId);

	public int deleteByUserId(String userId);

	/**
	 * 判断该管理员用户是否可以删除<br>
	 * 
	 * 查詢删除该用户之外 --剩余的管理员数量
	 * 
	 * @param userId
	 * @return
	 */
	public int querySuperIsCanDelete(@Param("userId") String userId);

	/**
	 * 查询该角色下是否有该用户
	 * 
	 * @param roleId
	 * @param userId
	 * @return
	 */
	public int queryIsxist(@Param("roleId") String roleId, @Param("userId") String userId);

	/**
	 * 
	 * @param paramMap
	 *            roleId userName userPhone
	 * @return
	 */
	public List<RoleUserDto> queryRoleUsers(Map<String, Object> paramMap);

	/**
	 * 查询具备指定菜单或应用的权限的用户(只查询在职)
	 * 
	 * @param menuCode
	 * @return
	 */
	public List<RoleUserDto> queryRoleUserByMenuCode(@Param("menuCode") String menuCode);
}
