package com.jzy.hio.config;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.springframework.boot.context.properties.ConfigurationProperties;
import org.springframework.cloud.context.config.annotation.RefreshScope;
import org.springframework.stereotype.Component;

import com.jzy.hio.sys.app.dto.AppImDto;

import lombok.Data;

/**
 * 
 * @author wt.coffee
 * @date 2018年5月19日上午11:54:26
 */
@Component
@ConfigurationProperties(prefix = "jzy")
@RefreshScope
@Data
public class SysConfig {

	/**
	 * 权限相关的文档
	 */
	@Component
	@ConfigurationProperties(prefix = "jzy.role")
	@Data
	public class Role {
		private String managerSetup;
	}

	@Data
	@Component
	@ConfigurationProperties(prefix = "jzy.app")
	public class App {
		/**
		 * 外部联系人具备的app (item-app名称)
		 */
		private List<String> externalAppList = new ArrayList<>();
		/**
		 * 移动端具备的app列表
		 */
		private List<String> imAppList = new ArrayList<>();
		/**
		 * 移动端app查询
		 */
		private Map<String, AppImDto> imAppMap = new HashMap<>();
	}
}
