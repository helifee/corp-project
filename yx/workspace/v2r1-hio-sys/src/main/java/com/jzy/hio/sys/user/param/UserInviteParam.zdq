package com.jzy.hio.sys.user.param;

import com.fasterxml.jackson.annotation.JsonIgnore;
import lombok.Data;
import org.hibernate.validator.constraints.Email;
import org.hibernate.validator.constraints.NotBlank;

import javax.validation.constraints.Pattern;
import javax.validation.constraints.Size;

/**
 * 邀请用户param
 *
 * @author kimchou
 * @create 2018-03-17 17:12
 **/
@Data
public class UserInviteParam {
    /**
     * 用户名称
     */
    @NotBlank(message = "用户名称不能为空")
    @Pattern(regexp = "^[\\u4E00-\\u9FA5A-Za-z0-9_\\s]+$",message = "用户名称只能输入数字、字母、汉字或下划线")
    @Size(max = 20,message = "用户名称不能超过20个字符")
    private String userName;
    /**
     * 用户手机号
     */
    @NotBlank(message = "手机号码不能为空")
    @Size(max = 11,min = 11,message = "手机号必须11位")
    @Pattern(regexp = "^(1[3-9][0-9])\\d{8}$",message = "手机号格式不正确")
    private String userMobile;
    /**
     * 用户邮箱
     */
    @Email(message = "邮箱格式不正确")
    private String userEmail;
    /**
     * 部门ID
     */
    private String organizationId;
    /**
     * 批量导入复用bean 标志该人是否导入成功
     */
    @JsonIgnore
    private boolean isSuccess;
    /**
     * 批量导入复用bean 标志该人是否导入失败或成功的结果
     */
    private String msg;
    /**
     * 租户ID
     */
    @JsonIgnore
    private String tendId;

    /**
     * 环信ID
     */
    @JsonIgnore
    private String hxUid;

}
