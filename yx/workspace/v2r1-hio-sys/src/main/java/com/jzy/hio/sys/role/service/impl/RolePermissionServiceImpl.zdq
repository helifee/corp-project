package com.jzy.hio.sys.role.service.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jzy.hio.annotation.DataSource;
import com.jzy.hio.base.controller.BaseController;
import com.jzy.hio.base.service.impl.BaseSysServiceImpl;
import com.jzy.hio.entity.OaSysRolePermission;
import com.jzy.hio.sys.role.dto.RolePermissionDto;
import com.jzy.hio.sys.role.dto.RolePermissionTreeDto;
import com.jzy.hio.sys.role.mapper.RolePermissionMapper;
import com.jzy.hio.sys.role.service.RolePermissionService;

/**
 * 组织机构
 * 
 * @author wt.coffee<br>
 *         2018年3月8日下午1:02:17
 */
@Service
public class RolePermissionServiceImpl extends BaseSysServiceImpl<OaSysRolePermission> implements RolePermissionService {

	@Autowired
	private RolePermissionMapper rolePermissionMapper;

	/**
	 * 查询所有的功能菜单、以及指定角色具备的权限
	 */
	@SuppressWarnings("unchecked")
	@Override
	public List<RolePermissionTreeDto> queryMenuAndRolePermission(String roleId) {
		List<RolePermissionTreeDto> list = rolePermissionMapper.queryMenuAndRolePermission(roleId);
		List<RolePermissionTreeDto> tree = (List<RolePermissionTreeDto>) BaseController.list2Tree(list);
		return tree;
	}

	/**
	 * 查询角色具备的权限
	 * 
	 * @param roleId
	 * @return
	 */
	@Override
	public List<RolePermissionDto> queryRolePermission(String roleId) {
		return rolePermissionMapper.queryRolePermission(roleId);
	}

	@Override
	public int deleteByRoleId(String roleId) {
		return rolePermissionMapper.deleteByRoleId(roleId);
	}

	@Override
	public List<RolePermissionDto> queryHrRolePermission(@DataSource String tendId, String userId) {
		if (isSuper(tendId, userId)) {
			return rolePermissionMapper.queryHrRolePermission(null);
		} else {
			return rolePermissionMapper.queryHrRolePermission(userId);
		}
	}
}
