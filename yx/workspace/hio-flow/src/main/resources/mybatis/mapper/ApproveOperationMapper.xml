<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzy.hio.flow.mapper.ApproveOperationDao">
	<!-- 新增 -->
	<insert id="save">
		${value}
	</insert>
	<!-- 修改根据Id -->
	<update id="update">
		${value}
	</update>
	<!-- 伪删除根据Id -->
	<update id="deletePseudoObjectById">
		${value}
	</update>
	<!-- 批量伪删除根据Id -->
	<update id="deletePseudoAllObjectByIds">
		${value}
	</update>
	<!-- 删除根据Id -->
	<delete id="deleteById">
		${value}
	</delete>
	<!-- 批量删除根据Id -->
	<delete id="deleteBatchByIds">
		${value}
	</delete>
	<!-- 获取单个对象，根据Id-->
	<select id="get" resultType="com.jzy.hio.flow.entity.ApproveOperation">
		${value}
	</select>
	<!-- 获取列表根据Map查询 -->
	<select id="queryList" resultType="com.jzy.hio.flow.entity.ApproveOperation">
		${value}
	</select>
	<!-- 获取分页根据Map查询 -->
	<select id="queryPageList" resultType="com.jzy.hio.flow.entity.ApproveOperation">
		${value}
	</select>
	<!-- 获取总记录数 -->
	<select id="queryCount" resultType="java.lang.Integer">
		${value}
	</select>
	
	<!-- 根据approveId进行批量伪删除数据-->
	<update id="deletePseudoAllObjectByApproveTypeIds" parameterType="java.lang.String">
		update pt_flow_approve_operation set delflag=1, concurrency_version=concurrency_version+1 where approve_id=#{approveId}
	</update>
	
	<select id="queryListByApproveRoleCode" resultType="com.jzy.hio.flow.dto.tobedeleted.ApproveOperationDto" parameterType="java.util.HashMap">
		 SELECT DISTINCT c.code as operationCode, c.name as operationName, a.show_name as showName,
 		 a.default_note as defaultNote, a.note_type as noteType
 		 FROM pt_flow_approve_operation a, pt_flow_approve_type b, pt_flow_operation_type c
         WHERE a.approve_id = b.id AND c.id= a.operation_id AND a.delflag=0 AND b.delflag=0 AND c.delflag=0
         AND b.status=1 AND b.delflag=0 AND b.code= #{typeCode} AND a.approve_role=#{approveRole} order by sort 
	</select>
	
</mapper>