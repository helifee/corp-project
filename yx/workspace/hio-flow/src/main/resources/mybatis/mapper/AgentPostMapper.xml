<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jzy.hio.flow.mapper.AgentPostDao">
	<!-- 新增 -->
	<insert id="save">
		${value}
	</insert>
	<!-- 修改根据Id -->
	<update id="update">
		${value}
	</update>
	<!-- 伪删除根据Id -->
	<update id="deletePseudoObjectById">
		${value}
	</update>
	<!-- 批量伪删除根据Id -->
	<update id="deletePseudoAllObjectByIds">
		${value}
	</update>
	<!-- 删除根据Id -->
	<delete id="deleteById">
		${value}
	</delete>
	<!-- 批量删除根据Id -->
	<delete id="deleteBatchByIds">
		${value}
	</delete>
	<!-- 获取单个对象，根据Id-->
	<select id="get" resultType="com.jzy.hio.flow.entity.AgentPost">
		${value}
	</select>
	<!-- 获取列表根据Map查询 -->
	<select id="queryList" resultType="com.jzy.hio.flow.entity.AgentPost">
		${value}
	</select>
	<!-- 获取分页根据Map查询 -->
	<select id="queryPageList" resultType="com.jzy.hio.flow.entity.AgentPost">
		${value}
	</select>
	<!-- 获取总记录数 -->
	<select id="queryCount" resultType="java.lang.Integer">
		${value}
	</select>
	
	<select id="queryAgentPostsByAgentId" parameterType="java.util.HashMap" resultType="java.lang.String">
		SELECT a.post_id from pt_flow_agent_post a WHERE a.agent_id = #{agentId} AND a.delflag = 0;
	</select>
	
	<select id="queryAgentPostList" resultType="map" parameterType="map">
	SELECT a.id,a.post_id postId,CONCAT(o.prefix_name,'/',r.`name`) postName from pt_flow_agent_post a
		LEFT JOIN pt_sys_org_post p on p.id=a.post_id
		LEFT JOIN pt_sys_org_orgnazation o on o.id=p.ref_id
		LEFT JOIN pt_sys_org_standard_role r on r.id=p.role_id
		WHERE a.agent_id = #{agentId}
	</select>
</mapper>