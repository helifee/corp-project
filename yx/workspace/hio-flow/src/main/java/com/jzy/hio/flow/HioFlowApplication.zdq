package com.jzy.hio.flow;

import org.mybatis.spring.annotation.MapperScan;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.cloud.netflix.eureka.EnableEurekaClient;
import org.springframework.cloud.netflix.feign.EnableFeignClients;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Import;
import org.springframework.kafka.annotation.EnableKafka;

import com.jzy.hio.base.BaseApplication;
import com.jzy.hio.base.datasource.DataSourceRegister;
import com.jzy.hio.base.service.aop.DynamicDataSourceAop;
import com.jzy.hio.redis.RedisClient;
import com.jzy.tools.login.LoginUtils;

//@EnableDiscoveryClient
@EnableEurekaClient
@EnableKafka
@SpringBootApplication
@EnableFeignClients("com.jzy.hio.feign")
@MapperScan({ "com.jzy.hio.flow.mapper", "com.jzy.hio.base.mapper" })
@ComponentScan({ "com.jzy.hio.*" })
@Import({ DataSourceRegister.class, DynamicDataSourceAop.class })
public class HioFlowApplication extends BaseApplication {

	public static void main(String[] args) {
		SpringApplication.run(HioFlowApplication.class, args);
		System.out.println("【【【【【【 Flow微服务 】】】】】】已启动.");

	}

	@Bean
	public LoginUtils createLoginUtils() {
		LoginUtils loginUtils = getBeanFactory().createBean(LoginUtils.class);
		RedisClient redisClient = getBeanFactory().getBean(RedisClient.class);
		loginUtils.setRedisClient(redisClient);
		return loginUtils;
	}
}