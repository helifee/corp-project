package com.jzy.hio.platform.message.param;


import lombok.Data;
import org.hibernate.validator.constraints.NotBlank;

import javax.validation.Valid;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Size;
import java.util.List;
import java.util.Map;

/**
 * 消息接受人
 */
@Data
public class ImNoticeMsgsParam {


    /**
     * 消息接受人
     */
    @NotNull(message = "toUsers 不能为空！")
    @Size(min = 1)
    @Valid
    private List<IMToUserParam> toUsers;
    
    /**
     * 消息内容
     */
    @NotBlank(message = "msg 不能为空！")
    private String msg;

    /**
     * 发送消息类型，text文本类型，cmd透传类型。可以从SendMsgTypeEnum枚举获取
     */
    @NotBlank(message = "sendMsgType 不能为空！")
    private String sendMsgType;


    /**
     * 发送用户id
     */
//    @NotBlank
    private String fromUserId;

    /**
     * 发送用户名称
     */
    private String fromUserName;

    /**
     * 租户id
     */
//    @NotBlank
    private String tendId;

    /**
     * 租户名称
     */
//    @NotBlank
    private String tendName;

    /**
     * 消息类型
     * 通知消息类     msg
     * 工作类消息     work
     * 系统消息类     sys
     * 外部联系人消息 out
     * 可以从MsgTypeEnum枚举获取
     */
    @NotBlank(message = "msgType 不能为空！")
    private String msgType;

    /**
     * 应用编号
     * 10001 flow 流程
     * 10002 hr
     * 10003考勤
     * 10004公告
     * 10005会议
     * 10006任务
     * 10007短信
     * 10008站内信
     * 10009好友邀请
     * 10010同事邀请
     * 10011外部联系人邀请
     * 10012个人隐私修改
     * 10013特别关注
     *
     * 如果扩展字段ext有类型，则需要使用moduleType+扩展字段类型拼接，方面前端使用模块下不同类型的图标
     */
    @NotBlank(message = "moduleType 不能为空！")
    private String moduleType;

    /**
     * 应用名称
     * 10001 flow 流程
     * 10002 待阅
     * 10003考勤
     * 10004公告
     * 10005会议
     * 10006任务
     * 10007短信
     * 10008站内信
     * 10009好友邀请
     * 10010同事邀请
     * 10011外部联系人邀请
     */
    private String moduleName;

//    /**
//     * 消息连接地址
//     */
//    private String pcUrl;
//
//    /**
//     * 移动端的URL
//     */
//    private String mobibleUrl;


    /**
     * 业务自定义扩展字段 比如发送透彻时，公告消息的，标题，内容，时间，地点等等属性
     * @return
     */
    private Map<String,Object> ext;

    /**
     * 是否允许端上打开
     * 0 移动和pc都不打开
     * 1 移动和pc都可以打开
     * 2.只能移动端打开
     * 3.只能在pc端打开
     */
    private int openStatus;
    
    /**
     * 1：站内信，2:短信
     */
    private Integer noticeType;


}
